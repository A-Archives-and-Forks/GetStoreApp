                            Height="16"
                            Margin="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            IsTabStop="False"
                            Template="{StaticResource VerticalPreviousTemplate}"
