                        <Button
                            x:Name="NextButtonHorizontal"
                            Width="16"
                            Height="38"
                            Margin="1"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            IsTabStop="False"
                            Template="{StaticResource HorizontalNextTemplate}"
