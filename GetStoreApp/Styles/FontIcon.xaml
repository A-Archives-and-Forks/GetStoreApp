<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="SegoeFluentStyle" TargetType="FontIcon">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontFamily" Value="ms-appx:///Fonts/Segoe Fluent Icons.ttf#Segoe Fluent Icons" />
    </Style>

    <Style x:Key="SettingsFluentStyle" TargetType="FontIcon">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontFamily" Value="ms-appx:///Fonts/Settings Fluent Icons.ttf#Settings Fluent Icons" />
    </Style>

    <Style
        x:Key="FontIconStyle"
        BasedOn="{StaticResource SegoeFluentStyle}"
        TargetType="FontIcon">

        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}" />
        <Setter Property="Margin" Value="0,0,12,0" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style
        x:Key="AboutHeaderIconStyle"
        BasedOn="{StaticResource SegoeFluentStyle}"
        TargetType="FontIcon">

        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}" />
        <Setter Property="Margin" Value="10,0,0,0" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
</ResourceDictionary>
