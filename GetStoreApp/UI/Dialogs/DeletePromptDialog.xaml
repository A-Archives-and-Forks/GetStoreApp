<ContentDialog
    x:Class="GetStoreApp.UI.Dialogs.DeletePromptDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{x:Bind ResourceService.GetLocalized('/Dialog/DeleteTitle')}"
    CloseButtonText="{x:Bind ResourceService.GetLocalized('/Dialog/DeleteCancel')}"
    Content="{x:Bind ResourceService.GetLocalized('/Dialog/DeleteContent')}"
    PrimaryButtonStyle="{ThemeResource AccentButtonStyle}"
    PrimaryButtonText="{x:Bind ResourceService.GetLocalized('/Dialog/DeleteContinue')}"
    Style="{StaticResource DefaultContentDialogStyle}"
    mc:Ignorable="d" />
