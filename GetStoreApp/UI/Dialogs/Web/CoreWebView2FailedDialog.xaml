<dialogsAndFlyouts:ExtendedContentDialog
    x:Class="GetStoreApp.UI.Dialogs.Web.CoreWebView2FailedDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialogViewModel="using:GetStoreApp.ViewModels.Dialogs.Web"
    xmlns:dialogsAndFlyouts="using:GetStoreApp.Views.CustomControls.DialogsAndFlyouts"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="using:GetStoreApp.Services.Root"
    x:Name="CoreWebView2FailedRoot"
    RequestedTheme="{x:Bind DialogTheme}"
    Style="{StaticResource ContentDialogStyle}"
    mc:Ignorable="d">

    <dialogsAndFlyouts:ExtendedContentDialog.DataContext>
        <dialogViewModel:CoreWebView2FailedViewModel x:Name="ViewModel" />
    </dialogsAndFlyouts:ExtendedContentDialog.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            Padding="24"
            Background="{ThemeResource ContentDialogTopOverlay}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="{ThemeResource ContentDialogBorderWidth}">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    Style="{StaticResource ContentDialogTitleStyle}"
                    Text="{x:Bind root:ResourceService.GetLocalized('Dialog/CoreWebView2FailedTitle')}" />
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    Style="{StaticResource ContentDialogContentStyle}"
                    Text="{x:Bind root:ResourceService.GetLocalized('Dialog/ProcessFailedKind')}" />
                <TextBlock
                    Grid.Column="1"
                    Style="{StaticResource ContentDialogContentStyle}"
                    Text="{x:Bind ViewModel.ProcessFailedKind}"
                    TextAlignment="DetectFromContent"
                    TextWrapping="Wrap" />
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    Style="{StaticResource ContentDialogContentStyle}"
                    Text="{x:Bind root:ResourceService.GetLocalized('Dialog/Reason')}" />
                <TextBlock
                    Grid.Column="1"
                    Style="{StaticResource ContentDialogContentStyle}"
                    Text="{x:Bind ViewModel.Reason}"
                    TextAlignment="DetectFromContent"
                    TextWrapping="Wrap" />
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    Style="{StaticResource ContentDialogContentStyle}"
                    Text="{x:Bind root:ResourceService.GetLocalized('Dialog/ExitCode')}" />
                <TextBlock
                    Grid.Column="1"
                    Style="{StaticResource ContentDialogContentStyle}"
                    Text="{x:Bind ViewModel.ExitCode}"
                    TextAlignment="DetectFromContent"
                    TextWrapping="Wrap" />
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    Style="{StaticResource ContentDialogContentStyle}"
                    Text="{x:Bind root:ResourceService.GetLocalized('Dialog/ProcessDescription')}" />
                <TextBlock
                    Grid.Column="1"
                    Style="{StaticResource ContentDialogContentStyle}"
                    Text="{x:Bind ViewModel.ProcessDescription}"
                    TextAlignment="DetectFromContent"
                    TextWrapping="Wrap" />
            </Grid>
        </StackPanel>

        <Grid
            Grid.Row="1"
            Padding="24"
            ColumnSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button
                Grid.Column="0"
                HorizontalAlignment="Stretch"
                Command="{x:Bind ViewModel.CopyExceptionCommand}"
                CommandParameter="{x:Bind CoreWebView2FailedRoot}"
                Content="{x:Bind root:ResourceService.GetLocalized('Dialog/CopyException')}"
                Style="{ThemeResource AccentButtonStyle}">

                <ToolTipService.ToolTip>
                    <ToolTip
                        Content="{x:Bind root:ResourceService.GetLocalized('Dialog/CopyException')}"
                        Placement="Bottom"
                        VerticalOffset="20" />
                </ToolTipService.ToolTip>
            </Button>

            <Button
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                Command="{x:Bind ViewModel.CloseDialogCommand}"
                CommandParameter="{x:Bind CoreWebView2FailedRoot}"
                Content="{x:Bind root:ResourceService.GetLocalized('Dialog/CloseDialog')}">

                <ToolTipService.ToolTip>
                    <ToolTip
                        Content="{x:Bind root:ResourceService.GetLocalized('Dialog/CloseDialog')}"
                        Placement="Bottom"
                        VerticalOffset="20" />
                </ToolTipService.ToolTip>
            </Button>
        </Grid>
    </Grid>
</dialogsAndFlyouts:ExtendedContentDialog>
