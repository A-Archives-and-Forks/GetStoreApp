<ContentDialog
    x:Class="GetStoreApp.UI.Dialogs.FolderAccessFailedDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:behavior="using:GetStoreApp.Behaviors"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    Title="{x:Bind ResourceService.GetLocalized('/Dialog/FolderAccessFailedTitle')}"
    BorderBrush="{ThemeResource SystemAccentColor}"
    CloseButtonText="{x:Bind ResourceService.GetLocalized('/Dialog/UndoChanges')}"
    Content="{x:Bind ResourceService.GetLocalized('/Dialog/FolderAccessFailedContent')}"
    PrimaryButtonStyle="{ThemeResource AccentButtonStyle}"
    PrimaryButtonText="{x:Bind ResourceService.GetLocalized('/Dialog/ReselectFolder')}"
    RequestedTheme="{x:Bind DialogTheme}"
    SecondaryButtonText="{x:Bind ResourceService.GetLocalized('/Dialog/UseDefaultFolder')}"
    Style="{StaticResource DefaultContentDialogStyle}"
    mc:Ignorable="d">

    <i:Interaction.Behaviors>
        <behavior:ContentDialogBehavior />
    </i:Interaction.Behaviors>
</ContentDialog>
