<ContentDialog
    x:Class="GetStoreApp.UI.Dialogs.CloudflareValidationDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{x:Bind ResourceService.GetLocalized('/Dialog/CloudflareValidation')}"
    CloseButtonText="{x:Bind ResourceService.GetLocalized('/Dialog/CloudflareValidationSure')}"
    Style="{StaticResource DefaultContentDialogStyle}"
    mc:Ignorable="d">

    <ContentDialog.Resources>
        <x:Double x:Key="ContentDialogMaxWidth">600</x:Double>
    </ContentDialog.Resources>

    <ContentDialog.Content>
        <StackPanel>
            <TextBlock Style="{StaticResource ContentDialogContentStyle}" Text="{x:Bind ResourceService.GetLocalized('/Dialog/CloudflareValidationContent')}" />

            <Border
                HorizontalAlignment="Left"
                BorderBrush="{StaticResource CardStrokeColorDefaultBrush}"
                BorderThickness="2">
                <Image Source="ms-appx:///Assets/Images/CloudflareValidation.png" />
            </Border>
        </StackPanel>
    </ContentDialog.Content>
</ContentDialog>
