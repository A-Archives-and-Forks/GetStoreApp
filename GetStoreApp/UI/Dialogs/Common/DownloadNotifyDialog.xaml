<dialogsAndFlyouts:ExtendedContentDialog
    x:Class="GetStoreApp.UI.Dialogs.Common.DownloadNotifyDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialogsAndFlyouts="using:GetStoreApp.Views.CustomControls.DialogsAndFlyouts"
    xmlns:getStoreApp="using:GetStoreApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="using:GetStoreApp.Services.Root"
    Title="{x:Bind root:ResourceService.GetLocalized('Dialog/DownloadNotifyTitle')}"
    CloseButtonText="{x:Bind root:ResourceService.GetLocalized('Dialog/CancelDownload')}"
    Content="{x:Bind DownloadNotifyContent}"
    PrimaryButtonText="{x:Bind root:ResourceService.GetLocalized('Dialog/Redownload')}"
    RequestedTheme="{x:Bind getStoreApp:Program.ApplicationRoot.MainWindow.ViewModel.WindowTheme, Mode=OneWay}"
    SecondaryButtonText="{x:Bind root:ResourceService.GetLocalized('Dialog/ViewDownloadRecord')}"
    Style="{StaticResource ContentDialogStyle}"
    mc:Ignorable="d" />
