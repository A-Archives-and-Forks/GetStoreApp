<ContentDialog
    x:Class="GetStoreApp.UI.Dialogs.ContentDialogs.Common.AppRunningDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behavior="using:GetStoreApp.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{x:Bind ResourceService.GetLocalized('AppDisplayName')}"
    CloseButtonText="{x:Bind ResourceService.GetLocalized('OK')}"
    Content="{x:Bind ResourceService.GetLocalized('AppIsRunning')}"
    RequestedTheme="{x:Bind DialogTheme}"
    Style="{StaticResource DefaultContentDialogStyle}"
    mc:Ignorable="d">

    <i:Interaction.Behaviors>
        <behavior:ContentDialogBehavior />
    </i:Interaction.Behaviors>
</ContentDialog>
