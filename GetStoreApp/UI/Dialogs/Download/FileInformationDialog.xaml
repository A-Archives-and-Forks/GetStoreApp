<dialogsAndFlyouts:ExtendedContentDialog
    x:Class="GetStoreApp.UI.Dialogs.Download.FileInformationDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialogViewModel="using:GetStoreApp.ViewModels.Dialogs.Download"
    xmlns:dialogsAndFlyouts="using:GetStoreApp.Views.CustomControls.DialogsAndFlyouts"
    xmlns:getStoreApp="using:GetStoreApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="using:GetStoreApp.Services.Root"
    x:Name="FileInformationRoot"
    Loaded="{x:Bind ViewModel.OnLoaded}"
    RequestedTheme="{x:Bind getStoreApp:Program.ApplicationRoot.MainWindow.ViewModel.WindowTheme, Mode=OneWay}"
    Style="{StaticResource EmptyContentDialogStyle}"
    mc:Ignorable="d">

    <dialogsAndFlyouts:ExtendedContentDialog.DataContext>
        <dialogViewModel:FileInformationViewModel x:Name="ViewModel" />
    </dialogsAndFlyouts:ExtendedContentDialog.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            Padding="24,24,24,12"
            Background="{ThemeResource ContentDialogTopOverlay}">

            <TextBlock Style="{StaticResource ContentDialogTitleStyle}" Text="{x:Bind root:ResourceService.GetLocalized('Dialog/FileInformationTitle')}" />

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    Style="{StaticResource ContentDialogContentStyle}"
                    Text="{x:Bind root:ResourceService.GetLocalized('Dialog/FileName')}" />
                <TextBlock
                    Grid.Column="1"
                    Style="{StaticResource ContentDialogContentStyle}"
                    Text="{x:Bind ViewModel.FileName}"
                    TextAlignment="DetectFromContent"
                    TextWrapping="Wrap" />
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    Style="{StaticResource ContentDialogContentStyle}"
                    Text="{x:Bind root:ResourceService.GetLocalized('Dialog/FilePath')}" />
                <TextBlock
                    Grid.Column="1"
                    Style="{StaticResource ContentDialogContentStyle}"
                    Text="{x:Bind ViewModel.FilePath}"
                    TextAlignment="DetectFromContent"
                    TextWrapping="Wrap" />
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    Style="{StaticResource ContentDialogContentStyle}"
                    Text="{x:Bind root:ResourceService.GetLocalized('Dialog/FileSize')}" />
                <TextBlock
                    Grid.Column="1"
                    Style="{StaticResource ContentDialogContentStyle}"
                    Text="{x:Bind ViewModel.FileSize}"
                    TextAlignment="DetectFromContent"
                    TextWrapping="Wrap" />
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    Style="{StaticResource ContentDialogContentStyle}"
                    Text="{x:Bind root:ResourceService.GetLocalized('Dialog/FileSHA1')}" />
                <TextBlock
                    x:Name="FileSHA1Info"
                    Grid.Column="1"
                    x:Load="{x:Bind ViewModel.FileSHA1Load}"
                    Style="{StaticResource ContentDialogContentStyle}"
                    Text="{x:Bind ViewModel.FileSHA1}"
                    TextWrapping="Wrap" />
            </Grid>

            <StackPanel
                x:Name="FileChecking"
                x:Load="{x:Bind ViewModel.FileCheckState, Converter={StaticResource BooleanToOppositeValueConverter}, Mode=OneWay}"
                Orientation="Horizontal"
                Spacing="5">
                <ProgressRing
                    Width="20"
                    Height="20"
                    IsActive="True" />
                <TextBlock Style="{StaticResource ContentDialogContentStyle}" Text="{x:Bind root:ResourceService.GetLocalized('Dialog/CheckingFile')}" />
            </StackPanel>

            <Grid x:Name="FileChecked" x:Load="{x:Bind ViewModel.FileCheckState, Mode=OneWay}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    Style="{StaticResource ContentDialogContentStyle}"
                    Text="{x:Bind root:ResourceService.GetLocalized('Dialog/CheckFileSHA1')}" />
                <TextBlock
                    Grid.Column="1"
                    Style="{StaticResource ContentDialogContentStyle}"
                    Text="{x:Bind ViewModel.CheckFileSHA1, Mode=OneWay}"
                    TextWrapping="Wrap" />
            </Grid>
        </StackPanel>

        <Grid
            Grid.Row="1"
            Padding="{ThemeResource ContentDialogPadding}"
            Background="{ThemeResource ContentDialogBackground}"
            ColumnSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button
                Grid.Column="0"
                HorizontalAlignment="Stretch"
                Click="{x:Bind ViewModel.OnCopyFileInformationClicked}"
                Content="{x:Bind root:ResourceService.GetLocalized('Dialog/CopyFileInformation')}"
                IsEnabled="{x:Bind ViewModel.FileCheckState, Mode=OneWay}"
                Style="{ThemeResource AccentButtonStyle}"
                Tag="{x:Bind FileInformationRoot}">

                <ToolTipService.ToolTip>
                    <ToolTip
                        Content="{x:Bind root:ResourceService.GetLocalized('Dialog/CopyFileInformation')}"
                        Placement="Bottom"
                        VerticalOffset="20" />
                </ToolTipService.ToolTip>
            </Button>

            <Button
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                Click="{x:Bind ViewModel.OnCloseDialogClicked}"
                Content="{x:Bind root:ResourceService.GetLocalized('Dialog/CloseDialog')}"
                IsEnabled="{x:Bind ViewModel.FileCheckState, Mode=OneWay}"
                Tag="{x:Bind FileInformationRoot}">

                <ToolTipService.ToolTip>
                    <ToolTip
                        Content="{x:Bind root:ResourceService.GetLocalized('Dialog/CloseDialog')}"
                        Placement="Bottom"
                        VerticalOffset="20" />
                </ToolTipService.ToolTip>
            </Button>
        </Grid>
    </Grid>
</dialogsAndFlyouts:ExtendedContentDialog>
