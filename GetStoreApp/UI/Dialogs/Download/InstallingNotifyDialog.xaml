<ContentDialog
    x:Class="GetStoreApp.UI.Dialogs.Download.InstallingNotifyDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="using:GetStoreApp.Services.Root"
    Title="{x:Bind root:ResourceService.GetLocalized('Dialog/InstallingNotifyTitle')}"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    BorderBrush="{ThemeResource ContentDialogBorderThemeBrush}"
    Canvas.ZIndex="9999"
    CloseButtonText="{x:Bind root:ResourceService.GetLocalized('Dialog/OK')}"
    Content="{x:Bind root:ResourceService.GetLocalized('Dialog/InstallingNotifyContent')}"
    Style="{StaticResource DefaultContentDialogStyle}"
    mc:Ignorable="d" />
