<ContentDialog
    x:Class="GetStoreApp.UI.Dialogs.Settings.FolderAccessFailedDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialogViewModel="using:GetStoreApp.ViewModels.Dialogs.Settings"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="using:GetStoreApp.Services.Root"
    Title="{x:Bind root:ResourceService.GetLocalized('/Dialog/FolderAccessFailedTitle')}"
    CloseButtonText="{x:Bind root:ResourceService.GetLocalized('/Dialog/UndoChanges')}"
    Content="{x:Bind root:ResourceService.GetLocalized('/Dialog/FolderAccessFailedContent')}"
    Loaded="{x:Bind ViewModel.OnLoaded}"
    PrimaryButtonText="{x:Bind root:ResourceService.GetLocalized('/Dialog/ReselectFolder')}"
    RequestedTheme="{x:Bind DialogTheme}"
    SecondaryButtonText="{x:Bind root:ResourceService.GetLocalized('/Dialog/UseDefaultFolder')}"
    Style="{StaticResource DefaultContentDialogStyle}"
    mc:Ignorable="d">

    <ContentDialog.DataContext>
        <dialogViewModel:FolderAccessFailedViewModel x:Name="ViewModel" />
    </ContentDialog.DataContext>
</ContentDialog>
