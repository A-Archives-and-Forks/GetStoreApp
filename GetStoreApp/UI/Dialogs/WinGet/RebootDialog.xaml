<dialogsAndFlyouts:ExtendedContentDialog
    x:Class="GetStoreApp.UI.Dialogs.WinGet.RebootDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialogViewModel="using:GetStoreApp.ViewModels.Dialogs.WinGet"
    xmlns:dialogsAndFlyouts="using:GetStoreApp.Views.CustomControls.DialogsAndFlyouts"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="using:GetStoreApp.Services.Root"
    Title="{x:Bind root:ResourceService.GetLocalized('Dialog/RebootTitle')}"
    CloseButtonText="{x:Bind root:ResourceService.GetLocalized('Dialog/CloseDialog')}"
    Content="{x:Bind ViewModel.RebootContent}"
    PrimaryButtonText="{x:Bind root:ResourceService.GetLocalized('Dialog/Reboot')}"
    Style="{StaticResource ContentDialogStyle}"
    mc:Ignorable="d">
    <dialogsAndFlyouts:ExtendedContentDialog.DataContext>
        <dialogViewModel:RebootViewModel x:Name="ViewModel" />
    </dialogsAndFlyouts:ExtendedContentDialog.DataContext>
</dialogsAndFlyouts:ExtendedContentDialog>
