<notification:InAppNotification
    x:Class="GetStoreApp.UI.Notifications.WinGetCopyNotification"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:getStoreApp="using:GetStoreApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:notification="using:GetStoreApp.Views.CustomControls.Notifications"
    xmlns:notificationViewModel="using:GetStoreApp.ViewModels.Notifications"
    xmlns:root="using:GetStoreApp.Services.Root"
    RequestedTheme="{x:Bind getStoreApp:Program.ApplicationRoot.MainWindow.ViewModel.WindowTheme, Mode=OneWay}"
    mc:Ignorable="d">

    <notification:InAppNotification.DataContext>
        <notificationViewModel:WinGetCopyViewModel x:Name="ViewModel" />
    </notification:InAppNotification.DataContext>

    <Grid>
        <TextBlock
            x:Name="SearchInstallCopySuccess"
            x:Load="{x:Bind ControlLoaded(ViewModel.CopyState,ViewModel.OptionArgs,'SearchInstallCopySuccess'), Mode=OneWay}"
            Foreground="{ThemeResource SystemFillColorSuccessBrush}"
            Text="{x:Bind root:ResourceService.GetLocalized('Notification/SearchInstallCopySuccessfully')}" />
        <TextBlock
            x:Name="SearchInstallCopyFailed"
            x:Load="{x:Bind ControlLoaded(ViewModel.CopyState,ViewModel.OptionArgs,'SearchInstallCopyFailed'), Mode=OneWay}"
            Foreground="{ThemeResource SystemFillColorCriticalBrush}"
            Text="{x:Bind root:ResourceService.GetLocalized('Notification/SearchInstallCopyFailed')}" />
        <TextBlock
            x:Name="UnInstallCopySuccess"
            x:Load="{x:Bind ControlLoaded(ViewModel.CopyState,ViewModel.OptionArgs,'UnInstallCopySuccess'), Mode=OneWay}"
            Foreground="{ThemeResource SystemFillColorSuccessBrush}"
            Text="{x:Bind root:ResourceService.GetLocalized('Notification/UnInstallCopySuccessfully')}" />
        <TextBlock
            x:Name="UnInstallCopyFailed"
            x:Load="{x:Bind ControlLoaded(ViewModel.CopyState,ViewModel.OptionArgs,'UnInstallCopyFailed'), Mode=OneWay}"
            Foreground="{ThemeResource SystemFillColorCriticalBrush}"
            Text="{x:Bind root:ResourceService.GetLocalized('Notification/UnInstallCopyFailed')}" />
        <TextBlock
            x:Name="UpgradeInstallCopySuccess"
            x:Load="{x:Bind ControlLoaded(ViewModel.CopyState,ViewModel.OptionArgs,'UpgradeInstallCopySuccess'), Mode=OneWay}"
            Foreground="{ThemeResource SystemFillColorSuccessBrush}"
            Text="{x:Bind root:ResourceService.GetLocalized('Notification/UpgradeInstallCopySuccessfully')}" />
        <TextBlock
            x:Name="UpgradeInstallCopyFailed"
            x:Load="{x:Bind ControlLoaded(ViewModel.CopyState,ViewModel.OptionArgs,'UpgradeInstallCopyFailed'), Mode=OneWay}"
            Foreground="{ThemeResource SystemFillColorCriticalBrush}"
            Text="{x:Bind root:ResourceService.GetLocalized('Notification/UpgradeInstallCopyFailed')}" />
    </Grid>
</notification:InAppNotification>
