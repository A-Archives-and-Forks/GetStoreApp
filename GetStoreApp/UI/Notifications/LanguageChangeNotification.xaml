<StackPanel
    x:Class="GetStoreApp.UI.Notifications.LanguageChangeNotification"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <TextBlock
        x:Name="LanguageChangeSuccess"
        x:Load="{x:Bind ViewModel.SetResult, Mode=OneWay}"
        Foreground="{ThemeResource InfoBarSuccessSeverityIconBackground}"
        Text="{x:Bind ResourceService.GetLocalized('/Notification/LanguageChangeSuccessfully')}" />
    <TextBlock
        x:Name="LanguageChangeFailed"
        x:Load="{x:Bind ViewModel.SetResult, Converter={StaticResource BooleanToOppositeValueConverter}, Mode=OneWay}"
        Foreground="{ThemeResource InfoBarErrorSeverityIconBackground}"
        Text="{x:Bind ResourceService.GetLocalized('/Notification/LanguageChangeFailed')}" />
</StackPanel>
