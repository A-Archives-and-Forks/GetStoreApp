<UserControl
    x:Class="GetStoreApp.UI.Notifications.WebCacheCleanNotification"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:notificationViewModel="using:GetStoreApp.ViewModels.Notifications"
    xmlns:root="using:GetStoreApp.Services.Root"
    Loaded="{x:Bind NotificationLoaded}"
    RequestedTheme="{x:Bind NotificationTheme}"
    Unloaded="{x:Bind NotificationUnLoaded}"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <notificationViewModel:WebCacheViewModel x:Name="ViewModel" />
    </UserControl.DataContext>

    <UserControl.Resources>
        <Storyboard x:Name="PopupIn" Completed="{x:Bind PopupInCompleted}">
            <DoubleAnimation
                Storyboard.TargetName="PopupContainer"
                Storyboard.TargetProperty="Opacity"
                From="0"
                To="1"
                Duration="00:00:00.5">
                <DoubleAnimation.EasingFunction>
                    <PowerEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation
                Storyboard.TargetName="PopupContainer"
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                From="-10"
                To="-100"
                Duration="00:00:00.5">
                <DoubleAnimation.EasingFunction>
                    <PowerEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <Storyboard x:Name="PopupOut" Completed="{x:Bind PopupOutCompleted}">
            <DoubleAnimation
                Storyboard.TargetName="PopupContainer"
                Storyboard.TargetProperty="Opacity"
                From="1"
                To="0"
                Duration="00:00:00.5">
                <DoubleAnimation.EasingFunction>
                    <PowerEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation
                Storyboard.TargetName="PopupContainer"
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                From="-100"
                To="-10"
                Duration="00:00:00.5">
                <DoubleAnimation.EasingFunction>
                    <PowerEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </UserControl.Resources>

    <StackPanel
        Name="PopupContainer"
        Padding="10"
        HorizontalAlignment="Center"
        VerticalAlignment="Bottom"
        Background="{ThemeResource TeachingTipBackgroundBrush}"
        BorderBrush="{ThemeResource TeachingTipBorderBrush}"
        BorderThickness="{ThemeResource TeachingTipContentBorderThicknessUntargeted}"
        CornerRadius="{ThemeResource OverlayCornerRadius}"
        Opacity="0">

        <StackPanel.RenderTransform>
            <TranslateTransform Y="-10" />
        </StackPanel.RenderTransform>

        <TextBlock
            x:Name="WebCacheCleanSuccess"
            x:Load="{x:Bind ViewModel.SetResult, Mode=OneWay}"
            Foreground="{ThemeResource InfoBarSuccessSeverityIconBackground}"
            Text="{x:Bind root:ResourceService.GetLocalized('/Notification/WebCacheCleanSuccessfully')}" />
        <TextBlock
            x:Name="WebCacheCleanFailed"
            x:Load="{x:Bind ViewModel.SetResult, Converter={StaticResource BooleanToOppositeValueConverter}, Mode=OneWay}"
            Foreground="{ThemeResource InfoBarErrorSeverityIconBackground}"
            Text="{x:Bind root:ResourceService.GetLocalized('/Notification/WebCacheCleanChangeFailed')}" />
    </StackPanel>
</UserControl>
