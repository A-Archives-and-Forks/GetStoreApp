<StackPanel
    x:Class="GetStoreApp.UI.Notifications.FileInformationCopyNotification"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <TextBlock
        x:Name="CopySuccess"
        x:Load="{x:Bind ViewModel.CopyState, Mode=OneWay}"
        Foreground="{ThemeResource InfoBarSuccessSeverityIconBackground}"
        Text="{x:Bind ResourceService.GetLocalized('/Notification/FileInformationCopySuccessfully')}" />
    <TextBlock
        x:Name="CopyFailed"
        x:Load="{x:Bind ViewModel.CopyState, Converter={StaticResource BooleanToOppositeValueConverter}, Mode=OneWay}"
        Foreground="{ThemeResource InfoBarErrorSeverityIconBackground}"
        Text="{x:Bind ResourceService.GetLocalized('/Notification/FileInformationCopyFailed')}" />
</StackPanel>
