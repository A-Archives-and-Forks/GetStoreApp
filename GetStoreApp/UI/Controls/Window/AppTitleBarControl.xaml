<Grid
    x:Class="GetStoreApp.UI.Controls.Window.AppTitleBarControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="using:GetStoreApp.Services.Root"
    xmlns:windowViewModel="using:GetStoreApp.ViewModels.Controls.Window"
    x:Name="AppTitleBar"
    Loaded="{x:Bind ViewModel.OnLoaded}"
    SizeChanged="{x:Bind ViewModel.OnSizeChanged}"
    Unloaded="{x:Bind ViewModel.OnUnloaded}"
    mc:Ignorable="d">

    <Grid.DataContext>
        <windowViewModel:AppTitleBarViewModel x:Name="ViewModel" />
    </Grid.DataContext>

    <Image
        Width="22"
        Height="22"
        Margin="0,3,0,0"
        HorizontalAlignment="Left"
        Source="ms-appx:///Assets/Logo/GetStoreApp.png" />
    <TextBlock
        Margin="36,2,0,0"
        VerticalAlignment="Center"
        Style="{StaticResource CaptionTextBlockStyle}"
        Text="{x:Bind root:ResourceService.GetLocalized('/Window/AppTitle')}"
        TextWrapping="NoWrap" />
</Grid>
