<UserControl
    x:Class="GetStoreApp.UI.Controls.Settings.Common.DownloadOptionsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:GetStoreApp.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="using:GetStoreApp.Services.Root"
    xmlns:settingsViewModel="using:GetStoreApp.ViewModels.Controls.Settings.Common"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <settingsViewModel:DownloadOptionsViewModel x:Name="ViewModel" />
    </UserControl.DataContext>

    <Expander Style="{StaticResource ExpanderSettingsStyle}">
        <Expander.Header>
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <FontIcon
                    Grid.Column="0"
                    FontFamily="{StaticResource SegoeFluentFontFamily}"
                    Glyph="&#xE896;"
                    Style="{StaticResource FontIconStyle}" />

                <StackPanel
                    Grid.Column="1"
                    Margin="0,12"
                    Orientation="Vertical">

                    <TextBlock
                        VerticalAlignment="Center"
                        Style="{StaticResource BodyTextBlockStyle}"
                        Text="{x:Bind root:ResourceService.GetLocalized('Settings/DownloadOptions')}" />

                    <TextBlock
                        VerticalAlignment="Center"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="{x:Bind root:ResourceService.GetLocalized('Settings/DownloadOptionsDescription')}" />
                </StackPanel>

                <Button
                    Grid.Column="2"
                    Command="{x:Bind ViewModel.DownloadInstructionCommand}"
                    Content="{x:Bind root:ResourceService.GetLocalized('Settings/DownloadInstruction')}"
                    ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Settings/DownloadInstruction')}" />
            </Grid>
        </Expander.Header>

        <Expander.Content>
            <StackPanel Padding="43,6,16,4" HorizontalAlignment="Stretch">
                <StackPanel>
                    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Vertical">
                            <TextBlock
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyTextBlockStyle}"
                                Text="{x:Bind root:ResourceService.GetLocalized('Settings/DownloadFolder')}" />

                            <HyperlinkButton
                                Command="{x:Bind ViewModel.OpenFolderCommand}"
                                Content="{x:Bind ViewModel.DownloadFolder.Path, Mode=OneWay}"
                                Style="{StaticResource HyperlinkButtonStyle}"
                                ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Settings/OpenFolderToolTip')}" />
                        </StackPanel>

                        <Button
                            Grid.Column="1"
                            Margin="6,0,6,0"
                            Command="{x:Bind ViewModel.UseDefaultFolderCommand}"
                            Content="{x:Bind root:ResourceService.GetLocalized('Settings/UseDefaultFolder')}"
                            ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Settings/UseDefaultFolder')}" />

                        <Button
                            Grid.Column="2"
                            Command="{x:Bind ViewModel.ChangeFolderCommand}"
                            Content="{x:Bind root:ResourceService.GetLocalized('Settings/ChangeFolder')}"
                            ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Settings/ChangeFolder')}" />
                    </Grid>
                </StackPanel>

                <MenuFlyoutSeparator Margin="0,4,0,4" />

                <StackPanel>
                    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Vertical">
                            <TextBlock
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyTextBlockStyle}"
                                Text="{x:Bind root:ResourceService.GetLocalized('Settings/DownloadItem')}" />
                            <TextBlock
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Text="{x:Bind root:ResourceService.GetLocalized('Settings/DownloadItemDescription')}" />
                        </StackPanel>

                        <DropDownButton
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Content="{x:Bind ViewModel.DownloadItem, Mode=OneWay}"
                            ToolTipService.ToolTip="{x:Bind ViewModel.DownloadItem, Mode=OneWay}">
                            <DropDownButton.Flyout>
                                <controls:AdaptiveMenuFlyout>
                                    <RadioMenuFlyoutItem
                                        Command="{x:Bind ViewModel.DownloadItemSelectCommand}"
                                        CommandParameter="1"
                                        GroupName="DownloadItemSetting"
                                        IsChecked="{x:Bind IsDownloadItemChecked(ViewModel.DownloadItem, 1), Mode=OneWay}"
                                        Text="1"
                                        ToolTipService.ToolTip="{x:Bind ViewModel.DownloadItem}" />
                                    <RadioMenuFlyoutItem
                                        Command="{x:Bind ViewModel.DownloadItemSelectCommand}"
                                        CommandParameter="2"
                                        GroupName="DownloadItemSetting"
                                        IsChecked="{x:Bind IsDownloadItemChecked(ViewModel.DownloadItem, 2), Mode=OneWay}"
                                        Text="2"
                                        ToolTipService.ToolTip="2" />
                                    <RadioMenuFlyoutItem
                                        Command="{x:Bind ViewModel.DownloadItemSelectCommand}"
                                        CommandParameter="3"
                                        GroupName="DownloadItemSetting"
                                        IsChecked="{x:Bind IsDownloadItemChecked(ViewModel.DownloadItem, 3), Mode=OneWay}"
                                        Text="3"
                                        ToolTipService.ToolTip="3" />
                                </controls:AdaptiveMenuFlyout>
                            </DropDownButton.Flyout>
                        </DropDownButton>
                    </Grid>
                </StackPanel>

                <MenuFlyoutSeparator Margin="0,4,0,4" />

                <StackPanel Margin="0,0,0,6">
                    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Vertical">
                            <TextBlock
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyTextBlockStyle}"
                                Text="{x:Bind root:ResourceService.GetLocalized('Settings/DownloadMode')}" />
                            <TextBlock
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Text="{x:Bind root:ResourceService.GetLocalized('Settings/DownloadModeDescription')}" />
                        </StackPanel>

                        <DropDownButton
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Content="{x:Bind ViewModel.DownloadMode.DisplayName, Mode=OneWay}"
                            ToolTipService.ToolTip="{x:Bind ViewModel.DownloadMode.DisplayName, Mode=OneWay}">
                            <DropDownButton.Flyout>
                                <controls:AdaptiveMenuFlyout>
                                    <RadioMenuFlyoutItem
                                        Command="{x:Bind ViewModel.DownloadModeSelectCommand}"
                                        CommandParameter="0"
                                        GroupName="DownloadModeSetting"
                                        IsChecked="{x:Bind IsDownloadModeChecked(ViewModel.DownloadMode.InternalName, ViewModel.DownloadModeList[0].InternalName), Mode=OneWay}"
                                        Text="{x:Bind ViewModel.DownloadModeList[0].DisplayName}"
                                        ToolTipService.ToolTip="{x:Bind ViewModel.DownloadModeList[0].DisplayName}" />
                                    <RadioMenuFlyoutItem
                                        Command="{x:Bind ViewModel.DownloadModeSelectCommand}"
                                        CommandParameter="1"
                                        GroupName="DownloadModeSetting"
                                        IsChecked="{x:Bind IsDownloadModeChecked(ViewModel.DownloadMode.InternalName, ViewModel.DownloadModeList[1].InternalName), Mode=OneWay}"
                                        Text="{x:Bind ViewModel.DownloadModeList[1].DisplayName}"
                                        ToolTipService.ToolTip="{x:Bind ViewModel.DownloadModeList[1].DisplayName}" />
                                </controls:AdaptiveMenuFlyout>
                            </DropDownButton.Flyout>
                        </DropDownButton>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </Expander.Content>
    </Expander>
</UserControl>
