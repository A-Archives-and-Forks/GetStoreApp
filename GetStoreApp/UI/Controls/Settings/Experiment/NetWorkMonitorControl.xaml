<UserControl
    x:Class="GetStoreApp.UI.Controls.Settings.Experiment.NetWorkMonitorControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:ic="using:Microsoft.Xaml.Interactions.Core"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Style="{StaticResource CardGridStyle}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <FontIcon
            Grid.Column="0"
            FontFamily="{StaticResource SegoeFluentFontFamily}"
            Glyph="&#xE9d9;"
            Style="{StaticResource FontIconStyle}" />

        <TextBlock
            Grid.Column="1"
            VerticalAlignment="Center"
            Style="{StaticResource BodyTextBlockStyle}"
            Text="{x:Bind ResourceService.GetLocalized('/Settings/NetWorkMonitor')}" />

        <ToggleSwitch
            Name="NetWorkMonitorToggleSwitch"
            Grid.Column="2"
            FlowDirection="RightToLeft"
            IsOn="{x:Bind ViewModel.NetWorkMonitorValue, Mode=OneWay}"
            OffContent="{x:Bind ResourceService.GetLocalized('/Settings/NetWorkMonitorOffContent')}"
            OnContent="{x:Bind ResourceService.GetLocalized('/Settings/NetWorkMonitorOnContent')}">

            <i:Interaction.Behaviors>
                <ic:EventTriggerBehavior EventName="Toggled">
                    <ic:InvokeCommandAction Command="{x:Bind ViewModel.NetWorkMonitorCommand}" CommandParameter="{Binding ElementName=NetWorkMonitorToggleSwitch, Path=IsOn}" />
                </ic:EventTriggerBehavior>
            </i:Interaction.Behaviors>
        </ToggleSwitch>
    </Grid>
</UserControl>
