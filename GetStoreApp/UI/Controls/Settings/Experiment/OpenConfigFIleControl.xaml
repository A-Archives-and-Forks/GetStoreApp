<UserControl
    x:Class="GetStoreApp.UI.Controls.Settings.Experiment.OpenConfigFIleControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Style="{StaticResource CardGridStyle}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <FontIcon
            Grid.Column="0"
            FontFamily="{StaticResource SegoeFluentFontFamily}"
            Glyph="&#xE70f;"
            Style="{StaticResource FontIconStyle}" />

        <TextBlock
            Grid.Column="1"
            VerticalAlignment="Center"
            Style="{StaticResource BodyTextBlockStyle}"
            Text="{x:Bind ResourceService.GetLocalized('/Settings/OpenConfigFile')}" />

        <HyperlinkButton
            Grid.Column="2"
            Command="{x:Bind ViewModel.OpenConfigFileCommand}"
            Style="{StaticResource ExperimentalHyperlinkButtonStyle}"
            ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/Settings/OpenConfigFolder')}">
            <HyperlinkButton.Content>
                <FontIcon FontFamily="{StaticResource SegoeFluentFontFamily}" Glyph="&#xE8a7;" />
            </HyperlinkButton.Content>
        </HyperlinkButton>
    </Grid>
</UserControl>
