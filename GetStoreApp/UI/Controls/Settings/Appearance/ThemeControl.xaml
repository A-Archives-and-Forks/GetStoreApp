<UserControl
    x:Class="GetStoreApp.UI.Controls.Settings.Appearance.ThemeControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:menusAndToolbars="using:GetStoreApp.Views.CustomControls.MenusAndToolbars"
    xmlns:root="using:GetStoreApp.Services.Root"
    xmlns:settingsViewModel="using:GetStoreApp.ViewModels.Controls.Settings.Appearance"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <settingsViewModel:ThemeViewModel x:Name="ViewModel" />
    </UserControl.DataContext>

    <Grid Style="{StaticResource CardGridStyle}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <FontIcon
            Grid.Column="0"
            FontFamily="{StaticResource SegoeFluentFontFamily}"
            Glyph="&#xE790;"
            Style="{StaticResource FontIconStyle}" />

        <StackPanel Grid.Column="1" Orientation="Vertical">

            <TextBlock
                VerticalAlignment="Center"
                Style="{StaticResource BodyTextBlockStyle}"
                Text="{x:Bind root:ResourceService.GetLocalized('Settings/Theme')}" />

            <TextBlock
                VerticalAlignment="Center"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                Style="{StaticResource CaptionTextBlockStyle}"
                Text="{x:Bind root:ResourceService.GetLocalized('Settings/ThemeDescription')}" />
        </StackPanel>

        <HyperlinkButton
            Grid.Column="2"
            Margin="0,0,6,0"
            VerticalAlignment="Center"
            Command="{x:Bind ViewModel.SettingsColorCommand}"
            Content="{x:Bind root:ResourceService.GetLocalized('Settings/WindowsColorSettings')}"
            ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Settings/WindowsColorSettings')}" />

        <DropDownButton
            Grid.Column="3"
            VerticalAlignment="Center"
            Content="{x:Bind ViewModel.Theme.DisplayName, Mode=OneWay}"
            ToolTipService.ToolTip="{x:Bind ViewModel.Theme.DisplayName, Mode=OneWay}">
            <DropDownButton.Flyout>
                <menusAndToolbars:AdaptiveMenuFlyout>
                    <RadioMenuFlyoutItem
                        Command="{x:Bind ViewModel.ThemeSelectCommand}"
                        CommandParameter="0"
                        GroupName="ThemeSetting"
                        IsChecked="{x:Bind IsItemChecked(ViewModel.Theme.InternalName, ViewModel.ThemeList[0].InternalName), Mode=OneWay}"
                        Text="{x:Bind ViewModel.ThemeList[0].DisplayName}"
                        ToolTipService.ToolTip="{x:Bind ViewModel.ThemeList[0].DisplayName}" />
                    <RadioMenuFlyoutItem
                        Command="{x:Bind ViewModel.ThemeSelectCommand}"
                        CommandParameter="1"
                        GroupName="ThemeSetting"
                        IsChecked="{x:Bind IsItemChecked(ViewModel.Theme.InternalName, ViewModel.ThemeList[1].InternalName), Mode=OneWay}"
                        Text="{x:Bind ViewModel.ThemeList[1].DisplayName}"
                        ToolTipService.ToolTip="{x:Bind ViewModel.ThemeList[1].DisplayName}" />
                    <RadioMenuFlyoutItem
                        Command="{x:Bind ViewModel.ThemeSelectCommand}"
                        CommandParameter="2"
                        GroupName="ThemeSetting"
                        IsChecked="{x:Bind IsItemChecked(ViewModel.Theme.InternalName, ViewModel.ThemeList[2].InternalName), Mode=OneWay}"
                        Text="{x:Bind ViewModel.ThemeList[2].DisplayName}"
                        ToolTipService.ToolTip="{x:Bind ViewModel.ThemeList[2].DisplayName}" />
                </menusAndToolbars:AdaptiveMenuFlyout>
            </DropDownButton.Flyout>
        </DropDownButton>
    </Grid>
</UserControl>
