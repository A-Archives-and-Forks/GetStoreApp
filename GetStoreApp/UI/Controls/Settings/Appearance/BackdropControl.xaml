<Grid
    x:Class="GetStoreApp.UI.Controls.Settings.Appearance.BackdropControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controlExtensions="using:GetStoreApp.Helpers.Controls.Extensions"
    xmlns:converter="using:GetStoreApp.Helpers.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:menusAndToolbars="using:GetStoreApp.Views.CustomControls.MenusAndToolbars"
    xmlns:root="using:GetStoreApp.Services.Root"
    xmlns:settingsViewModel="using:GetStoreApp.ViewModels.Controls.Settings.Appearance"
    Style="{StaticResource CardGridStyle}"
    mc:Ignorable="d">

    <Grid.DataContext>
        <settingsViewModel:BackdropViewModel x:Name="ViewModel" />
    </Grid.DataContext>

    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="Auto" />
    </Grid.ColumnDefinitions>

    <FontIcon
        Grid.Column="0"
        Margin="0,0,12,0"
        FontFamily="{ThemeResource SymbolThemeFontFamily}"
        FontSize="16"
        Glyph="&#xE771;" />

    <StackPanel Grid.Column="1" Orientation="Vertical">

        <TextBlock
            VerticalAlignment="Center"
            Style="{StaticResource BodyTextBlockStyle}"
            Text="{x:Bind root:ResourceService.GetLocalized('Settings/Backdrop')}" />

        <TextBlock
            VerticalAlignment="Center"
            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
            Style="{StaticResource CaptionTextBlockStyle}"
            Text="{x:Bind root:ResourceService.GetLocalized('Settings/BackdropDescription')}" />
    </StackPanel>

    <Button
        Grid.Column="2"
        VerticalAlignment="Center"
        controlExtensions:CursorHelper.Cursor="Hand"
        Click="{x:Bind ViewModel.OnBackdropTipClicked}"
        Style="{StaticResource ButtonInfoStyle}"
        Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(ViewModel.CanUseMicaBackdrop), Mode=OneWay}">

        <Button.Content>
            <FontIcon
                FontFamily="{ThemeResource SymbolThemeFontFamily}"
                FontSize="16"
                Glyph="&#xE946;" />
        </Button.Content>

        <ToolTipService.ToolTip>
            <ToolTip
                Content="{x:Bind root:ResourceService.GetLocalized('Settings/BackdropToolTip')}"
                Placement="Bottom"
                VerticalOffset="25" />
        </ToolTipService.ToolTip>
    </Button>

    <DropDownButton
        Grid.Column="3"
        VerticalAlignment="Center"
        Content="{x:Bind ViewModel.Backdrop.DisplayName, Mode=OneWay}">

        <ToolTipService.ToolTip>
            <ToolTip
                Content="{x:Bind ViewModel.Backdrop.DisplayName, Mode=OneWay}"
                Placement="Bottom"
                VerticalOffset="20" />
        </ToolTipService.ToolTip>

        <DropDownButton.Flyout>
            <menusAndToolbars:AdaptiveMenuFlyout>
                <RadioMenuFlyoutItem
                    Click="{x:Bind ViewModel.OnBackdropSelectClicked}"
                    GroupName="BackdropSetting"
                    IsChecked="{x:Bind IsItemChecked(ViewModel.Backdrop.InternalName, ViewModel.BackdropList[0].InternalName), Mode=OneWay}"
                    Tag="0"
                    Text="{x:Bind ViewModel.BackdropList[0].DisplayName}">

                    <ToolTipService.ToolTip>
                        <ToolTip
                            Content="{x:Bind ViewModel.BackdropList[0].DisplayName}"
                            Placement="Bottom"
                            VerticalOffset="20" />
                    </ToolTipService.ToolTip>
                </RadioMenuFlyoutItem>

                <RadioMenuFlyoutItem
                    Click="{x:Bind ViewModel.OnBackdropSelectClicked}"
                    GroupName="BackdropSetting"
                    IsChecked="{x:Bind IsItemChecked(ViewModel.Backdrop.InternalName, ViewModel.BackdropList[1].InternalName), Mode=OneWay}"
                    Tag="1"
                    Text="{x:Bind ViewModel.BackdropList[1].DisplayName}"
                    Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityConvert(ViewModel.CanUseMicaBackdrop), Mode=OneWay}">

                    <ToolTipService.ToolTip>
                        <ToolTip
                            Content="{x:Bind ViewModel.BackdropList[1].DisplayName}"
                            Placement="Bottom"
                            VerticalOffset="20" />
                    </ToolTipService.ToolTip>
                </RadioMenuFlyoutItem>

                <RadioMenuFlyoutItem
                    Click="{x:Bind ViewModel.OnBackdropSelectClicked}"
                    GroupName="BackdropSetting"
                    IsChecked="{x:Bind IsItemChecked(ViewModel.Backdrop.InternalName, ViewModel.BackdropList[2].InternalName), Mode=OneWay}"
                    Tag="2"
                    Text="{x:Bind ViewModel.BackdropList[2].DisplayName}"
                    Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityConvert(ViewModel.CanUseMicaBackdrop), Mode=OneWay}">

                    <ToolTipService.ToolTip>
                        <ToolTip
                            Content="{x:Bind ViewModel.BackdropList[2].DisplayName}"
                            Placement="Bottom"
                            VerticalOffset="20" />
                    </ToolTipService.ToolTip>
                </RadioMenuFlyoutItem>

                <RadioMenuFlyoutItem
                    Click="{x:Bind ViewModel.OnBackdropSelectClicked}"
                    GroupName="BackdropSetting"
                    IsChecked="{x:Bind IsItemChecked(ViewModel.Backdrop.InternalName, ViewModel.BackdropList[3].InternalName), Mode=OneWay}"
                    Tag="3"
                    Text="{x:Bind ViewModel.BackdropList[3].DisplayName}">

                    <ToolTipService.ToolTip>
                        <ToolTip
                            Content="{x:Bind ViewModel.BackdropList[3].DisplayName}"
                            Placement="Bottom"
                            VerticalOffset="20" />
                    </ToolTipService.ToolTip>
                </RadioMenuFlyoutItem>
            </menusAndToolbars:AdaptiveMenuFlyout>
        </DropDownButton.Flyout>
    </DropDownButton>
</Grid>
