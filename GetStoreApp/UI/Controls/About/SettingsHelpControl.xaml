<Expander
    x:Class="GetStoreApp.UI.Controls.About.SettingsHelpControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="using:GetStoreApp.Services.Root"
    Padding="16,5,0,5"
    HorizontalAlignment="Stretch"
    HorizontalContentAlignment="Stretch"
    IsExpanded="True"
    mc:Ignorable="d">

    <Expander.Header>
        <TextBlock Style="{StaticResource ExpanderHeaderStyle}" Text="{x:Bind root:ResourceService.GetLocalized('About/SettingsHelp')}" />
    </Expander.Header>

    <Expander.Content>
        <StackPanel Margin="14,0,10,0">
            <TextBlock Style="{StaticResource ExpanderContentTitleStyle}" Text="{x:Bind root:ResourceService.GetLocalized('About/Backdrop')}" />
            <TextBlock Style="{StaticResource ExpanderContentDescriptionStyle}" Text="{x:Bind root:ResourceService.GetLocalized('About/BackdropDescription')}" />

            <HyperlinkButton
                Margin="-5,0,10,0"
                Padding="5"
                Click="{x:Bind OnSystemInformationClicked}"
                Content="{x:Bind root:ResourceService.GetLocalized('About/SystemInformation')}">

                <ToolTipService.ToolTip>
                    <ToolTip Content="{x:Bind root:ResourceService.GetLocalized('About/SystemInformation')}" Placement="Mouse" />
                </ToolTipService.ToolTip>
            </HyperlinkButton>
            <MenuFlyoutSeparator Margin="0,0,0,8" />

            <TextBlock Style="{StaticResource ExpanderContentTitleStyle}" Text="{x:Bind root:ResourceService.GetLocalized('About/Language')}" />
            <TextBlock Style="{StaticResource ExpanderContentDescriptionStyle}" Text="{x:Bind root:ResourceService.GetLocalized('About/LanguageDescription')}" />

            <StackPanel Orientation="Horizontal">
                <HyperlinkButton
                    Margin="-5,0,10,0"
                    Padding="5"
                    Click="{x:Bind OnAppInformationClicked}"
                    Content="{x:Bind root:ResourceService.GetLocalized('About/AppInformation')}">

                    <ToolTipService.ToolTip>
                        <ToolTip Content="{x:Bind root:ResourceService.GetLocalized('About/AppInformation')}" Placement="Mouse" />
                    </ToolTipService.ToolTip>
                </HyperlinkButton>

                <HyperlinkButton
                    Margin="-5,0,10,0"
                    Padding="5"
                    Click="{x:Bind OnAppSettingsClicked}"
                    Content="{x:Bind root:ResourceService.GetLocalized('About/AppSettings')}">

                    <ToolTipService.ToolTip>
                        <ToolTip Content="{x:Bind root:ResourceService.GetLocalized('About/AppSettings')}" Placement="Mouse" />
                    </ToolTipService.ToolTip>
                </HyperlinkButton>
            </StackPanel>

            <MenuFlyoutSeparator Margin="0,0,0,8" />

            <TextBlock Style="{StaticResource ExpanderContentTitleStyle}" Text="{x:Bind root:ResourceService.GetLocalized('About/LinkFilter')}" />
            <TextBlock Style="{StaticResource ExpanderContentDescriptionStyle}" Text="{x:Bind root:ResourceService.GetLocalized('About/StartsWithEInstruction')}" />
            <TextBlock Style="{StaticResource ExpanderContentDescriptionStyle}" Text="{x:Bind root:ResourceService.GetLocalized('About/BlockMapInstruction')}" />

            <StackPanel Orientation="Horizontal">
                <HyperlinkButton
                    Margin="-5,0,10,0"
                    Padding="5"
                    Click="{x:Bind OnStartWithEClicked}"
                    Content="{x:Bind root:ResourceService.GetLocalized('About/StartsWithEButton')}">

                    <ToolTipService.ToolTip>
                        <ToolTip Content="{x:Bind root:ResourceService.GetLocalized('About/StartsWithEButton')}" Placement="Mouse" />
                    </ToolTipService.ToolTip>
                </HyperlinkButton>

                <HyperlinkButton
                    Margin="-5,0,10,0"
                    Padding="5"
                    Click="{x:Bind OnBlockMapClicked}"
                    Content="{x:Bind root:ResourceService.GetLocalized('About/BlockMapButton')}">

                    <ToolTipService.ToolTip>
                        <ToolTip Content="{x:Bind root:ResourceService.GetLocalized('About/BlockMapButton')}" Placement="Mouse" />
                    </ToolTipService.ToolTip>
                </HyperlinkButton>
            </StackPanel>

            <MenuFlyoutSeparator Margin="0,0,0,8" />

            <TextBlock Style="{StaticResource ExpanderContentTitleStyle}" Text="{x:Bind root:ResourceService.GetLocalized('About/WinGetConfig')}" />
            <TextBlock Style="{StaticResource ExpanderContentDescriptionStyle}" Text="{x:Bind root:ResourceService.GetLocalized('About/WinGetConfigDescription')}" />

            <HyperlinkButton
                Margin="-5,0,10,0"
                Padding="5"
                Click="{x:Bind OnLearnWinGetConfigClicked}"
                Content="{x:Bind root:ResourceService.GetLocalized('About/LearnWinGetConfig')}">
                <ToolTipService.ToolTip>
                    <ToolTip Content="{x:Bind root:ResourceService.GetLocalized('About/LearnWinGetConfig')}" Placement="Mouse" />
                </ToolTipService.ToolTip>
            </HyperlinkButton>

            <MenuFlyoutSeparator Margin="0,0,0,8" />

            <TextBlock Style="{StaticResource ExpanderContentTitleStyle}" Text="{x:Bind root:ResourceService.GetLocalized('About/Download')}" />
            <TextBlock Style="{StaticResource ExpanderContentDescriptionStyle}" Text="{x:Bind root:ResourceService.GetLocalized('About/DownloadDescription1')}" />
            <TextBlock Style="{StaticResource ExpanderContentDescriptionStyle}" Text="{x:Bind root:ResourceService.GetLocalized('About/DownloadDescription2')}" />
            <TextBlock Style="{StaticResource ExpanderContentDescriptionStyle}" Text="{x:Bind root:ResourceService.GetLocalized('About/DownloadDescription3')}" />

            <MenuFlyoutSeparator Margin="0,0,0,8" />

            <TextBlock Style="{StaticResource ExpanderContentTitleStyle}" Text="{x:Bind root:ResourceService.GetLocalized('About/InstallMode')}" />
            <TextBlock Style="{StaticResource ExpanderContentDescriptionStyle}" Text="{x:Bind root:ResourceService.GetLocalized('About/InstallModeDescription1')}" />
            <TextBlock Style="{StaticResource ExpanderContentDescriptionStyle}" Text="{x:Bind root:ResourceService.GetLocalized('About/InstallModeDescription2')}" />
            <TextBlock Style="{StaticResource ExpanderContentDescriptionStyle}" Text="{x:Bind root:ResourceService.GetLocalized('About/InstallModeDescription3')}" />

            <MenuFlyoutSeparator Margin="0,0,0,8" />
            <TextBlock Style="{StaticResource ExpanderContentTitleStyle}" Text="{x:Bind root:ResourceService.GetLocalized('About/TraceCleanup')}" />
            <TextBlock Style="{StaticResource ExpanderContentDescriptionStyle}" Text="{x:Bind root:ResourceService.GetLocalized('About/TraceCleanupDescription1')}" />
            <TextBlock Style="{StaticResource ExpanderContentDescriptionStyle}" Text="{x:Bind root:ResourceService.GetLocalized('About/TraceCleanupDescription2')}" />
        </StackPanel>
    </Expander.Content>
</Expander>
