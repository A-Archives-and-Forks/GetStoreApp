<Expander
    x:Class="GetStoreApp.UI.Controls.About.ReferenceControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:aboutViewModel="using:GetStoreApp.ViewModels.Controls.About"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:format="using:GetStoreApp.Converters.Formats"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="using:GetStoreApp.Services.Root"
    Style="{StaticResource ExpanderAboutStyle}"
    mc:Ignorable="d">

    <Expander.DataContext>
        <aboutViewModel:ReferenceViewModel x:Name="ViewModel" />
    </Expander.DataContext>

    <Expander.Resources>
        <format:AboutToolTipFormatConverter x:Name="AboutToolTipFormatConverter" />
    </Expander.Resources>

    <Expander.Header>
        <TextBlock Style="{StaticResource ExpanderHeaderStyle}" Text="{x:Bind root:ResourceService.GetLocalized('About/Reference')}" />
    </Expander.Header>

    <Expander.Content>
        <GridView
            Margin="14,0"
            Padding="5"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Stretch"
            BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="{ThemeResource ControlCornerRadius}"
            ItemContainerStyle="{StaticResource GridViewItemStyle}"
            ItemsSource="{x:Bind ViewModel.ReferenceDict}"
            SelectionMode="None">

            <GridView.ItemTemplate>
                <DataTemplate>
                    <HyperlinkButton
                        Width="320"
                        Padding="5,8"
                        HorizontalContentAlignment="Center"
                        Content="{Binding Key, Mode=OneTime}"
                        NavigateUri="{Binding Value, Mode=OneTime}">

                        <ToolTipService.ToolTip>
                            <ToolTip
                                Content="{Binding Key, Converter={StaticResource AboutToolTipFormatConverter}, ConverterParameter=Reference, Mode=OneTime}"
                                Placement="Bottom"
                                VerticalOffset="25" />
                        </ToolTipService.ToolTip>
                    </HyperlinkButton>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Expander.Content>
</Expander>
