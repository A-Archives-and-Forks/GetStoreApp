<Expander
    x:Class="GetStoreApp.UI.Controls.About.ReferenceControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:aboutViewModel="using:GetStoreApp.ViewModels.Controls.About"
    xmlns:converter="using:GetStoreApp.Helpers.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:GetStoreApp.Models.Base"
    xmlns:root="using:GetStoreApp.Services.Root"
    Style="{StaticResource ExpanderAboutStyle}"
    mc:Ignorable="d">

    <Expander.DataContext>
        <aboutViewModel:ReferenceViewModel x:Name="ViewModel" />
    </Expander.DataContext>

    <Expander.Header>
        <TextBlock Style="{StaticResource ExpanderHeaderStyle}" Text="{x:Bind root:ResourceService.GetLocalized('About/Reference')}" />
    </Expander.Header>

    <Expander.Content>
        <GridView
            Margin="14,0"
            Padding="5"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Stretch"
            BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="{ThemeResource ControlCornerRadius}"
            ItemContainerStyle="{StaticResource GridViewItemStyle}"
            ItemsSource="{x:Bind ViewModel.ReferenceList}"
            SelectionMode="None">

            <GridView.ItemTemplate>
                <DataTemplate x:DataType="model:KeyValuePairModel">
                    <HyperlinkButton
                        Width="320"
                        Padding="5,8"
                        HorizontalContentAlignment="Center"
                        Content="{x:Bind Key}"
                        NavigateUri="{x:Bind Value}">

                        <ToolTipService.ToolTip>
                            <ToolTip Content="{x:Bind converter:StringConverterHelper.AboutReferenceToolTipFormat(Key)}" Placement="Mouse" />
                        </ToolTipService.ToolTip>
                    </HyperlinkButton>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Expander.Content>
</Expander>
