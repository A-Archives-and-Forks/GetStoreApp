<UserControl
    x:Class="GetStoreApp.UI.Controls.Download.DownloadingControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controlExtensions="using:GetStoreApp.Helpers.Controls.Extensions"
    xmlns:converter="using:GetStoreApp.Converters.Formats"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:download="using:GetStoreApp.Models.Controls.Download"
    xmlns:downloadViewModel="using:GetStoreApp.ViewModels.Controls.Download"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="using:GetStoreApp.Services.Root"
    xmlns:sys="using:System"
    x:Name="DownloadingRoot"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <downloadViewModel:DownloadingViewModel x:Name="ViewModel" x:FieldModifier="public" />
    </UserControl.DataContext>

    <UserControl.Resources>
        <converter:CheckBoxToolTipFormatConverter x:Name="CheckBoxToolTipFormatConverter" />
        <converter:DownloadProgressFormatConverter x:Name="DownloadProgressFormatConverter" />
    </UserControl.Resources>

    <Grid Padding="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid
            Grid.Row="0"
            Margin="30,0"
            Style="{StaticResource ListViewHeaderGridStyle}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <FontIcon
                Grid.Column="0"
                FontFamily="{StaticResource SegoeFluentFontFamily}"
                Glyph="&#xE74C;"
                Style="{StaticResource FontIconStyle}" />
            <TextBlock
                Grid.Column="1"
                VerticalAlignment="Center"
                Text="{x:Bind root:ResourceService.GetLocalized('Download/Operation')}" />
            <AppBarSeparator Grid.Column="2" Margin="10,0,10,0" />

            <TextBlock
                Grid.Column="3"
                VerticalAlignment="Center"
                Text="{x:Bind LocalizeDownloadingCountInfo(ViewModel.DownloadingDataList.Count), Mode=OneWay}">

                <ToolTipService.ToolTip>
                    <ToolTip
                        Content="{x:Bind LocalizeDownloadingCountInfo(ViewModel.DownloadingDataList.Count), Mode=OneWay}"
                        Placement="Bottom"
                        VerticalOffset="20" />
                </ToolTipService.ToolTip>
            </TextBlock>

            <CommandBar
                x:Name="NormalMode"
                Grid.Column="4"
                VerticalAlignment="Center"
                x:Load="{x:Bind ViewModel.IsSelectMode, Converter={StaticResource BooleanToOppositeValueConverter}, Mode=OneWay}"
                Background="Transparent"
                DefaultLabelPosition="Right">

                <AppBarButton
                    controlExtensions:CursorHelper.Cursor="Hand"
                    Click="{x:Bind ViewModel.OnOpenFolderClicked}"
                    Label="{x:Bind root:ResourceService.GetLocalized('Download/OpenFolder')}">

                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE8b7;" Style="{StaticResource SegoeFluentStyle}" />
                    </AppBarButton.Icon>

                    <ToolTipService.ToolTip>
                        <ToolTip
                            Content="{x:Bind root:ResourceService.GetLocalized('Download/OpenFolderToolTip')}"
                            Placement="Bottom"
                            VerticalOffset="25" />
                    </ToolTipService.ToolTip>
                </AppBarButton>

                <AppBarButton
                    controlExtensions:CursorHelper.Cursor="Hand"
                    Click="{x:Bind ViewModel.OnPauseAllClicked}"
                    IsEnabled="{x:Bind sys:Convert.ToBoolean(ViewModel.DownloadingDataList.Count), Mode=OneWay}"
                    Label="{x:Bind root:ResourceService.GetLocalized('Download/PauseAll')}">

                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE769;" Style="{StaticResource SegoeFluentStyle}" />
                    </AppBarButton.Icon>

                    <ToolTipService.ToolTip>
                        <ToolTip
                            Content="{x:Bind root:ResourceService.GetLocalized('Download/PauseAllToolTip')}"
                            Placement="Bottom"
                            VerticalOffset="25" />
                    </ToolTipService.ToolTip>
                </AppBarButton>

                <AppBarButton
                    controlExtensions:CursorHelper.Cursor="Hand"
                    Click="{x:Bind ViewModel.OnSelectClicked}"
                    IsEnabled="{x:Bind sys:Convert.ToBoolean(ViewModel.DownloadingDataList.Count), Mode=OneWay}"
                    Label="{x:Bind root:ResourceService.GetLocalized('Download/Select')}">

                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE762;" Style="{StaticResource SegoeFluentStyle}" />
                    </AppBarButton.Icon>

                    <ToolTipService.ToolTip>
                        <ToolTip
                            Content="{x:Bind root:ResourceService.GetLocalized('Download/SelectToolTip')}"
                            Placement="Bottom"
                            VerticalOffset="25" />
                    </ToolTipService.ToolTip>
                </AppBarButton>
            </CommandBar>

            <CommandBar
                x:Name="SelectMode"
                Grid.Column="4"
                VerticalAlignment="Center"
                x:Load="{x:Bind ViewModel.IsSelectMode, Mode=OneWay}"
                Background="Transparent"
                DefaultLabelPosition="Right">

                <AppBarButton
                    controlExtensions:CursorHelper.Cursor="Hand"
                    Click="{x:Bind ViewModel.OnSelectAllClicked}"
                    Label="{x:Bind root:ResourceService.GetLocalized('Download/SelectAll')}">

                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE8b3;" Style="{StaticResource SegoeFluentStyle}" />
                    </AppBarButton.Icon>

                    <ToolTipService.ToolTip>
                        <ToolTip
                            Content="{x:Bind root:ResourceService.GetLocalized('Download/SelectAll')}"
                            Placement="Bottom"
                            VerticalOffset="25" />
                    </ToolTipService.ToolTip>
                </AppBarButton>

                <AppBarButton
                    controlExtensions:CursorHelper.Cursor="Hand"
                    Click="{x:Bind ViewModel.OnSelectNoneClicked}"
                    Label="{x:Bind root:ResourceService.GetLocalized('Download/SelectNone')}">

                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE8e6;" Style="{StaticResource SegoeFluentStyle}" />
                    </AppBarButton.Icon>

                    <ToolTipService.ToolTip>
                        <ToolTip
                            Content="{x:Bind root:ResourceService.GetLocalized('Download/SelectNone')}"
                            Placement="Bottom"
                            VerticalOffset="25" />
                    </ToolTipService.ToolTip>
                </AppBarButton>

                <AppBarButton
                    controlExtensions:CursorHelper.Cursor="Hand"
                    Click="{x:Bind ViewModel.OnDeleteSelectedClicked}"
                    Label="{x:Bind root:ResourceService.GetLocalized('Download/DeleteSelected')}">

                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE74d;" Style="{StaticResource SegoeFluentStyle}" />
                    </AppBarButton.Icon>

                    <ToolTipService.ToolTip>
                        <ToolTip
                            Content="{x:Bind root:ResourceService.GetLocalized('Download/DeleteSelectedToolTip')}"
                            Placement="Bottom"
                            VerticalOffset="25" />
                    </ToolTipService.ToolTip>
                </AppBarButton>

                <AppBarButton
                    controlExtensions:CursorHelper.Cursor="Hand"
                    Click="{x:Bind ViewModel.OnCancelClicked}"
                    Label="{x:Bind root:ResourceService.GetLocalized('Download/Cancel')}">

                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE711;" Style="{StaticResource SegoeFluentStyle}" />
                    </AppBarButton.Icon>

                    <ToolTipService.ToolTip>
                        <ToolTip
                            Content="{x:Bind root:ResourceService.GetLocalized('Download/CancelToolTip')}"
                            Placement="Bottom"
                            VerticalOffset="25" />
                    </ToolTipService.ToolTip>
                </AppBarButton>
            </CommandBar>
        </Grid>

        <Grid
            Grid.Row="1"
            Margin="30,3,30,0"
            Style="{StaticResource CardGridStyle}"
            Visibility="{x:Bind ViewModel.DownloadingDataList.Count, Converter={StaticResource IntToVisibilityConverter}, ConverterParameter=Reverse, Mode=OneWay}">
            <TextBlock
                Margin="0,10"
                VerticalAlignment="Center"
                Text="{x:Bind root:ResourceService.GetLocalized('Download/DownloadingEmptyDescription')}"
                TextAlignment="Center">

                <ToolTipService.ToolTip>
                    <ToolTip
                        Content="{x:Bind root:ResourceService.GetLocalized('Download/DownloadingEmptyDescription')}"
                        Placement="Bottom"
                        VerticalOffset="20" />
                </ToolTipService.ToolTip>
            </TextBlock>
        </Grid>

        <ScrollViewer
            Grid.Row="2"
            Padding="0,3,0,0"
            HorizontalScrollBarVisibility="Disabled"
            HorizontalScrollMode="Disabled"
            Style="{StaticResource ScrollViewerStyle}"
            VerticalScrollBarVisibility="Auto"
            VerticalScrollMode="Enabled">

            <ListView
                Padding="30,0,30,30"
                IsItemClickEnabled="{x:Bind ViewModel.IsSelectMode, Mode=OneWay}"
                ItemClick="{x:Bind ViewModel.OnItemClicked}"
                ItemContainerStyle="{StaticResource CardListViewItemContainerStyle}"
                ItemsSource="{x:Bind ViewModel.DownloadingDataList, Mode=OneWay}"
                SelectionMode="None"
                Visibility="{x:Bind ViewModel.DownloadingDataList.Count, Converter={StaticResource IntToVisibilityConverter}, Mode=OneWay}">

                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="download:DownloadingModel">
                        <Grid Style="{StaticResource CardGridStyle}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <CheckBox
                                xmlns:controlExtensions="using:GetStoreApp.Helpers.Controls.Extensions"
                                Grid.Column="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                IsChecked="{x:Bind IsSelected, Mode=TwoWay}"
                                IsThreeState="False"
                                Style="{StaticResource CheckBoxStyle}"
                                Visibility="{Binding ElementName=DownloadingRoot, Path=DataContext.IsSelectMode, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}">

                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        Content="{x:Bind IsSelected, Converter={StaticResource CheckBoxToolTipFormatConverter}, ConverterParameter=Download, Mode=OneWay}"
                                        Placement="Bottom"
                                        VerticalOffset="25" />
                                </ToolTipService.ToolTip>
                            </CheckBox>

                            <Grid
                                Grid.Column="1"
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                RowSpacing="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0" ColumnSpacing="10">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Grid.Column="0"
                                        Style="{StaticResource DownloadItemTextStyle}"
                                        Text="{x:Bind FileName}">

                                        <ToolTipService.ToolTip>
                                            <ToolTip
                                                Content="{x:Bind FileName}"
                                                Placement="Bottom"
                                                VerticalOffset="20" />
                                        </ToolTipService.ToolTip>
                                    </TextBlock>

                                    <TextBlock
                                        Grid.Column="1"
                                        Style="{StaticResource DownloadItemTextStyle}"
                                        Text="{x:Bind FinishedSize, Mode=OneWay, Converter={StaticResource DownloadSizeFormatConverter}}"
                                        Visibility="{x:Bind DownloadFlag, Converter={StaticResource DownloadFlagConverter}, ConverterParameter=3, Mode=OneWay}">

                                        <ToolTipService.ToolTip>
                                            <ToolTip
                                                Content="{x:Bind FinishedSize, Mode=OneWay, Converter={StaticResource DownloadSizeFormatConverter}}"
                                                Placement="Bottom"
                                                VerticalOffset="20" />
                                        </ToolTipService.ToolTip>
                                    </TextBlock>

                                    <TextBlock
                                        Grid.Column="2"
                                        Style="{StaticResource DownloadItemTextStyle}"
                                        Text="{x:Bind TotalSize, Mode=OneWay, Converter={StaticResource DownloadSizeFormatConverter}}"
                                        Visibility="{x:Bind DownloadFlag, Converter={StaticResource DownloadFlagConverter}, ConverterParameter=3, Mode=OneWay}">

                                        <ToolTipService.ToolTip>
                                            <ToolTip
                                                Content="{x:Bind TotalSize, Mode=OneWay, Converter={StaticResource DownloadSizeFormatConverter}}"
                                                Placement="Bottom"
                                                VerticalOffset="20" />
                                        </ToolTipService.ToolTip>
                                    </TextBlock>

                                    <TextBlock
                                        Grid.Column="3"
                                        Style="{StaticResource DownloadItemTextStyle}"
                                        Text="{x:Bind CurrentSpeed, Mode=OneWay, Converter={StaticResource DownloadSpeedFormatConverter}}"
                                        Visibility="{x:Bind DownloadFlag, Converter={StaticResource DownloadFlagConverter}, ConverterParameter=3, Mode=OneWay}">

                                        <ToolTipService.ToolTip>
                                            <ToolTip
                                                Content="{x:Bind CurrentSpeed, Mode=OneWay, Converter={StaticResource DownloadSpeedFormatConverter}}"
                                                Placement="Bottom"
                                                VerticalOffset="20" />
                                        </ToolTipService.ToolTip>
                                    </TextBlock>
                                </Grid>

                                <ProgressBar
                                    Grid.Row="1"
                                    IsIndeterminate="{x:Bind IsFileDownloading, Converter={StaticResource BooleanToOppositeValueConverter}, Mode=OneWay}"
                                    Visibility="{x:Bind DownloadFlag, Converter={StaticResource DownloadFlagConverter}, ConverterParameter=3}"
                                    Value="{x:Bind DownloadProgress(FinishedSize, TotalSize), Mode=OneWay}" />
                                <TextBlock
                                    Grid.Row="1"
                                    Style="{StaticResource SubDownloadItemTextStyle}"
                                    Text="{Binding ElementName=DownloadingRoot, Path=WaitDownload, Mode=OneTime}"
                                    Visibility="{x:Bind DownloadFlag, Converter={StaticResource DownloadFlagConverter}, ConverterParameter=1}">

                                    <ToolTipService.ToolTip>
                                        <ToolTip
                                            Content="{Binding ElementName=DownloadingRoot, Path=WaitDownload, Mode=OneTime}"
                                            Placement="Bottom"
                                            VerticalOffset="20" />
                                    </ToolTipService.ToolTip>
                                </TextBlock>
                            </Grid>

                            <ContentControl
                                Grid.Column="2"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                IsEnabled="{Binding ElementName=DownloadingRoot, Path=DataContext.IsSelectMode, Converter={StaticResource BooleanToOppositeValueConverter}, Mode=OneWay}">

                                <StackPanel Orientation="Horizontal">

                                    <Button
                                        controlExtensions:CursorHelper.Cursor="Hand"
                                        Command="{Binding ElementName=DownloadingRoot, Path=DataContext.PauseCommand, Mode=OneTime}"
                                        CommandParameter="{Binding}"
                                        Style="{StaticResource ButtonDownloadStyle}">

                                        <Button.Content>
                                            <FontIcon Glyph="&#xE769;" Style="{StaticResource SegoeFluentStyle}" />
                                        </Button.Content>

                                        <ToolTipService.ToolTip>
                                            <ToolTip
                                                Content="{Binding ElementName=DownloadingRoot, Path=PauseToolTip, Mode=OneTime}"
                                                Placement="Bottom"
                                                VerticalOffset="25" />
                                        </ToolTipService.ToolTip>
                                    </Button>

                                    <Button
                                        controlExtensions:CursorHelper.Cursor="Hand"
                                        xmlns:controlExtensions="using:GetStoreApp.Helpers.Controls.Extensions"
                                        Command="{Binding ElementName=DownloadingRoot, Path=DataContext.DeleteCommand, Mode=OneTime}"
                                        CommandParameter="{Binding}"
                                        Style="{StaticResource ButtonDownloadStyle}">

                                        <Button.Content>
                                            <FontIcon Glyph="&#xE711;" Style="{StaticResource SegoeFluentStyle}" />
                                        </Button.Content>

                                        <ToolTipService.ToolTip>
                                            <ToolTip
                                                Content="{Binding ElementName=DownloadingRoot, Path=DeleteToolTip, Mode=OneTime}"
                                                Placement="Bottom"
                                                VerticalOffset="25" />
                                        </ToolTipService.ToolTip>
                                    </Button>
                                </StackPanel>
                            </ContentControl>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
    </Grid>
</UserControl>
