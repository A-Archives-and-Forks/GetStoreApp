<UserControl
    x:Class="GetStoreApp.UI.Controls.Download.CompletedControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:check="using:GetStoreApp.Converters.Checks"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:download="using:GetStoreApp.Models.Controls.Download"
    xmlns:downloadViewModel="using:GetStoreApp.ViewModels.Controls.Download"
    xmlns:format="using:GetStoreApp.Converters.Formats"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:menusAndToolbars="using:GetStoreApp.Views.CustomControls.MenusAndToolbars"
    xmlns:root="using:GetStoreApp.Services.Root"
    xmlns:sys="using:System"
    x:Name="CompletedRoot"
    Unloaded="{x:Bind ViewModel.OnUnloaded}"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <downloadViewModel:CompletedViewModel x:Name="ViewModel" />
    </UserControl.DataContext>

    <UserControl.Resources>
        <check:FileExistTextCheckConverter x:Name="FileExistTextCheckConverter" />
        <format:CheckBoxToolTipFormatConverter x:Name="CheckBoxToolTipFormatConverter" />
        <format:InstallValueFormatConverter x:Name="InstallValueFormatConverter" />
    </UserControl.Resources>

    <Grid Padding="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid
            Grid.Row="0"
            Margin="30,0"
            Style="{StaticResource ListViewHeaderGridStyle}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <FontIcon
                Grid.Column="0"
                FontFamily="{StaticResource SegoeFluentFontFamily}"
                Glyph="&#xE74C;"
                Style="{StaticResource FontIconStyle}" />

            <TextBlock
                Grid.Column="1"
                VerticalAlignment="Center"
                Text="{x:Bind root:ResourceService.GetLocalized('Download/Operation')}" />
            <AppBarSeparator Grid.Column="2" Margin="10,0,10,0" />

            <TextBlock
                Grid.Column="3"
                VerticalAlignment="Center"
                Text="{x:Bind LocalizeCompletedCountInfo(ViewModel.CompletedDataList.Count), Mode=OneWay}">

                <ToolTipService.ToolTip>
                    <ToolTip
                        Content="{x:Bind LocalizeCompletedCountInfo(ViewModel.CompletedDataList.Count), Mode=OneWay}"
                        Placement="Bottom"
                        VerticalOffset="20" />
                </ToolTipService.ToolTip>
            </TextBlock>

            <CommandBar
                x:Name="NormalMode"
                Grid.Column="4"
                VerticalAlignment="Center"
                x:Load="{x:Bind ViewModel.IsSelectMode, Converter={StaticResource BooleanToOppositeValueConverter}, Mode=OneWay}"
                Background="Transparent"
                DefaultLabelPosition="Right">

                <menusAndToolbars:ExtendedAppBarButton
                    Command="{x:Bind ViewModel.OpenFolderCommand}"
                    Cursor="Hand"
                    Label="{x:Bind root:ResourceService.GetLocalized('Download/OpenFolder')}">

                    <menusAndToolbars:ExtendedAppBarButton.Icon>
                        <FontIcon Glyph="&#xE8b7;" Style="{StaticResource SegoeFluentStyle}" />
                    </menusAndToolbars:ExtendedAppBarButton.Icon>

                    <ToolTipService.ToolTip>
                        <ToolTip
                            Content="{x:Bind root:ResourceService.GetLocalized('Download/OpenFolderToolTip')}"
                            Placement="Bottom"
                            VerticalOffset="25" />
                    </ToolTipService.ToolTip>
                </menusAndToolbars:ExtendedAppBarButton>

                <menusAndToolbars:ExtendedAppBarButton
                    Command="{x:Bind ViewModel.SelectCommand}"
                    Cursor="Hand"
                    IsEnabled="{x:Bind sys:Convert.ToBoolean(ViewModel.CompletedDataList.Count), Mode=OneWay}"
                    Label="{x:Bind root:ResourceService.GetLocalized('Download/Select')}">

                    <menusAndToolbars:ExtendedAppBarButton.Icon>
                        <FontIcon Glyph="&#xE762;" Style="{StaticResource SegoeFluentStyle}" />
                    </menusAndToolbars:ExtendedAppBarButton.Icon>

                    <ToolTipService.ToolTip>
                        <ToolTip
                            Content="{x:Bind root:ResourceService.GetLocalized('Download/SelectToolTip')}"
                            Placement="Bottom"
                            VerticalOffset="25" />
                    </ToolTipService.ToolTip>
                </menusAndToolbars:ExtendedAppBarButton>
            </CommandBar>

            <CommandBar
                x:Name="SelectMode"
                Grid.Column="4"
                VerticalAlignment="Center"
                x:Load="{x:Bind ViewModel.IsSelectMode, Mode=OneWay}"
                Background="Transparent"
                DefaultLabelPosition="Right">

                <menusAndToolbars:ExtendedAppBarButton
                    Command="{x:Bind ViewModel.SelectAllCommand}"
                    Cursor="Hand"
                    Label="{x:Bind root:ResourceService.GetLocalized('Download/SelectAll')}">

                    <menusAndToolbars:ExtendedAppBarButton.Icon>
                        <FontIcon Glyph="&#xE8b3;" Style="{StaticResource SegoeFluentStyle}" />
                    </menusAndToolbars:ExtendedAppBarButton.Icon>

                    <ToolTipService.ToolTip>
                        <ToolTip
                            Content="{x:Bind root:ResourceService.GetLocalized('Download/SelectAll')}"
                            Placement="Bottom"
                            VerticalOffset="25" />
                    </ToolTipService.ToolTip>
                </menusAndToolbars:ExtendedAppBarButton>

                <menusAndToolbars:ExtendedAppBarButton
                    Command="{x:Bind ViewModel.SelectNoneCommand}"
                    Cursor="Hand"
                    Label="{x:Bind root:ResourceService.GetLocalized('Download/SelectNone')}">

                    <menusAndToolbars:ExtendedAppBarButton.Icon>
                        <FontIcon Glyph="&#xE8e6;" Style="{StaticResource SegoeFluentStyle}" />
                    </menusAndToolbars:ExtendedAppBarButton.Icon>

                    <ToolTipService.ToolTip>
                        <ToolTip
                            Content="{x:Bind root:ResourceService.GetLocalized('Download/SelectNone')}"
                            Placement="Bottom"
                            VerticalOffset="25" />
                    </ToolTipService.ToolTip>
                </menusAndToolbars:ExtendedAppBarButton>

                <menusAndToolbars:ExtendedAppBarButton Cursor="Hand" Label="{x:Bind root:ResourceService.GetLocalized('Download/DeleteOptions')}">
                    <menusAndToolbars:ExtendedAppBarButton.Icon>
                        <FontIcon Glyph="&#xE74d;" Style="{StaticResource SegoeFluentStyle}" />
                    </menusAndToolbars:ExtendedAppBarButton.Icon>

                    <ToolTipService.ToolTip>
                        <ToolTip
                            Content="{x:Bind root:ResourceService.GetLocalized('Download/DeleteOptionsToolTip')}"
                            Placement="Bottom"
                            VerticalOffset="25" />
                    </ToolTipService.ToolTip>

                    <menusAndToolbars:ExtendedAppBarButton.Flyout>
                        <menusAndToolbars:AdaptiveMenuFlyout>
                            <MenuFlyoutItem Command="{x:Bind ViewModel.DeleteSelectedCommand}" Text="{x:Bind root:ResourceService.GetLocalized('Download/DeleteSelected')}">
                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        Content="{x:Bind root:ResourceService.GetLocalized('Download/DeleteSelectedToolTip')}"
                                        Placement="Bottom"
                                        VerticalOffset="20" />
                                </ToolTipService.ToolTip>
                            </MenuFlyoutItem>

                            <MenuFlyoutItem Command="{x:Bind ViewModel.DeleteSelectedWithFileCommand}" Text="{x:Bind root:ResourceService.GetLocalized('Download/DeleteSelectedWithFile')}">
                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        Content="{x:Bind root:ResourceService.GetLocalized('Download/DeleteSelectedWithFileToolTip')}"
                                        Placement="Bottom"
                                        VerticalOffset="20" />
                                </ToolTipService.ToolTip>
                            </MenuFlyoutItem>
                        </menusAndToolbars:AdaptiveMenuFlyout>
                    </menusAndToolbars:ExtendedAppBarButton.Flyout>
                </menusAndToolbars:ExtendedAppBarButton>

                <menusAndToolbars:ExtendedAppBarButton
                    Command="{x:Bind ViewModel.CancelCommand}"
                    Cursor="Hand"
                    Label="{x:Bind root:ResourceService.GetLocalized('Download/Cancel')}">

                    <menusAndToolbars:ExtendedAppBarButton.Icon>
                        <FontIcon Glyph="&#xE711;" Style="{StaticResource SegoeFluentStyle}" />
                    </menusAndToolbars:ExtendedAppBarButton.Icon>

                    <ToolTipService.ToolTip>
                        <ToolTip
                            Content="{x:Bind root:ResourceService.GetLocalized('Download/CancelToolTip')}"
                            Placement="Bottom"
                            VerticalOffset="25" />
                    </ToolTipService.ToolTip>
                </menusAndToolbars:ExtendedAppBarButton>
            </CommandBar>
        </Grid>

        <Grid
            Grid.Row="1"
            Margin="30,3,30,0"
            Style="{StaticResource CardGridStyle}"
            Visibility="{x:Bind ViewModel.CompletedDataList.Count, Converter={StaticResource IntToVisibilityConverter}, ConverterParameter=Reverse, Mode=OneWay}">
            <TextBlock
                Margin="0,10"
                VerticalAlignment="Center"
                Text="{x:Bind root:ResourceService.GetLocalized('Download/CompletedEmptyDescription')}"
                TextAlignment="Center">

                <ToolTipService.ToolTip>
                    <ToolTip
                        Content="{x:Bind root:ResourceService.GetLocalized('Download/CompletedEmptyDescription')}"
                        Placement="Bottom"
                        VerticalOffset="20" />
                </ToolTipService.ToolTip>
            </TextBlock>
        </Grid>

        <ScrollViewer
            Grid.Row="2"
            Padding="0,3,0,0"
            HorizontalScrollBarVisibility="Disabled"
            HorizontalScrollMode="Disabled"
            VerticalScrollBarVisibility="Auto"
            VerticalScrollMode="Enabled">

            <ListView
                Padding="30,0,30,30"
                IsItemClickEnabled="{x:Bind ViewModel.IsSelectMode, Mode=OneWay}"
                ItemClick="{x:Bind ViewModel.OnItemClick}"
                ItemContainerStyle="{StaticResource ListPickerFlyoutPresenterItemStyle}"
                ItemsSource="{x:Bind ViewModel.CompletedDataList, Mode=OneWay}"
                SelectionMode="None"
                Visibility="{x:Bind ViewModel.CompletedDataList.Count, Converter={StaticResource IntToVisibilityConverter}, Mode=OneWay}">

                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="download:CompletedModel">
                        <Grid Style="{StaticResource CardGridStyle}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <CheckBox
                                Grid.Column="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                IsChecked="{x:Bind IsSelected, Mode=TwoWay}"
                                IsThreeState="False"
                                Style="{StaticResource CheckBoxStyle}"
                                Visibility="{Binding ElementName=CompletedRoot, Path=DataContext.IsSelectMode, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}">

                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        Content="{x:Bind IsSelected, Converter={StaticResource CheckBoxToolTipFormatConverter}, ConverterParameter=Download, Mode=OneWay}"
                                        Placement="Bottom"
                                        VerticalOffset="20" />
                                </ToolTipService.ToolTip>
                            </CheckBox>

                            <Grid
                                Grid.Column="1"
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                RowSpacing="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0" ColumnSpacing="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Grid.Column="0"
                                        Style="{StaticResource DownloadItemTextStyle}"
                                        Text="{x:Bind FileName}">

                                        <ToolTipService.ToolTip>
                                            <ToolTip
                                                Content="{x:Bind FileName}"
                                                Placement="Bottom"
                                                VerticalOffset="20" />
                                        </ToolTipService.ToolTip>
                                    </TextBlock>

                                    <TextBlock
                                        Grid.Column="1"
                                        Style="{StaticResource DownloadItemTextStyle}"
                                        Text="{x:Bind TotalSize, Mode=OneWay, Converter={StaticResource DownloadSizeFormatConverter}}">

                                        <ToolTipService.ToolTip>
                                            <ToolTip
                                                Content="{x:Bind TotalSize, Mode=OneWay, Converter={StaticResource DownloadSizeFormatConverter}}"
                                                Placement="Bottom"
                                                VerticalOffset="20" />
                                        </ToolTipService.ToolTip>
                                    </TextBlock>
                                </Grid>

                                <StackPanel Grid.Row="1" Visibility="{x:Bind IsInstalling, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Reverse, Mode=OneWay}">
                                    <TextBlock
                                        x:Name="FileExist"
                                        x:Load="{x:Bind FilePath, Converter={StaticResource FileExistCheckConverter}}"
                                        Style="{StaticResource SubDownloadItemTextStyle}"
                                        Text="{x:Bind FilePath, Converter={StaticResource FileExistTextCheckConverter}}">

                                        <ToolTipService.ToolTip>
                                            <ToolTip
                                                Content="{x:Bind FilePath, Converter={StaticResource FileExistTextCheckConverter}}"
                                                Placement="Bottom"
                                                VerticalOffset="20" />
                                        </ToolTipService.ToolTip>
                                    </TextBlock>
                                    <TextBlock
                                        x:Name="FileNotExist"
                                        x:Load="{x:Bind FilePath, Converter={StaticResource FileExistCheckConverter}, ConverterParameter=Reverse}"
                                        Foreground="{ThemeResource InfoBarErrorSeverityIconBackground}"
                                        Style="{StaticResource SubDownloadItemTextStyle}"
                                        Text="{x:Bind FilePath, Converter={StaticResource FileExistTextCheckConverter}}">

                                        <ToolTipService.ToolTip>
                                            <ToolTip
                                                Content="{x:Bind FilePath, Converter={StaticResource FileExistTextCheckConverter}}"
                                                Placement="Bottom"
                                                VerticalOffset="20" />
                                        </ToolTipService.ToolTip>
                                    </TextBlock>
                                </StackPanel>

                                <Grid
                                    x:Name="InstallInfo"
                                    Grid.Row="1"
                                    x:Load="{x:Bind IsInstalling, Mode=OneWay}"
                                    ColumnSpacing="10">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Grid.Column="0"
                                        Style="{StaticResource SubDownloadItemTextStyle}"
                                        Text="{Binding ElementName=CompletedRoot, Path=Installing, Mode=OneTime}">

                                        <ToolTipService.ToolTip>
                                            <ToolTip
                                                Content="{Binding ElementName=CompletedRoot, Path=Installing, Mode=OneTime}"
                                                Placement="Bottom"
                                                VerticalOffset="20" />
                                        </ToolTipService.ToolTip>
                                    </TextBlock>
                                    <ProgressBar
                                        Grid.Column="1"
                                        IsIndeterminate="False"
                                        ShowError="{x:Bind InstallError, Mode=OneWay}"
                                        Value="{x:Bind InstallValue, Mode=OneWay}" />
                                    <TextBlock
                                        x:Name="InstallStateInfo"
                                        Grid.Column="2"
                                        x:Load="{x:Bind InstallError, Converter={StaticResource BooleanToOppositeValueConverter}, Mode=OneWay}"
                                        Style="{StaticResource SubDownloadItemTextStyle}"
                                        Text="{x:Bind InstallValue, Converter={StaticResource InstallValueFormatConverter}, Mode=OneWay}">

                                        <ToolTipService.ToolTip>
                                            <ToolTip
                                                Content="{x:Bind InstallValue, Converter={StaticResource InstallValueFormatConverter}, Mode=OneWay}"
                                                Placement="Bottom"
                                                VerticalOffset="20" />
                                        </ToolTipService.ToolTip>
                                    </TextBlock>
                                    <TextBlock
                                        x:Name="InstallErrorInfo"
                                        Grid.Column="2"
                                        x:Load="{x:Bind InstallError, Mode=OneWay}"
                                        Style="{StaticResource SubDownloadItemTextStyle}"
                                        Text="{Binding ElementName=CompletedRoot, Path=InstallError, Mode=OneTime}">

                                        <ToolTipService.ToolTip>
                                            <ToolTip
                                                Content="{Binding ElementName=CompletedRoot, Path=InstallError, Mode=OneTime}"
                                                Placement="Bottom"
                                                VerticalOffset="20" />
                                        </ToolTipService.ToolTip>
                                    </TextBlock>
                                </Grid>
                            </Grid>

                            <ContentControl
                                Grid.Column="2"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                IsEnabled="{Binding ElementName=CompletedRoot, Path=DataContext.IsSelectMode, Converter={StaticResource BooleanToOppositeValueConverter}, Mode=OneWay}">

                                <StackPanel Orientation="Horizontal">

                                    <ContentControl IsEnabled="{x:Bind FilePath, Converter={StaticResource FileExistCheckConverter}}">

                                        <StackPanel Orientation="Horizontal">
                                            <ContentControl IsEnabled="{x:Bind FileName, Converter={StaticResource InstallFileCheckConverter}}">
                                                <Button
                                                    Command="{Binding ElementName=CompletedRoot, Path=DataContext.InstallCommand, Mode=OneTime}"
                                                    CommandParameter="{Binding}"
                                                    IsEnabled="{x:Bind IsInstalling, Converter={StaticResource BooleanToOppositeValueConverter}, Mode=OneWay}"
                                                    Style="{StaticResource ButtonDownloadStyle}">

                                                    <Button.Content>
                                                        <FontIcon Glyph="&#xF775;" Style="{StaticResource SettingsFluentStyle}" />
                                                    </Button.Content>

                                                    <ToolTipService.ToolTip>
                                                        <ToolTip
                                                            Content="{Binding ElementName=CompletedRoot, Path=InstallToolTip, Mode=OneTime}"
                                                            Placement="Bottom"
                                                            VerticalOffset="20" />
                                                    </ToolTipService.ToolTip>
                                                </Button>
                                            </ContentControl>

                                            <Button
                                                Command="{Binding ElementName=CompletedRoot, Path=DataContext.OpenItemFolderCommand, Mode=OneTime}"
                                                CommandParameter="{x:Bind FilePath}"
                                                Style="{StaticResource ButtonDownloadStyle}">

                                                <Button.Content>
                                                    <FontIcon Glyph="&#xE8da;" Style="{StaticResource SegoeFluentStyle}" />
                                                </Button.Content>

                                                <ToolTipService.ToolTip>
                                                    <ToolTip
                                                        Content="{Binding ElementName=CompletedRoot, Path=OpenItemFolderToolTip, Mode=OneTime}"
                                                        Placement="Bottom"
                                                        VerticalOffset="20" />
                                                </ToolTipService.ToolTip>
                                            </Button>
                                        </StackPanel>
                                    </ContentControl>

                                    <Button Style="{StaticResource ButtonDownloadStyle}">

                                        <Button.Content>
                                            <FontIcon
                                                FontSize="16"
                                                Glyph="&#xE712;"
                                                Style="{StaticResource SegoeFluentStyle}" />
                                        </Button.Content>

                                        <ToolTipService.ToolTip>
                                            <ToolTip
                                                Content="{Binding ElementName=CompletedRoot, Path=ViewMore, Mode=OneTime}"
                                                Placement="Bottom"
                                                VerticalOffset="20" />
                                        </ToolTipService.ToolTip>

                                        <Button.Flyout>
                                            <menusAndToolbars:AdaptiveMenuFlyout>
                                                <MenuFlyoutItem
                                                    Command="{Binding ElementName=CompletedRoot, Path=DataContext.DeleteCommand, Mode=OneTime}"
                                                    CommandParameter="{Binding}"
                                                    Text="{Binding ElementName=CompletedRoot, Path=Delete, Mode=OneTime}">

                                                    <ToolTipService.ToolTip>
                                                        <ToolTip
                                                            Content="{Binding ElementName=CompletedRoot, Path=DeleteToolTip, Mode=OneTime}"
                                                            Placement="Bottom"
                                                            VerticalOffset="20" />
                                                    </ToolTipService.ToolTip>
                                                </MenuFlyoutItem>
                                                <MenuFlyoutItem
                                                    Command="{Binding ElementName=CompletedRoot, Path=DataContext.DeleteWithFileCommand, Mode=OneTime}"
                                                    CommandParameter="{Binding}"
                                                    IsEnabled="{x:Bind FilePath, Converter={StaticResource FileExistCheckConverter}}"
                                                    Text="{Binding ElementName=CompletedRoot, Path=DeleteWithFile, Mode=OneTime}">

                                                    <ToolTipService.ToolTip>
                                                        <ToolTip
                                                            Content="{Binding ElementName=CompletedRoot, Path=DeleteWithFileToolTip, Mode=OneTime}"
                                                            Placement="Bottom"
                                                            VerticalOffset="20" />
                                                    </ToolTipService.ToolTip>
                                                </MenuFlyoutItem>
                                                <MenuFlyoutSeparator />
                                                <MenuFlyoutItem
                                                    Command="{Binding ElementName=CompletedRoot, Path=DataContext.FileInformationCommand, Mode=OneTime}"
                                                    CommandParameter="{Binding}"
                                                    IsEnabled="{x:Bind FilePath, Converter={StaticResource FileExistCheckConverter}}"
                                                    Text="{Binding ElementName=CompletedRoot, Path=FileInformation, Mode=OneTime}">

                                                    <MenuFlyoutItem.Icon>
                                                        <FontIcon Glyph="&#xE946;" Style="{StaticResource SegoeFluentStyle}" />
                                                    </MenuFlyoutItem.Icon>

                                                    <ToolTipService.ToolTip>
                                                        <ToolTip
                                                            Content="{Binding ElementName=CompletedRoot, Path=FileInformation, Mode=OneTime}"
                                                            Placement="Bottom"
                                                            VerticalOffset="20" />
                                                    </ToolTipService.ToolTip>
                                                </MenuFlyoutItem>
                                            </menusAndToolbars:AdaptiveMenuFlyout>
                                        </Button.Flyout>
                                    </Button>
                                </StackPanel>
                            </ContentControl>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
    </Grid>
</UserControl>
