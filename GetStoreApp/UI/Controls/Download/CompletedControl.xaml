<UserControl
    x:Class="GetStoreApp.UI.Controls.Download.CompletedControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:GetStoreApp.Models"
    x:Name="CompletedRoot"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid
            Grid.Row="0"
            Margin="0,0,0,10"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            CornerRadius="4"
            Style="{StaticResource DataGridDescriptionGridStyle}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <FontIcon
                Grid.Column="0"
                FontFamily="Segoe Fluent Icons"
                Glyph="&#xE74C;"
                Style="{StaticResource FontIconStyle}" />
            <TextBlock
                Grid.Column="1"
                VerticalAlignment="Center"
                Text="{x:Bind ResourceService.GetLocalized('/Download/Operation')}" />
            <AppBarSeparator Grid.Column="2" Margin="10,0,10,0" />

            <TextBlock
                Grid.Column="3"
                VerticalAlignment="Center"
                Text="{x:Bind LocalizedCompletedCountInfo(ViewModel.CompletedDataList.Count), Mode=OneWay}"
                ToolTipService.ToolTip="{x:Bind LocalizedCompletedCountInfo(ViewModel.CompletedDataList.Count), Mode=OneWay}" />

            <CommandBar
                Grid.Column="4"
                VerticalAlignment="Center"
                Background="Transparent"
                DefaultLabelPosition="Right"
                Visibility="{x:Bind ViewModel.IsSelectMode, Converter={StaticResource BooleanToReverseVisibilityConverter}, Mode=OneWay}">

                <AppBarButton
                    Command="{x:Bind ViewModel.OpenFolderCommand}"
                    Label="{x:Bind ResourceService.GetLocalized('/Download/OpenFolder')}"
                    ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/Download/OpenFolder')}">
                    <AppBarButton.Icon>
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8b7;" />
                    </AppBarButton.Icon>
                </AppBarButton>

                <AppBarButton
                    Command="{x:Bind ViewModel.SelectCommand}"
                    Icon="Bullets"
                    Label="{x:Bind ResourceService.GetLocalized('/Download/Select')}"
                    ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/Download/Select')}" />
            </CommandBar>

            <CommandBar
                Grid.Column="4"
                VerticalAlignment="Center"
                Background="Transparent"
                DefaultLabelPosition="Right"
                Visibility="{x:Bind ViewModel.IsSelectMode, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}">

                <AppBarButton
                    Command="{x:Bind ViewModel.SelectAllCommand}"
                    Icon="SelectAll"
                    Label="{x:Bind ResourceService.GetLocalized('/Download/SelectAll')}"
                    ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/Download/SelectAll')}" />

                <AppBarButton
                    Command="{x:Bind ViewModel.SelectNoneCommand}"
                    Icon="ClearSelection"
                    Label="{x:Bind ResourceService.GetLocalized('/Download/SelectNone')}"
                    ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/Download/SelectNone')}" />

                <AppBarButton
                    Icon="Delete"
                    Label="{x:Bind ResourceService.GetLocalized('/Download/Delete')}"
                    ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/Download/Delete')}">

                    <AppBarButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem
                                Command="{x:Bind ViewModel.DeleteCommand}"
                                Text="{x:Bind ResourceService.GetLocalized('/Download/DeleteRecord')}"
                                ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/Download/DeleteRecord')}" />

                            <MenuFlyoutItem
                                Command="{x:Bind ViewModel.DeleteWithFileCommand}"
                                Text="{x:Bind ResourceService.GetLocalized('/Download/DeleteRecordWithFile')}"
                                ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/Download/DeleteRecordWithFile')}" />
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>

                <AppBarButton
                    Command="{x:Bind ViewModel.CancelCommand}"
                    Icon="Cancel"
                    Label="{x:Bind ResourceService.GetLocalized('/Download/Cancel')}"
                    ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/Download/Cancel')}" />
            </CommandBar>
        </Grid>

        <Grid
            Grid.Row="1"
            Margin="0,0,0,10"
            Style="{StaticResource CardGridStyle}"
            Visibility="{x:Bind ViewModel.IsCompletedEmpty, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}">
            <TextBlock
                Margin="0,10,0,10"
                VerticalAlignment="Center"
                Text="{x:Bind ResourceService.GetLocalized('/Download/CompletedEmptyDescription')}"
                TextAlignment="Center" />
        </Grid>

        <ListView
            Grid.Row="2"
            ItemContainerStyle="{StaticResource ListPickerFlyoutPresenterItemStyle}"
            ItemsSource="{x:Bind ViewModel.CompletedDataList, Mode=OneWay}"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            ScrollViewer.VerticalScrollMode="Enabled"
            SelectionMode="None"
            Visibility="{x:Bind ViewModel.IsCompletedEmpty, Converter={StaticResource BooleanToReverseVisibilityConverter}, Mode=OneWay}">

            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:DownloadModel">
                    <Grid Style="{StaticResource CardGridStyle}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <CheckBox
                            Grid.Column="0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            IsChecked="{x:Bind IsSelected, Mode=TwoWay}"
                            IsThreeState="False"
                            Style="{StaticResource CheckBoxStyle}"
                            Visibility="{Binding ElementName=CompletedRoot, Path=ViewModel.IsSelectMode, Converter={StaticResource BooleanToVisibilityConverter}}" />

                        <Grid
                            Grid.Column="1"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Grid Grid.Column="0" Padding="0,0,0,5">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    Text="{Binding FileName}"
                                    TextAlignment="Left"
                                    ToolTipService.ToolTip="{x:Bind FileName}" />
                                <TextBlock
                                    Grid.Column="1"
                                    Text="{x:Bind DownloadTotalSize, Mode=OneWay, Converter={StaticResource DownloadSizeFormatConverter}}"
                                    TextAlignment="Left"
                                    ToolTipService.ToolTip="{x:Bind DownloadTotalSize, Mode=OneWay, Converter={StaticResource DownloadSizeFormatConverter}}" />
                            </Grid>

                            <!--  更换为文件是否存在  -->
                        </Grid>

                        <StackPanel
                            Grid.Column="2"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">

                            <Button
                                Margin="5,0,0,0"
                                Command="{Binding ElementName=CompletedRoot, Path=ViewModel.OpenItemFolderCommand}"
                                CommandParameter="{Binding FilePath}"
                                Content="&#xE8b7;"
                                Style="{StaticResource ButtonDownloadStyle}"
                                ToolTipService.ToolTip="{Binding ElementName=CompletedRoot, Path=OpenFolder}"
                                Visibility="{x:Bind DownloadFlag, Converter={StaticResource OpenFolderCheckConverter}, Mode=OneWay}" />

                            <Button
                                Margin="5,0,0,0"
                                Command="{Binding ElementName=CompletedRoot, Path=ViewModel.DeleteTaskCommand}"
                                Content="&#xE711;"
                                Style="{StaticResource ButtonDownloadStyle}"
                                ToolTipService.ToolTip="{Binding ElementName=CompletedRoot, Path=DeleteTask}" />
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
