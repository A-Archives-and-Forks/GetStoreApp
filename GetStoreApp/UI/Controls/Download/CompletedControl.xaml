<Grid
    x:Class="GetStoreApp.UI.Controls.Download.CompletedControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:check="using:GetStoreApp.Converters.Checks"
    xmlns:controlExtensions="using:GetStoreApp.Helpers.Controls.Extensions"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:download="using:GetStoreApp.Models.Controls.Download"
    xmlns:downloadViewModel="using:GetStoreApp.ViewModels.Controls.Download"
    xmlns:format="using:GetStoreApp.Converters.Formats"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:menusAndToolbars="using:GetStoreApp.Views.CustomControls.MenusAndToolbars"
    xmlns:root="using:GetStoreApp.Services.Root"
    xmlns:sys="using:System"
    x:Name="CompletedRoot"
    Padding="0"
    mc:Ignorable="d">

    <Grid.DataContext>
        <downloadViewModel:CompletedViewModel x:Name="ViewModel" x:FieldModifier="public" />
    </Grid.DataContext>

    <Grid.Resources>
        <check:FileExistTextCheckConverter x:Name="FileExistTextCheckConverter" />
        <format:CheckBoxToolTipFormatConverter x:Name="CheckBoxToolTipFormatConverter" />
        <format:InstallValueFormatConverter x:Name="InstallValueFormatConverter" />
    </Grid.Resources>

    <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <Grid
        Grid.Row="0"
        Height="66"
        Margin="30,0"
        Style="{StaticResource ListViewHeaderGridStyle}">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <FontIcon
            Grid.Column="0"
            FontFamily="{StaticResource SegoeFluentFontFamily}"
            Glyph="&#xE74C;"
            Style="{StaticResource FontIconStyle}" />

        <TextBlock
            Grid.Column="1"
            VerticalAlignment="Center"
            Text="{x:Bind root:ResourceService.GetLocalized('Download/Operation')}" />
        <AppBarSeparator Grid.Column="2" Margin="10,0,10,0" />

        <TextBlock
            Grid.Column="3"
            VerticalAlignment="Center"
            Text="{x:Bind LocalizeCompletedCountInfo(ViewModel.CompletedDataList.Count), Mode=OneWay}">

            <ToolTipService.ToolTip>
                <ToolTip
                    Content="{x:Bind LocalizeCompletedCountInfo(ViewModel.CompletedDataList.Count), Mode=OneWay}"
                    Placement="Bottom"
                    VerticalOffset="20" />
            </ToolTipService.ToolTip>
        </TextBlock>

        <StackPanel
            x:Name="NormalMode"
            Grid.Column="4"
            Margin="0,0,10,0"
            VerticalAlignment="Center"
            x:Load="{x:Bind ViewModel.IsSelectMode, Converter={StaticResource BooleanToOppositeValueConverter}, Mode=OneWay}"
            Background="Transparent"
            Orientation="Horizontal"
            Spacing="2">

            <MenuFlyoutItem
                controlExtensions:CursorHelper.Cursor="Hand"
                Click="{x:Bind ViewModel.OnOpenFolderClicked}"
                Style="{StaticResource AppBarButtonMenuItemStyle}"
                Text="{x:Bind root:ResourceService.GetLocalized('Download/OpenFolder')}">

                <MenuFlyoutItem.Icon>
                    <FontIcon Glyph="&#xE8b7;" Style="{StaticResource SegoeFluentStyle}" />
                </MenuFlyoutItem.Icon>

                <ToolTipService.ToolTip>
                    <ToolTip
                        Content="{x:Bind root:ResourceService.GetLocalized('Download/OpenFolderToolTip')}"
                        Placement="Bottom"
                        VerticalOffset="25" />
                </ToolTipService.ToolTip>
            </MenuFlyoutItem>

            <MenuFlyoutItem
                controlExtensions:CursorHelper.Cursor="Hand"
                Click="{x:Bind ViewModel.OnSelectClicked}"
                IsEnabled="{x:Bind sys:Convert.ToBoolean(ViewModel.CompletedDataList.Count), Mode=OneWay}"
                Style="{StaticResource AppBarButtonMenuItemStyle}"
                Text="{x:Bind root:ResourceService.GetLocalized('Download/Select')}">

                <MenuFlyoutItem.Icon>
                    <FontIcon Glyph="&#xE762;" Style="{StaticResource SegoeFluentStyle}" />
                </MenuFlyoutItem.Icon>

                <ToolTipService.ToolTip>
                    <ToolTip
                        Content="{x:Bind root:ResourceService.GetLocalized('Download/SelectToolTip')}"
                        Placement="Bottom"
                        VerticalOffset="25" />
                </ToolTipService.ToolTip>
            </MenuFlyoutItem>
        </StackPanel>

        <StackPanel
            x:Name="SelectMode"
            Grid.Column="4"
            Margin="0,0,10,0"
            VerticalAlignment="Center"
            x:Load="{x:Bind ViewModel.IsSelectMode, Mode=OneWay}"
            Background="Transparent"
            Orientation="Horizontal"
            Spacing="2">

            <MenuFlyoutItem
                controlExtensions:CursorHelper.Cursor="Hand"
                Click="{x:Bind ViewModel.OnSelectAllClicked}"
                Style="{StaticResource AppBarButtonMenuItemStyle}"
                Text="{x:Bind root:ResourceService.GetLocalized('Download/SelectAll')}">

                <MenuFlyoutItem.Icon>
                    <FontIcon Glyph="&#xE8b3;" Style="{StaticResource SegoeFluentStyle}" />
                </MenuFlyoutItem.Icon>

                <ToolTipService.ToolTip>
                    <ToolTip
                        Content="{x:Bind root:ResourceService.GetLocalized('Download/SelectAll')}"
                        Placement="Bottom"
                        VerticalOffset="25" />
                </ToolTipService.ToolTip>
            </MenuFlyoutItem>

            <MenuFlyoutItem
                controlExtensions:CursorHelper.Cursor="Hand"
                Click="{x:Bind ViewModel.OnSelectNoneClicked}"
                Style="{StaticResource AppBarButtonMenuItemStyle}"
                Text="{x:Bind root:ResourceService.GetLocalized('Download/SelectNone')}">

                <MenuFlyoutItem.Icon>
                    <FontIcon Glyph="&#xE8e6;" Style="{StaticResource SegoeFluentStyle}" />
                </MenuFlyoutItem.Icon>

                <ToolTipService.ToolTip>
                    <ToolTip
                        Content="{x:Bind root:ResourceService.GetLocalized('Download/SelectNone')}"
                        Placement="Bottom"
                        VerticalOffset="25" />
                </ToolTipService.ToolTip>
            </MenuFlyoutItem>

            <MenuFlyoutItem
                controlExtensions:CursorHelper.Cursor="Hand"
                Click="{x:Bind ViewModel.OnDeleteOptionsClicked}"
                Style="{StaticResource AppBarButtonMenuItemStyle}"
                Text="{x:Bind root:ResourceService.GetLocalized('Download/DeleteOptions')}">

                <MenuFlyoutItem.Icon>
                    <FontIcon Glyph="&#xE74d;" Style="{StaticResource SegoeFluentStyle}" />
                </MenuFlyoutItem.Icon>

                <ToolTipService.ToolTip>
                    <ToolTip
                        Content="{x:Bind root:ResourceService.GetLocalized('Download/DeleteOptionsToolTip')}"
                        Placement="Bottom"
                        VerticalOffset="25" />
                </ToolTipService.ToolTip>

                <FlyoutBase.AttachedFlyout>
                    <menusAndToolbars:AdaptiveMenuFlyout>
                        <MenuFlyoutItem Click="{x:Bind ViewModel.OnDelectSelectedClicked}" Text="{x:Bind root:ResourceService.GetLocalized('Download/DeleteSelected')}">
                            <ToolTipService.ToolTip>
                                <ToolTip
                                    Content="{x:Bind root:ResourceService.GetLocalized('Download/DeleteSelectedToolTip')}"
                                    Placement="Bottom"
                                    VerticalOffset="20" />
                            </ToolTipService.ToolTip>
                        </MenuFlyoutItem>

                        <MenuFlyoutItem Click="{x:Bind ViewModel.OnDeleteSelectedWithFileClicked}" Text="{x:Bind root:ResourceService.GetLocalized('Download/DeleteSelectedWithFile')}">
                            <ToolTipService.ToolTip>
                                <ToolTip
                                    Content="{x:Bind root:ResourceService.GetLocalized('Download/DeleteSelectedWithFileToolTip')}"
                                    Placement="Bottom"
                                    VerticalOffset="20" />
                            </ToolTipService.ToolTip>
                        </MenuFlyoutItem>
                    </menusAndToolbars:AdaptiveMenuFlyout>
                </FlyoutBase.AttachedFlyout>
            </MenuFlyoutItem>

            <MenuFlyoutItem
                controlExtensions:CursorHelper.Cursor="Hand"
                Click="{x:Bind ViewModel.OnShareSelectedFileClicked}"
                Style="{StaticResource AppBarButtonMenuItemStyle}"
                Text="{x:Bind root:ResourceService.GetLocalized('Download/ShareSelectedFile')}">

                <MenuFlyoutItem.Icon>
                    <FontIcon Glyph="&#xE72d;" Style="{StaticResource SegoeFluentStyle}" />
                </MenuFlyoutItem.Icon>

                <ToolTipService.ToolTip>
                    <ToolTip
                        Content="{x:Bind root:ResourceService.GetLocalized('Download/ShareSelectedFile')}"
                        Placement="Bottom"
                        VerticalOffset="25" />
                </ToolTipService.ToolTip>
            </MenuFlyoutItem>

            <MenuFlyoutItem
                controlExtensions:CursorHelper.Cursor="Hand"
                Click="{x:Bind ViewModel.OnCancelClicked}"
                Style="{StaticResource AppBarButtonMenuItemStyle}"
                Text="{x:Bind root:ResourceService.GetLocalized('Download/Cancel')}">

                <MenuFlyoutItem.Icon>
                    <FontIcon Glyph="&#xE711;" Style="{StaticResource SegoeFluentStyle}" />
                </MenuFlyoutItem.Icon>

                <ToolTipService.ToolTip>
                    <ToolTip
                        Content="{x:Bind root:ResourceService.GetLocalized('Download/CancelToolTip')}"
                        Placement="Bottom"
                        VerticalOffset="25" />
                </ToolTipService.ToolTip>
            </MenuFlyoutItem>
        </StackPanel>
    </Grid>

    <Grid
        Grid.Row="1"
        Margin="30,3,30,0"
        Style="{StaticResource CardGridStyle}"
        Visibility="{x:Bind ViewModel.CompletedDataList.Count, Converter={StaticResource IntToVisibilityConverter}, ConverterParameter=Reverse, Mode=OneWay}">
        <TextBlock
            Margin="0,10"
            VerticalAlignment="Center"
            Text="{x:Bind root:ResourceService.GetLocalized('Download/CompletedEmptyDescription')}"
            TextAlignment="Center">

            <ToolTipService.ToolTip>
                <ToolTip
                    Content="{x:Bind root:ResourceService.GetLocalized('Download/CompletedEmptyDescription')}"
                    Placement="Bottom"
                    VerticalOffset="20" />
            </ToolTipService.ToolTip>
        </TextBlock>
    </Grid>

    <ListView
        Grid.Row="2"
        Padding="30,3,30,30"
        IsItemClickEnabled="{x:Bind ViewModel.IsSelectMode, Mode=OneWay}"
        ItemClick="{x:Bind ViewModel.OnItemClicked}"
        ItemContainerStyle="{StaticResource CardListViewItemContainerStyle}"
        ItemsSource="{x:Bind ViewModel.CompletedDataList, Mode=OneWay}"
        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
        ScrollViewer.HorizontalScrollMode="Disabled"
        ScrollViewer.VerticalScrollBarVisibility="Auto"
        ScrollViewer.VerticalScrollMode="Enabled"
        SelectionMode="None"
        Style="{StaticResource ListViewStyle}"
        Visibility="{x:Bind ViewModel.CompletedDataList.Count, Converter={StaticResource IntToVisibilityConverter}, Mode=OneWay}">

        <ListView.ItemTemplate>
            <DataTemplate x:DataType="download:CompletedModel">
                <Grid Padding="16,10" Style="{StaticResource CardGridStyle}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <CheckBox
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        controlExtensions:CursorHelper.Cursor="Hand"
                        IsChecked="{x:Bind IsSelected, Mode=TwoWay}"
                        IsThreeState="False"
                        Style="{StaticResource CheckBoxStyle}"
                        Visibility="{Binding ElementName=CompletedRoot, Path=DataContext.IsSelectMode, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}">

                        <ToolTipService.ToolTip>
                            <ToolTip
                                Content="{x:Bind IsSelected, Converter={StaticResource CheckBoxToolTipFormatConverter}, ConverterParameter=Download, Mode=OneWay}"
                                Placement="Bottom"
                                VerticalOffset="25" />
                        </ToolTipService.ToolTip>
                    </CheckBox>

                    <Grid
                        Grid.Column="1"
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        RowSpacing="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" ColumnSpacing="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                FontSize="16"
                                Style="{StaticResource CardTextStyle}"
                                Text="{x:Bind FileName}">

                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        Content="{x:Bind FileName}"
                                        Placement="Bottom"
                                        VerticalOffset="20" />
                                </ToolTipService.ToolTip>
                            </TextBlock>

                            <TextBlock
                                Grid.Column="1"
                                FontSize="16"
                                Style="{StaticResource CardTextStyle}"
                                Text="{x:Bind TotalSize, Mode=OneWay, Converter={StaticResource DownloadSizeFormatConverter}}">

                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        Content="{x:Bind TotalSize, Mode=OneWay, Converter={StaticResource DownloadSizeFormatConverter}}"
                                        Placement="Bottom"
                                        VerticalOffset="20" />
                                </ToolTipService.ToolTip>
                            </TextBlock>
                        </Grid>

                        <StackPanel Grid.Row="1" Visibility="{x:Bind IsInstalling, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Reverse, Mode=OneWay}">
                            <TextBlock
                                x:Name="FileExist"
                                x:Load="{x:Bind FilePath, Converter={StaticResource FileExistCheckConverter}}"
                                Style="{StaticResource CardTextStyle}"
                                Text="{x:Bind FilePath, Converter={StaticResource FileExistTextCheckConverter}}">

                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        Content="{x:Bind FilePath, Converter={StaticResource FileExistTextCheckConverter}}"
                                        Placement="Bottom"
                                        VerticalOffset="20" />
                                </ToolTipService.ToolTip>
                            </TextBlock>
                            <TextBlock
                                x:Name="FileNotExist"
                                x:Load="{x:Bind FilePath, Converter={StaticResource FileExistCheckConverter}, ConverterParameter=Reverse}"
                                Foreground="{ThemeResource InfoBarErrorSeverityIconBackground}"
                                Style="{StaticResource CardTextStyle}"
                                Text="{x:Bind FilePath, Converter={StaticResource FileExistTextCheckConverter}}">

                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        Content="{x:Bind FilePath, Converter={StaticResource FileExistTextCheckConverter}}"
                                        Placement="Bottom"
                                        VerticalOffset="20" />
                                </ToolTipService.ToolTip>
                            </TextBlock>
                        </StackPanel>

                        <Grid
                            x:Name="InstallInfo"
                            Grid.Row="1"
                            x:Load="{x:Bind IsInstalling, Mode=OneWay}"
                            ColumnSpacing="10">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                Style="{StaticResource CardTextStyle}"
                                Text="{x:Bind root:ResourceService.GetLocalized('Download/Installing')}">

                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        Content="{x:Bind root:ResourceService.GetLocalized('Download/Installing')}"
                                        Placement="Bottom"
                                        VerticalOffset="20" />
                                </ToolTipService.ToolTip>
                            </TextBlock>
                            <ProgressBar
                                Grid.Column="1"
                                IsIndeterminate="False"
                                ShowError="{x:Bind InstallError, Mode=OneWay}"
                                Value="{x:Bind InstallValue, Mode=OneWay}" />
                            <TextBlock
                                x:Name="InstallStateInfo"
                                Grid.Column="2"
                                x:Load="{x:Bind InstallError, Converter={StaticResource BooleanToOppositeValueConverter}, Mode=OneWay}"
                                Style="{StaticResource CardTextStyle}"
                                Text="{x:Bind InstallValue, Converter={StaticResource InstallValueFormatConverter}, Mode=OneWay}">

                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        Content="{x:Bind InstallValue, Converter={StaticResource InstallValueFormatConverter}, Mode=OneWay}"
                                        Placement="Bottom"
                                        VerticalOffset="20" />
                                </ToolTipService.ToolTip>
                            </TextBlock>
                            <TextBlock
                                x:Name="InstallErrorInfo"
                                Grid.Column="2"
                                x:Load="{x:Bind InstallError, Mode=OneWay}"
                                Style="{StaticResource CardTextStyle}"
                                Text="{x:Bind root:ResourceService.GetLocalized('Download/InstallError')}">

                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        Content="{x:Bind root:ResourceService.GetLocalized('Download/InstallError')}"
                                        Placement="Bottom"
                                        VerticalOffset="20" />
                                </ToolTipService.ToolTip>
                            </TextBlock>
                        </Grid>
                    </Grid>

                    <ContentControl
                        Grid.Column="2"
                        Margin="10,0,0,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        IsEnabled="{Binding ElementName=CompletedRoot, Path=DataContext.IsSelectMode, Converter={StaticResource BooleanToOppositeValueConverter}, Mode=OneWay}">

                        <StackPanel Orientation="Horizontal">

                            <ContentControl IsEnabled="{x:Bind FilePath, Converter={StaticResource FileExistCheckConverter}}">

                                <StackPanel Orientation="Horizontal">
                                    <ContentControl IsEnabled="{x:Bind FileName, Converter={StaticResource InstallFileCheckConverter}}">
                                        <Button
                                            controlExtensions:CursorHelper.Cursor="Hand"
                                            Command="{Binding ElementName=CompletedRoot, Path=DataContext.InstallCommand, Mode=OneTime}"
                                            CommandParameter="{Binding}"
                                            IsEnabled="{x:Bind IsInstalling, Converter={StaticResource BooleanToOppositeValueConverter}, Mode=OneWay}"
                                            Style="{StaticResource ButtonDownloadStyle}">

                                            <Button.Content>
                                                <FontIcon Glyph="&#xF775;" Style="{StaticResource SettingsFluentStyle}" />
                                            </Button.Content>

                                            <ToolTipService.ToolTip>
                                                <ToolTip
                                                    Content="{x:Bind root:ResourceService.GetLocalized('Download/InstallToolTip')}"
                                                    Placement="Bottom"
                                                    VerticalOffset="25" />
                                            </ToolTipService.ToolTip>
                                        </Button>
                                    </ContentControl>

                                    <Button
                                        controlExtensions:CursorHelper.Cursor="Hand"
                                        Command="{Binding ElementName=CompletedRoot, Path=DataContext.OpenItemFolderCommand, Mode=OneTime}"
                                        CommandParameter="{x:Bind FilePath}"
                                        Style="{StaticResource ButtonDownloadStyle}">

                                        <Button.Content>
                                            <FontIcon Glyph="&#xE8da;" Style="{StaticResource SegoeFluentStyle}" />
                                        </Button.Content>

                                        <ToolTipService.ToolTip>
                                            <ToolTip
                                                Content="{x:Bind root:ResourceService.GetLocalized('Download/OpenItemFolderToolTip')}"
                                                Placement="Bottom"
                                                VerticalOffset="25" />
                                        </ToolTipService.ToolTip>
                                    </Button>
                                </StackPanel>
                            </ContentControl>

                            <Button controlExtensions:CursorHelper.Cursor="Hand" Style="{StaticResource ButtonDownloadStyle}">

                                <Button.Content>
                                    <FontIcon
                                        FontSize="16"
                                        Glyph="&#xE712;"
                                        Style="{StaticResource SegoeFluentStyle}" />
                                </Button.Content>

                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        Content="{x:Bind root:ResourceService.GetLocalized('Download/ViewMore')}"
                                        Placement="Bottom"
                                        VerticalOffset="25" />
                                </ToolTipService.ToolTip>

                                <Button.Flyout>
                                    <menusAndToolbars:AdaptiveMenuFlyout>
                                        <MenuFlyoutItem
                                            Command="{Binding ElementName=CompletedRoot, Path=DataContext.DeleteCommand, Mode=OneTime}"
                                            CommandParameter="{Binding}"
                                            Text="{x:Bind root:ResourceService.GetLocalized('Download/Delete')}">

                                            <ToolTipService.ToolTip>
                                                <ToolTip
                                                    Content="{x:Bind root:ResourceService.GetLocalized('Download/DeleteToolTip')}"
                                                    Placement="Bottom"
                                                    VerticalOffset="20" />
                                            </ToolTipService.ToolTip>
                                        </MenuFlyoutItem>
                                        <MenuFlyoutItem
                                            Command="{Binding ElementName=CompletedRoot, Path=DataContext.DeleteWithFileCommand, Mode=OneTime}"
                                            CommandParameter="{Binding}"
                                            IsEnabled="{x:Bind FilePath, Converter={StaticResource FileExistCheckConverter}}"
                                            Text="{x:Bind root:ResourceService.GetLocalized('Download/DeleteWithFile')}">

                                            <ToolTipService.ToolTip>
                                                <ToolTip
                                                    Content="{x:Bind root:ResourceService.GetLocalized('Download/DeleteWithFileToolTip')}"
                                                    Placement="Bottom"
                                                    VerticalOffset="20" />
                                            </ToolTipService.ToolTip>
                                        </MenuFlyoutItem>
                                        <MenuFlyoutSeparator />
                                        <MenuFlyoutItem
                                            Command="{Binding ElementName=CompletedRoot, Path=DataContext.ShareFileCommand, Mode=OneTime}"
                                            CommandParameter="{Binding}"
                                            IsEnabled="{x:Bind FilePath, Converter={StaticResource FileExistCheckConverter}}"
                                            Text="{x:Bind root:ResourceService.GetLocalized('Download/ShareFile')}">

                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE72d;" Style="{StaticResource SegoeFluentStyle}" />
                                            </MenuFlyoutItem.Icon>

                                            <ToolTipService.ToolTip>
                                                <ToolTip
                                                    Content="{x:Bind root:ResourceService.GetLocalized('Download/ShareFile')}"
                                                    Placement="Bottom"
                                                    VerticalOffset="20" />
                                            </ToolTipService.ToolTip>
                                        </MenuFlyoutItem>

                                        <MenuFlyoutItem
                                            Command="{Binding ElementName=CompletedRoot, Path=DataContext.FileInformationCommand, Mode=OneTime}"
                                            CommandParameter="{Binding}"
                                            IsEnabled="{x:Bind FilePath, Converter={StaticResource FileExistCheckConverter}}"
                                            Text="{x:Bind root:ResourceService.GetLocalized('Download/FileInformation')}">

                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE946;" Style="{StaticResource SegoeFluentStyle}" />
                                            </MenuFlyoutItem.Icon>

                                            <ToolTipService.ToolTip>
                                                <ToolTip
                                                    Content="{x:Bind root:ResourceService.GetLocalized('Download/FileInformation')}"
                                                    Placement="Bottom"
                                                    VerticalOffset="20" />
                                            </ToolTipService.ToolTip>
                                        </MenuFlyoutItem>
                                    </menusAndToolbars:AdaptiveMenuFlyout>
                                </Button.Flyout>
                            </Button>
                        </StackPanel>
                    </ContentControl>
                </Grid>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</Grid>
