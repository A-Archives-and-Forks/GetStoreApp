<Grid
    x:Class="GetStoreApp.UI.Controls.WinGet.UpgradableAppsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:converter="using:GetStoreApp.Helpers.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enum="using:GetStoreApp.Extensions.DataType.Enums"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="using:GetStoreApp.Services.Root"
    xmlns:winget="using:GetStoreApp.Models.Controls.WinGet"
    mc:Ignorable="d">

    <Grid.Resources>
        <SolidColorBrush x:Key="ItemContainerPointerOverBackground" Color="Transparent" />
        <SolidColorBrush x:Key="ItemContainerPressedBackground" Color="Transparent" />

        <XamlUICommand x:Name="CopyUpgradeTextCommand" ExecuteRequested="{x:Bind OnCopyUpgradeTextExecuteRequested}" />
        <XamlUICommand x:Name="UpgradeWithCmdCommand" ExecuteRequested="{x:Bind OnUpgradeWithCmdExecuteRequested}" />
        <XamlUICommand x:Name="UpdateCommand" ExecuteRequested="{x:Bind OnUpdateExecuteRequested}" />
    </Grid.Resources>

    <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <!--  可更新应用控制栏  -->
    <Grid
        Grid.Row="0"
        Height="66"
        Margin="30,0"
        Padding="16,8,2,8"
        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
        BorderThickness="1"
        CornerRadius="{StaticResource ControlCornerRadius}">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <FontIcon
            Grid.Column="0"
            Margin="0,0,12,0"
            FontSize="16"
            Glyph="&#xE74C;" />

        <TextBlock
            Grid.Column="1"
            VerticalAlignment="Center"
            Text="{x:Bind root:ResourceService.GetLocalized('WinGet/Operation')}" />

        <AppBarSeparator Grid.Column="2" Margin="10,0,10,0" />

        <TextBlock
            Grid.Column="3"
            VerticalAlignment="Center"
            Text="{x:Bind root:ResourceService.GetLocalized('WinGet/UpgradableAppsCountEmpty')}"
            Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityReverseConvert(UpgradableAppsCollection.Count), Mode=OneWay}" />

        <TextBlock
            Grid.Column="3"
            VerticalAlignment="Center"
            Text="{x:Bind x:String.Format(UpgradableAppsCountInfo, UpgradableAppsCollection.Count), Mode=OneWay}"
            Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityConvert(UpgradableAppsCollection.Count), Mode=OneWay}" />

        <CommandBar
            Grid.Column="4"
            Margin="4,0,10,0"
            VerticalAlignment="Center"
            Background="Transparent"
            DefaultLabelPosition="Right">

            <CommandBar.Resources>
                <SolidColorBrush x:Key="CommandBarBackgroundOpen" Color="Transparent" />
                <Thickness x:Key="CommandBarBorderThicknessOpen">0</Thickness>
            </CommandBar.Resources>

            <CommandBar.PrimaryCommands>
                <AppBarButton Label="{x:Bind root:ResourceService.GetLocalized('WinGet/Sort')}" ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('WinGet/SortToolTip')}">

                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE8CB;" />
                    </AppBarButton.Icon>

                    <AppBarButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutSubItem
                                Height="32"
                                Padding="11,0,11,0"
                                Text="{x:Bind root:ResourceService.GetLocalized('WinGet/SortWay')}">

                                <RadioMenuFlyoutItem
                                    Height="32"
                                    Padding="11,0"
                                    Click="{x:Bind OnSortWayClicked}"
                                    GroupName="UpgradeSortWayRadioGroup"
                                    IsChecked="{x:Bind IsIncrease, Mode=OneWay}"
                                    Tag="True"
                                    Text="{x:Bind root:ResourceService.GetLocalized('WinGet/SortIncrease')}" />

                                <RadioMenuFlyoutItem
                                    Height="32"
                                    Padding="11,0"
                                    Click="{x:Bind OnSortWayClicked}"
                                    GroupName="UpgradeSortWayRadioGroup"
                                    IsChecked="{x:Bind IsIncrease.Equals(x:False), Mode=OneWay}"
                                    Tag="False"
                                    Text="{x:Bind root:ResourceService.GetLocalized('WinGet/SortDecrease')}" />
                            </MenuFlyoutSubItem>

                            <MenuFlyoutSubItem
                                Height="32"
                                Padding="11,0,11,0"
                                Text="{x:Bind root:ResourceService.GetLocalized('WinGet/SortRule')}">

                                <RadioMenuFlyoutItem
                                    Height="32"
                                    Padding="11,0"
                                    Click="{x:Bind OnSortRuleClicked}"
                                    GroupName="UpgradeSortRuleRadioGroup"
                                    IsChecked="{x:Bind x:Object.Equals(SelectedAppSortRuleKind, enum:AppSortRuleKind.DisplayName), Mode=OneWay}"
                                    Tag="{x:Bind enum:AppSortRuleKind.DisplayName}"
                                    Text="{x:Bind root:ResourceService.GetLocalized('WinGet/SortByDisplayName')}" />

                                <RadioMenuFlyoutItem
                                    Height="32"
                                    Padding="11,0"
                                    Click="{x:Bind OnSortRuleClicked}"
                                    GroupName="UpgradeSortRuleRadioGroup"
                                    IsChecked="{x:Bind x:Object.Equals(SelectedAppSortRuleKind, enum:AppSortRuleKind.PublisherName), Mode=OneWay}"
                                    Tag="{x:Bind enum:AppSortRuleKind.PublisherName}"
                                    Text="{x:Bind root:ResourceService.GetLocalized('WinGet/SortByPublisher')}" />
                            </MenuFlyoutSubItem>
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>

                <AppBarButton
                    Click="{x:Bind OnCheckUpdateClicked}"
                    IsEnabled="{x:Bind GetIsCheckingUpdate(UpgradableAppsResultKind), Mode=OneWay}"
                    Label="{x:Bind root:ResourceService.GetLocalized('WinGet/CheckUpdate')}">

                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE895;" />
                    </AppBarButton.Icon>
                </AppBarButton>
            </CommandBar.PrimaryCommands>

            <CommandBar.SecondaryCommands>
                <AppBarButton
                    Click="{x:Bind OnOpenTempFolderClicked}"
                    Label="{x:Bind root:ResourceService.GetLocalized('WinGet/OpenTempFolder')}"
                    ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('WinGet/OpenTempFolderToolTip')}">

                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE8B7;" />
                    </AppBarButton.Icon>
                </AppBarButton>

                <AppBarButton
                    Click="{x:Bind OnDataSourceSettingsClicked}"
                    Label="{x:Bind root:ResourceService.GetLocalized('WinGet/DataSourceSettings')}"
                    ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('WinGet/DataSourceSettingsToolTip')}">

                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE713;" />
                    </AppBarButton.Icon>
                </AppBarButton>
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Grid>

    <!--  可更新应用状态显示栏  -->
    <Grid
        Grid.Row="1"
        Height="60"
        Margin="30,3,30,0"
        Padding="16,12"
        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
        BorderThickness="1"
        CornerRadius="{StaticResource ControlCornerRadius}"
        Visibility="{x:Bind GetUpgradableAppsSuccessfullyState(UpgradableAppsResultKind, x:False), Mode=OneWay}">

        <Grid>
            <!--  未检查更新  -->
            <TextBlock
                Margin="0,10"
                VerticalAlignment="Center"
                Text="{x:Bind root:ResourceService.GetLocalized('WinGet/NotCheckUpdateTip')}"
                TextAlignment="Center"
                ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('WinGet/NotCheckUpdateTip')}"
                Visibility="{x:Bind CheckUpgradableAppsState(UpgradableAppsResultKind, enum:UpgradableAppsResultKind.NotCheckUpdate), Mode=OneWay}" />

            <!--  正在检查更新中  -->
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal"
                Spacing="10"
                Visibility="{x:Bind CheckUpgradableAppsState(UpgradableAppsResultKind, enum:UpgradableAppsResultKind.Querying), Mode=OneWay}">

                <ProgressRing IsActive="True" IsEnabled="True" />

                <TextBlock
                    Margin="0,10"
                    VerticalAlignment="Center"
                    Text="{x:Bind root:ResourceService.GetLocalized('WinGet/LoadingUpgradableApps')}"
                    TextAlignment="Center" />
            </StackPanel>

            <!--  搜索失败  -->
            <TextBlock
                Margin="0,10"
                VerticalAlignment="Center"
                Text="{x:Bind UpgradableFailedContent, Mode=OneWay}"
                TextAlignment="Center"
                Visibility="{x:Bind CheckUpgradableAppsState(UpgradableAppsResultKind, enum:UpgradableAppsResultKind.Failed), Mode=OneWay}" />
        </Grid>
    </Grid>

    <!--  可更新应用结果展示项目控件  -->
    <ItemsView
        Grid.Row="2"
        Padding="30,0,30,30"
        ItemsSource="{x:Bind UpgradableAppsCollection, Mode=OneWay}"
        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
        ScrollViewer.HorizontalScrollMode="Disabled"
        ScrollViewer.VerticalScrollBarVisibility="Auto"
        ScrollViewer.VerticalScrollMode="Enabled"
        SelectionMode="None"
        Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityConvert(UpgradableAppsCollection.Count), Mode=OneWay}">

        <ItemsView.Layout>
            <StackLayout />
        </ItemsView.Layout>

        <ItemsView.ItemTemplate>
            <DataTemplate x:DataType="winget:UpgradableAppsModel">
                <ItemContainer Margin="0,0,0,2">
                    <Grid
                        Height="60"
                        Padding="16,12"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        ColumnSpacing="10"
                        CornerRadius="{StaticResource ControlCornerRadius}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            MinWidth="50"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="14"
                            Text="{x:Bind AppName}"
                            TextAlignment="Left"
                            TextTrimming="CharacterEllipsis"
                            TextWrapping="NoWrap">

                            <ToolTipService.ToolTip>
                                <ToolTip MaxWidth="9999">
                                    <TextBlock>
                                        <Run Text="{x:Bind root:ResourceService.GetLocalized('WinGet/AppNameToolTip')}" />
                                        <Run Text="{x:Bind AppName}" />
                                    </TextBlock>
                                </ToolTip>
                            </ToolTipService.ToolTip>
                        </TextBlock>

                        <TextBlock
                            Grid.Column="1"
                            MinWidth="50"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="14"
                            Text="{x:Bind AppPublisher}"
                            TextAlignment="Left"
                            TextTrimming="CharacterEllipsis"
                            TextWrapping="NoWrap">

                            <ToolTipService.ToolTip>
                                <ToolTip MaxWidth="9999">
                                    <TextBlock>
                                        <Run Text="{x:Bind root:ResourceService.GetLocalized('WinGet/AppPublisherToolTip')}" />
                                        <Run Text="{x:Bind AppPublisher}" />
                                    </TextBlock>
                                </ToolTip>
                            </ToolTipService.ToolTip>
                        </TextBlock>

                        <TextBlock
                            Grid.Column="2"
                            MinWidth="50"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="14"
                            HorizontalTextAlignment="Left"
                            Text="{x:Bind AppCurrentVersion}"
                            TextAlignment="Left"
                            TextTrimming="CharacterEllipsis"
                            TextWrapping="NoWrap">

                            <ToolTipService.ToolTip>
                                <ToolTip MaxWidth="9999">
                                    <TextBlock>
                                        <Run Text="{x:Bind root:ResourceService.GetLocalized('WinGet/AppCurrentVersionToolTip')}" />
                                        <Run Text="{x:Bind AppCurrentVersion}" />
                                    </TextBlock>
                                </ToolTip>
                            </ToolTipService.ToolTip>
                        </TextBlock>

                        <TextBlock
                            Grid.Column="3"
                            MinWidth="50"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="14"
                            Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                            HorizontalTextAlignment="Left"
                            Text="{x:Bind AppNewestVersion}"
                            TextAlignment="Left"
                            TextTrimming="CharacterEllipsis"
                            TextWrapping="NoWrap">

                            <ToolTipService.ToolTip>
                                <ToolTip MaxWidth="9999">
                                    <TextBlock>
                                        <Run Text="{x:Bind root:ResourceService.GetLocalized('WinGet/AppNewestVersionToolTip')}" />
                                        <Run Text="{x:Bind AppNewestVersion}" />
                                    </TextBlock>
                                </ToolTip>
                            </ToolTipService.ToolTip>
                        </TextBlock>

                        <StackPanel
                            Grid.Column="4"
                            Height="30"
                            BorderBrush="{ThemeResource ButtonBorderBrush}"
                            BorderThickness="{ThemeResource ButtonBorderThemeThickness}"
                            CornerRadius="{ThemeResource ControlCornerRadius}"
                            Orientation="Horizontal">

                            <Button
                                VerticalAlignment="Stretch"
                                VerticalContentAlignment="Center"
                                BorderThickness="0,0,1,0"
                                Command="{StaticResource UpdateCommand}"
                                CommandParameter="{x:Bind}"
                                Content="{x:Bind root:ResourceService.GetLocalized('WinGet/Update')}"
                                CornerRadius="0"
                                IsEnabled="{x:Bind IsUpgrading.Equals(x:False), Mode=OneWay}"
                                ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('WinGet/Update')}" />

                            <Button
                                Width="35"
                                VerticalAlignment="Stretch"
                                BorderThickness="0"
                                CornerRadius="0"
                                ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('WinGet/ViewMoreOptions')}">

                                <Button.Content>
                                    <AnimatedIcon
                                        Width="12"
                                        Height="12"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        AutomationProperties.AccessibilityView="Raw">
                                        <animatedvisuals:AnimatedChevronDownSmallVisualSource />
                                        <AnimatedIcon.FallbackIconSource>
                                            <FontIconSource
                                                FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                FontSize="8"
                                                Glyph="&#xE96E;"
                                                IsTextScaleFactorEnabled="False" />
                                        </AnimatedIcon.FallbackIconSource>
                                    </AnimatedIcon>
                                </Button.Content>

                                <Button.Flyout>
                                    <MenuFlyout Placement="Bottom">
                                        <MenuFlyoutItem
                                            Height="32"
                                            Padding="11,0"
                                            Command="{StaticResource CopyUpgradeTextCommand}"
                                            CommandParameter="{x:Bind AppID}"
                                            Text="{x:Bind root:ResourceService.GetLocalized('WinGet/CopyUpgradeText')}">

                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE8C8;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>

                                        <MenuFlyoutItem
                                            Height="32"
                                            Padding="11,0"
                                            Command="{StaticResource UpgradeWithCmdCommand}"
                                            CommandParameter="{x:Bind AppID}"
                                            Text="{x:Bind root:ResourceService.GetLocalized('WinGet/UpgradeWithCmd')}">

                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE756;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                    </MenuFlyout>
                                </Button.Flyout>
                            </Button>
                        </StackPanel>
                    </Grid>
                </ItemContainer>
            </DataTemplate>
        </ItemsView.ItemTemplate>
    </ItemsView>
</Grid>
