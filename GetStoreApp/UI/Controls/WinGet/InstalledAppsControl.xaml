<Grid
    x:Class="GetStoreApp.UI.Controls.WinGet.InstalledAppsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:basicInput="using:GetStoreApp.Views.CustomControls.BasicInput"
    xmlns:controlExtensions="using:GetStoreApp.Helpers.Controls.Extensions"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:format="using:GetStoreApp.Converters.Formats"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:menusAndToolbars="using:GetStoreApp.Views.CustomControls.MenusAndToolbars"
    xmlns:root="using:GetStoreApp.Services.Root"
    xmlns:winGetViewModel="using:GetStoreApp.ViewModels.Controls.WinGet"
    xmlns:winget="using:GetStoreApp.Models.Controls.WinGet"
    x:Name="InstalledAppsRoot"
    Padding="0"
    Loaded="{x:Bind ViewModel.OnLoaded}"
    mc:Ignorable="d">

    <Grid.DataContext>
        <winGetViewModel:InstalledAppsViewModel x:Name="ViewModel" x:FieldModifier="public" />
    </Grid.DataContext>

    <Grid.Resources>
        <format:WinGetAppsToolTipConverter x:Name="WinGetAppsToolTipConverter" />
    </Grid.Resources>

    <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <Grid
        Grid.Row="0"
        Height="66"
        Margin="30,0"
        Style="{StaticResource ListViewHeaderGridStyle}">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <FontIcon
            Grid.Column="0"
            Margin="0,0,12,0"
            FontFamily="{ThemeResource SymbolThemeFontFamily}"
            FontSize="16"
            Glyph="&#xE74C;" />

        <TextBlock
            Grid.Column="1"
            VerticalAlignment="Center"
            Text="{x:Bind root:ResourceService.GetLocalized('WinGet/Operation')}" />
        <AppBarSeparator Grid.Column="2" Margin="10,0,10,0" />

        <TextBlock
            Grid.Column="3"
            VerticalAlignment="Center"
            Text="{x:Bind LocalizeInstalledAppsCountInfo(ViewModel.InstalledAppsDataList.Count), Mode=OneWay}">

            <ToolTipService.ToolTip>
                <ToolTip
                    Content="{x:Bind LocalizeInstalledAppsCountInfo(ViewModel.InstalledAppsDataList.Count), Mode=OneWay}"
                    Placement="Bottom"
                    VerticalOffset="20" />
            </ToolTipService.ToolTip>
        </TextBlock>

        <AutoSuggestBox
            Grid.Column="4"
            Width="170"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            IsEnabled="{x:Bind ViewModel.IsInstalledAppsEmpty, Converter={StaticResource BooleanToOppositeValueConverter}, Mode=OneWay}"
            PlaceholderText="{x:Bind root:ResourceService.GetLocalized('WinGet/InstalledAppsPlaceHolderText')}"
            QuerySubmitted="{x:Bind ViewModel.OnQuerySubmitted}"
            Text="{x:Bind ViewModel.SearchText, Mode=TwoWay}">

            <AutoSuggestBox.QueryIcon>
                <FontIcon
                    FontFamily="{ThemeResource SymbolThemeFontFamily}"
                    FontSize="14"
                    Glyph="&#xE71E;" />
            </AutoSuggestBox.QueryIcon>
        </AutoSuggestBox>

        <StackPanel
            Grid.Column="5"
            Margin="4,0,10,0"
            VerticalAlignment="Center"
            Background="Transparent"
            Orientation="Horizontal">

            <MenuFlyoutItem
                controlExtensions:CursorHelper.Cursor="Hand"
                Click="{x:Bind ViewModel.OnRefreshClicked}"
                IsEnabled="{x:Bind ViewModel.IsLoadedCompleted, Mode=OneWay}"
                Style="{StaticResource AppBarButtonMenuItemStyle}"
                Text="{x:Bind root:ResourceService.GetLocalized('WinGet/Refresh')}">

                <MenuFlyoutItem.Icon>
                    <FontIcon Glyph="&#xE72C;" />
                </MenuFlyoutItem.Icon>

                <ToolTipService.ToolTip>
                    <ToolTip
                        Content="{x:Bind root:ResourceService.GetLocalized('WinGet/RefreshToolTip')}"
                        Placement="Bottom"
                        VerticalOffset="25" />
                </ToolTipService.ToolTip>
            </MenuFlyoutItem>
        </StackPanel>
    </Grid>

    <Grid
        x:Name="LoadingGrid"
        Grid.Row="1"
        Margin="30,3,30,0"
        x:Load="{x:Bind ViewModel.IsLoadedCompleted, Converter={StaticResource BooleanToOppositeValueConverter}, Mode=OneWay}"
        Style="{StaticResource CardGridStyle}">

        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal"
            Spacing="10">

            <ProgressRing IsActive="True" IsEnabled="True" />

            <TextBlock
                Margin="0,10"
                VerticalAlignment="Center"
                Text="{x:Bind root:ResourceService.GetLocalized('WinGet/LoadingInstalledApps')}"
                TextAlignment="Center">

                <ToolTipService.ToolTip>
                    <ToolTip
                        Content="{x:Bind root:ResourceService.GetLocalized('WinGet/LoadingInstalledApps')}"
                        Placement="Bottom"
                        VerticalOffset="20" />
                </ToolTipService.ToolTip>
            </TextBlock>
        </StackPanel>
    </Grid>

    <Grid
        Grid.Row="2"
        Padding="0,3,0,0"
        Visibility="{x:Bind ViewModel.IsLoadedCompleted, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid
                Grid.Row="0"
                Margin="30,0"
                Style="{StaticResource CardGridStyle}"
                Visibility="{x:Bind ViewModel.IsInstalledAppsEmpty, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}">
                <TextBlock
                    Margin="0,10"
                    VerticalAlignment="Center"
                    Text="{x:Bind root:ResourceService.GetLocalized('WinGet/InstalledAppsEmptyDescription')}"
                    TextAlignment="Center">

                    <ToolTipService.ToolTip>
                        <ToolTip
                            Content="{x:Bind root:ResourceService.GetLocalized('WinGet/InstalledAppsEmptyDescription')}"
                            Placement="Bottom"
                            VerticalOffset="20" />
                    </ToolTipService.ToolTip>
                </TextBlock>
            </Grid>

            <Grid Grid.Row="1" Visibility="{x:Bind ViewModel.IsInstalledAppsEmpty, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Reverse, Mode=OneWay}">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid
                    Grid.Row="0"
                    Margin="30,0"
                    Style="{StaticResource CardGridStyle}"
                    Visibility="{x:Bind ViewModel.InstalledAppsDataList.Count, Converter={StaticResource IntToVisibilityConverter}, ConverterParameter=Reverse, Mode=OneWay}">
                    <TextBlock
                        Margin="0,10"
                        VerticalAlignment="Center"
                        Text="{x:Bind root:ResourceService.GetLocalized('WinGet/InstalledAppsSearchEmptyDescription')}"
                        TextAlignment="Center">

                        <ToolTipService.ToolTip>
                            <ToolTip
                                Content="{x:Bind root:ResourceService.GetLocalized('WinGet/InstalledAppsSearchEmptyDescription')}"
                                Placement="Bottom"
                                VerticalOffset="20" />
                        </ToolTipService.ToolTip>
                    </TextBlock>
                </Grid>

                <ListView
                    Grid.Row="1"
                    Padding="30,0,30,30"
                    ItemContainerStyle="{StaticResource CardListViewItemContainerStyle}"
                    ItemsSource="{x:Bind ViewModel.InstalledAppsDataList, Mode=OneWay}"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    ScrollViewer.HorizontalScrollMode="Disabled"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    ScrollViewer.VerticalScrollMode="Enabled"
                    SelectionMode="None"
                    Style="{StaticResource ListViewStyle}"
                    Visibility="{x:Bind ViewModel.InstalledAppsDataList.Count, Converter={StaticResource IntToVisibilityConverter}, Mode=OneWay}">

                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="winget:InstalledAppsModel">
                            <Grid
                                Padding="16,12"
                                ColumnSpacing="10"
                                Style="{StaticResource CardGridStyle}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource CardTextStyle}"
                                    Text="{x:Bind AppName}">

                                    <ToolTipService.ToolTip>
                                        <ToolTip
                                            Content="{x:Bind AppName, Converter={StaticResource WinGetAppsToolTipConverter}, ConverterParameter=AppName}"
                                            Placement="Bottom"
                                            VerticalOffset="20" />
                                    </ToolTipService.ToolTip>
                                </TextBlock>

                                <TextBlock
                                    Grid.Column="1"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource CardTextStyle}"
                                    Text="{x:Bind AppPublisher}">

                                    <ToolTipService.ToolTip>
                                        <ToolTip
                                            Content="{x:Bind AppPublisher, Converter={StaticResource WinGetAppsToolTipConverter}, ConverterParameter=AppPublisher}"
                                            Placement="Bottom"
                                            VerticalOffset="20" />
                                    </ToolTipService.ToolTip>
                                </TextBlock>

                                <TextBlock
                                    Grid.Column="2"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    HorizontalTextAlignment="Left"
                                    Style="{StaticResource CardTextStyle}"
                                    Text="{x:Bind AppVersion}">

                                    <ToolTipService.ToolTip>
                                        <ToolTip
                                            Content="{x:Bind AppVersion, Converter={StaticResource WinGetAppsToolTipConverter}, ConverterParameter=AppVersion}"
                                            Placement="Bottom"
                                            VerticalOffset="20" />
                                    </ToolTipService.ToolTip>
                                </TextBlock>

                                <basicInput:ExtendedSplitButton
                                    Grid.Column="3"
                                    MinWidth="100"
                                    Command="{Binding ElementName=InstalledAppsRoot, Path=DataContext.UnInstallCommand, Mode=OneTime}"
                                    CommandParameter="{Binding}"
                                    Content="{x:Bind root:ResourceService.GetLocalized('WinGet/UnInstall')}">

                                    <basicInput:ExtendedSplitButton.PrimaryButtonToolTip>
                                        <ToolTip
                                            Content="{x:Bind root:ResourceService.GetLocalized('WinGet/UnInstall')}"
                                            Placement="Bottom"
                                            VerticalOffset="20" />
                                    </basicInput:ExtendedSplitButton.PrimaryButtonToolTip>

                                    <basicInput:ExtendedSplitButton.SecondaryButtonToolTip>
                                        <ToolTip
                                            Content="{x:Bind root:ResourceService.GetLocalized('WinGet/ViewMoreOptions')}"
                                            Placement="Bottom"
                                            VerticalOffset="20" />
                                    </basicInput:ExtendedSplitButton.SecondaryButtonToolTip>

                                    <basicInput:ExtendedSplitButton.Flyout>
                                        <menusAndToolbars:AdaptiveMenuFlyout>
                                            <MenuFlyoutItem
                                                Command="{Binding ElementName=InstalledAppsRoot, Path=DataContext.CopyUnInstallTextCommand, Mode=OneTime}"
                                                CommandParameter="{x:Bind AppID}"
                                                Text="{x:Bind root:ResourceService.GetLocalized('WinGet/CopyUnInstallText')}">

                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xE8C8;" />
                                                </MenuFlyoutItem.Icon>

                                                <ToolTipService.ToolTip>
                                                    <ToolTip
                                                        Content="{x:Bind root:ResourceService.GetLocalized('WinGet/CopyUnInstallText')}"
                                                        Placement="Bottom"
                                                        VerticalOffset="20" />
                                                </ToolTipService.ToolTip>
                                            </MenuFlyoutItem>
                                        </menusAndToolbars:AdaptiveMenuFlyout>
                                    </basicInput:ExtendedSplitButton.Flyout>
                                </basicInput:ExtendedSplitButton>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Grid>
    </Grid>
</Grid>
