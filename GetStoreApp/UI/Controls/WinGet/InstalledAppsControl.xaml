<UserControl
    x:Class="GetStoreApp.UI.Controls.WinGet.InstalledAppsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:format="using:GetStoreApp.Converters.Formats"
    xmlns:winget="using:GetStoreApp.Models.Controls.WinGet"
    xmlns:root="using:GetStoreApp.Services.Root"
    xmlns:winGetViewModel="using:GetStoreApp.ViewModels.Controls.WinGet"
    xmlns:menusAndToolbars="using:GetStoreApp.Views.CustomControls.MenusAndToolbars"
    x:Name="InstalledAppsRoot"
    Loaded="{x:Bind ViewModel.OnLoaded}"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <winGetViewModel:InstalledAppsViewModel x:Name="ViewModel" x:FieldModifier="public" />
    </UserControl.DataContext>

    <UserControl.Resources>
        <format:InstalledAppsToolTipConverter x:Name="InstalledAppsToolTipConverter" />
    </UserControl.Resources>

    <Grid Padding="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid
            Grid.Row="0"
            Margin="30,0"
            Style="{StaticResource ListViewHeaderGridStyle}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <FontIcon
                Grid.Column="0"
                FontFamily="{StaticResource SegoeFluentFontFamily}"
                Glyph="&#xE74C;"
                Style="{StaticResource FontIconStyle}" />

            <TextBlock
                Grid.Column="1"
                VerticalAlignment="Center"
                Text="{x:Bind root:ResourceService.GetLocalized('WinGet/Operation')}" />
            <AppBarSeparator Grid.Column="2" Margin="10,0,10,0" />

            <TextBlock
                Grid.Column="3"
                VerticalAlignment="Center"
                Text="{x:Bind LocalizeInstalledAppsCountInfo(ViewModel.InstalledAppsDataList.Count), Mode=OneWay}">

                <ToolTipService.ToolTip>
                    <ToolTip
                        Content="{x:Bind LocalizeInstalledAppsCountInfo(ViewModel.InstalledAppsDataList.Count), Mode=OneWay}"
                        Placement="Bottom"
                        VerticalOffset="20" />
                </ToolTipService.ToolTip>
            </TextBlock>

            <AutoSuggestBox
                Grid.Column="4"
                Width="170"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                IsEnabled="False"
                PlaceholderText="{x:Bind root:ResourceService.GetLocalized('WinGet/InstalledAppsPlaceHolderText')}">
                <AutoSuggestBox.QueryIcon>
                    <FontIcon Glyph="&#xE71E;" Style="{StaticResource SegoeFluentStyle}" />
                </AutoSuggestBox.QueryIcon>
            </AutoSuggestBox>

            <CommandBar
                Grid.Column="5"
                VerticalAlignment="Center"
                Background="Transparent"
                DefaultLabelPosition="Right">

                <menusAndToolbars:ExtendedAppBarButton
                    Cursor="Hand"
                    IsEnabled="False"
                    Label="{x:Bind root:ResourceService.GetLocalized('WinGet/Sort')}">

                    <menusAndToolbars:ExtendedAppBarButton.Icon>
                        <FontIcon Glyph="&#xE8CB;" Style="{StaticResource SegoeFluentStyle}" />
                    </menusAndToolbars:ExtendedAppBarButton.Icon>

                    <ToolTipService.ToolTip>
                        <ToolTip
                            Content="{x:Bind root:ResourceService.GetLocalized('WinGet/Sort')}"
                            Placement="Bottom"
                            VerticalOffset="25" />
                    </ToolTipService.ToolTip>

                    <menusAndToolbars:ExtendedAppBarButton.Flyout>
                        <menusAndToolbars:AdaptiveMenuFlyout>
                            <MenuFlyoutSubItem Text="{x:Bind root:ResourceService.GetLocalized('WinGet/SortRule')}">
                                <RadioMenuFlyoutItem Text="{x:Bind root:ResourceService.GetLocalized('WinGet/AppNameSort')}" />
                                <RadioMenuFlyoutItem Text="{x:Bind root:ResourceService.GetLocalized('WinGet/AppPublisherSort')}" />
                            </MenuFlyoutSubItem>

                            <MenuFlyoutSubItem Text="{x:Bind root:ResourceService.GetLocalized('WinGet/SortMode')}">
                                <RadioMenuFlyoutItem Text="{x:Bind root:ResourceService.GetLocalized('WinGet/IncreaseSort')}" />
                                <RadioMenuFlyoutItem Text="{x:Bind root:ResourceService.GetLocalized('WinGet/DecreaseSort')}" />
                            </MenuFlyoutSubItem>
                        </menusAndToolbars:AdaptiveMenuFlyout>
                    </menusAndToolbars:ExtendedAppBarButton.Flyout>
                </menusAndToolbars:ExtendedAppBarButton>

                <menusAndToolbars:ExtendedAppBarButton
                    Command="{x:Bind ViewModel.RefreshCommand}"
                    Cursor="Hand"
                    Label="{x:Bind root:ResourceService.GetLocalized('WinGet/Refresh')}">

                    <menusAndToolbars:ExtendedAppBarButton.Icon>
                        <FontIcon Glyph="&#xE72C;" Style="{StaticResource SegoeFluentStyle}" />
                    </menusAndToolbars:ExtendedAppBarButton.Icon>

                    <ToolTipService.ToolTip>
                        <ToolTip
                            Content="{x:Bind root:ResourceService.GetLocalized('WinGet/RefreshToolTip')}"
                            Placement="Bottom"
                            VerticalOffset="25" />
                    </ToolTipService.ToolTip>
                </menusAndToolbars:ExtendedAppBarButton>
            </CommandBar>
        </Grid>

        <Grid
            x:Name="LoadingTip"
            Grid.Row="1"
            Margin="30,3,30,0"
            x:Load="{x:Bind ViewModel.IsLoadedCompleted, Converter={StaticResource BooleanToOppositeValueConverter}, Mode=OneWay}"
            Style="{StaticResource CardGridStyle}">

            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal"
                Spacing="10">

                <ProgressRing IsActive="True" IsEnabled="True" />

                <TextBlock
                    Margin="0,10"
                    VerticalAlignment="Center"
                    Text="{x:Bind root:ResourceService.GetLocalized('WinGet/LoadingInstalledApps')}"
                    TextAlignment="Center">

                    <ToolTipService.ToolTip>
                        <ToolTip
                            Content="{x:Bind root:ResourceService.GetLocalized('WinGet/LoadingInstalledApps')}"
                            Placement="Bottom"
                            VerticalOffset="20" />
                    </ToolTipService.ToolTip>
                </TextBlock>
            </StackPanel>
        </Grid>

        <ScrollViewer
            x:Name="InstalledAppsScroll"
            Grid.Row="2"
            Padding="0,3,0,0"
            HorizontalScrollBarVisibility="Disabled"
            HorizontalScrollMode="Disabled"
            Style="{StaticResource ScrollViewerStyle}"
            VerticalScrollBarVisibility="Auto"
            VerticalScrollMode="Enabled">

            <StackPanel
                Margin="30,0"
                Padding="0,0,0,30"
                Visibility="{x:Bind ViewModel.IsLoadedCompleted, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}">

                <ListView
                    ItemContainerStyle="{StaticResource CardListViewItemContainerStyle}"
                    ItemsSource="{x:Bind ViewModel.InstalledAppsDataList, Mode=OneWay}"
                    SelectionMode="None"
                    Visibility="{x:Bind ViewModel.InstalledAppsDataList.Count, Converter={StaticResource IntToVisibilityConverter}, Mode=OneWay}">

                    <ItemsControl.ItemContainerTransitions>
                        <TransitionCollection />
                    </ItemsControl.ItemContainerTransitions>

                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="winget:InstalledAppsModel">

                            <Grid ColumnSpacing="10" Style="{StaticResource CardGridStyle}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource SubWinGetItemTextStyle}"
                                    Text="{x:Bind AppName}">

                                    <ToolTipService.ToolTip>
                                        <ToolTip
                                            Content="{x:Bind AppName, Converter={StaticResource InstalledAppsToolTipConverter}, ConverterParameter=AppName}"
                                            Placement="Bottom"
                                            VerticalOffset="20" />
                                    </ToolTipService.ToolTip>
                                </TextBlock>

                                <TextBlock
                                    Grid.Column="1"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource SubWinGetItemTextStyle}"
                                    Text="{x:Bind AppPublisher}">

                                    <ToolTipService.ToolTip>
                                        <ToolTip
                                            Content="{x:Bind AppPublisher, Converter={StaticResource InstalledAppsToolTipConverter}, ConverterParameter=AppPublisher}"
                                            Placement="Bottom"
                                            VerticalOffset="20" />
                                    </ToolTipService.ToolTip>
                                </TextBlock>

                                <TextBlock
                                    Grid.Column="2"
                                    MinWidth="100"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    HorizontalTextAlignment="Left"
                                    Style="{StaticResource SubWinGetItemTextStyle}"
                                    Text="{x:Bind AppVersion}">

                                    <ToolTipService.ToolTip>
                                        <ToolTip
                                            Content="{x:Bind AppVersion, Converter={StaticResource InstalledAppsToolTipConverter}, ConverterParameter=AppVersion}"
                                            Placement="Bottom"
                                            VerticalOffset="20" />
                                    </ToolTipService.ToolTip>
                                </TextBlock>

                                <HyperlinkButton
                                    Grid.Column="3"
                                    Command="{Binding ElementName=InstalledAppsRoot, Path=DataContext.UnInstallCommand}"
                                    CommandParameter="{x:Bind AppID}"
                                    Content="{x:Bind root:ResourceService.GetLocalized('WinGet/UnInstall')}">

                                    <ToolTipService.ToolTip>
                                        <ToolTip
                                            Content="{x:Bind root:ResourceService.GetLocalized('WinGet/UnInstall')}"
                                            Placement="Bottom"
                                            VerticalOffset="25" />
                                    </ToolTipService.ToolTip>
                                </HyperlinkButton>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
