<Grid
    x:Class="GetStoreApp.UI.Controls.WinGet.InstalledAppsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:converter="using:GetStoreApp.Helpers.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enum="using:GetStoreApp.Extensions.DataType.Enums"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="using:GetStoreApp.Services.Root"
    xmlns:winget="using:GetStoreApp.Models.Controls.WinGet"
    Loaded="{x:Bind OnLoaded}"
    mc:Ignorable="d">

    <Grid.Resources>
        <SolidColorBrush x:Key="ItemContainerPointerOverBackground" Color="Transparent" />
        <SolidColorBrush x:Key="ItemContainerPressedBackground" Color="Transparent" />

        <XamlUICommand x:Name="CopyUnInstallTextCommand" ExecuteRequested="{x:Bind OnCopyUnInstallTextExecuteRequested}" />
        <XamlUICommand x:Name="UnInstallCommand" ExecuteRequested="{x:Bind OnUnInstallExecuteRequested}" />
        <XamlUICommand x:Name="RepairCommand" ExecuteRequested="{x:Bind OnRepairExecuteRequested}" />
    </Grid.Resources>

    <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <!--  已安装应用控制栏  -->
    <Grid
        Grid.Row="0"
        Height="66"
        Margin="30,0"
        Padding="16,8,2,8"
        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
        BorderThickness="1"
        CornerRadius="{StaticResource ControlCornerRadius}">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <FontIcon
            Grid.Column="0"
            Margin="0,0,12,0"
            FontSize="16"
            Glyph="&#xE74C;" />

        <TextBlock
            Grid.Column="1"
            VerticalAlignment="Center"
            Text="{x:Bind root:ResourceService.GetLocalized('WinGet/Operation')}" />

        <AppBarSeparator Grid.Column="2" Margin="10,0,10,0" />

        <TextBlock
            Grid.Column="3"
            VerticalAlignment="Center"
            Text="{x:Bind root:ResourceService.GetLocalized('WinGet/InstalledAppsCountEmpty')}"
            Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityReverseConvert(InstalledAppsCollection.Count), Mode=OneWay}" />

        <TextBlock
            Grid.Column="3"
            VerticalAlignment="Center"
            Text="{x:Bind x:String.Format(InstalledAppsCountInfo, InstalledAppsCollection.Count), Mode=OneWay}"
            Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityConvert(InstalledAppsCollection.Count), Mode=OneWay}" />

        <AutoSuggestBox
            Grid.Column="4"
            Width="170"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            PlaceholderText="{x:Bind root:ResourceService.GetLocalized('WinGet/InstalledAppsPlaceHolderText')}"
            QuerySubmitted="{x:Bind OnQuerySubmitted}"
            Text="{x:Bind SearchText, Mode=OneWay}"
            TextChanged="{x:Bind OnTextChanged}">

            <AutoSuggestBox.QueryIcon>
                <FontIcon FontSize="14" Glyph="&#xE71E;" />
            </AutoSuggestBox.QueryIcon>
        </AutoSuggestBox>

        <CommandBar
            Grid.Column="5"
            Margin="4,0,10,0"
            VerticalAlignment="Center"
            Background="Transparent"
            DefaultLabelPosition="Right">

            <CommandBar.Resources>
                <SolidColorBrush x:Key="CommandBarBackgroundOpen" Color="Transparent" />
                <Thickness x:Key="CommandBarBorderThicknessOpen">0</Thickness>
            </CommandBar.Resources>

            <CommandBar.PrimaryCommands>
                <AppBarButton Label="{x:Bind root:ResourceService.GetLocalized('WinGet/Sort')}" ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('WinGet/SortToolTip')}">

                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE8CB;" />
                    </AppBarButton.Icon>

                    <AppBarButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutSubItem
                                Height="32"
                                Padding="11,0,11,0"
                                Text="{x:Bind root:ResourceService.GetLocalized('WinGet/SortWay')}">

                                <RadioMenuFlyoutItem
                                    Height="32"
                                    Padding="11,0"
                                    Click="{x:Bind OnSortWayClicked}"
                                    GroupName="InstalledSortWayRadioGroup"
                                    IsChecked="{x:Bind IsIncrease, Mode=OneWay}"
                                    Tag="True"
                                    Text="{x:Bind root:ResourceService.GetLocalized('WinGet/SortIncrease')}" />

                                <RadioMenuFlyoutItem
                                    Height="32"
                                    Padding="11,0"
                                    Click="{x:Bind OnSortWayClicked}"
                                    GroupName="InstalledSortWayRadioGroup"
                                    IsChecked="{x:Bind IsIncrease.Equals(x:False), Mode=OneWay}"
                                    Tag="False"
                                    Text="{x:Bind root:ResourceService.GetLocalized('WinGet/SortDecrease')}" />
                            </MenuFlyoutSubItem>

                            <MenuFlyoutSubItem
                                Height="32"
                                Padding="11,0,11,0"
                                Text="{x:Bind root:ResourceService.GetLocalized('WinGet/SortRule')}">

                                <RadioMenuFlyoutItem
                                    Height="32"
                                    Padding="11,0"
                                    Click="{x:Bind OnSortRuleClicked}"
                                    GroupName="InstalledSortRuleRadioGroup"
                                    IsChecked="{x:Bind x:Object.Equals(SelectedAppSortRuleKind, enum:AppSortRuleKind.DisplayName), Mode=OneWay}"
                                    Tag="{x:Bind enum:AppSortRuleKind.DisplayName}"
                                    Text="{x:Bind root:ResourceService.GetLocalized('WinGet/SortByDisplayName')}" />

                                <RadioMenuFlyoutItem
                                    Height="32"
                                    Padding="11,0"
                                    Click="{x:Bind OnSortRuleClicked}"
                                    GroupName="InstalledSortRuleRadioGroup"
                                    IsChecked="{x:Bind x:Object.Equals(SelectedAppSortRuleKind, enum:AppSortRuleKind.PublisherName), Mode=OneWay}"
                                    Tag="{x:Bind enum:AppSortRuleKind.PublisherName}"
                                    Text="{x:Bind root:ResourceService.GetLocalized('WinGet/SortByPublisher')}" />
                            </MenuFlyoutSubItem>
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>

                <AppBarButton
                    Click="{x:Bind OnRefreshClicked}"
                    IsEnabled="{x:Bind GetIsInstalling(InstalledAppsResultKind), Mode=OneWay}"
                    Label="{x:Bind root:ResourceService.GetLocalized('WinGet/Refresh')}"
                    ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('WinGet/RefreshToolTip')}">

                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE72C;" />
                    </AppBarButton.Icon>
                </AppBarButton>
            </CommandBar.PrimaryCommands>

            <CommandBar.SecondaryCommands>
                <AppBarButton
                    Click="{x:Bind OnControlPanelClicked}"
                    Label="{x:Bind root:ResourceService.GetLocalized('WinGet/ControlPanel')}"
                    ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('WinGet/ControlPanelToolTip')}">

                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE70A;" />
                    </AppBarButton.Icon>
                </AppBarButton>

                <AppBarButton
                    Click="{x:Bind OnDataSourceSettingsClicked}"
                    Label="{x:Bind root:ResourceService.GetLocalized('WinGet/DataSourceSettings')}"
                    ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('WinGet/DataSourceSettingsToolTip')}">

                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE713;" />
                    </AppBarButton.Icon>
                </AppBarButton>
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Grid>

    <!--  已安装应用状态显示栏  -->
    <Grid
        Grid.Row="1"
        Height="60"
        Margin="30,3,30,0"
        Padding="16,12"
        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
        BorderThickness="1"
        CornerRadius="{StaticResource ControlCornerRadius}"
        Visibility="{x:Bind GetInstalledAppsSuccessfullyState(InstalledAppsResultKind, InstalledAppsCollection.Count, x:False), Mode=OneWay}">

        <Grid>
            <!--  正在搜索中  -->
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal"
                Spacing="10"
                Visibility="{x:Bind CheckInstalledAppsState(InstalledAppsResultKind, enum:InstalledAppsResultKind.Querying), Mode=OneWay}">

                <ProgressRing IsActive="True" IsEnabled="True" />

                <TextBlock
                    Margin="0,10"
                    VerticalAlignment="Center"
                    Text="{x:Bind root:ResourceService.GetLocalized('WinGet/LoadingInstalledApps')}"
                    TextAlignment="Center" />
            </StackPanel>

            <!--  搜索失败  -->
            <TextBlock
                Margin="0,10"
                VerticalAlignment="Center"
                Text="{x:Bind InstalledFailedContent, Mode=OneWay}"
                TextAlignment="Center"
                Visibility="{x:Bind CheckInstalledAppsState(InstalledAppsResultKind, enum:InstalledAppsResultKind.Failed), Mode=OneWay}" />

            <!--  搜索结果为空  -->
            <TextBlock
                Margin="0,10"
                VerticalAlignment="Center"
                Text="{x:Bind root:ResourceService.GetLocalized('WinGet/InstalledAppsSearchEmptyDescription')}"
                TextAlignment="Center"
                Visibility="{x:Bind CheckInstalledAppsState(InstalledAppsResultKind, enum:InstalledAppsResultKind.SearchResult), Mode=OneWay}" />
        </Grid>
    </Grid>

    <!--  搜索应用结果展示项目控件  -->
    <ItemsView
        Grid.Row="2"
        Padding="30,3,30,30"
        ItemsSource="{x:Bind InstalledAppsCollection, Mode=OneWay}"
        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
        ScrollViewer.HorizontalScrollMode="Disabled"
        ScrollViewer.VerticalScrollBarVisibility="Auto"
        ScrollViewer.VerticalScrollMode="Enabled"
        SelectionMode="None"
        Visibility="{x:Bind GetInstalledAppsSuccessfullyState(InstalledAppsResultKind, InstalledAppsCollection.Count, x:True), Mode=OneWay}">

        <ItemsView.Layout>
            <StackLayout />
        </ItemsView.Layout>

        <ItemsView.ItemTemplate>
            <DataTemplate x:DataType="winget:InstalledAppsModel">
                <ItemContainer Margin="0,0,0,2">
                    <Grid
                        Height="60"
                        Padding="16,12"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        ColumnSpacing="10"
                        CornerRadius="{StaticResource ControlCornerRadius}">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="40" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            MinWidth="50"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="14"
                            Text="{x:Bind AppName}"
                            TextAlignment="Left"
                            TextTrimming="CharacterEllipsis"
                            TextWrapping="NoWrap">

                            <ToolTipService.ToolTip>
                                <ToolTip MaxWidth="9999">
                                    <TextBlock>
                                        <Run Text="{x:Bind root:ResourceService.GetLocalized('WinGet/AppNameToolTip')}" />
                                        <Run Text="{x:Bind AppName}" />
                                    </TextBlock>
                                </ToolTip>
                            </ToolTipService.ToolTip>
                        </TextBlock>

                        <TextBlock
                            Grid.Column="1"
                            MinWidth="50"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="14"
                            Text="{x:Bind AppPublisher}"
                            TextAlignment="Left"
                            TextTrimming="CharacterEllipsis"
                            TextWrapping="NoWrap">

                            <ToolTipService.ToolTip>
                                <ToolTip MaxWidth="9999">
                                    <TextBlock>
                                        <Run Text="{x:Bind root:ResourceService.GetLocalized('WinGet/AppPublisherToolTip')}" />
                                        <Run Text="{x:Bind AppPublisher}" />
                                    </TextBlock>
                                </ToolTip>
                            </ToolTipService.ToolTip>
                        </TextBlock>

                        <TextBlock
                            Grid.Column="2"
                            MinWidth="50"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="14"
                            HorizontalTextAlignment="Left"
                            Text="{x:Bind AppVersion}"
                            TextAlignment="Left"
                            TextTrimming="CharacterEllipsis"
                            TextWrapping="NoWrap">

                            <ToolTipService.ToolTip>
                                <ToolTip MaxWidth="9999">
                                    <TextBlock>
                                        <Run Text="{x:Bind root:ResourceService.GetLocalized('WinGet/AppVersionToolTip')}" />
                                        <Run Text="{x:Bind AppVersion}" />
                                    </TextBlock>
                                </ToolTip>
                            </ToolTipService.ToolTip>
                        </TextBlock>

                        <ProgressRing
                            Grid.Column="3"
                            Width="30"
                            Height="30"
                            IsActive="{x:Bind IsUninstalling, Mode=OneWay}"
                            IsIndeterminate="True"
                            Visibility="{x:Bind IsUninstalling, Mode=OneWay}" />

                        <StackPanel
                            Grid.Column="4"
                            Height="30"
                            BorderBrush="{ThemeResource ButtonBorderBrush}"
                            BorderThickness="{ThemeResource ButtonBorderThemeThickness}"
                            CornerRadius="{ThemeResource ControlCornerRadius}"
                            Orientation="Horizontal">

                            <Button
                                VerticalAlignment="Stretch"
                                VerticalContentAlignment="Center"
                                BorderThickness="0,0,1,0"
                                Command="{StaticResource UnInstallCommand}"
                                CommandParameter="{x:Bind}"
                                Content="{x:Bind root:ResourceService.GetLocalized('WinGet/UnInstall')}"
                                CornerRadius="0"
                                IsEnabled="{x:Bind IsUninstalling.Equals(x:False), Mode=OneWay}"
                                ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('WinGet/UnInstall')}" />

                            <Button
                                Width="35"
                                VerticalAlignment="Stretch"
                                BorderThickness="0"
                                CornerRadius="0"
                                ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('WinGet/ViewMoreOptions')}">

                                <Button.Content>
                                    <AnimatedIcon
                                        Width="12"
                                        Height="12"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        AutomationProperties.AccessibilityView="Raw">
                                        <animatedvisuals:AnimatedChevronDownSmallVisualSource />
                                        <AnimatedIcon.FallbackIconSource>
                                            <FontIconSource
                                                FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                FontSize="8"
                                                Glyph="&#xE96E;"
                                                IsTextScaleFactorEnabled="False" />
                                        </AnimatedIcon.FallbackIconSource>
                                    </AnimatedIcon>
                                </Button.Content>

                                <Button.Flyout>
                                    <MenuFlyout Placement="Bottom">
                                        <MenuFlyoutItem
                                            Height="32"
                                            Padding="11,0"
                                            Command="{StaticResource CopyUnInstallTextCommand}"
                                            CommandParameter="{x:Bind AppID}"
                                            Text="{x:Bind root:ResourceService.GetLocalized('WinGet/CopyUnInstallText')}">

                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE8C8;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>

                                        <MenuFlyoutItem
                                            Height="32"
                                            Padding="11,0"
                                            Command="{StaticResource RepairCommand}"
                                            CommandParameter="{x:Bind}"
                                            IsEnabled="{x:Bind IsUninstalling.Equals(x:False), Mode=OneWay}"
                                            Text="{x:Bind root:ResourceService.GetLocalized('WinGet/Repair')}">

                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE90F;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                    </MenuFlyout>
                                </Button.Flyout>
                            </Button>
                        </StackPanel>
                    </Grid>
                </ItemContainer>
            </DataTemplate>
        </ItemsView.ItemTemplate>
    </ItemsView>
</Grid>
