<UserControl
    x:Class="GetStoreApp.UI.Controls.WinGet.InstalledAppsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:format="using:GetStoreApp.Converters.Formats"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:menusAndToolbars="using:GetStoreApp.Views.CustomControls.MenusAndToolbars"
    xmlns:root="using:GetStoreApp.Services.Root"
    xmlns:winGetViewModel="using:GetStoreApp.ViewModels.Controls.WinGet"
    xmlns:winget="using:GetStoreApp.Models.Controls.WinGet"
    x:Name="InstalledAppsRoot"
    Loaded="{x:Bind ViewModel.OnLoaded}"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <winGetViewModel:InstalledAppsViewModel x:Name="ViewModel" x:FieldModifier="public" />
    </UserControl.DataContext>

    <UserControl.Resources>
        <format:WinGetAppsToolTipConverter x:Name="WinGetAppsToolTipConverter" />
    </UserControl.Resources>

    <Grid Padding="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid
            Grid.Row="0"
            Margin="30,0"
            Style="{StaticResource ListViewHeaderGridStyle}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <FontIcon
                Grid.Column="0"
                FontFamily="{StaticResource SegoeFluentFontFamily}"
                Glyph="&#xE74C;"
                Style="{StaticResource FontIconStyle}" />

            <TextBlock
                Grid.Column="1"
                VerticalAlignment="Center"
                Text="{x:Bind root:ResourceService.GetLocalized('WinGet/Operation')}" />
            <AppBarSeparator Grid.Column="2" Margin="10,0,10,0" />

            <TextBlock
                Grid.Column="3"
                VerticalAlignment="Center"
                Text="{x:Bind LocalizeInstalledAppsCountInfo(ViewModel.InstalledAppsDataList.Count), Mode=OneWay}">

                <ToolTipService.ToolTip>
                    <ToolTip
                        Content="{x:Bind LocalizeInstalledAppsCountInfo(ViewModel.InstalledAppsDataList.Count), Mode=OneWay}"
                        Placement="Bottom"
                        VerticalOffset="20" />
                </ToolTipService.ToolTip>
            </TextBlock>

            <AutoSuggestBox
                Grid.Column="4"
                Width="170"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                IsEnabled="{x:Bind ViewModel.IsInstalledAppsEmpty, Converter={StaticResource BooleanToOppositeValueConverter}, Mode=OneWay}"
                PlaceholderText="{x:Bind root:ResourceService.GetLocalized('WinGet/InstalledAppsPlaceHolderText')}"
                QuerySubmitted="{x:Bind ViewModel.OnQuerySubmitted}"
                Text="{x:Bind ViewModel.SearchText, Mode=TwoWay}">

                <AutoSuggestBox.QueryIcon>
                    <FontIcon Glyph="&#xE71E;" Style="{StaticResource SegoeFluentStyle}" />
                </AutoSuggestBox.QueryIcon>

            </AutoSuggestBox>

            <CommandBar
                Grid.Column="5"
                VerticalAlignment="Center"
                Background="Transparent"
                DefaultLabelPosition="Right">

                <menusAndToolbars:ExtendedAppBarButton
                    Command="{x:Bind ViewModel.RefreshCommand}"
                    Cursor="Hand"
                    IsEnabled="{x:Bind ViewModel.IsLoadedCompleted, Mode=OneWay}"
                    Label="{x:Bind root:ResourceService.GetLocalized('WinGet/Refresh')}">

                    <menusAndToolbars:ExtendedAppBarButton.Icon>
                        <FontIcon Glyph="&#xE72C;" Style="{StaticResource SegoeFluentStyle}" />
                    </menusAndToolbars:ExtendedAppBarButton.Icon>

                    <ToolTipService.ToolTip>
                        <ToolTip
                            Content="{x:Bind root:ResourceService.GetLocalized('WinGet/RefreshToolTip')}"
                            Placement="Bottom"
                            VerticalOffset="25" />
                    </ToolTipService.ToolTip>
                </menusAndToolbars:ExtendedAppBarButton>
            </CommandBar>
        </Grid>

        <Grid
            x:Name="LoadingGrid"
            Grid.Row="1"
            Margin="30,3,30,0"
            x:Load="{x:Bind ViewModel.IsLoadedCompleted, Converter={StaticResource BooleanToOppositeValueConverter}, Mode=OneWay}"
            Style="{StaticResource CardGridStyle}">

            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal"
                Spacing="10">

                <ProgressRing IsActive="True" IsEnabled="True" />

                <TextBlock
                    Margin="0,10"
                    VerticalAlignment="Center"
                    Text="{x:Bind root:ResourceService.GetLocalized('WinGet/LoadingInstalledApps')}"
                    TextAlignment="Center">

                    <ToolTipService.ToolTip>
                        <ToolTip
                            Content="{x:Bind root:ResourceService.GetLocalized('WinGet/LoadingInstalledApps')}"
                            Placement="Bottom"
                            VerticalOffset="20" />
                    </ToolTipService.ToolTip>
                </TextBlock>
            </StackPanel>
        </Grid>

        <ScrollViewer
            Grid.Row="2"
            Padding="30,3,30,0"
            HorizontalScrollBarVisibility="Disabled"
            HorizontalScrollMode="Disabled"
            Style="{StaticResource ScrollViewerStyle}"
            VerticalScrollBarVisibility="Auto"
            VerticalScrollMode="Enabled"
            Visibility="{x:Bind ViewModel.IsLoadedCompleted, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}">

            <StackPanel>
                <Grid Style="{StaticResource CardGridStyle}" Visibility="{x:Bind ViewModel.IsInstalledAppsEmpty, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}">
                    <TextBlock
                        Margin="0,10"
                        VerticalAlignment="Center"
                        Text="{x:Bind root:ResourceService.GetLocalized('WinGet/InstalledAppsEmptyDescription')}"
                        TextAlignment="Center">

                        <ToolTipService.ToolTip>
                            <ToolTip
                                Content="{x:Bind root:ResourceService.GetLocalized('WinGet/InstalledAppsEmptyDescription')}"
                                Placement="Bottom"
                                VerticalOffset="20" />
                        </ToolTipService.ToolTip>
                    </TextBlock>
                </Grid>

                <Grid Padding="0" Visibility="{x:Bind ViewModel.IsInstalledAppsEmpty, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Reverse, Mode=OneWay}">

                    <Grid Style="{StaticResource CardGridStyle}" Visibility="{x:Bind ViewModel.InstalledAppsDataList.Count, Converter={StaticResource IntToVisibilityConverter}, ConverterParameter=Reverse, Mode=OneWay}">
                        <TextBlock
                            Margin="0,10"
                            VerticalAlignment="Center"
                            Text="{x:Bind root:ResourceService.GetLocalized('WinGet/InstalledAppsSearchEmptyDescription')}"
                            TextAlignment="Center">

                            <ToolTipService.ToolTip>
                                <ToolTip
                                    Content="{x:Bind root:ResourceService.GetLocalized('WinGet/InstalledAppsSearchEmptyDescription')}"
                                    Placement="Bottom"
                                    VerticalOffset="20" />
                            </ToolTipService.ToolTip>
                        </TextBlock>
                    </Grid>

                    <ListView
                        ItemContainerStyle="{StaticResource CardListViewItemContainerStyle}"
                        ItemsSource="{x:Bind ViewModel.InstalledAppsDataList, Mode=OneWay}"
                        SelectionMode="None"
                        Visibility="{x:Bind ViewModel.InstalledAppsDataList.Count, Converter={StaticResource IntToVisibilityConverter}, Mode=OneWay}">

                        <ItemsControl.ItemContainerTransitions>
                            <TransitionCollection />
                        </ItemsControl.ItemContainerTransitions>

                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="winget:InstalledAppsModel">
                                <Grid
                                    Padding="16,12"
                                    ColumnSpacing="10"
                                    Style="{StaticResource CardGridStyle}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*" />
                                        <ColumnDefinition Width="3*" />
                                        <ColumnDefinition Width="120" />
                                        <ColumnDefinition Width="60" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Grid.Column="0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource SubWinGetItemTextStyle}"
                                        Text="{x:Bind AppName}">

                                        <ToolTipService.ToolTip>
                                            <ToolTip
                                                Content="{x:Bind AppName, Converter={StaticResource WinGetAppsToolTipConverter}, ConverterParameter=AppName}"
                                                Placement="Bottom"
                                                VerticalOffset="20" />
                                        </ToolTipService.ToolTip>
                                    </TextBlock>

                                    <TextBlock
                                        Grid.Column="1"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource SubWinGetItemTextStyle}"
                                        Text="{x:Bind AppPublisher}">

                                        <ToolTipService.ToolTip>
                                            <ToolTip
                                                Content="{x:Bind AppPublisher, Converter={StaticResource WinGetAppsToolTipConverter}, ConverterParameter=AppPublisher}"
                                                Placement="Bottom"
                                                VerticalOffset="20" />
                                        </ToolTipService.ToolTip>
                                    </TextBlock>

                                    <TextBlock
                                        Grid.Column="2"
                                        MinWidth="100"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        HorizontalTextAlignment="Left"
                                        Style="{StaticResource SubWinGetItemTextStyle}"
                                        Text="{x:Bind AppVersion}">

                                        <ToolTipService.ToolTip>
                                            <ToolTip
                                                Content="{x:Bind AppVersion, Converter={StaticResource WinGetAppsToolTipConverter}, ConverterParameter=AppVersion}"
                                                Placement="Bottom"
                                                VerticalOffset="20" />
                                        </ToolTipService.ToolTip>
                                    </TextBlock>

                                    <HyperlinkButton
                                        Grid.Column="3"
                                        Command="{Binding ElementName=InstalledAppsRoot, Path=DataContext.UnInstallCommand, Mode=OneTime}"
                                        CommandParameter="{Binding}"
                                        Content="{x:Bind root:ResourceService.GetLocalized('WinGet/UnInstall')}">

                                        <ToolTipService.ToolTip>
                                            <ToolTip
                                                Content="{x:Bind root:ResourceService.GetLocalized('WinGet/UnInstall')}"
                                                Placement="Bottom"
                                                VerticalOffset="25" />
                                        </ToolTipService.ToolTip>
                                    </HyperlinkButton>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
