<UserControl
    x:Class="GetStoreApp.UI.Controls.Home.ResultControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="using:GetStoreApp.Converters.Formats"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:ic="using:Microsoft.Xaml.Interactions.Core"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:GetStoreApp.Models"
    xmlns:system="using:System"
    x:Name="ResultRoot"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converter:CheckBoxToolTipFormatConverter x:Name="CheckBoxToolTipFormatConverter" />
    </UserControl.Resources>

    <Grid CornerRadius="{ThemeResource ColorPickerSliderCornerRadius}" Visibility="{x:Bind ViewModel.ResultControlVisable, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Style="{StaticResource ResultHeaderGridStyle}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <FontIcon
                Grid.Column="0"
                FontFamily="Segoe Fluent Icons"
                Glyph="&#xE71e;"
                Style="{StaticResource FontIconStyle}" />

            <TextBlock
                Grid.Column="1"
                VerticalAlignment="Center"
                Text="{x:Bind ResourceService.GetLocalized('/Home/SearchResult')}" />

            <AppBarSeparator Grid.Column="2" Margin="10,0,10,0" />

            <StackPanel
                Grid.Column="3"
                VerticalAlignment="Center"
                Visibility="{x:Bind ViewModel.ResultDataList.Count, Converter={StaticResource IntToVisibilityConverter}, Mode=OneWay}">
                <TextBlock Text="{x:Bind LocalizedCategoryId(ViewModel.CategoryId), Mode=OneWay}" ToolTipService.ToolTip="{x:Bind ViewModel.CategoryId, Mode=OneWay}" />
                <TextBlock Text="{x:Bind LocalizedResultCountInfo(ViewModel.ResultDataList.Count), Mode=OneWay}" ToolTipService.ToolTip="{x:Bind LocalizedResultCountInfo(ViewModel.ResultDataList.Count), Mode=OneWay}" />
            </StackPanel>

            <TextBlock
                Grid.Column="3"
                VerticalAlignment="Center"
                Text="{x:Bind ResourceService.GetLocalized('/Home/SearchResultEmpty')}"
                Visibility="{x:Bind ViewModel.ResultDataList.Count, Converter={StaticResource IntToVisibilityConverter}, ConverterParameter=Reverse, Mode=OneWay}" />

            <CommandBar
                Grid.Column="4"
                VerticalAlignment="Center"
                Background="Transparent"
                DefaultLabelPosition="Right"
                Visibility="{x:Bind ViewModel.IsSelectMode, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Reverse, Mode=OneWay}">

                <AppBarButton
                    Command="{x:Bind ViewModel.CopyIDCommand}"
                    Icon="Copy"
                    IsEnabled="{x:Bind system:Convert.ToBoolean(ViewModel.ResultDataList.Count), Mode=OneWay}"
                    Label="{x:Bind ResourceService.GetLocalized('/Home/CopyID')}"
                    ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/Home/CopyIDToolTip')}" />

                <AppBarButton
                    Command="{x:Bind ViewModel.SelectCommand}"
                    Icon="Bullets"
                    IsEnabled="{x:Bind system:Convert.ToBoolean(ViewModel.ResultDataList.Count), Mode=OneWay}"
                    Label="{x:Bind ResourceService.GetLocalized('/Home/Select')}"
                    ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/Home/SelectToolTip')}" />
            </CommandBar>

            <CommandBar
                Grid.Column="4"
                VerticalAlignment="Center"
                Background="Transparent"
                DefaultLabelPosition="Right"
                Visibility="{x:Bind ViewModel.IsSelectMode, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}">

                <AppBarButton
                    Command="{x:Bind ViewModel.SelectAllCommand}"
                    Icon="SelectAll"
                    Label="{x:Bind ResourceService.GetLocalized('/Home/SelectAll')}"
                    ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/Home/SelectAll')}" />

                <AppBarButton
                    Command="{x:Bind ViewModel.SelectNoneCommand}"
                    Icon="ClearSelection"
                    Label="{x:Bind ResourceService.GetLocalized('/Home/SelectNone')}"
                    ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/Home/SelectNone')}" />

                <AppBarButton
                    Icon="Copy"
                    Label="{x:Bind ResourceService.GetLocalized('/Home/CopyOptions')}"
                    ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/Home/CopyOptionsToolTip')}">

                    <AppBarButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem
                                Command="{x:Bind ViewModel.CopySelectedLinkCommand}"
                                Text="{x:Bind ResourceService.GetLocalized('/Home/CopySelectedLink')}"
                                ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/Home/CopySelectedLinkToolTip')}" />
                            <MenuFlyoutItem
                                Command="{x:Bind ViewModel.CopySelectedCommand}"
                                Text="{x:Bind ResourceService.GetLocalized('/Home/CopySelectedContent')}"
                                ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/Home/CopySelectedContentToolTip')}" />
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>

                <AppBarButton
                    Command="{x:Bind ViewModel.DownloadSelectedCommand}"
                    Label="{x:Bind ResourceService.GetLocalized('/Home/DownloadSelected')}"
                    ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/Home/DownloadSelected')}">
                    <AppBarButton.Icon>
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE74b;" />
                    </AppBarButton.Icon>
                </AppBarButton>

                <AppBarButton
                    Command="{x:Bind ViewModel.CancelCommand}"
                    Icon="Cancel"
                    Label="{x:Bind ResourceService.GetLocalized('/Home/Cancel')}"
                    ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/Home/CancelToolTip')}" />
            </CommandBar>
        </Grid>

        <ListView
            Grid.Row="1"
            IsItemClickEnabled="{x:Bind ViewModel.IsSelectMode, Mode=OneWay}"
            ItemContainerStyle="{StaticResource ListViewItemStyle}"
            ItemsSource="{x:Bind ViewModel.ResultDataList, Mode=OneWay}"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            ScrollViewer.VerticalScrollMode="Enabled"
            SelectionMode="None"
            Visibility="{x:Bind ViewModel.ResultDataList.Count, Converter={StaticResource IntToVisibilityConverter}, Mode=OneWay}">

            <i:Interaction.Behaviors>
                <ic:EventTriggerBehavior EventName="ItemClick">
                    <ic:InvokeCommandAction Command="{x:Bind ViewModel.ItemClickCommand}" />
                </ic:EventTriggerBehavior>
            </i:Interaction.Behaviors>

            <ListView.Header>
                <Grid
                    Height="35"
                    Padding="6,0,0,0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1,0,1,1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="4*" />
                        <ColumnDefinition Width="1.2*" />
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="80" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        Width="50"
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        Text="{x:Bind ResourceService.GetLocalized('/Home/Select')}"
                        ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/Home/Select')}"
                        Visibility="{x:Bind ViewModel.IsSelectMode, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}" />
                    <TextBlock
                        Grid.Column="1"
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        Text="{x:Bind ResourceService.GetLocalized('/Home/FileName')}"
                        ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/Home/FileName')}" />
                    <TextBlock
                        Grid.Column="2"
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        Text="{x:Bind ResourceService.GetLocalized('/Home/LinkExpireTime')}"
                        ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/Home/LinkExpireTime')}" />
                    <TextBlock
                        Grid.Column="3"
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        Text="{x:Bind ResourceService.GetLocalized('/Home/FileSHA1')}"
                        ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/Home/FileSHA1')}" />
                    <TextBlock
                        Grid.Column="4"
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        Text="{x:Bind ResourceService.GetLocalized('/Home/FileSize')}"
                        ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/Home/FileSize')}" />
                    <TextBlock
                        Grid.Column="5"
                        Grid.ColumnSpan="2"
                        Margin="10,0,0,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Text="{x:Bind ResourceService.GetLocalized('/History/Options')}"
                        ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/History/OptionsToolTip')}" />
                </Grid>
            </ListView.Header>

            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:ResultModel">
                    <Grid
                        Height="35"
                        Padding="6,0,0,0"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1,0,1,1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="4*" />
                            <ColumnDefinition Width="1.2*" />
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="80" />
                        </Grid.ColumnDefinitions>

                        <CheckBox
                            Grid.Column="0"
                            Width="50"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            IsChecked="{x:Bind IsSelected, Mode=TwoWay}"
                            IsThreeState="False"
                            Style="{StaticResource CheckBoxStyle}"
                            ToolTipService.ToolTip="{Binding IsSelected, Converter={StaticResource CheckBoxToolTipFormatConverter}, ConverterParameter=Home, Mode=OneWay}"
                            Visibility="{Binding ElementName=ResultRoot, Path=ViewModel.IsSelectMode, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}" />
                        <HyperlinkButton
                            Grid.Column="1"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            Command="{Binding ElementName=ResultRoot, Path=ViewModel.DownloadCommand}"
                            CommandParameter="{Binding}"
                            Content="{x:Bind FileName}"
                            Style="{StaticResource HyperlinkButtonStyle}"
                            ToolTipService.ToolTip="{x:Bind FileName}" />
                        <TextBlock
                            Grid.Column="2"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            Text="{x:Bind FileLinkExpireTime, Converter={StaticResource GMTFormatConverter}}"
                            ToolTipService.ToolTip="{x:Bind FileLinkExpireTime, Converter={StaticResource GMTFormatConverter}}" />
                        <TextBlock
                            Grid.Column="3"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            Text="{x:Bind FileSHA1}"
                            ToolTipService.ToolTip="{x:Bind FileSHA1}" />
                        <TextBlock
                            Grid.Column="4"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            Text="{x:Bind FileSize}"
                            ToolTipService.ToolTip="{x:Bind FileSize}" />
                        <DropDownButton
                            Grid.Column="5"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            Content="{Binding ElementName=ResultRoot, Path=Copy}"
                            IsEnabled="{Binding ElementName=ResultRoot, Path=ViewModel.IsSelectMode, Converter={StaticResource BooleanToOppositeValueConverter}, Mode=OneWay}"
                            Style="{StaticResource DropDownButtonStyle}"
                            ToolTipService.ToolTip="{Binding ElementName=ResultRoot, Path=CopyOptionsToolTip}">

                            <DropDownButton.Flyout>
                                <MenuFlyout Placement="Bottom">
                                    <MenuFlyoutItem
                                        Command="{Binding ElementName=ResultRoot, Path=ViewModel.CopyLinkCommand}"
                                        CommandParameter="{x:Bind FileLink}"
                                        Text="{Binding ElementName=ResultRoot, Path=CopyLink}"
                                        ToolTipService.ToolTip="{Binding ElementName=ResultRoot, Path=CopyLinkToolTip}" />
                                    <MenuFlyoutItem
                                        Command="{Binding ElementName=ResultRoot, Path=ViewModel.CopyContentCommand}"
                                        CommandParameter="{Binding}"
                                        Text="{Binding ElementName=ResultRoot, Path=CopyContent}"
                                        ToolTipService.ToolTip="{Binding ElementName=ResultRoot, Path=CopyContentToolTip}" />
                                </MenuFlyout>
                            </DropDownButton.Flyout>
                        </DropDownButton>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
