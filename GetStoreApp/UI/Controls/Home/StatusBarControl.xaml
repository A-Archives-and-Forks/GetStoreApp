<UserControl
    x:Class="GetStoreApp.UI.Controls.Home.StatusBarControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <InfoBar
        IsClosable="False"
        IsOpen="True"
        Message="{x:Bind ViewModel.StateInfoText, Mode=OneWay}"
        Severity="{x:Bind ViewModel.InfoBarSeverity, Mode=OneWay}"
        Style="{StaticResource InfoBarStyle}"
        ToolTipService.ToolTip="{x:Bind ViewModel.StateInfoText, Mode=OneWay}">
        <InfoBar.Content>
            <ProgressRing IsIndeterminate="{x:Bind ViewModel.StatePrRingActValue, Mode=OneWay}" Visibility="{x:Bind ViewModel.StatePrRingVisValue, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}" />
        </InfoBar.Content>
    </InfoBar>
</UserControl>
