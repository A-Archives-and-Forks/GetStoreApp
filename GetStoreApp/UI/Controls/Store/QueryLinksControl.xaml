<StackPanel
    x:Class="GetStoreApp.UI.Controls.Store.QueryLinksControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="using:GetStoreApp.Helpers.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="using:GetStoreApp.Services.Root"
    xmlns:store="using:GetStoreApp.Models.Controls.Store"
    xmlns:sys="using:System"
    Padding="0,0,0,30"
    Spacing="3"
    mc:Ignorable="d">

    <StackPanel.Resources>
        <XamlUICommand x:Name="CopyCommand" ExecuteRequested="{x:Bind OnCopyExecuteRequested}" />
        <XamlUICommand x:Name="FillinCommand" ExecuteRequested="{x:Bind OnFillinExecuteRequested}" />
        <XamlUICommand x:Name="DownloadCommand" ExecuteRequested="{x:Bind OnDownloadExecuteRequested}" />
        <XamlUICommand x:Name="OpenLinkCommand" ExecuteRequested="{x:Bind OnOpenLinkExecuteRequested}" />
        <XamlUICommand x:Name="CopyLinkCommand" ExecuteRequested="{x:Bind OnCopyLinkExecuteRequested}" />
        <XamlUICommand x:Name="CopyInformationCommand" ExecuteRequested="{x:Bind OnCopyInformationExecuteRequested}" />

        <SolidColorBrush x:Key="ExpanderChevronBackground" Color="Transparent" />
        <SolidColorBrush x:Key="ExpanderChevronPointerOverBackground" Color="Transparent" />
        <SolidColorBrush x:Key="ExpanderChevronPressedBackground" Color="Transparent" />
        <SolidColorBrush x:Key="ItemContainerPointerOverBackground" Color="Transparent" />
        <SolidColorBrush x:Key="ItemContainerPressedBackground" Color="Transparent" />
    </StackPanel.Resources>

    <Grid Margin="0,0,1,0" ColumnSpacing="6">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <DropDownButton
            Grid.Column="0"
            VerticalAlignment="Center"
            Content="{x:Bind SelectedType.DisplayName, Mode=OneWay}">

            <DropDownButton.Flyout>
                <MenuFlyout Placement="Bottom">
                    <ToggleMenuFlyoutItem
                        Height="32"
                        Padding="11,0"
                        Click="{x:Bind OnTypeSelectClicked}"
                        IsChecked="{x:Bind SelectedType.InternalName.Equals(TypeList[0].InternalName), Mode=OneWay}"
                        Tag="0"
                        Text="{x:Bind TypeList[0].DisplayName}" />

                    <ToggleMenuFlyoutItem
                        Height="32"
                        Padding="11,0"
                        Click="{x:Bind OnTypeSelectClicked}"
                        IsChecked="{x:Bind SelectedType.InternalName.Equals(TypeList[1].InternalName), Mode=OneWay}"
                        Tag="1"
                        Text="{x:Bind TypeList[1].DisplayName}" />
                </MenuFlyout>
            </DropDownButton.Flyout>
        </DropDownButton>

        <DropDownButton
            Grid.Column="1"
            VerticalAlignment="Center"
            Content="{x:Bind SelectedChannel.DisplayName, Mode=OneWay}">

            <DropDownButton.Flyout>
                <MenuFlyout Placement="Bottom">
                    <ToggleMenuFlyoutItem
                        Height="32"
                        Padding="11,0"
                        Click="{x:Bind OnChannelSelectClicked}"
                        IsChecked="{x:Bind SelectedChannel.InternalName.Equals(ChannelList[0].InternalName), Mode=OneWay}"
                        Tag="0"
                        Text="{x:Bind ChannelList[0].DisplayName}" />

                    <ToggleMenuFlyoutItem
                        Height="32"
                        Padding="11,0"
                        Click="{x:Bind OnChannelSelectClicked}"
                        IsChecked="{x:Bind SelectedChannel.InternalName.Equals(ChannelList[1].InternalName), Mode=OneWay}"
                        Tag="1"
                        Text="{x:Bind ChannelList[1].DisplayName}" />

                    <ToggleMenuFlyoutItem
                        Height="32"
                        Padding="11,0"
                        Click="{x:Bind OnChannelSelectClicked}"
                        IsChecked="{x:Bind SelectedChannel.InternalName.Equals(ChannelList[2].InternalName), Mode=OneWay}"
                        Tag="2"
                        Text="{x:Bind ChannelList[2].DisplayName}" />

                    <ToggleMenuFlyoutItem
                        Height="32"
                        Padding="11,0"
                        Click="{x:Bind OnChannelSelectClicked}"
                        IsChecked="{x:Bind SelectedChannel.InternalName.Equals(ChannelList[3].InternalName), Mode=OneWay}"
                        Tag="3"
                        Text="{x:Bind ChannelList[3].DisplayName}" />
                </MenuFlyout>
            </DropDownButton.Flyout>
        </DropDownButton>

        <TextBox
            Grid.Column="2"
            IsEnabled="{x:Bind IsQueryingLinks.Equals(x:False), Mode=OneWay}"
            KeyDown="{x:Bind OnKeyDown}"
            PlaceholderText="{x:Bind LinkPlaceHolderText, Mode=OneWay}"
            Text="{x:Bind LinkText, Mode=OneWay}"
            TextChanged="{x:Bind OnTextChanged}" />

        <Button
            Grid.Column="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Click="{x:Bind OnQueryLinksClicked}"
            Content="{x:Bind root:ResourceService.GetLocalized('Store/QueryLinks')}"
            IsEnabled="{x:Bind IsQueryingLinks.Equals(x:False), Mode=OneWay}"
            Style="{StaticResource AccentButtonStyle}" />
    </Grid>

    <InfoBar
        IsClosable="False"
        IsOpen="True"
        Message="{x:Bind StateInfoText, Mode=OneWay}"
        Severity="{x:Bind ResultSeverity, Mode=OneWay}"
        Style="{StaticResource DefaultInfoBarStyle}">

        <InfoBar.Content>
            <ProgressRing
                IsActive="{x:Bind IsRingActive, Mode=OneWay}"
                IsIndeterminate="True"
                Visibility="{x:Bind IsRingActive, Mode=OneWay}" />
        </InfoBar.Content>
    </InfoBar>

    <Expander
        Padding="0"
        HorizontalAlignment="Stretch"
        HorizontalContentAlignment="Stretch"
        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
        IsExpanded="True">

        <Expander.Header>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <FontIcon
                    Grid.Column="0"
                    Margin="0,0,12,0"
                    FontSize="16"
                    Glyph="&#xE823;" />

                <TextBlock
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Text="{x:Bind root:ResourceService.GetLocalized('Store/Recent')}" />
            </Grid>
        </Expander.Header>

        <Expander.Content>
            <StackPanel>
                <TextBlock
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Text="{x:Bind root:ResourceService.GetLocalized('Store/HistoryEmpty')}"
                    TextAlignment="Center"
                    Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityReverseConvert(HistoryCollection.Count), Mode=OneWay}" />

                <Grid
                    Height="35"
                    Padding="6,0,0,0"
                    Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityConvert(HistoryCollection.Count), Mode=OneWay}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.5*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="135" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        x:Name="HistoryAppNameHeaderText"
                        Grid.Column="0"
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        Text="{x:Bind root:ResourceService.GetLocalized('Store/HistoryAppName')}"
                        TextTrimming="CharacterEllipsis"
                        TextWrapping="NoWrap">

                        <ToolTipService.ToolTip>
                            <ToolTip Content="{x:Bind root:ResourceService.GetLocalized('Store/HistoryAppName')}" Visibility="{x:Bind HistoryAppNameHeaderText.IsTextTrimmed, Mode=OneWay}" />
                        </ToolTipService.ToolTip>
                    </TextBlock>

                    <TextBlock
                        x:Name="HistoryTypeHeaderText"
                        Grid.Column="1"
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        Text="{x:Bind root:ResourceService.GetLocalized('Store/HistoryType')}"
                        TextTrimming="CharacterEllipsis"
                        TextWrapping="NoWrap">

                        <ToolTipService.ToolTip>
                            <ToolTip Content="{x:Bind root:ResourceService.GetLocalized('Store/HistoryType')}" Visibility="{x:Bind HistoryTypeHeaderText.IsTextTrimmed, Mode=OneWay}" />
                        </ToolTipService.ToolTip>
                    </TextBlock>

                    <TextBlock
                        x:Name="HistoryChannelHeaderText"
                        Grid.Column="2"
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        Text="{x:Bind root:ResourceService.GetLocalized('Store/HistoryChannel')}"
                        TextTrimming="CharacterEllipsis"
                        TextWrapping="NoWrap">

                        <ToolTipService.ToolTip>
                            <ToolTip Content="{x:Bind root:ResourceService.GetLocalized('Store/HistoryChannel')}" Visibility="{x:Bind HistoryChannelHeaderText.IsTextTrimmed, Mode=OneWay}" />
                        </ToolTipService.ToolTip>
                    </TextBlock>

                    <TextBlock
                        x:Name="HistoryLinkHeaderText"
                        Grid.Column="3"
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        Text="{x:Bind root:ResourceService.GetLocalized('Store/HistoryLink')}"
                        TextTrimming="CharacterEllipsis"
                        TextWrapping="NoWrap">

                        <ToolTipService.ToolTip>
                            <ToolTip Content="{x:Bind root:ResourceService.GetLocalized('Store/HistoryLink')}" Visibility="{x:Bind HistoryLinkHeaderText.IsTextTrimmed, Mode=OneWay}" />
                        </ToolTipService.ToolTip>
                    </TextBlock>

                    <TextBlock
                        Grid.Column="4"
                        Grid.ColumnSpan="2"
                        Margin="10,0,0,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Text="{x:Bind root:ResourceService.GetLocalized('Store/Options')}"
                        ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Store/OptionsToolTip')}" />
                </Grid>

                <ItemsView
                    CornerRadius="0"
                    ItemsSource="{x:Bind HistoryCollection, Mode=OneWay}"
                    SelectionMode="None"
                    Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityConvert(HistoryCollection.Count), Mode=OneWay}">

                    <ItemsView.Layout>
                        <StackLayout />
                    </ItemsView.Layout>

                    <ItemsView.ItemTemplate>
                        <DataTemplate x:DataType="store:HistoryModel">
                            <ItemContainer CornerRadius="0">
                                <Grid
                                    Height="35"
                                    Padding="6,0,0,0"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="0,1,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1.5*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="3*" />
                                        <ColumnDefinition Width="70" />
                                        <ColumnDefinition Width="65" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        x:Name="HistoryAppNameText"
                                        Grid.Column="0"
                                        MinWidth="50"
                                        Margin="10,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        Text="{x:Bind HistoryAppName}"
                                        TextAlignment="Left"
                                        TextTrimming="CharacterEllipsis"
                                        TextWrapping="NoWrap">

                                        <ToolTipService.ToolTip>
                                            <ToolTip Content="{x:Bind HistoryAppName}" Visibility="{Binding ElementName=HistoryAppNameText, Path=IsTextTrimmed, Mode=OneWay}" />
                                        </ToolTipService.ToolTip>
                                    </TextBlock>

                                    <TextBlock
                                        x:Name="HistoryTypeText"
                                        Grid.Column="1"
                                        MinWidth="50"
                                        Margin="10,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        Text="{x:Bind HistoryType.Value}"
                                        TextAlignment="Left"
                                        TextTrimming="CharacterEllipsis"
                                        TextWrapping="NoWrap">

                                        <ToolTipService.ToolTip>
                                            <ToolTip Content="{x:Bind HistoryType.Value}" Visibility="{Binding ElementName=HistoryTypeText, Path=IsTextTrimmed, Mode=OneWay}" />
                                        </ToolTipService.ToolTip>
                                    </TextBlock>

                                    <TextBlock
                                        x:Name="HistoryChannelText"
                                        Grid.Column="2"
                                        MinWidth="50"
                                        Margin="10,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        Text="{x:Bind HistoryChannel.Value}"
                                        TextAlignment="Left"
                                        TextTrimming="CharacterEllipsis"
                                        TextWrapping="NoWrap">

                                        <ToolTipService.ToolTip>
                                            <ToolTip Content="{x:Bind HistoryChannel.Value}" Visibility="{Binding ElementName=HistoryChannelText, Path=IsTextTrimmed, Mode=OneWay}" />
                                        </ToolTipService.ToolTip>
                                    </TextBlock>

                                    <TextBlock
                                        x:Name="HistoryLinkText"
                                        Grid.Column="3"
                                        MinWidth="50"
                                        Margin="10,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        Text="{x:Bind HistoryLink}"
                                        TextAlignment="Left"
                                        TextTrimming="CharacterEllipsis"
                                        TextWrapping="NoWrap">

                                        <ToolTipService.ToolTip>
                                            <ToolTip Content="{x:Bind HistoryLink}" Visibility="{Binding ElementName=HistoryLinkText, Path=IsTextTrimmed, Mode=OneWay}" />
                                        </ToolTipService.ToolTip>
                                    </TextBlock>

                                    <HyperlinkButton
                                        Grid.Column="4"
                                        Margin="10,0,0,0"
                                        Command="{StaticResource FillinCommand}"
                                        CommandParameter="{x:Bind}"
                                        Content="{x:Bind root:ResourceService.GetLocalized('Store/Fillin')}"
                                        Style="{StaticResource HyperlinkButtonStyle}" />

                                    <HyperlinkButton
                                        Grid.Column="5"
                                        Command="{StaticResource CopyCommand}"
                                        CommandParameter="{x:Bind}"
                                        Content="{x:Bind root:ResourceService.GetLocalized('Store/Copy')}"
                                        Style="{StaticResource HyperlinkButtonStyle}"
                                        ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Store/CopyToolTip')}" />
                                </Grid>
                            </ItemContainer>
                        </DataTemplate>
                    </ItemsView.ItemTemplate>
                </ItemsView>
            </StackPanel>
        </Expander.Content>
    </Expander>

    <Grid CornerRadius="{ThemeResource ControlCornerRadius}" Visibility="{x:Bind ResultControlVisable, Mode=OneWay}">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Expander
            Grid.Row="0"
            Margin="0,0,0,3"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Stretch"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            IsExpanded="True"
            Visibility="{x:Bind IsAppInfoVisible, Mode=OneWay}">

            <Expander.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <FontIcon
                        Grid.Column="0"
                        Margin="0,0,12,0"
                        FontSize="16"
                        Glyph="&#xE946;" />

                    <TextBlock
                        Grid.Column="1"
                        Margin="0,0,0,2"
                        VerticalAlignment="Center"
                        Text="{x:Bind root:ResourceService.GetLocalized('Store/QueryedAppInfo')}" />

                    <AppBarButton
                        Grid.Column="2"
                        Margin="0,0,5,0"
                        Click="{x:Bind OnCopyQueryedAppInfoClicked}"
                        Label="{x:Bind root:ResourceService.GetLocalized('Store/CopyQueryedAppInfo')}"
                        Style="{StaticResource AppBarButtonStyle}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE8C8;" />
                        </AppBarButton.Icon>
                    </AppBarButton>

                    <AppBarButton
                        Grid.Column="3"
                        Margin="0,0,-15,0"
                        Click="{x:Bind OnLearnMoreClicked}"
                        Label="{x:Bind root:ResourceService.GetLocalized('Store/LearnMore')}"
                        Style="{StaticResource AppBarButtonStyle}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE890;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                </Grid>
            </Expander.Header>

            <Expander.Content>
                <Grid Margin="0,0,10,0" RowSpacing="6">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Text="{x:Bind root:ResourceService.GetLocalized('Store/QueryedAppName')}" />

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="1"
                        Text="{x:Bind AppInfo.Name, Mode=OneWay}"
                        TextAlignment="Justify"
                        TextWrapping="Wrap" />

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Text="{x:Bind root:ResourceService.GetLocalized('Store/QueryedAppPublisher')}" />

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="1"
                        Text="{x:Bind AppInfo.Publisher, Mode=OneWay}"
                        TextAlignment="Justify"
                        TextWrapping="Wrap" />

                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        Text="{x:Bind root:ResourceService.GetLocalized('Store/QueryedAppDescription')}" />

                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="1"
                        Text="{x:Bind AppInfo.Description, Mode=OneWay}"
                        TextAlignment="Justify"
                        TextWrapping="Wrap" />
                </Grid>
            </Expander.Content>
        </Expander>

        <Grid
            Grid.Row="1"
            Height="66"
            Padding="16,8,2,8"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="4,4,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <FontIcon
                Grid.Column="0"
                Margin="0,0,12,0"
                FontSize="16"
                Glyph="&#xE71E;" />

            <TextBlock
                Grid.Column="1"
                VerticalAlignment="Center"
                Text="{x:Bind root:ResourceService.GetLocalized('Store/QueryResult')}" />

            <AppBarSeparator Grid.Column="2" Margin="10,0,10,0" />

            <StackPanel
                Grid.Column="3"
                VerticalAlignment="Center"
                Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityConvert(QueryLinksCollection.Count), Mode=OneWay}">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="{x:Bind root:ResourceService.GetLocalized('Store/QueryedAppType')}" />

                    <TextBlock
                        Grid.Column="1"
                        Text="{x:Bind root:ResourceService.GetLocalized('Store/NonPackagedApp')}"
                        Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(IsPackagedApp), Mode=OneWay}" />

                    <TextBlock
                        Grid.Column="1"
                        Text="{x:Bind root:ResourceService.GetLocalized('Store/PackagedApp')}"
                        Visibility="{x:Bind IsPackagedApp, Mode=OneWay}" />
                </Grid>

                <TextBlock Text="{x:Bind sys:String.Format(QueryLinksCountInfo, QueryLinksCollection.Count), Mode=OneWay}" />
            </StackPanel>

            <TextBlock
                Grid.Column="3"
                VerticalAlignment="Center"
                Text="{x:Bind root:ResourceService.GetLocalized('Store/QueryLinksEmpty')}"
                Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityReverseConvert(QueryLinksCollection.Count), Mode=OneWay}" />

            <StackPanel
                x:Name="NormalMode"
                Grid.Column="4"
                Margin="0,0,10,0"
                VerticalAlignment="Center"
                x:Load="{x:Bind IsSelectMode.Equals(x:False), Mode=OneWay}"
                Background="Transparent"
                Orientation="Horizontal"
                Spacing="2">

                <AppBarButton
                    Click="{x:Bind OnSelectClicked}"
                    Label="{x:Bind root:ResourceService.GetLocalized('Store/Select')}"
                    Style="{StaticResource AppBarButtonStyle}"
                    ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Store/SelectToolTip')}">

                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE762;" />
                    </AppBarButton.Icon>
                </AppBarButton>
            </StackPanel>

            <StackPanel
                x:Name="SelectMode"
                Grid.Column="4"
                Margin="0,0,10,0"
                VerticalAlignment="Center"
                x:Load="{x:Bind IsSelectMode, Mode=OneWay}"
                Background="Transparent"
                Orientation="Horizontal"
                Spacing="2">

                <AppBarButton
                    Click="{x:Bind OnSelectAllClicked}"
                    Label="{x:Bind root:ResourceService.GetLocalized('Store/SelectAll')}"
                    Style="{StaticResource AppBarButtonStyle}">

                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE8B3;" />
                    </AppBarButton.Icon>
                </AppBarButton>

                <AppBarButton
                    Click="{x:Bind OnSelectNoneClicked}"
                    Label="{x:Bind root:ResourceService.GetLocalized('Store/SelectNone')}"
                    Style="{StaticResource AppBarButtonStyle}">

                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE8E6;" />
                    </AppBarButton.Icon>
                </AppBarButton>

                <AppBarButton
                    Label="{x:Bind root:ResourceService.GetLocalized('Store/CopyOptions')}"
                    Style="{StaticResource AppBarButtonStyle}"
                    ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Store/CopyOptionsToolTip')}">

                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE8C8;" />
                    </AppBarButton.Icon>

                    <AppBarButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem
                                Height="32"
                                Padding="11,0"
                                Click="{x:Bind OnCopySelectedLinkClicked}"
                                Text="{x:Bind root:ResourceService.GetLocalized('Store/CopySelectedLink')}"
                                ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Store/CopySelectedLinkToolTip')}" />

                            <MenuFlyoutItem
                                Height="32"
                                Padding="11,0"
                                Click="{x:Bind OnCopySelectedClicked}"
                                Text="{x:Bind root:ResourceService.GetLocalized('Store/CopySelectedContent')}"
                                ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Store/CopySelectedContentToolTip')}" />
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>

                <AppBarButton
                    Click="{x:Bind OnDownloadSelectedClicked}"
                    Label="{x:Bind root:ResourceService.GetLocalized('Store/DownloadSelected')}"
                    Style="{StaticResource AppBarButtonStyle}">

                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE74B;" />
                    </AppBarButton.Icon>
                </AppBarButton>

                <AppBarButton
                    Click="{x:Bind OnCancelClicked}"
                    Label="{x:Bind root:ResourceService.GetLocalized('Store/Cancel')}"
                    Style="{StaticResource AppBarButtonStyle}"
                    ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Store/CancelToolTip')}">

                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE711;" />
                    </AppBarButton.Icon>
                </AppBarButton>
            </StackPanel>
        </Grid>

        <Grid
            Grid.Row="2"
            Height="35"
            Padding="6,0,0,0"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1,0,1,1"
            Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityConvert(QueryLinksCollection.Count), Mode=OneWay}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="80" />
            </Grid.ColumnDefinitions>

            <TextBlock
                x:Name="SelectHeaderText"
                Grid.Column="0"
                Width="50"
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                Text="{x:Bind root:ResourceService.GetLocalized('Store/Select')}"
                TextTrimming="CharacterEllipsis"
                TextWrapping="NoWrap"
                Visibility="{x:Bind IsSelectMode, Mode=OneWay}">

                <ToolTipService.ToolTip>
                    <ToolTip Content="{x:Bind root:ResourceService.GetLocalized('Store/Select')}" Visibility="{x:Bind SelectHeaderText.IsTextTrimmed, Mode=OneWay}" />
                </ToolTipService.ToolTip>
            </TextBlock>

            <TextBlock
                x:Name="FileNameHeaderText"
                Grid.Column="1"
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                Text="{x:Bind root:ResourceService.GetLocalized('Store/FileName')}"
                TextTrimming="CharacterEllipsis"
                TextWrapping="NoWrap">

                <ToolTipService.ToolTip>
                    <ToolTip Content="{x:Bind root:ResourceService.GetLocalized('Store/FileName')}" Visibility="{x:Bind FileNameHeaderText.IsTextTrimmed, Mode=OneWay}" />
                </ToolTipService.ToolTip>
            </TextBlock>

            <TextBlock
                x:Name="FileSizeHeaderText"
                Grid.Column="2"
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                Text="{x:Bind root:ResourceService.GetLocalized('Store/FileSize')}"
                TextTrimming="CharacterEllipsis"
                TextWrapping="NoWrap">

                <ToolTipService.ToolTip>
                    <ToolTip Content="{x:Bind root:ResourceService.GetLocalized('Store/FileSize')}" Visibility="{x:Bind FileSizeHeaderText.IsTextTrimmed, Mode=OneWay}" />
                </ToolTipService.ToolTip>
            </TextBlock>

            <TextBlock
                Grid.Column="3"
                Grid.ColumnSpan="3"
                Margin="0,0,10,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Text="{x:Bind root:ResourceService.GetLocalized('Store/Options')}"
                ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Store/OptionsToolTip')}" />
        </Grid>

        <ItemsView
            Grid.Row="3"
            CornerRadius="0"
            IsItemInvokedEnabled="{x:Bind IsSelectMode, Mode=OneWay}"
            ItemInvoked="{x:Bind OnItemInvoked}"
            ItemsSource="{x:Bind QueryLinksCollection, Mode=OneWay}"
            SelectionMode="None"
            Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityConvert(QueryLinksCollection.Count), Mode=OneWay}">

            <ItemsView.Layout>
                <StackLayout />
            </ItemsView.Layout>

            <ItemsView.ItemTemplate>
                <DataTemplate x:DataType="store:QueryLinksModel">
                    <ItemContainer CornerRadius="0">
                        <Grid
                            Height="35"
                            Padding="6,0,0,0"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1,0,1,1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="80" />
                                <ColumnDefinition Width="80" />
                                <ColumnDefinition Width="80" />
                            </Grid.ColumnDefinitions>

                            <CheckBox
                                Grid.Column="0"
                                Width="50"
                                MinWidth="0"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                IsChecked="{x:Bind IsSelected, Mode=TwoWay}"
                                IsThreeState="False"
                                Visibility="{x:Bind IsSelectMode, Mode=OneWay}">

                                <ToolTipService.ToolTip>
                                    <ToolTip>
                                        <Grid>
                                            <TextBlock Text="{x:Bind root:ResourceService.GetLocalized('Store/SelectedToolTip')}" Visibility="{x:Bind IsSelected, Mode=OneWay}" />
                                            <TextBlock Text="{x:Bind root:ResourceService.GetLocalized('Store/UnSelectedToolTip')}" Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(IsSelected), Mode=OneWay}" />
                                        </Grid>
                                    </ToolTip>
                                </ToolTipService.ToolTip>
                            </CheckBox>

                            <HyperlinkButton
                                Grid.Column="1"
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                Command="{StaticResource DownloadCommand}"
                                CommandParameter="{x:Bind}"
                                IsEnabled="{x:Bind IsSelectMode.Equals(x:False), Mode=OneWay}"
                                Style="{StaticResource HyperlinkButtonStyle}">

                                <HyperlinkButton.Content>
                                    <TextBlock
                                        Text="{x:Bind FileName}"
                                        TextTrimming="CharacterEllipsis"
                                        TextWrapping="NoWrap" />
                                </HyperlinkButton.Content>
                            </HyperlinkButton>

                            <TextBlock
                                x:Name="FileSizeText"
                                Grid.Column="2"
                                MinWidth="50"
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Text="{x:Bind FileSize}"
                                TextAlignment="Left"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="NoWrap">

                                <ToolTipService.ToolTip>
                                    <ToolTip Content="{x:Bind FileSize}" Visibility="{Binding ElementName=FileSizeText, Path=IsTextTrimmed, Mode=OneWay}" />
                                </ToolTipService.ToolTip>
                            </TextBlock>

                            <HyperlinkButton
                                Grid.Column="3"
                                Margin="0,0,5,0"
                                VerticalAlignment="Center"
                                Command="{StaticResource OpenLinkCommand}"
                                CommandParameter="{x:Bind FileLink}"
                                Content="{x:Bind root:ResourceService.GetLocalized('Store/OpenLink')}"
                                IsEnabled="{x:Bind IsSelectMode.Equals(x:False), Mode=OneWay}"
                                Style="{StaticResource HyperlinkButtonStyle}"
                                ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Store/OpenLinkToolTip')}" />

                            <HyperlinkButton
                                Grid.Column="4"
                                Margin="0,0,5,0"
                                VerticalAlignment="Center"
                                Command="{StaticResource CopyLinkCommand}"
                                CommandParameter="{x:Bind FileLink}"
                                Content="{x:Bind root:ResourceService.GetLocalized('Store/CopyLink')}"
                                IsEnabled="{x:Bind IsSelectMode.Equals(x:False), Mode=OneWay}"
                                Style="{StaticResource HyperlinkButtonStyle}"
                                ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Store/CopyLinkToolTip')}" />

                            <HyperlinkButton
                                Grid.Column="5"
                                VerticalAlignment="Center"
                                Command="{StaticResource CopyInformationCommand}"
                                CommandParameter="{x:Bind}"
                                Content="{x:Bind root:ResourceService.GetLocalized('Store/CopyInformation')}"
                                IsEnabled="{x:Bind IsSelectMode.Equals(x:False), Mode=OneWay}"
                                Style="{StaticResource HyperlinkButtonStyle}"
                                ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Store/CopyInformationToolTip')}" />
                        </Grid>
                    </ItemContainer>
                </DataTemplate>
            </ItemsView.ItemTemplate>
        </ItemsView>
    </Grid>
</StackPanel>
