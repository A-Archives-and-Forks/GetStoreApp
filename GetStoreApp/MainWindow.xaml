<WinUI:DesktopWindow
    x:Class="GetStoreApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:WinUI="using:GetStoreApp.Extensions.Window"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{x:Bind ResourceService.GetLocalized('AppDisplayName')}"
    MinWidth="1024"
    MinHeight="768"
    TaskBarIcon="Assets/Logo/GetStoreApp.ico"
    Closed="{x:Bind ViewModel.WindowClosed}"
    Closing="{x:Bind ViewModel.WindowClosing}"
    mc:Ignorable="d" />
