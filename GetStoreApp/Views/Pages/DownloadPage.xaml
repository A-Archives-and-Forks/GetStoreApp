<Page
    x:Class="GetStoreApp.Views.Pages.DownloadPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dc="using:GetStoreApp.UI.Controls.Download"
    xmlns:dialogsAndFlyouts="using:GetStoreApp.Views.CustomControls.DialogsAndFlyouts"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pageViewModel="using:GetStoreApp.ViewModels.Pages"
    xmlns:root="using:GetStoreApp.Services.Root"
    mc:Ignorable="d">

    <Page.DataContext>
        <pageViewModel:DownloadViewModel x:Name="ViewModel" />
    </Page.DataContext>

    <Pivot
        Margin="0,15,0,0"
        SelectionChanged="{x:Bind OnSelectionChanged}"
        Style="{StaticResource PivotStyle}">

        <PivotItem Header="{x:Bind root:ResourceService.GetLocalized('Download/Downloading')}" Style="{StaticResource PivotItemStyle}">
            <dc:DownloadingControl x:Name="Downloading" />
        </PivotItem>

        <PivotItem Header="{x:Bind root:ResourceService.GetLocalized('Download/Unfinished')}" Style="{StaticResource PivotItemStyle}">
            <dc:UnfinishedControl x:Name="Unfinished" />
        </PivotItem>

        <PivotItem Header="{x:Bind root:ResourceService.GetLocalized('Download/Completed')}" Style="{StaticResource PivotItemStyle}">
            <dc:CompletedControl x:Name="Completed" />
        </PivotItem>

        <Pivot.RightHeader>
            <Button
                VerticalAlignment="Center"
                Content="{x:Bind root:ResourceService.GetLocalized('Download/DownloadDescription')}"
                Visibility="{x:Bind ViewModel.UseInsVisValue, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}">

                <Button.Flyout>
                    <dialogsAndFlyouts:AdaptiveFlyout x:Name="DownloadFlyout" Placement="BottomEdgeAlignedRight">
                        <StackPanel
                            Width="300"
                            Padding="14"
                            Spacing="5">

                            <StackPanel Orientation="Horizontal">
                                <FontIcon
                                    Grid.Column="0"
                                    FontFamily="{StaticResource SegoeFluentFontFamily}"
                                    Glyph="&#xE8C9;"
                                    Style="{StaticResource FontIconStyle}" />

                                <TextBlock FontWeight="SemiBold" Text="{x:Bind root:ResourceService.GetLocalized('Download/ExplainTitle')}" />
                            </StackPanel>

                            <MenuFlyoutSeparator Margin="3,0,6,0" Background="{ThemeResource SurfaceStrokeColorDefaultBrush}" />

                            <TextBlock
                                Margin="0,0,2,0"
                                Text="{x:Bind root:ResourceService.GetLocalized('Download/ExplanContent1')}"
                                TextAlignment="Justify"
                                TextWrapping="Wrap" />
                            <TextBlock
                                Margin="0,0,2,0"
                                Text="{x:Bind root:ResourceService.GetLocalized('Download/ExplanContent2')}"
                                TextAlignment="Justify"
                                TextWrapping="Wrap" />
                            <StackPanel
                                HorizontalAlignment="Right"
                                Orientation="Horizontal"
                                Spacing="5">
                                <Button Click="{x:Bind OnLearnMoreClicked}" Content="{x:Bind root:ResourceService.GetLocalized('Download/LearnMore')}">

                                    <ToolTipService.ToolTip>
                                        <ToolTip
                                            Content="{x:Bind root:ResourceService.GetLocalized('Download/LearnMore')}"
                                            Placement="Bottom"
                                            VerticalOffset="20" />
                                    </ToolTipService.ToolTip>
                                </Button>

                                <Button Click="{x:Bind OnDownloadSettingsClicked}" Content="{x:Bind root:ResourceService.GetLocalized('Download/OpenSettings')}">

                                    <ToolTipService.ToolTip>
                                        <ToolTip
                                            Content="{x:Bind root:ResourceService.GetLocalized('Download/OpenSettings')}"
                                            Placement="Bottom"
                                            VerticalOffset="20" />
                                    </ToolTipService.ToolTip>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </dialogsAndFlyouts:AdaptiveFlyout>
                </Button.Flyout>

                <ToolTipService.ToolTip>
                    <ToolTip
                        Content="{x:Bind root:ResourceService.GetLocalized('Download/DownloadDescription')}"
                        Placement="Bottom"
                        VerticalOffset="20" />
                </ToolTipService.ToolTip>
            </Button>
        </Pivot.RightHeader>
    </Pivot>
</Page>
