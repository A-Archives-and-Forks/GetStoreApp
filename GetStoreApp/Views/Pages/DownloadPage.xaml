<Page
    x:Class="GetStoreApp.Views.Pages.DownloadPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dc="using:GetStoreApp.UI.Controls.Download"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pageViewModel="using:GetStoreApp.ViewModels.Pages"
    xmlns:root="using:GetStoreApp.Services.Root"
    mc:Ignorable="d">

    <Page.DataContext>
        <pageViewModel:DownloadViewModel x:Name="ViewModel" />
    </Page.DataContext>

    <Page.Resources>
        <TeachingTip
            x:Name="DownloadTeachingTip"
            Title="{x:Bind root:ResourceService.GetLocalized('Download/ExplainTitle')}"
            Style="{StaticResource TeachingTipStyle}"
            Target="{x:Bind TeachingTipButton}">
            <TeachingTip.IconSource>
                <FontIconSource
                    FontFamily="{StaticResource SegoeFluentFontFamily}"
                    FontSize="16"
                    Glyph="&#xE8c9;" />
            </TeachingTip.IconSource>
            <TeachingTip.Content>
                <StackPanel Spacing="5">
                    <TextBlock Text="{x:Bind root:ResourceService.GetLocalized('Download/ExplanContent1')}" TextWrapping="Wrap" />
                    <TextBlock Text="{x:Bind root:ResourceService.GetLocalized('Download/ExplanContent2')}" TextWrapping="Wrap" />
                    <StackPanel
                        HorizontalAlignment="Right"
                        Orientation="Horizontal"
                        Spacing="5">
                        <Button Click="{x:Bind OnLearnMoreClicked}" Content="{x:Bind root:ResourceService.GetLocalized('Download/LearnMore')}">

                            <ToolTipService.ToolTip>
                                <ToolTip
                                    Content="{x:Bind root:ResourceService.GetLocalized('Download/LearnMore')}"
                                    Placement="Bottom"
                                    VerticalOffset="20" />
                            </ToolTipService.ToolTip>
                        </Button>

                        <Button Click="{x:Bind OnDownloadSettingsClicked}" Content="{x:Bind root:ResourceService.GetLocalized('Download/OpenSettings')}">

                            <ToolTipService.ToolTip>
                                <ToolTip
                                    Content="{x:Bind root:ResourceService.GetLocalized('Download/OpenSettings')}"
                                    Placement="Bottom"
                                    VerticalOffset="20" />
                            </ToolTipService.ToolTip>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </TeachingTip.Content>
        </TeachingTip>
    </Page.Resources>

    <Pivot
        Margin="0,15,0,0"
        SelectionChanged="{x:Bind ViewModel.OnSelectionChanged}"
        Style="{StaticResource PivotStyle}">

        <PivotItem Header="{x:Bind root:ResourceService.GetLocalized('Download/Downloading')}" Style="{StaticResource PivotItemStyle}">
            <dc:DownloadingControl />
        </PivotItem>

        <PivotItem Header="{x:Bind root:ResourceService.GetLocalized('Download/Unfinished')}" Style="{StaticResource PivotItemStyle}">
            <dc:UnfinishedControl />
        </PivotItem>

        <PivotItem Header="{x:Bind root:ResourceService.GetLocalized('Download/Completed')}" Style="{StaticResource PivotItemStyle}">
            <dc:CompletedControl />
        </PivotItem>

        <Pivot.RightHeader>
            <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                <Button
                    x:Name="TeachingTipButton"
                    Click="{x:Bind OnTeachingTipClicked}"
                    Content="{x:Bind root:ResourceService.GetLocalized('Download/DownloadDescription')}"
                    Visibility="{x:Bind ViewModel.UseInsVisValue, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}">

                    <ToolTipService.ToolTip>
                        <ToolTip
                            Content="{x:Bind root:ResourceService.GetLocalized('Download/DownloadDescription')}"
                            Placement="Bottom"
                            VerticalOffset="20" />
                    </ToolTipService.ToolTip>
                </Button>
            </StackPanel>
        </Pivot.RightHeader>
    </Pivot>
</Page>
