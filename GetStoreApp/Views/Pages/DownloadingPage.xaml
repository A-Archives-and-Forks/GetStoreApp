<Page
    x:Class="GetStoreApp.Views.Pages.DownloadingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="using:GetStoreApp.Helpers.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:download="using:GetStoreApp.Models.Controls.Download"
    xmlns:enum="using:GetStoreApp.Extensions.DataType.Enums"
    xmlns:helper="using:GetStoreApp.Helpers.Root"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="using:GetStoreApp.Services.Root"
    xmlns:sys="using:System"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <Page.Resources>
        <XamlUICommand x:Name="ContinueCommand" ExecuteRequested="{x:Bind OnContinueExecuteRequested}" />
        <XamlUICommand x:Name="DeleteCommand" ExecuteRequested="{x:Bind OnDeleteExecuteRequested}" />
        <XamlUICommand x:Name="PauseCommand" ExecuteRequested="{x:Bind OnPauseExecuteRequested}" />
    </Page.Resources>

    <Grid Padding="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  下载中文件控制栏  -->
        <Grid
            Grid.Row="0"
            Height="66"
            Margin="30,0,30,3"
            Padding="16,8,2,8"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="{StaticResource ControlCornerRadius}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <FontIcon
                Grid.Column="0"
                Margin="0,0,12,0"
                FontSize="16"
                Glyph="&#xE74C;" />

            <TextBlock
                Grid.Column="1"
                VerticalAlignment="Center"
                Text="{x:Bind root:ResourceService.GetLocalized('Download/Operation')}" />

            <AppBarSeparator Grid.Column="2" Margin="10,0,10,0" />

            <TextBlock
                Grid.Column="3"
                VerticalAlignment="Center"
                Text="{x:Bind root:ResourceService.GetLocalized('Download/DownloadingEmpty')}"
                Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityReverseConvert(DownloadingCollection.Count), Mode=OneWay}" />

            <TextBlock
                Grid.Column="3"
                VerticalAlignment="Center"
                Text="{x:Bind x:String.Format(DownloadingCountInfo, DownloadingCollection.Count), Mode=OneWay}"
                Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityConvert(DownloadingCollection.Count), Mode=OneWay}" />

            <CommandBar
                Grid.Column="4"
                Margin="0,0,10,0"
                VerticalAlignment="Center"
                Background="Transparent"
                DefaultLabelPosition="Right"
                Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(IsSelectMode), Mode=OneWay}">

                <CommandBar.Resources>
                    <SolidColorBrush x:Key="CommandBarBackgroundOpen" Color="Transparent" />
                    <Thickness x:Key="CommandBarBorderThicknessOpen">0</Thickness>
                </CommandBar.Resources>

                <CommandBar.PrimaryCommands>
                    <AppBarButton
                        Click="{x:Bind OnContinueAllClicked}"
                        IsEnabled="{x:Bind sys:Convert.ToBoolean(DownloadingCollection.Count), Mode=OneWay}"
                        Label="{x:Bind root:ResourceService.GetLocalized('Download/ContinueAll')}"
                        ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Download/ContinueAllToolTip')}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE74B;" />
                        </AppBarButton.Icon>
                    </AppBarButton>

                    <AppBarButton
                        Click="{x:Bind OnPauseAllClicked}"
                        IsEnabled="{x:Bind sys:Convert.ToBoolean(DownloadingCollection.Count), Mode=OneWay}"
                        Label="{x:Bind root:ResourceService.GetLocalized('Download/PauseAll')}"
                        ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Download/PauseAllToolTip')}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE769;" />
                        </AppBarButton.Icon>
                    </AppBarButton>

                    <AppBarButton
                        Click="{x:Bind OnSelectClicked}"
                        IsEnabled="{x:Bind sys:Convert.ToBoolean(DownloadingCollection.Count), Mode=OneWay}"
                        Label="{x:Bind root:ResourceService.GetLocalized('Download/Select')}"
                        ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Download/SelectToolTip')}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE762;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                </CommandBar.PrimaryCommands>

                <CommandBar.SecondaryCommands>
                    <AppBarButton
                        Click="{x:Bind OnOpenFolderClicked}"
                        Label="{x:Bind root:ResourceService.GetLocalized('Download/OpenFolder')}"
                        ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Download/OpenFolderToolTip')}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE8B7;" />
                        </AppBarButton.Icon>
                    </AppBarButton>

                    <AppBarButton
                        Click="{x:Bind OnUseInstructionClicked}"
                        Label="{x:Bind root:ResourceService.GetLocalized('Download/UseInstruction')}"
                        ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Download/UseInstructionToolTip')}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE946;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                </CommandBar.SecondaryCommands>
            </CommandBar>

            <CommandBar
                Grid.Column="4"
                Margin="0,0,10,0"
                VerticalAlignment="Center"
                Background="Transparent"
                DefaultLabelPosition="Right"
                Visibility="{x:Bind IsSelectMode, Mode=OneWay}">

                <CommandBar.Resources>
                    <SolidColorBrush x:Key="CommandBarBackgroundOpen" Color="Transparent" />
                    <Thickness x:Key="CommandBarBorderThicknessOpen">0</Thickness>
                </CommandBar.Resources>

                <CommandBar.PrimaryCommands>
                    <AppBarButton Click="{x:Bind OnSelectAllClicked}" Label="{x:Bind root:ResourceService.GetLocalized('Download/SelectAll')}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE8B3;" />
                        </AppBarButton.Icon>
                    </AppBarButton>

                    <AppBarButton Click="{x:Bind OnSelectNoneClicked}" Label="{x:Bind root:ResourceService.GetLocalized('Download/SelectNone')}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE8E6;" />
                        </AppBarButton.Icon>
                    </AppBarButton>

                    <AppBarButton
                        Click="{x:Bind OnDeleteSelectedClicked}"
                        Label="{x:Bind root:ResourceService.GetLocalized('Download/DeleteSelected')}"
                        ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Download/DeleteSelectedToolTip')}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE74D;" />
                        </AppBarButton.Icon>
                    </AppBarButton>

                    <AppBarButton
                        Click="{x:Bind OnCancelClicked}"
                        Label="{x:Bind root:ResourceService.GetLocalized('Download/Cancel')}"
                        ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Download/CancelToolTip')}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE711;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                </CommandBar.PrimaryCommands>

                <CommandBar.SecondaryCommands>
                    <AppBarButton
                        Click="{x:Bind OnOpenFolderClicked}"
                        Label="{x:Bind root:ResourceService.GetLocalized('Download/OpenFolder')}"
                        ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Download/OpenFolderToolTip')}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE8B7;" />
                        </AppBarButton.Icon>
                    </AppBarButton>

                    <AppBarButton
                        Click="{x:Bind OnUseInstructionClicked}"
                        Label="{x:Bind root:ResourceService.GetLocalized('Download/UseInstruction')}"
                        ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Download/UseInstructionToolTip')}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE946;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                </CommandBar.SecondaryCommands>
            </CommandBar>
        </Grid>

        <!--  下载内容空提示栏  -->
        <Grid
            Grid.Row="1"
            Height="60"
            Margin="30,0,30,0"
            Padding="16,12"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="{StaticResource ControlCornerRadius}"
            Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityReverseConvert(DownloadingCollection.Count), Mode=OneWay}">

            <TextBlock
                Margin="0,10"
                VerticalAlignment="Center"
                Text="{x:Bind root:ResourceService.GetLocalized('Download/DownloadingEmptyDescription')}"
                TextAlignment="Center" />
        </Grid>

        <!--  下载内容列表控件  -->
        <ListView
            Grid.Row="2"
            Padding="30,0,30,30"
            IsItemClickEnabled="{x:Bind IsSelectMode, Mode=OneWay}"
            ItemClick="{x:Bind OnItemClick}"
            ItemsSource="{x:Bind DownloadingCollection}"
            SelectionMode="None"
            Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityConvert(DownloadingCollection.Count), Mode=OneWay}">

            <ListView.ItemContainerStyle>
                <Style BasedOn="{StaticResource DefaultListViewItemStyle}" TargetType="ListViewItem">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="Margin" Value="0" />
                    <Setter Property="MinHeight" Value="0" />
                    <Setter Property="Padding" Value="0" />
                </Style>
            </ListView.ItemContainerStyle>

            <ItemsControl.ItemContainerTransitions>
                <TransitionCollection />
            </ItemsControl.ItemContainerTransitions>

            <ListView.ItemTemplate>
                <DataTemplate x:DataType="download:DownloadingModel">
                    <Grid
                        Height="60"
                        Margin="0,0,0,2"
                        Padding="16,0"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="{StaticResource ControlCornerRadius}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <CheckBox
                            Grid.Column="0"
                            MinWidth="0"
                            Margin="0,0,6,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            IsChecked="{x:Bind IsSelected, Mode=TwoWay}"
                            IsThreeState="False"
                            Visibility="{x:Bind IsSelectMode, Mode=OneWay}">

                            <ToolTipService.ToolTip>
                                <ToolTip MaxWidth="9999">
                                    <Grid>
                                        <TextBlock Text="{x:Bind root:ResourceService.GetLocalized('Download/SelectedToolTip')}" Visibility="{x:Bind IsSelected, Mode=OneWay}" />
                                        <TextBlock Text="{x:Bind root:ResourceService.GetLocalized('Download/UnSelectedToolTip')}" Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(IsSelected), Mode=OneWay}" />
                                    </Grid>
                                </ToolTip>
                            </ToolTipService.ToolTip>
                        </CheckBox>

                        <FontIcon
                            Grid.Column="1"
                            Margin="0,0,12,0"
                            FontSize="18"
                            FontWeight="Thin"
                            Glyph="&#xE958;"
                            Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Queued), Mode=OneWay}" />

                        <FontIcon
                            Grid.Column="1"
                            Margin="0,0,12,0"
                            FontSize="18"
                            FontWeight="Thin"
                            Glyph="&#xE896;"
                            Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Downloading), Mode=OneWay}" />

                        <FontIcon
                            Grid.Column="1"
                            Margin="0,0,12,0"
                            FontSize="18"
                            FontWeight="Thin"
                            Glyph="&#xE769;"
                            Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Paused), Mode=OneWay}" />

                        <FontIcon
                            Grid.Column="1"
                            Margin="0,0,12,0"
                            FontSize="18"
                            FontWeight="Thin"
                            Glyph="&#xEA39;"
                            Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Failed), Mode=OneWay}" />

                        <Grid
                            Grid.Column="2"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            RowSpacing="4">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    x:Name="FileNameText"
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    FontSize="16"
                                    Text="{x:Bind FileName}"
                                    TextAlignment="Left"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="NoWrap">

                                    <ToolTipService.ToolTip>
                                        <ToolTip
                                            MaxWidth="9999"
                                            Content="{x:Bind FileName}"
                                            Visibility="{Binding ElementName=FileNameText, Path=IsTextTrimmed, Mode=OneWay}" />
                                    </ToolTipService.ToolTip>
                                </TextBlock>

                                <TextBlock
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    FontSize="16"
                                    Text="{x:Bind helper:SpeedHelper.ConvertSpeedToString(DownloadSpeed), Mode=OneWay}"
                                    TextAlignment="Right"
                                    Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Downloading), Mode=OneWay}">

                                    <ToolTipService.ToolTip>
                                        <ToolTip MaxWidth="9999">
                                            <TextBlock>
                                                <Run Text="{x:Bind root:ResourceService.GetLocalized('Download/CurrentSpeedToolTip')}" />
                                                <Run Text="{x:Bind helper:SpeedHelper.ConvertSpeedToString(DownloadSpeed), Mode=OneWay}" />
                                            </TextBlock>
                                        </ToolTip>
                                    </ToolTipService.ToolTip>
                                </TextBlock>

                                <TextBlock
                                    Grid.Column="2"
                                    Margin="4,0,4,0"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Text="|"
                                    TextAlignment="Right"
                                    Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Downloading), Mode=OneWay}" />

                                <TextBlock
                                    Grid.Column="3"
                                    VerticalAlignment="Center"
                                    FontSize="16"
                                    Text="{x:Bind helper:FileSizeHelper.ConvertFileSizeToString(CompletedSize), Mode=OneWay}"
                                    TextAlignment="Right"
                                    Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Downloading), Mode=OneWay}">

                                    <ToolTipService.ToolTip>
                                        <ToolTip MaxWidth="9999">
                                            <TextBlock>
                                                <Run Text="{x:Bind root:ResourceService.GetLocalized('Download/FinishedSizeToolTip')}" />
                                                <Run Text="{x:Bind helper:FileSizeHelper.ConvertFileSizeToString(CompletedSize), Mode=OneWay}" />
                                            </TextBlock>
                                        </ToolTip>
                                    </ToolTipService.ToolTip>
                                </TextBlock>

                                <TextBlock
                                    Grid.Column="4"
                                    Margin="4,0,4,0"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Text="|"
                                    TextAlignment="Right"
                                    Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Downloading), Mode=OneWay}" />

                                <TextBlock
                                    Grid.Column="5"
                                    VerticalAlignment="Center"
                                    FontSize="16"
                                    Text="{x:Bind helper:FileSizeHelper.ConvertFileSizeToString(TotalSize), Mode=OneWay}"
                                    TextAlignment="Right">

                                    <ToolTipService.ToolTip>
                                        <ToolTip MaxWidth="9999">
                                            <TextBlock>
                                                <Run Text="{x:Bind root:ResourceService.GetLocalized('Download/TotalSizeToolTip')}" />
                                                <Run Text="{x:Bind helper:FileSizeHelper.ConvertFileSizeToString(TotalSize), Mode=OneWay}" />
                                            </TextBlock>
                                        </ToolTip>
                                    </ToolTipService.ToolTip>
                                </TextBlock>
                            </Grid>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Download/DownloadQueued')}"
                                    Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Queued), Mode=OneWay}" />

                                <TextBlock
                                    Grid.Column="0"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Download/Downloading')}"
                                    Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Downloading), Mode=OneWay}" />

                                <TextBlock
                                    Grid.Column="0"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Download/DownloadPaused')}"
                                    Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Paused), Mode=OneWay}" />

                                <TextBlock
                                    Grid.Column="0"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Download/DownloadFailed')}"
                                    Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Failed), Mode=OneWay}" />

                                <ProgressBar
                                    Grid.Column="1"
                                    Margin="10,0,0,0"
                                    IsIndeterminate="{x:Bind x:Object.Equals(DownloadProgressState, enum:DownloadProgressState.Queued), Mode=OneWay}"
                                    ShowError="{x:Bind x:Object.Equals(DownloadProgressState, enum:DownloadProgressState.Failed), Mode=OneWay}"
                                    ShowPaused="{x:Bind x:Object.Equals(DownloadProgressState, enum:DownloadProgressState.Paused), Mode=OneWay}"
                                    Value="{x:Bind converter:ValueConverterHelper.DownloadProgress(CompletedSize, TotalSize), Mode=OneWay}" />
                            </Grid>
                        </Grid>

                        <ContentControl
                            Grid.Column="3"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            IsEnabled="{x:Bind IsSelectMode.Equals(x:False), Mode=OneWay}">

                            <StackPanel Orientation="Horizontal">

                                <Button
                                    Width="32"
                                    Height="32"
                                    Margin="5,0,0,0"
                                    Padding="0"
                                    Command="{StaticResource ContinueCommand}"
                                    CommandParameter="{x:Bind}"
                                    CornerRadius="{StaticResource ControlCornerRadius}"
                                    IsEnabled="{x:Bind IsNotOperated, Mode=OneWay}"
                                    ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Download/ContinueToolTip')}"
                                    Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadProgressState(DownloadProgressState, enum:DownloadProgressState.Paused), Mode=OneWay}">

                                    <Button.Content>
                                        <FontIcon FontSize="14" Glyph="&#xE768;" />
                                    </Button.Content>
                                </Button>

                                <Button
                                    Width="32"
                                    Height="32"
                                    Margin="5,0,0,0"
                                    Padding="0"
                                    Command="{StaticResource PauseCommand}"
                                    CommandParameter="{x:Bind}"
                                    CornerRadius="{StaticResource ControlCornerRadius}"
                                    IsEnabled="{x:Bind IsNotOperated, Mode=OneWay}"
                                    ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Download/PauseToolTip')}"
                                    Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckDownloadingState(DownloadProgressState), Mode=OneWay}">

                                    <Button.Content>
                                        <FontIcon FontSize="14" Glyph="&#xE769;" />
                                    </Button.Content>
                                </Button>

                                <Button
                                    Width="32"
                                    Height="32"
                                    Margin="5,0,0,0"
                                    Padding="0"
                                    Command="{StaticResource DeleteCommand}"
                                    CommandParameter="{x:Bind}"
                                    CornerRadius="{StaticResource ControlCornerRadius}"
                                    IsEnabled="{x:Bind IsNotOperated, Mode=OneWay}"
                                    ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Download/DeleteDownloadingToolTip')}">

                                    <Button.Content>
                                        <FontIcon FontSize="14" Glyph="&#xE711;" />
                                    </Button.Content>
                                </Button>
                            </StackPanel>
                        </ContentControl>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
