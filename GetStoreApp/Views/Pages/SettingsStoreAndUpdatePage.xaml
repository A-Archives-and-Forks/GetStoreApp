<Page
    x:Class="GetStoreApp.Views.Pages.SettingsStoreAndUpdatePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="using:GetStoreApp.Helpers.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helper="using:GetStoreApp.Helpers.Root"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:GetStoreApp.Models.Controls.Settings"
    xmlns:root="using:GetStoreApp.Services.Root"
    mc:Ignorable="d">

    <Page.Resources>
        <SolidColorBrush x:Key="ItemContainerPointerOverBackground" Color="Transparent" />
        <SolidColorBrush x:Key="ItemContainerPressedBackground" Color="Transparent" />

        <XamlUICommand x:Name="StoreRegionCommand" ExecuteRequested="{x:Bind OnStoreRegionExecuteRequested}" />
    </Page.Resources>

    <ScrollView
        HorizontalScrollBarVisibility="Hidden"
        HorizontalScrollMode="Disabled"
        VerticalScrollBarVisibility="Auto"
        VerticalScrollMode="Enabled">

        <Grid Margin="30,0,30,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  查询链接方式设置  -->
            <Grid
                Grid.Row="0"
                Height="60"
                Margin="0,0,0,2"
                Padding="16,12"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="{StaticResource ControlCornerRadius}">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <FontIcon
                    Grid.Column="0"
                    Margin="0,0,12,0"
                    FontSize="16"
                    Glyph="&#xE721;" />

                <StackPanel Grid.Column="1" Orientation="Vertical">
                    <TextBlock
                        VerticalAlignment="Center"
                        Style="{StaticResource BodyTextBlockStyle}"
                        Text="{x:Bind root:ResourceService.GetLocalized('Settings/QueryLinksMode')}" />

                    <TextBlock
                        x:Name="QueryLinksModeDescription"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="{x:Bind root:ResourceService.GetLocalized('Settings/QueryLinksModeDescription')}"
                        TextTrimming="CharacterEllipsis"
                        TextWrapping="NoWrap">

                        <ToolTipService.ToolTip>
                            <ToolTip
                                MaxWidth="9999"
                                Content="{x:Bind root:ResourceService.GetLocalized('Settings/QueryLinksModeDescription')}"
                                Visibility="{x:Bind QueryLinksModeDescription.IsTextTrimmed, Mode=OneWay}" />
                        </ToolTipService.ToolTip>
                    </TextBlock>
                </StackPanel>

                <DropDownButton
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    Content="{x:Bind QueryLinksModeItem.Value, Mode=OneWay}">

                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <RadioMenuFlyoutItem
                                Height="32"
                                Padding="11,0"
                                Click="{x:Bind OnQueryLinksModeSelectClicked}"
                                GroupName="QueryLinksModeRadioGroup"
                                IsChecked="{x:Bind QueryLinksModeItem.Key.Equals(QueryLinksModeList[0].Key), Mode=OneWay}"
                                Tag="0"
                                Text="{x:Bind QueryLinksModeList[0].Value}" />

                            <RadioMenuFlyoutItem
                                Height="32"
                                Padding="11,0"
                                Click="{x:Bind OnQueryLinksModeSelectClicked}"
                                GroupName="QueryLinksModeRadioGroup"
                                IsChecked="{x:Bind QueryLinksModeItem.Key.Equals(QueryLinksModeList[1].Key), Mode=OneWay}"
                                Tag="1"
                                Text="{x:Bind QueryLinksModeList[1].Value}" />
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
            </Grid>

            <!--  应用安装方式设置  -->
            <Grid
                Grid.Row="1"
                Height="60"
                Margin="0,0,0,2"
                Padding="16,12"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="{StaticResource ControlCornerRadius}">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <FontIcon
                    Grid.Column="0"
                    Margin="0,0,12,0"
                    FontSize="16"
                    Glyph="&#xECC8;" />

                <StackPanel
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Orientation="Vertical">

                    <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind root:ResourceService.GetLocalized('Settings/InstallMode')}" />

                    <TextBlock
                        x:Name="InstallModeDescription"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="{x:Bind root:ResourceService.GetLocalized('Settings/InstallModeDescription')}"
                        TextTrimming="CharacterEllipsis"
                        TextWrapping="NoWrap">

                        <ToolTipService.ToolTip>
                            <ToolTip
                                MaxWidth="9999"
                                Content="{x:Bind root:ResourceService.GetLocalized('Settings/InstallModeDescription')}"
                                Visibility="{x:Bind InstallModeDescription.IsTextTrimmed, Mode=OneWay}" />
                        </ToolTipService.ToolTip>
                    </TextBlock>
                </StackPanel>

                <DropDownButton
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    Content="{x:Bind InstallMode.Value, Mode=OneWay}">

                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <RadioMenuFlyoutItem
                                Height="32"
                                Padding="11,0"
                                Click="{x:Bind OnInstallModeSelectClicked}"
                                GroupName="InstallModeModeRadioGroup"
                                IsChecked="{x:Bind InstallMode.Key.Equals(InstallModeList[0].Key), Mode=OneWay}"
                                Tag="0"
                                Text="{x:Bind InstallModeList[0].Value}" />

                            <RadioMenuFlyoutItem
                                Height="32"
                                Padding="11,0"
                                Click="{x:Bind OnInstallModeSelectClicked}"
                                GroupName="InstallModeModeRadioGroup"
                                IsChecked="{x:Bind InstallMode.Key.Equals(InstallModeList[1].Key), Mode=OneWay}"
                                Tag="1"
                                Text="{x:Bind InstallModeList[1].Value}" />
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
            </Grid>

            <!--  商店区域设置  -->
            <Expander
                Grid.Row="2"
                Margin="0,0,0,2"
                Padding="0"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                IsExpanded="True">

                <Expander.Header>
                    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <FontIcon
                            Grid.Column="0"
                            Margin="0,0,12,0"
                            FontSize="16"
                            Glyph="&#xF49A;" />

                        <StackPanel
                            Grid.Column="1"
                            Margin="0,12"
                            VerticalAlignment="Center"
                            Orientation="Vertical">

                            <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind root:ResourceService.GetLocalized('Settings/StoreCountryOrRegion')}" />

                            <TextBlock
                                x:Name="StoreCountryOrRegionDescription"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Text="{x:Bind root:ResourceService.GetLocalized('Settings/StoreCountryOrRegionDescription')}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="NoWrap">

                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        MaxWidth="9999"
                                        Content="{x:Bind root:ResourceService.GetLocalized('Settings/StoreCountryOrRegionDescription')}"
                                        Visibility="{x:Bind StoreCountryOrRegionDescription.IsTextTrimmed, Mode=OneWay}" />
                                </ToolTipService.ToolTip>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </Expander.Header>

                <Expander.Content>
                    <StackPanel Padding="0" HorizontalAlignment="Stretch">
                        <Grid
                            Height="52"
                            Padding="44,0,8,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Orientation="Vertical">

                                <TextBlock
                                    VerticalAlignment="Center"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/UseSystemRegion')}" />

                                <TextBlock
                                    x:Name="CurrentCountryOrRegionText"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="NoWrap">

                                    <Run Text="{x:Bind root:ResourceService.GetLocalized('Settings/CurrentCountryOrRegion')}" />
                                    <Run Text="{x:Bind CurrentCountryOrRegion.DisplayName, Mode=OneWay}" />

                                    <ToolTipService.ToolTip>
                                        <ToolTip MaxWidth="9999" Visibility="{x:Bind CurrentCountryOrRegionText.IsTextTrimmed, Mode=OneWay}">
                                            <TextBlock>
                                                <Run Text="{x:Bind root:ResourceService.GetLocalized('Settings/CurrentCountryOrRegion')}" />
                                                <Run Text="{x:Bind CurrentCountryOrRegion.DisplayName, Mode=OneWay}" />
                                            </TextBlock>
                                        </ToolTip>
                                    </ToolTipService.ToolTip>
                                </TextBlock>
                            </StackPanel>

                            <HyperlinkButton
                                Grid.Column="1"
                                Margin="0,0,6,0"
                                VerticalAlignment="Center"
                                Click="{x:Bind OnSystemRegionSettingsClicked}"
                                Content="{x:Bind root:ResourceService.GetLocalized('Settings/SystemRegionSettings')}" />

                            <StackPanel
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">

                                <TextBlock
                                    VerticalAlignment="Center"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/UseSystemRegionOffContent')}"
                                    Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(UseSystemRegionValue), Mode=OneWay}" />

                                <TextBlock
                                    VerticalAlignment="Center"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/UseSystemRegionOnContent')}"
                                    Visibility="{x:Bind UseSystemRegionValue, Mode=OneWay}" />

                                <ToggleSwitch
                                    MinWidth="0"
                                    Margin="10,-2,-2,0"
                                    IsOn="{x:Bind UseSystemRegionValue, Mode=OneWay}"
                                    OffContent=""
                                    OnContent=""
                                    Toggled="{x:Bind OnUseSystemRegionToggled}" />
                            </StackPanel>
                        </Grid>

                        <MenuFlyoutSeparator />

                        <Grid
                            Height="52"
                            Padding="44,0,16,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/StoreRegion')}" />
                                <TextBlock
                                    x:Name="StoreRegionDescription"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/StoreRegionDescription')}"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="NoWrap">

                                    <ToolTipService.ToolTip>
                                        <ToolTip
                                            MaxWidth="9999"
                                            Content="{x:Bind root:ResourceService.GetLocalized('Settings/StoreRegionDescription')}"
                                            Visibility="{x:Bind StoreRegionDescription.IsTextTrimmed, Mode=OneWay}" />
                                    </ToolTipService.ToolTip>
                                </TextBlock>
                            </StackPanel>

                            <DropDownButton
                                Grid.Column="3"
                                VerticalAlignment="Center"
                                Content="{x:Bind StoreRegion.DisplayName, Mode=OneWay}"
                                IsEnabled="{x:Bind UseSystemRegionValue.Equals(x:False), Mode=OneWay}">

                                <DropDownButton.Flyout>
                                    <Flyout
                                        x:Name="StoreRegionFlyout"
                                        Opened="{x:Bind OnStoreRegionFlyoutOpened}"
                                        Placement="Bottom"
                                        ShouldConstrainToRootBounds="False"
                                        SystemBackdrop="{StaticResource AcrylicBackgroundFillColorDefaultBackdrop}">

                                        <Flyout.FlyoutPresenterStyle>
                                            <Style BasedOn="{StaticResource DefaultFlyoutPresenterStyle}" TargetType="FlyoutPresenter">
                                                <Setter Property="Padding" Value="0,1" />
                                                <Setter Property="Background" Value="Transparent" />
                                                <Setter Property="MinHeight" Value="0" />
                                            </Style>
                                        </Flyout.FlyoutPresenterStyle>

                                        <ItemsView
                                            x:Name="StoreRegionItemsView"
                                            MaxHeight="300"
                                            Background="Transparent"
                                            ItemsSource="{x:Bind StoreRegionCollection}"
                                            SelectionMode="None">

                                            <ItemsView.Resources>
                                                <SolidColorBrush x:Key="ItemContainerPointerOverBackground" Color="Transparent" />
                                                <SolidColorBrush x:Key="ItemContainerPressedBackground" Color="Transparent" />
                                            </ItemsView.Resources>

                                            <ItemsView.ItemTemplate>
                                                <DataTemplate x:DataType="model:StoreRegionModel">
                                                    <ItemContainer>
                                                        <RadioMenuFlyoutItem
                                                            Height="32"
                                                            Padding="11,0"
                                                            Command="{StaticResource StoreRegionCommand}"
                                                            CommandParameter="{x:Bind}"
                                                            GroupName="StoreRegionRadioGroup"
                                                            IsChecked="{x:Bind IsChecked, Mode=OneWay}"
                                                            Text="{x:Bind StoreRegionInfo.DisplayName}" />
                                                    </ItemContainer>
                                                </DataTemplate>
                                            </ItemsView.ItemTemplate>
                                        </ItemsView>
                                    </Flyout>
                                </DropDownButton.Flyout>
                            </DropDownButton>
                        </Grid>
                    </StackPanel>
                </Expander.Content>
            </Expander>

            <!--  链接过滤设置  -->
            <Expander
                Grid.Row="3"
                Margin="0,0,0,2"
                Padding="0"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                IsExpanded="True">

                <Expander.Header>
                    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <FontIcon
                            Grid.Column="0"
                            Margin="0,0,12,0"
                            FontSize="16"
                            Glyph="&#xE71C;" />

                        <StackPanel
                            Grid.Column="1"
                            Margin="0,12"
                            VerticalAlignment="Center"
                            Orientation="Vertical">

                            <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind root:ResourceService.GetLocalized('Settings/LinkFilter')}" />

                            <TextBlock
                                x:Name="LinkFilterDescription"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Text="{x:Bind root:ResourceService.GetLocalized('Settings/LinkFilterDescription')}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="NoWrap">

                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        MaxWidth="9999"
                                        Content="{x:Bind root:ResourceService.GetLocalized('Settings/LinkFilterDescription')}"
                                        Visibility="{x:Bind LinkFilterDescription.IsTextTrimmed, Mode=OneWay}" />
                                </ToolTipService.ToolTip>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </Expander.Header>

                <Expander.Content>
                    <StackPanel Padding="0" HorizontalAlignment="Stretch">
                        <Grid
                            Height="52"
                            Padding="44,0,8,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Orientation="Vertical">

                                <TextBlock
                                    VerticalAlignment="Center"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/EncryptedPackage')}" />
                                <TextBlock
                                    x:Name="EncryptedPackageDescription"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/EncryptedPackageDescription')}"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="NoWrap">

                                    <ToolTipService.ToolTip>
                                        <ToolTip
                                            MaxWidth="9999"
                                            Content="{x:Bind root:ResourceService.GetLocalized('Settings/EncryptedPackageDescription')}"
                                            Visibility="{x:Bind EncryptedPackageDescription.IsTextTrimmed, Mode=OneWay}" />
                                    </ToolTipService.ToolTip>
                                </TextBlock>
                            </StackPanel>

                            <StackPanel
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">

                                <TextBlock
                                    VerticalAlignment="Center"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/EncryptedPackageOffContent')}"
                                    Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(EncryptedPackageFilterValue), Mode=OneWay}" />

                                <TextBlock
                                    VerticalAlignment="Center"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/EncryptedPackageOnContent')}"
                                    Visibility="{x:Bind EncryptedPackageFilterValue, Mode=OneWay}" />

                                <ToggleSwitch
                                    MinWidth="0"
                                    Margin="10,-2,-2,0"
                                    IsOn="{x:Bind EncryptedPackageFilterValue, Mode=OneWay}"
                                    OffContent=""
                                    OnContent=""
                                    Toggled="{x:Bind OnEncryptedPackageToggled}" />
                            </StackPanel>
                        </Grid>

                        <MenuFlyoutSeparator />

                        <Grid
                            Height="52"
                            Padding="44,0,8,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/BlockMap')}" />
                                <TextBlock
                                    x:Name="BlockMapDescription"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/BlockMapDescription')}"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="NoWrap">

                                    <ToolTipService.ToolTip>
                                        <ToolTip
                                            MaxWidth="9999"
                                            Content="{x:Bind root:ResourceService.GetLocalized('Settings/BlockMapDescription')}"
                                            Visibility="{x:Bind BlockMapDescription.IsTextTrimmed, Mode=OneWay}" />
                                    </ToolTipService.ToolTip>
                                </TextBlock>
                            </StackPanel>

                            <StackPanel
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">

                                <TextBlock
                                    VerticalAlignment="Center"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/BlockMapOffContent')}"
                                    Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(BlockMapFilterValue), Mode=OneWay}" />

                                <TextBlock
                                    VerticalAlignment="Center"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/BlockMapOnContent')}"
                                    Visibility="{x:Bind BlockMapFilterValue, Mode=OneWay}" />

                                <ToggleSwitch
                                    MinWidth="0"
                                    Margin="10,-2,-2,0"
                                    IsOn="{x:Bind BlockMapFilterValue, Mode=OneWay}"
                                    OffContent=""
                                    OnContent=""
                                    Toggled="{x:Bind OnBlockMapToggled}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Expander.Content>
            </Expander>

            <!--  下载管理设置  -->
            <Expander
                x:Name="DownloadOptions"
                Grid.Row="4"
                Margin="0,0,0,2"
                Padding="0"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                IsExpanded="True">

                <Expander.Header>
                    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <FontIcon
                            Grid.Column="0"
                            Margin="0,0,12,0"
                            FontSize="16"
                            Glyph="&#xE896;" />

                        <StackPanel
                            Grid.Column="1"
                            Margin="0,12"
                            VerticalAlignment="Center"
                            Orientation="Vertical">

                            <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind root:ResourceService.GetLocalized('Settings/DownloadOptions')}" />

                            <TextBlock
                                x:Name="DownloadOptionsDescription"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Text="{x:Bind root:ResourceService.GetLocalized('Settings/DownloadOptionsDescription')}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="NoWrap">

                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        MaxWidth="9999"
                                        Content="{x:Bind root:ResourceService.GetLocalized('Settings/DownloadOptionsDescription')}"
                                        Visibility="{x:Bind DownloadOptionsDescription.IsTextTrimmed, Mode=OneWay}" />
                                </ToolTipService.ToolTip>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </Expander.Header>

                <Expander.Content>
                    <StackPanel Padding="0" HorizontalAlignment="Stretch">
                        <Grid
                            Height="52"
                            Padding="44,0,16,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Orientation="Vertical">

                                <TextBlock
                                    VerticalAlignment="Center"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/FileStoragePath')}" />

                                <TextBlock
                                    Margin="0,0,5,0"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="NoWrap">

                                    <Hyperlink Click="{x:Bind OnDownloadOpenFolderClicked}" UnderlineStyle="None">
                                        <Run Text="{x:Bind DownloadFolder.Path, Mode=OneWay}" />
                                    </Hyperlink>

                                    <ToolTipService.ToolTip>
                                        <ToolTip MaxWidth="9999">
                                            <StackPanel HorizontalAlignment="Stretch">
                                                <TextBlock Text="{x:Bind root:ResourceService.GetLocalized('Settings/FileStoragePath')}" />
                                                <TextBlock Text="{x:Bind DownloadFolder.Path, Mode=OneWay}" />
                                                <MenuFlyoutSeparator Margin="4,3" />
                                                <TextBlock Text="{x:Bind root:ResourceService.GetLocalized('Settings/OpenFolderToolTip')}" />
                                            </StackPanel>
                                        </ToolTip>
                                    </ToolTipService.ToolTip>
                                </TextBlock>
                            </StackPanel>

                            <DropDownButton
                                Grid.Column="2"
                                Margin="6,0,0,0"
                                Content="{x:Bind root:ResourceService.GetLocalized('Settings/ChangeFolder')}">

                                <DropDownButton.Flyout>
                                    <MenuFlyout Placement="Bottom">
                                        <MenuFlyoutItem
                                            Height="32"
                                            Padding="11,0"
                                            Click="{x:Bind OnDownloadChangeFolderClicked}"
                                            Tag="AppCache"
                                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/AppCacheFolder')}">

                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xECAA;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>

                                        <MenuFlyoutItem
                                            Height="32"
                                            Padding="11,0"
                                            Click="{x:Bind OnDownloadChangeFolderClicked}"
                                            Tag="Download"
                                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/DownloadFolder')}">

                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE896;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>

                                        <MenuFlyoutItem
                                            Height="32"
                                            Padding="11,0"
                                            Click="{x:Bind OnDownloadChangeFolderClicked}"
                                            Tag="Desktop"
                                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/DesktopFolder')}">

                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE7F4;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>

                                        <MenuFlyoutSeparator />

                                        <MenuFlyoutItem
                                            Height="32"
                                            Padding="11,0"
                                            Click="{x:Bind OnDownloadChangeFolderClicked}"
                                            Tag="Custom"
                                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/Custom')}" />
                                    </MenuFlyout>
                                </DropDownButton.Flyout>
                            </DropDownButton>
                        </Grid>

                        <MenuFlyoutSeparator />

                        <Grid
                            Height="52"
                            Padding="44,0,16,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Orientation="Vertical">

                                <TextBlock
                                    VerticalAlignment="Center"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/DeliveryOptimization')}" />

                                <TextBlock
                                    x:Name="DeliveryOptimizationDescription"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/DeliveryOptimizationDescription')}"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="NoWrap">

                                    <ToolTipService.ToolTip>
                                        <ToolTip
                                            MaxWidth="9999"
                                            Content="{x:Bind root:ResourceService.GetLocalized('Settings/DeliveryOptimizationDescription')}"
                                            Visibility="{x:Bind DeliveryOptimizationDescription.IsTextTrimmed, Mode=OneWay}" />
                                    </ToolTipService.ToolTip>
                                </TextBlock>
                            </StackPanel>

                            <Button
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Click="{x:Bind OnOpenDeliveryOptimizationClicked}"
                                Content="{x:Bind root:ResourceService.GetLocalized('Settings/OpenDeliveryOptimzationSettings')}" />
                        </Grid>

                        <MenuFlyoutSeparator />

                        <Grid
                            Height="52"
                            Padding="44,0,16,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Orientation="Vertical">

                                <TextBlock
                                    VerticalAlignment="Center"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/DoEngineMode')}" />
                                <TextBlock
                                    x:Name="DoEngineModeDescription"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/DoEngineModeDescription')}"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="NoWrap">

                                    <ToolTipService.ToolTip>
                                        <ToolTip
                                            MaxWidth="9999"
                                            Content="{x:Bind root:ResourceService.GetLocalized('Settings/DoEngineModeDescription')}"
                                            Visibility="{x:Bind DoEngineModeDescription.IsTextTrimmed, Mode=OneWay}" />
                                    </ToolTipService.ToolTip>
                                </TextBlock>
                            </StackPanel>

                            <HyperlinkButton
                                Grid.Column="1"
                                Margin="0,0,6,0"
                                VerticalAlignment="Center"
                                Click="{x:Bind OnLearnDoEngineClicked}"
                                Content="{x:Bind root:ResourceService.GetLocalized('Settings/LearnDoEngine')}" />

                            <DropDownButton
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                Content="{x:Bind DoEngineMode.Value, Mode=OneWay}"
                                IsEnabled="{x:Bind helper:InfoHelper.IsDeliveryOptimizationEnabled}">

                                <DropDownButton.Flyout>
                                    <MenuFlyout Placement="Bottom">
                                        <RadioMenuFlyoutItem
                                            Height="32"
                                            Padding="11,0"
                                            Click="{x:Bind OnDoEngineModeSelectClicked}"
                                            GroupName="DoEngineModeModeRadioGroup"
                                            IsChecked="{x:Bind DoEngineMode.Key.Equals(DoEngineModeList[0].Key), Mode=OneWay}"
                                            Tag="0"
                                            Text="{x:Bind DoEngineModeList[0].Value}" />

                                        <RadioMenuFlyoutItem
                                            Height="32"
                                            Padding="11,0"
                                            Click="{x:Bind OnDoEngineModeSelectClicked}"
                                            GroupName="DoEngineModeModeRadioGroup"
                                            IsChecked="{x:Bind DoEngineMode.Key.Equals(DoEngineModeList[1].Key), Mode=OneWay}"
                                            Tag="1"
                                            Text="{x:Bind DoEngineModeList[1].Value}" />
                                    </MenuFlyout>
                                </DropDownButton.Flyout>
                            </DropDownButton>
                        </Grid>
                    </StackPanel>
                </Expander.Content>
            </Expander>
        </Grid>
    </ScrollView>
</Page>
