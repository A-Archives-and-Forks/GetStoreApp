<Page
    x:Class="GetStoreApp.Views.Pages.StorePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:navigation="using:GetStoreApp.Views.CustomControls.Navigation"
    xmlns:root="using:GetStoreApp.Services.Root"
    xmlns:sc="using:GetStoreApp.UI.Controls.Store"
    Loaded="{x:Bind OnLoaded}"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <Grid Padding="0">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="30,15,30,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                FontSize="22"
                Text="{x:Bind root:ResourceService.GetLocalized('Store/Title')}" />

            <Button
                Grid.Column="1"
                VerticalAlignment="Center"
                Click="{x:Bind OnUseInstructionClicked}"
                Content="{x:Bind root:ResourceService.GetLocalized('Store/UseInstruction')}"
                ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Store/UseInstructionToolTip')}" />
        </Grid>

        <navigation:Segmented
            Grid.Row="1"
            Margin="0,8"
            HorizontalAlignment="Center"
            SelectedIndex="{x:Bind SelectedIndex, Mode=OneWay}"
            SelectionChanged="{x:Bind OnSelectionChanged}"
            SelectionMode="Single">

            <navigation:SegmentedItem Content="{x:Bind root:ResourceService.GetLocalized('Store/QueryLinks')}">
                <navigation:SegmentedItem.Icon>
                    <FontIcon Glyph="&#xE71B;" />
                </navigation:SegmentedItem.Icon>
            </navigation:SegmentedItem>

            <navigation:SegmentedItem Content="{x:Bind root:ResourceService.GetLocalized('Store/SearchApps')}" IsEnabled="False">
                <navigation:SegmentedItem.Icon>
                    <FontIcon Glyph="&#xE721;" />
                </navigation:SegmentedItem.Icon>
            </navigation:SegmentedItem>
        </navigation:Segmented>

        <MenuFlyoutSeparator
            Grid.Row="2"
            Margin="35,0,35,3"
            Background="{ThemeResource SurfaceStrokeColorDefaultBrush}" />

        <ScrollViewer
            x:Name="StoreScroll"
            Grid.Row="3"
            HorizontalScrollBarVisibility="Disabled"
            HorizontalScrollMode="Disabled"
            VerticalScrollBarVisibility="Auto"
            VerticalScrollMode="Enabled">

            <Pivot SelectedIndex="{x:Bind SelectedIndex, Mode=OneWay}" Style="{StaticResource PivotStyle}">
                <PivotItem Margin="0">
                    <sc:QueryLinksControl x:Name="QueryLinks" x:FieldModifier="public" />
                </PivotItem>
                <PivotItem Margin="0">
                    <sc:SearchControl x:Name="Search" x:FieldModifier="public" />
                </PivotItem>
            </Pivot>
        </ScrollViewer>
    </Grid>
</Page>
