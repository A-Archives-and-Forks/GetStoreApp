<Page
    x:Class="GetStoreApp.Views.Pages.StorePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:GetStoreApp.Models.Window"
    xmlns:root="using:GetStoreApp.Services.Root"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <Page.Resources>
        <TransitionCollection x:Name="SuppressNavigationTransitionCollection">
            <NavigationThemeTransition>
                <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                    <SuppressNavigationTransitionInfo />
                </NavigationThemeTransition.DefaultNavigationTransitionInfo>
            </NavigationThemeTransition>
        </TransitionCollection>

        <TransitionCollection x:Name="LeftSlideNavigationTransitionCollection">
            <NavigationThemeTransition>
                <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                    <SlideNavigationTransitionInfo Effect="FromLeft" />
                </NavigationThemeTransition.DefaultNavigationTransitionInfo>
            </NavigationThemeTransition>
        </TransitionCollection>

        <TransitionCollection x:Name="RightSlideNavigationTransitionCollection">
            <NavigationThemeTransition>
                <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                    <SlideNavigationTransitionInfo Effect="FromRight" />
                </NavigationThemeTransition.DefaultNavigationTransitionInfo>
            </NavigationThemeTransition>
        </TransitionCollection>
    </Page.Resources>

    <SplitView
        x:Name="StoreSplitView"
        DisplayMode="Overlay"
        OpenPaneLength="320"
        PaneBackground="Transparent"
        PanePlacement="Right">

        <SplitView.Content>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  标题  -->
                <TextBlock
                    Grid.Row="0"
                    Margin="30,10,30,0"
                    FontSize="22"
                    Text="{x:Bind root:ResourceService.GetLocalized('Store/Title')}" />

                <Grid
                    Grid.Row="1"
                    Margin="30,8"
                    HorizontalAlignment="Stretch">

                    <!--  商店应用控制栏  -->
                    <Grid
                        HorizontalAlignment="Center"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="{ThemeResource ControlCornerRadius}">

                        <SelectorBar
                            x:Name="StoreSelectorBar"
                            Padding="0"
                            HorizontalAlignment="Center"
                            SelectedItem="{x:Bind SelectedItem, Mode=OneWay}">

                            <SelectorBarItem
                                Padding="12,6,12,3"
                                IsTapEnabled="True"
                                Tag="0"
                                Tapped="{x:Bind OnSelectorBarTapped}"
                                Text="{x:Bind root:ResourceService.GetLocalized('Store/QueryLinks')}">
                                <SelectorBarItem.Icon>
                                    <FontIcon Glyph="&#xE71B;" />
                                </SelectorBarItem.Icon>
                            </SelectorBarItem>

                            <SelectorBarItem
                                Padding="12,6,12,3"
                                IsTapEnabled="True"
                                Tag="1"
                                Tapped="{x:Bind OnSelectorBarTapped}"
                                Text="{x:Bind root:ResourceService.GetLocalized('Store/SearchApps')}">
                                <SelectorBarItem.Icon>
                                    <FontIcon Glyph="&#xE721;" />
                                </SelectorBarItem.Icon>
                            </SelectorBarItem>
                        </SelectorBar>
                    </Grid>

                    <Button
                        Width="34"
                        Height="34"
                        Padding="0"
                        HorizontalAlignment="Right"
                        ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Store/ViewMoreOptions')}">

                        <Button.Content>
                            <FontIcon FontSize="16" Glyph="&#xE712;" />
                        </Button.Content>

                        <Button.Flyout>
                            <MenuFlyout Placement="Bottom">
                                <MenuFlyoutItem
                                    Click="{x:Bind OnLanguageAndRegionClicked}"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Store/LanguageAndRegion')}"
                                    ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Store/LanguageAndRegionToolTip')}">

                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xF2B7;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>

                                <MenuFlyoutItem
                                    Click="{x:Bind OnUseInstructionClicked}"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Store/UseInstruction')}"
                                    ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Store/UseInstructionToolTip')}">

                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE946;" />
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                            </MenuFlyout>
                        </Button.Flyout>
                    </Button>
                </Grid>

                <MenuFlyoutSeparator
                    Grid.Row="2"
                    Margin="35,0,35,3"
                    Background="{ThemeResource SurfaceStrokeColorDefaultBrush}" />

                <!--  内容  -->
                <Frame
                    x:Name="StoreFrame"
                    Grid.Row="3"
                    Navigated="{x:Bind OnNavigated}"
                    NavigationFailed="{x:Bind OnNavigationFailed}" />
            </Grid>
        </SplitView.Content>

        <SplitView.Pane>
            <!--  使用说明  -->
            <Grid
                Margin="0,10,0,0"
                Background="{ThemeResource NavigationViewDefaultPaneBackground}"
                CornerRadius="4,0,0,4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid
                    Grid.Row="0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="0,0,0,1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <FontIcon
                        Grid.Column="0"
                        Margin="16,0,6,0"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Glyph="&#xE946;" />

                    <TextBlock
                        Grid.Column="1"
                        Margin="0,0,0,2"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Text="{x:Bind root:ResourceService.GetLocalized('Store/UseInstruction')}" />

                    <Button
                        Grid.Column="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Click="{x:Bind OnCloseClicked}"
                        Style="{StaticResource AlternateCloseButtonStyle}"
                        ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Store/Close')}">

                        <Button.Content>
                            <FontIcon
                                Margin="4"
                                FontSize="16"
                                Glyph="&#xE711;" />
                        </Button.Content>
                    </Button>
                </Grid>

                <ScrollView
                    Grid.Row="1"
                    HorizontalScrollBarVisibility="Hidden"
                    HorizontalScrollMode="Disabled"
                    VerticalScrollBarVisibility="Visible"
                    VerticalScrollMode="Enabled">

                    <Grid Margin="0,0,0,30">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            Margin="16,10,16,10"
                            FontSize="15"
                            FontWeight="Normal"
                            Text="{x:Bind root:ResourceService.GetLocalized('Store/BeginnerGuide')}"
                            TextAlignment="Left" />

                        <TextBlock
                            Grid.Row="1"
                            Margin="16,0,16,5"
                            FontSize="14"
                            FontWeight="Normal"
                            Text="{x:Bind root:ResourceService.GetLocalized('Store/QueryLinksHelp1')}"
                            TextAlignment="Justify"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="2"
                            Margin="16,0,16,5"
                            FontSize="14"
                            FontWeight="Normal"
                            Text="{x:Bind root:ResourceService.GetLocalized('Store/QueryLinksHelp2')}"
                            TextAlignment="Justify"
                            TextWrapping="Wrap" />

                        <MenuFlyoutSeparator Grid.Row="3" />

                        <TextBlock
                            Grid.Row="4"
                            Margin="16,10,16,10"
                            FontSize="15"
                            FontWeight="Normal"
                            Text="{x:Bind root:ResourceService.GetLocalized('Store/RequestFailed')}"
                            TextAlignment="Left" />
                        <TextBlock
                            Grid.Row="5"
                            Margin="16,0,16,5"
                            FontSize="14"
                            FontWeight="Normal"
                            Text="{x:Bind root:ResourceService.GetLocalized('Store/RequestFailedDescription')}"
                            TextAlignment="Justify"
                            TextWrapping="Wrap" />
                        <TextBlock
                            Grid.Row="6"
                            Margin="16,0,16,5"
                            FontSize="14"
                            FontWeight="Normal"
                            Text="{x:Bind root:ResourceService.GetLocalized('Store/RequestFailedStep1')}"
                            TextAlignment="Justify"
                            TextWrapping="Wrap" />
                        <TextBlock
                            Grid.Row="7"
                            Margin="16,0,16,5"
                            FontSize="14"
                            FontWeight="Normal"
                            Text="{x:Bind root:ResourceService.GetLocalized('Store/RequestFailedStep2')}"
                            TextAlignment="Justify"
                            TextWrapping="Wrap" />
                        <TextBlock
                            Grid.Row="8"
                            Margin="16,0,16,5"
                            FontSize="14"
                            FontWeight="Normal"
                            Text="{x:Bind root:ResourceService.GetLocalized('Store/RequestFailedStep3')}"
                            TextAlignment="Justify"
                            TextWrapping="Wrap" />
                        <TextBlock
                            Grid.Row="9"
                            Margin="16,0,16,5"
                            FontSize="14"
                            FontWeight="Normal"
                            Text="{x:Bind root:ResourceService.GetLocalized('Store/RequestFailedStep4')}"
                            TextAlignment="Justify"
                            TextWrapping="Wrap" />

                        <StackPanel
                            Grid.Row="10"
                            Margin="16,0,16,5"
                            Orientation="Horizontal"
                            Spacing="15">

                            <TextBlock>
                                <Hyperlink Click="{x:Bind OnCheckNetWorkClicked}" UnderlineStyle="None">
                                    <Run Text="{x:Bind root:ResourceService.GetLocalized('Store/CheckNetwork')}" />
                                </Hyperlink>
                            </TextBlock>

                            <TextBlock>
                                <Hyperlink Click="{x:Bind OnTroubleShootClicked}" UnderlineStyle="None">
                                    <Run Text="{x:Bind root:ResourceService.GetLocalized('Store/TroubleShoot')}" />
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>

                        <MenuFlyoutSeparator Grid.Row="11" />

                        <TextBlock
                            Grid.Row="12"
                            Margin="16,10,16,10"
                            FontSize="15"
                            FontWeight="Normal"
                            Text="{x:Bind root:ResourceService.GetLocalized('Store/PaidApps')}"
                            TextAlignment="Left" />
                        <TextBlock
                            Grid.Row="13"
                            Margin="16,0,16,5"
                            FontSize="14"
                            FontWeight="Normal"
                            Text="{x:Bind root:ResourceService.GetLocalized('Store/PaidAppsDescription')}"
                            TextAlignment="Justify"
                            TextWrapping="Wrap" />
                    </Grid>
                </ScrollView>
            </Grid>
        </SplitView.Pane>
    </SplitView>
</Page>
