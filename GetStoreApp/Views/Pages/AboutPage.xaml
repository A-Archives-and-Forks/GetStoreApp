<Page
    x:Class="GetStoreApp.Views.Pages.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ac="using:GetStoreApp.UI.Controls.About"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Loaded="{x:Bind AboutLoaded}"
    mc:Ignorable="d">

    <Grid Padding="0">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="30,15,30,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                FontSize="26"
                Text="{x:Bind ResourceService.GetLocalized('/About/Title')}" />

            <Button Grid.Column="1">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="了解更多" />
                        <FontIcon
                            FontFamily="Segoe Fluent Icons"
                            Glyph="&#xE70D;"
                            Style="{StaticResource AboutHeaderIconStyle}" />
                    </StackPanel>
                </Button.Content>
            </Button>
        </Grid>

        <ScrollViewer
            x:Name="AboutScroll"
            Grid.Row="1"
            Padding="0,5,0,0"
            HorizontalScrollBarVisibility="Disabled"
            HorizontalScrollMode="Disabled"
            VerticalScrollBarVisibility="Auto"
            VerticalScrollMode="Enabled">

            <StackPanel
                Margin="30,0"
                Padding="0,0,0,30"
                Spacing="3">

                <ac:HeaderControl />

                <ac:IntroductionControl x:Name="Introduction" />

                <ac:ReferenceControl />

                <ac:InstructionsControl x:Name="Instructions" />

                <ac:PrecautionControl />

                <ac:SettingsHelpControl x:Name="SettingsHelp" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
