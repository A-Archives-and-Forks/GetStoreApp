<Page
    x:Class="GetStoreApp.Views.Pages.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ac="using:GetStoreApp.UI.Controls.About"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pageViewModel="using:GetStoreApp.ViewModels.Pages"
    xmlns:root="using:GetStoreApp.Services.Root"
    Loaded="{x:Bind AboutLoaded}"
    mc:Ignorable="d">

    <Page.DataContext>
        <pageViewModel:AboutViewModel x:Name="ViewModel" />
    </Page.DataContext>

    <Grid Padding="0">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="30,15,30,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                FontSize="26"
                Text="{x:Bind root:ResourceService.GetLocalized('About/Title')}" />

            <DropDownButton
                Grid.Column="1"
                Content="{x:Bind root:ResourceService.GetLocalized('About/Others')}"
                ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('About/OthersToolTip')}">
                <DropDownButton.Flyout>
                    <MenuFlyout Placement="Bottom">
                        <MenuFlyoutItem
                            Command="{x:Bind ViewModel.ShowReleaseNotesCommand}"
                            Text="{x:Bind root:ResourceService.GetLocalized('About/ShowReleaseNotes')}"
                            ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('About/ShowReleaseNotesToolTip')}" />
                        <MenuFlyoutItem
                            Command="{x:Bind ViewModel.ShowLicenseCommand}"
                            Text="{x:Bind root:ResourceService.GetLocalized('About/ShowLicense')}"
                            ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('About/ShowLicenseToolTip')}" />
                    </MenuFlyout>
                </DropDownButton.Flyout>
            </DropDownButton>
        </Grid>

        <ScrollViewer
            x:Name="AboutScroll"
            Grid.Row="1"
            HorizontalScrollBarVisibility="Disabled"
            HorizontalScrollMode="Disabled"
            VerticalScrollBarVisibility="Auto"
            VerticalScrollMode="Enabled">

            <StackPanel
                Margin="30,0"
                Padding="0,0,0,30"
                Spacing="3">

                <ac:HeaderControl />

                <ac:IntroductionControl />

                <ac:ReferenceControl />

                <ac:InstructionsControl x:Name="Instructions" />

                <ac:PrecautionControl />

                <ac:SettingsHelpControl x:Name="SettingsHelp" />

                <ac:ThanksControl />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
