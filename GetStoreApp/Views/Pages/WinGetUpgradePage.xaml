<Page
    x:Class="GetStoreApp.Views.Pages.WinGetUpgradePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:converter="using:GetStoreApp.Helpers.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enum="using:GetStoreApp.Extensions.DataType.Enums"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:GetStoreApp.Models"
    xmlns:root="using:GetStoreApp.Services.Root"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <Page.Resources>
        <XamlUICommand x:Name="UpgradeCommand" ExecuteRequested="{x:Bind OnUpgradeExecuteRequested}" />
        <XamlUICommand x:Name="ViewVersionInfoCommand" ExecuteRequested="{x:Bind OnViewVersionInfoExecuteRequested}" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  可更新应用控制栏  -->
        <Grid
            Grid.Row="0"
            Height="66"
            Margin="30,0,30,3"
            Padding="16,8,2,8"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="{StaticResource ControlCornerRadius}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <FontIcon
                Grid.Column="0"
                Margin="0,0,12,0"
                FontSize="16"
                Glyph="&#xE74C;" />

            <TextBlock
                Grid.Column="1"
                VerticalAlignment="Center"
                Text="{x:Bind root:ResourceService.GetLocalized('WinGet/Operation')}" />

            <AppBarSeparator Grid.Column="2" Margin="10,0,10,0" />

            <TextBlock
                Grid.Column="3"
                VerticalAlignment="Center"
                Text="{x:Bind root:ResourceService.GetLocalized('WinGet/UpgradableAppsCountEmpty')}"
                Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityReverseConvert(UpgradableAppsCollection.Count), Mode=OneWay}" />

            <TextBlock
                Grid.Column="3"
                VerticalAlignment="Center"
                Text="{x:Bind x:String.Format(UpgradableAppsCountInfo, UpgradableAppsCollection.Count), Mode=OneWay}"
                Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityConvert(UpgradableAppsCollection.Count), Mode=OneWay}" />

            <CommandBar
                Grid.Column="4"
                Margin="4,0,10,0"
                VerticalAlignment="Center"
                Background="Transparent"
                DefaultLabelPosition="Right">

                <CommandBar.Resources>
                    <SolidColorBrush x:Key="CommandBarBackgroundOpen" Color="Transparent" />
                    <Thickness x:Key="CommandBarBorderThicknessOpen">0</Thickness>
                </CommandBar.Resources>

                <CommandBar.PrimaryCommands>
                    <AppBarButton Label="{x:Bind root:ResourceService.GetLocalized('WinGet/Sort')}" ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('WinGet/SortToolTip')}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE8CB;" />
                        </AppBarButton.Icon>

                        <AppBarButton.Flyout>
                            <MenuFlyout Placement="Bottom">
                                <MenuFlyoutSubItem
                                    Height="32"
                                    Padding="11,0,11,0"
                                    Text="{x:Bind root:ResourceService.GetLocalized('WinGet/SortWay')}">

                                    <RadioMenuFlyoutItem
                                        Height="32"
                                        Padding="11,0"
                                        Click="{x:Bind OnSortWayClicked}"
                                        GroupName="UpgradeSortWayRadioGroup"
                                        IsChecked="{x:Bind IsIncrease, Mode=OneWay}"
                                        Tag="True"
                                        Text="{x:Bind root:ResourceService.GetLocalized('WinGet/SortIncrease')}" />

                                    <RadioMenuFlyoutItem
                                        Height="32"
                                        Padding="11,0"
                                        Click="{x:Bind OnSortWayClicked}"
                                        GroupName="UpgradeSortWayRadioGroup"
                                        IsChecked="{x:Bind IsIncrease.Equals(x:False), Mode=OneWay}"
                                        Tag="False"
                                        Text="{x:Bind root:ResourceService.GetLocalized('WinGet/SortDecrease')}" />
                                </MenuFlyoutSubItem>

                                <MenuFlyoutSubItem
                                    Height="32"
                                    Padding="11,0,11,0"
                                    Text="{x:Bind root:ResourceService.GetLocalized('WinGet/SortRule')}">

                                    <RadioMenuFlyoutItem
                                        Height="32"
                                        Padding="11,0"
                                        Click="{x:Bind OnSortRuleClicked}"
                                        GroupName="UpgradeSortRuleRadioGroup"
                                        IsChecked="{x:Bind x:Object.Equals(SelectedAppSortRuleKind, enum:AppSortRuleKind.DisplayName), Mode=OneWay}"
                                        Tag="{x:Bind enum:AppSortRuleKind.DisplayName}"
                                        Text="{x:Bind root:ResourceService.GetLocalized('WinGet/SortByDisplayName')}" />

                                    <RadioMenuFlyoutItem
                                        Height="32"
                                        Padding="11,0"
                                        Click="{x:Bind OnSortRuleClicked}"
                                        GroupName="UpgradeSortRuleRadioGroup"
                                        IsChecked="{x:Bind x:Object.Equals(SelectedAppSortRuleKind, enum:AppSortRuleKind.PublisherName), Mode=OneWay}"
                                        Tag="{x:Bind enum:AppSortRuleKind.PublisherName}"
                                        Text="{x:Bind root:ResourceService.GetLocalized('WinGet/SortByPublisher')}" />
                                </MenuFlyoutSubItem>
                            </MenuFlyout>
                        </AppBarButton.Flyout>
                    </AppBarButton>

                    <AppBarButton
                        Click="{x:Bind OnCheckUpdateClicked}"
                        IsEnabled="{x:Bind GetIsCheckingUpdate(UpgradableAppsResultKind), Mode=OneWay}"
                        Label="{x:Bind root:ResourceService.GetLocalized('WinGet/CheckUpdate')}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE895;" />
                        </AppBarButton.Icon>
                    </AppBarButton>

                    <AppBarButton Click="{x:Bind OnTaskManagerClicked}" Label="{x:Bind root:ResourceService.GetLocalized('WinGet/TaskManager')}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE71D;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                </CommandBar.PrimaryCommands>

                <CommandBar.SecondaryCommands>
                    <AppBarButton
                        Click="{x:Bind OnOpenTempFolderClicked}"
                        Label="{x:Bind root:ResourceService.GetLocalized('WinGet/OpenTempFolder')}"
                        ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('WinGet/OpenTempFolderToolTip')}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE8B7;" />
                        </AppBarButton.Icon>
                    </AppBarButton>

                    <AppBarButton
                        Click="{x:Bind OnUseInstructionClicked}"
                        Label="{x:Bind root:ResourceService.GetLocalized('WinGet/UseInstruction')}"
                        ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('WinGet/UseInstructionToolTip')}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE946;" />
                        </AppBarButton.Icon>
                    </AppBarButton>

                    <AppBarButton
                        Click="{x:Bind OnDataSourceSettingsClicked}"
                        Label="{x:Bind root:ResourceService.GetLocalized('WinGet/DataSourceSettings')}"
                        ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('WinGet/DataSourceSettingsToolTip')}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE713;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                </CommandBar.SecondaryCommands>
            </CommandBar>
        </Grid>

        <!--  可更新应用状态显示栏  -->
        <Grid
            Grid.Row="1"
            Height="60"
            Margin="30,0,30,0"
            Padding="16,12"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="{StaticResource ControlCornerRadius}"
            Visibility="{x:Bind GetUpgradableAppsSuccessfullyState(UpgradableAppsResultKind, x:False), Mode=OneWay}">

            <Grid>
                <!--  未检查更新  -->
                <TextBlock
                    Margin="0,10"
                    VerticalAlignment="Center"
                    Text="{x:Bind root:ResourceService.GetLocalized('WinGet/NotCheckUpdateTip')}"
                    TextAlignment="Center"
                    ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('WinGet/NotCheckUpdateTip')}"
                    Visibility="{x:Bind CheckUpgradableAppsState(UpgradableAppsResultKind, enum:UpgradableAppsResultKind.NotCheckUpdate), Mode=OneWay}" />

                <!--  正在检查更新中  -->
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="10"
                    Visibility="{x:Bind CheckUpgradableAppsState(UpgradableAppsResultKind, enum:UpgradableAppsResultKind.Querying), Mode=OneWay}">

                    <ProgressRing IsActive="True" IsEnabled="True" />

                    <TextBlock
                        Margin="0,10"
                        VerticalAlignment="Center"
                        Text="{x:Bind root:ResourceService.GetLocalized('WinGet/LoadingUpgradableApps')}"
                        TextAlignment="Center" />
                </StackPanel>

                <!--  搜索失败  -->
                <TextBlock
                    Margin="0,10"
                    VerticalAlignment="Center"
                    Text="{x:Bind UpgradableFailedContent, Mode=OneWay}"
                    TextAlignment="Center"
                    Visibility="{x:Bind CheckUpgradableAppsState(UpgradableAppsResultKind, enum:UpgradableAppsResultKind.Failed), Mode=OneWay}" />
            </Grid>
        </Grid>

        <!--  可更新应用结果展示项目控件  -->
        <ListView
            Grid.Row="2"
            Padding="30,0,30,30"
            ItemsSource="{x:Bind UpgradableAppsCollection, Mode=OneWay}"
            SelectionMode="None"
            Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityConvert(UpgradableAppsCollection.Count), Mode=OneWay}">

            <ListView.ItemContainerStyle>
                <Style BasedOn="{StaticResource DefaultListViewItemStyle}" TargetType="ListViewItem">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="Margin" Value="0" />
                    <Setter Property="MinHeight" Value="0" />
                    <Setter Property="Padding" Value="0" />
                </Style>
            </ListView.ItemContainerStyle>

            <ItemsControl.ItemContainerTransitions>
                <TransitionCollection />
            </ItemsControl.ItemContainerTransitions>

            <ListView.ItemTemplate>
                <DataTemplate x:DataType="model:UpgradableAppsModel">
                    <Grid
                        Height="60"
                        Margin="0,0,0,2"
                        Padding="16,0"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        ColumnSpacing="10"
                        CornerRadius="{StaticResource ControlCornerRadius}">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Orientation="Vertical">

                            <TextBlock
                                Style="{StaticResource BodyTextBlockStyle}"
                                Text="{x:Bind AppName}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="NoWrap">

                                <ToolTipService.ToolTip>
                                    <ToolTip MaxWidth="9999">
                                        <TextBlock>
                                            <Run Text="{x:Bind root:ResourceService.GetLocalized('WinGet/AppNameToolTip')}" />
                                            <Run Text="{x:Bind AppName}" />
                                        </TextBlock>
                                    </ToolTip>
                                </ToolTipService.ToolTip>
                            </TextBlock>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="NoWrap">

                                    <Run Text="{x:Bind AppPublisher}" />
                                    <Run Text=" | " />
                                    <Run Text="{x:Bind AppCurrentVersion}" />
                                </TextBlock>

                                <FontIcon
                                    Margin="4,1,4,0"
                                    FontSize="{StaticResource CaptionTextBlockFontSize}"
                                    FontWeight="Normal"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Glyph="&#xEBE7;" />

                                <TextBlock
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="NoWrap">

                                    <Run Text="{x:Bind AppNewestVersion}" />
                                    <Run Text=" | " />
                                    <Run Text="{x:Bind AppID}" />
                                </TextBlock>

                                <ToolTipService.ToolTip>
                                    <ToolTip MaxWidth="9999">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0">
                                                <Run Text="{x:Bind root:ResourceService.GetLocalized('WinGet/AppPublisherToolTip')}" />
                                                <Run Text="{x:Bind AppPublisher}" />
                                            </TextBlock>

                                            <TextBlock Grid.Row="1">
                                                <Run Text="{x:Bind root:ResourceService.GetLocalized('WinGet/AppCurrentVersionToolTip')}" />
                                                <Run Text="{x:Bind AppCurrentVersion}" />
                                            </TextBlock>

                                            <TextBlock Grid.Row="2">
                                                <Run Text="{x:Bind root:ResourceService.GetLocalized('WinGet/AppNewestVersionToolTip')}" />
                                                <Run Text="{x:Bind AppNewestVersion}" />
                                            </TextBlock>

                                            <TextBlock Grid.Row="3">
                                                <Run Text="{x:Bind root:ResourceService.GetLocalized('WinGet/AppIDToolTip')}" />
                                                <Run Text="{x:Bind AppID}" />
                                            </TextBlock>
                                        </Grid>
                                    </ToolTip>
                                </ToolTipService.ToolTip>
                            </StackPanel>
                        </StackPanel>

                        <ProgressRing
                            Grid.Column="1"
                            Width="30"
                            Height="30"
                            IsActive="{x:Bind IsUpgrading, Mode=OneWay}"
                            IsIndeterminate="True"
                            Visibility="{x:Bind IsUpgrading, Mode=OneWay}" />

                        <StackPanel
                            Grid.Column="2"
                            Height="30"
                            BorderBrush="{ThemeResource ButtonBorderBrush}"
                            BorderThickness="{ThemeResource ButtonBorderThemeThickness}"
                            CornerRadius="{ThemeResource ControlCornerRadius}"
                            Orientation="Horizontal">

                            <Button
                                VerticalAlignment="Stretch"
                                VerticalContentAlignment="Center"
                                BorderThickness="0,0,1,0"
                                Command="{StaticResource UpgradeCommand}"
                                CommandParameter="{x:Bind}"
                                Content="{x:Bind root:ResourceService.GetLocalized('WinGet/Upgrade')}"
                                CornerRadius="0"
                                IsEnabled="{x:Bind IsUpgrading.Equals(x:False), Mode=OneWay}"
                                ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('WinGet/Upgrade')}" />

                            <Button
                                Width="35"
                                VerticalAlignment="Stretch"
                                BorderThickness="0"
                                CornerRadius="0"
                                ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('WinGet/ViewMoreOptions')}">

                                <Button.Content>
                                    <AnimatedIcon
                                        Width="12"
                                        Height="12"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        AutomationProperties.AccessibilityView="Raw">
                                        <animatedvisuals:AnimatedChevronDownSmallVisualSource />
                                        <AnimatedIcon.FallbackIconSource>
                                            <FontIconSource
                                                FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                FontSize="8"
                                                Glyph="&#xE96E;"
                                                IsTextScaleFactorEnabled="False" />
                                        </AnimatedIcon.FallbackIconSource>
                                    </AnimatedIcon>
                                </Button.Content>

                                <Button.Flyout>
                                    <MenuFlyout Placement="Bottom">
                                        <MenuFlyoutItem
                                            Height="32"
                                            Padding="11,0"
                                            Command="{StaticResource ViewVersionInfoCommand}"
                                            CommandParameter="{x:Bind}"
                                            Text="{x:Bind root:ResourceService.GetLocalized('WinGet/ViewVersionInfo')}">

                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE946;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                    </MenuFlyout>
                                </Button.Flyout>
                            </Button>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
