<Page
    x:Class="GetStoreApp.Views.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sc="using:GetStoreApp.UI.Controls.Settings"
    Loaded="{x:Bind SettingsLoaded}"
    NavigationCacheMode="Required"
    mc:Ignorable="d">

    <Grid Padding="0">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="30,15,30,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                FontSize="26"
                Text="{x:Bind ResourceService.GetLocalized('/Settings/Title')}" />

            <Button
                Grid.Column="1"
                Command="{x:Bind ViewModel.RestartCommand}"
                Content="{x:Bind ResourceService.GetLocalized('/Settings/RestartApp')}"
                ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/Settings/RestartAppToolTip')}" />
        </Grid>

        <ScrollViewer
            x:Name="SettingsScroll"
            Grid.Row="1"
            Padding="0,5,0,0"
            HorizontalScrollBarVisibility="Disabled"
            HorizontalScrollMode="Disabled"
            VerticalScrollBarVisibility="Auto"
            VerticalScrollMode="Enabled">

            <StackPanel
                Margin="30,0"
                Padding="0,0,0,30"
                Spacing="3">

                <TextBlock
                    Margin="0,0,0,5"
                    FontSize="16"
                    Style="{StaticResource BodyTextBlockStyle}"
                    Text="{x:Bind ResourceService.GetLocalized('/Settings/Appearance')}" />

                <sc:ThemeControl />

                <sc:BackdropControl />

                <sc:LauguageControl />

                <sc:TopMostControl />

                <TextBlock
                    Margin="0,5"
                    FontSize="16"
                    Style="{StaticResource BodyTextBlockStyle}"
                    Text="{x:Bind ResourceService.GetLocalized('/Settings/General')}" />

                <sc:NotificationControl />

                <sc:UseInstructionControl />

                <sc:HistoryLiteConfigControl />

                <sc:RegionControl />

                <sc:LinkFilterControl />

                <sc:DownloadOptionsControl x:Name="DownloadOptions" />

                <TextBlock
                    Margin="0,5"
                    FontSize="16"
                    Style="{StaticResource BodyTextBlockStyle}"
                    Text="{x:Bind ResourceService.GetLocalized('/Settings/Advanced')}" />

                <sc:InstallModeControl />

                <sc:TraceCleanupControl />

                <sc:AppExitControl />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
