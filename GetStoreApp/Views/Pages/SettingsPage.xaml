                                            Visibility="{x:Bind TraceCleanupDescription.IsTextTrimmed, Mode=OneWay}" />
                                    </ToolTipService.ToolTip>
                                </TextBlock>
                            </StackPanel>

                            <Button
                                Grid.Column="2"
                                MinWidth="100"
                                Click="{x:Bind OnTraceCleanupClicked}"
                                Content="{x:Bind root:ResourceService.GetLocalized('Settings/TraceClear')}" />
                        </Grid>

                        <!--  日志记录设置  -->
                        <Expander
                            Padding="0"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Stretch"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            IsExpanded="True">

                            <Expander.Header>
                                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <FontIcon
                                        Grid.Column="0"
                                        Margin="0,0,12,0"
                                        FontSize="16"
                                        Glyph="&#xE70B;" />

                                    <StackPanel
                                        Grid.Column="1"
                                        Margin="0,12"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">

                                        <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind root:ResourceService.GetLocalized('Settings/LogRecord')}" />

                                        <TextBlock
                                            x:Name="LogRecordDescription"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/LogRecordDescription')}"
                                            TextTrimming="CharacterEllipsis"
                                            TextWrapping="NoWrap">

                                            <ToolTipService.ToolTip>
                                                <ToolTip
                                                    MaxWidth="9999"
                                                    Content="{x:Bind root:ResourceService.GetLocalized('Settings/LogRecordDescription')}"
                                                    Visibility="{x:Bind LogRecordDescription.IsTextTrimmed, Mode=OneWay}" />
                                            </ToolTipService.ToolTip>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                            </Expander.Header>

                            <Expander.Content>
                                <StackPanel Padding="0" HorizontalAlignment="Stretch">
                                    <Grid
                                        Height="52"
                                        Padding="44,0,16,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center">

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel
                                            Grid.Column="0"
                                            VerticalAlignment="Center"
                                            Orientation="Vertical">

                                            <TextBlock
                                                VerticalAlignment="Center"
                                                Style="{StaticResource BodyTextBlockStyle}"
                                                Text="{x:Bind root:ResourceService.GetLocalized('Settings/LogFolder')}" />

                                            <TextBlock
                                                x:Name="LogFolderDescription"
                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                Style="{StaticResource CaptionTextBlockStyle}"
                                                Text="{x:Bind root:ResourceService.GetLocalized('Settings/LogFolderDescription')}"
                                                TextTrimming="CharacterEllipsis"
                                                TextWrapping="NoWrap">

                                                <ToolTipService.ToolTip>
                                                    <ToolTip
                                                        MaxWidth="9999"
                                                        Content="{x:Bind root:ResourceService.GetLocalized('Settings/LogFolderDescription')}"
                                                        Visibility="{x:Bind LogFolderDescription.IsTextTrimmed, Mode=OneWay}" />
                                                </ToolTipService.ToolTip>
                                            </TextBlock>
                                        </StackPanel>

                                        <Button
                                            Grid.Column="1"
                                            VerticalAlignment="Center"
                                            Click="{x:Bind OnOpenLogFolderClicked}"
                                            Content="{x:Bind root:ResourceService.GetLocalized('Settings/OpenLogFolder')}" />
                                    </Grid>

                                    <MenuFlyoutSeparator />

                                    <Grid
                                        Height="52"
                                        Padding="44,0,16,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center">

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel
                                            Grid.Column="0"
                                            VerticalAlignment="Center"
                                            Orientation="Vertical">

                                            <TextBlock
                                                VerticalAlignment="Center"
                                                Style="{StaticResource BodyTextBlockStyle}"
                                                Text="{x:Bind root:ResourceService.GetLocalized('Settings/ClearLog')}" />

                                            <TextBlock
                                                x:Name="ClearLogDescription"
                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                Style="{StaticResource CaptionTextBlockStyle}"
                                                Text="{x:Bind root:ResourceService.GetLocalized('Settings/ClearLogDescription')}"
                                                TextTrimming="CharacterEllipsis"
                                                TextWrapping="NoWrap">

                                                <ToolTipService.ToolTip>
                                                    <ToolTip
                                                        MaxWidth="9999"
                                                        Content="{x:Bind root:ResourceService.GetLocalized('Settings/ClearLogDescription')}"
                                                        Visibility="{x:Bind ClearLogDescription.IsTextTrimmed, Mode=OneWay}" />
                                                </ToolTipService.ToolTip>
                                            </TextBlock>
                                        </StackPanel>

                                        <Button
                                            Grid.Column="1"
                                            VerticalAlignment="Center"
                                            Click="{x:Bind OnClearClicked}"
                                            Content="{x:Bind root:ResourceService.GetLocalized('Settings/Clear')}" />
                                    </Grid>
                                </StackPanel>
                            </Expander.Content>
                        </Expander>
                    </StackPanel>
                </Border>
            </ScrollView>
        </Grid>

        <Grid Visibility="{x:Bind IsWinGetConfigMode, Mode=OneWay}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid
                Grid.Row="0"
                Margin="30,15,30,0"
                ColumnSpacing="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    FontSize="22"
                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/WinGetSourceConfiguration')}" />

                <Button
                    Grid.Column="1"
                    Click="{x:Bind OnAddNewSourceClicked}"
                    Content="{x:Bind root:ResourceService.GetLocalized('Settings/AddNewSource')}"
                    IsEnabled="{x:Bind IsLoadedCompleted, Mode=OneWay}" />

                <Button
                    Grid.Column="2"
                    Click="{x:Bind OnRefreshClicked}"
                    Content="{x:Bind root:ResourceService.GetLocalized('Settings/Refresh')}"
                    IsEnabled="{x:Bind IsLoadedCompleted, Mode=OneWay}" />
            </Grid>

            <Grid
                x:Name="LoadingGrid"
                Grid.Row="1"
                Margin="30,3,30,0"
                Padding="16,12"
                x:Load="{x:Bind IsLoadedCompleted.Equals(x:False), Mode=OneWay}"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="{StaticResource ControlCornerRadius}">

                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="10">

                    <ProgressRing IsActive="True" IsEnabled="True" />

                    <TextBlock
                        Margin="0,10"
                        VerticalAlignment="Center"
                        Text="{x:Bind root:ResourceService.GetLocalized('Settings/LoadingWinGetSource')}"
                        TextAlignment="Center" />
                </StackPanel>
            </Grid>

            <Grid
                Grid.Row="2"
                Padding="0,3,0,0"
                Visibility="{x:Bind IsLoadedCompleted, Mode=OneWay}">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid
                        Grid.Row="0"
                        Margin="30,0"
                        Padding="16,12"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="{StaticResource ControlCornerRadius}"
                        Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityReverseConvert(WinGetSourceCollection.Count), Mode=OneWay}">
                        <TextBlock
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/WinGetSourceEmpty')}"
                            TextAlignment="Center" />
                    </Grid>

                    <ItemsView
                        Grid.Row="1"
                        Padding="30,0,30,30"
                        CornerRadius="0"
                        ItemsSource="{x:Bind WinGetSourceCollection, Mode=OneWay}"
                        SelectionMode="None"
                        Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityConvert(WinGetSourceCollection.Count), Mode=OneWay}">

                        <ItemsView.Layout>
                            <StackLayout />
                        </ItemsView.Layout>

                        <ItemsView.ItemTemplate>
                            <DataTemplate x:DataType="model:WinGetSourceModel">
                                <ItemContainer CornerRadius="0">
                                    <Expander
                                        Margin="0,0,0,3"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Stretch"
                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        IsExpanded="False">

                                        <Expander.Header>
                                            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <CheckBox
                                                    Grid.Column="0"
                                                    MinWidth="0"
                                                    Margin="0,0,12,0"
                                                    Command="{StaticResource CheckBoxClickCommand}"
                                                    IsChecked="{x:Bind IsSelected, Mode=TwoWay}">

                                                    <ToolTipService.ToolTip>
                                                        <ToolTip MaxWidth="9999">
                                                            <Grid>
                                                                <TextBlock Text="{x:Bind root:ResourceService.GetLocalized('Settings/SelectedToolTip')}" Visibility="{x:Bind IsSelected, Mode=OneWay}" />
                                                                <TextBlock Text="{x:Bind root:ResourceService.GetLocalized('Settings/UnSelectedToolTip')}" Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(IsSelected), Mode=OneWay}" />
                                                            </Grid>
                                                        </ToolTip>
                                                    </ToolTipService.ToolTip>
                                                </CheckBox>

                                                <StackPanel
                                                    Grid.Column="1"
                                                    Margin="0,12"
                                                    VerticalAlignment="Center"
                                                    Orientation="Vertical">

                                                    <TextBlock
                                                        Style="{StaticResource BodyTextBlockStyle}"
                                                        Text="{x:Bind Name}"
                                                        TextTrimming="CharacterEllipsis"
                                                        TextWrapping="NoWrap">

                                                        <ToolTipService.ToolTip>
                                                            <ToolTip MaxWidth="9999">
                                                                <TextBlock>
                                                                    <Run Text="{x:Bind root:ResourceService.GetLocalized('Settings/WinGetSourceName')}" />
                                                                    <Run Text="{x:Bind Name}" />
                                                                </TextBlock>
                                                            </ToolTip>
                                                        </ToolTipService.ToolTip>
                                                    </TextBlock>

                                                    <TextBlock
                                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                        Style="{StaticResource CaptionTextBlockStyle}"
                                                        Text="{x:Bind Arguments}"
                                                        TextTrimming="CharacterEllipsis"
                                                        TextWrapping="NoWrap">

                                                        <ToolTipService.ToolTip>
                                                            <ToolTip MaxWidth="9999">
                                                                <TextBlock>
                                                                    <Run Text="{x:Bind root:ResourceService.GetLocalized('Settings/WinGetSourceArguments')}" />
                                                                    <Run Text="{x:Bind Arguments}" />
                                                                </TextBlock>
                                                            </ToolTip>
                                                        </ToolTipService.ToolTip>
                                                    </TextBlock>
                                                </StackPanel>

                                                <StackPanel
                                                    Grid.Column="3"
                                                    Height="30"
                                                    BorderBrush="{ThemeResource ButtonBorderBrush}"
                                                    BorderThickness="{ThemeResource ButtonBorderThemeThickness}"
                                                    CornerRadius="{ThemeResource ControlCornerRadius}"
                                                    Orientation="Horizontal">

                                                    <Button
                                                        VerticalAlignment="Stretch"
                                                        VerticalContentAlignment="Center"
                                                        BorderThickness="0,0,1,0"
                                                        Command="{StaticResource EditCommand}"
                                                        CommandParameter="{x:Bind}"
                                                        Content="{x:Bind root:ResourceService.GetLocalized('Settings/Edit')}"
                                                        CornerRadius="0"
                                                        ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Settings/EditToolTip')}" />

                                                    <Button
                                                        Width="35"
                                                        VerticalAlignment="Stretch"
                                                        BorderThickness="0"
                                                        CornerRadius="0"
                                                        ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Settings/ViewMoreOptions')}">

                                                        <Button.Content>
                                                            <AnimatedIcon
                                                                Width="12"
                                                                Height="12"
                                                                HorizontalAlignment="Right"
                                                                VerticalAlignment="Center"
                                                                AutomationProperties.AccessibilityView="Raw">
                                                                <animatedvisuals:AnimatedChevronDownSmallVisualSource />
                                                                <AnimatedIcon.FallbackIconSource>
                                                                    <FontIconSource
                                                                        FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                                        FontSize="8"
                                                                        Glyph="&#xE96E;"
                                                                        IsTextScaleFactorEnabled="False" />
                                                                </AnimatedIcon.FallbackIconSource>
                                                            </AnimatedIcon>
                                                        </Button.Content>

                                                        <Button.Flyout>
                                                            <MenuFlyout Placement="Bottom">
                                                                <MenuFlyoutItem
                                                                    Height="32"
                                                                    Padding="11,0"
                                                                    Command="{StaticResource RemoveCommand}"
                                                                    CommandParameter="{x:Bind}"
                                                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/Remove')}">

                                                                    <MenuFlyoutItem.Icon>
                                                                        <FontIcon Glyph="&#xE74D;" />
                                                                    </MenuFlyoutItem.Icon>
                                                                </MenuFlyoutItem>
                                                            </MenuFlyout>
                                                        </Button.Flyout>
                                                    </Button>
                                                </StackPanel>
                                            </Grid>
                                        </Expander.Header>

                                        <Expander.Content>
                                            <Grid
                                                Margin="40,0,0,0"
                                                ColumnSpacing="15"
                                                RowSpacing="3">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>

                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <TextBlock
                                                    Grid.Row="0"
                                                    Grid.Column="0"
                                                    FontSize="14"
                                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/Id')}" />

                                                <TextBlock
                                                    Grid.Row="0"
                                                    Grid.Column="1"
                                                    FontSize="14"
                                                    Text="{x:Bind Id}"
                                                    TextWrapping="Wrap" />

                                                <TextBlock
                                                    Grid.Row="1"
                                                    Grid.Column="0"
                                                    FontSize="14"
                                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/Explicit')}" />

                                                <TextBlock
                                                    Grid.Row="1"
                                                    Grid.Column="1"
                                                    FontSize="14"
                                                    Text="{x:Bind Explicit}"
                                                    TextWrapping="Wrap" />

                                                <TextBlock
                                                    Grid.Row="2"
                                                    Grid.Column="0"
                                                    FontSize="14"
                                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/TrustLevel')}" />

                                                <TextBlock
                                                    Grid.Row="2"
                                                    Grid.Column="1"
                                                    FontSize="14"
                                                    Text="{x:Bind TrustLevel}"
                                                    TextWrapping="Wrap" />

                                                <TextBlock
                                                    Grid.Row="3"
                                                    Grid.Column="0"
                                                    FontSize="14"
                                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/LastUpdateTime')}" />

                                                <TextBlock
                                                    Grid.Row="3"
                                                    Grid.Column="1"
                                                    FontSize="14"
                                                    Text="{x:Bind LastUpdateTime}"
                                                    TextWrapping="Wrap" />

                                                <TextBlock
                                                    Grid.Row="4"
                                                    Grid.Column="0"
                                                    FontSize="14"
                                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/Origin')}" />

                                                <TextBlock
                                                    Grid.Row="4"
                                                    Grid.Column="1"
                                                    FontSize="14"
                                                    Text="{x:Bind Origin}"
                                                    TextWrapping="Wrap" />

                                                <TextBlock
                                                    Grid.Row="5"
                                                    Grid.Column="0"
                                                    FontSize="14"
                                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/Type')}" />

                                                <TextBlock
                                                    Grid.Row="5"
                                                    Grid.Column="1"
                                                    FontSize="14"
                                                    Text="{x:Bind Type}"
                                                    TextWrapping="Wrap" />

                                                <TextBlock
                                                    Grid.Row="6"
                                                    Grid.Column="0"
                                                    FontSize="14"
                                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/AcceptSourceAgreements')}" />

                                                <TextBlock
                                                    Grid.Row="6"
                                                    Grid.Column="1"
                                                    FontSize="14"
                                                    Text="{x:Bind AcceptSourceAgreements}"
                                                    TextWrapping="Wrap" />

                                                <TextBlock
                                                    Grid.Row="7"
                                                    Grid.Column="0"
                                                    FontSize="14"
                                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/AdditionalPackageCatalogArguments')}" />

                                                <TextBlock
                                                    Grid.Row="7"
                                                    Grid.Column="1"
                                                    FontSize="14"
                                                    Text="{x:Bind AdditionalPackageCatalogArguments}"
                                                    TextWrapping="Wrap" />

                                                <TextBlock
                                                    Grid.Row="8"
                                                    Grid.Column="0"
                                                    FontSize="14"
                                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/AuthenticationType')}" />

                                                <TextBlock
                                                    Grid.Row="8"
                                                    Grid.Column="1"
                                                    FontSize="14"
                                                    Text="{x:Bind AuthenticationType}"
                                                    TextWrapping="Wrap" />

                                                <TextBlock
                                                    Grid.Row="9"
                                                    Grid.Column="0"
                                                    FontSize="14"
                                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/AuthenticationAccount')}" />

                                                <TextBlock
                                                    Grid.Row="9"
                                                    Grid.Column="1"
                                                    FontSize="14"
                                                    Text="{x:Bind AuthenticationAccount}"
                                                    TextWrapping="Wrap" />

                                                <TextBlock
                                                    Grid.Row="10"
                                                    Grid.Column="0"
                                                    FontSize="14"
                                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/PackageCatalogBackgroundUpdateInterval')}" />

                                                <TextBlock
                                                    Grid.Row="10"
                                                    Grid.Column="1"
                                                    FontSize="14"
                                                    Text="{x:Bind PackageCatalogBackgroundUpdateInterval}"
                                                    TextWrapping="Wrap" />
                                            </Grid>
                                        </Expander.Content>
                                    </Expander>
                                </ItemContainer>
                            </DataTemplate>
                        </ItemsView.ItemTemplate>
                    </ItemsView>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
