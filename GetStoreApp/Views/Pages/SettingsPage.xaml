<Page
    x:Class="GetStoreApp.Views.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="using:GetStoreApp.Services.Root"
    xmlns:text="using:Windows.UI.Text"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <Page.Resources>
        <x:Double x:Key="BreadcrumbBarChevronFontSize">16</x:Double>
        <Thickness x:Key="BreadcrumbBarChevronPadding">8,0</Thickness>

        <TransitionCollection x:Name="SuppressNavigationTransitionCollection">
            <NavigationThemeTransition>
                <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                    <SuppressNavigationTransitionInfo />
                </NavigationThemeTransition.DefaultNavigationTransitionInfo>
            </NavigationThemeTransition>
        </TransitionCollection>

        <TransitionCollection x:Name="LeftSlideNavigationTransitionCollection">
            <NavigationThemeTransition>
                <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                    <SlideNavigationTransitionInfo Effect="FromLeft" />
                </NavigationThemeTransition.DefaultNavigationTransitionInfo>
            </NavigationThemeTransition>
        </TransitionCollection>

        <TransitionCollection x:Name="RightSlideNavigationTransitionCollection">
            <NavigationThemeTransition>
                <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                    <SlideNavigationTransitionInfo Effect="FromRight" />
                </NavigationThemeTransition.DefaultNavigationTransitionInfo>
            </NavigationThemeTransition>
        </TransitionCollection>
    </Page.Resources>

    <SplitView
        x:Name="SettingsSplitView"
        DisplayMode="Overlay"
        OpenPaneLength="320"
        PaneBackground="Transparent"
        PanePlacement="Right">

        <SplitView.Content>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <BreadcrumbBar
                    Grid.Row="0"
                    Margin="30,10,30,0"
                    VerticalAlignment="Center"
                    ItemClicked="{x:Bind OnItemClicked}"
                    ItemsSource="{x:Bind BreadCollection}">

                    <BreadcrumbBar.ItemTemplate>
                        <DataTemplate x:DataType="text:ContentLinkInfo">
                            <BreadcrumbBarItem Content="{Binding}">
                                <BreadcrumbBarItem.ContentTemplate>
                                    <DataTemplate x:DataType="text:ContentLinkInfo">
                                        <TextBlock FontSize="22" Text="{x:Bind DisplayText}" />
                                    </DataTemplate>
                                </BreadcrumbBarItem.ContentTemplate>
                            </BreadcrumbBarItem>
                        </DataTemplate>
                    </BreadcrumbBar.ItemTemplate>
                </BreadcrumbBar>

                <!--  应用管理内容  -->
                <Frame
                    x:Name="SettingsFrame"
                    Grid.Row="1"
                    Navigated="{x:Bind OnNavigated}"
                    NavigationFailed="{x:Bind OnNavigationFailed}" />
            </Grid>
        </SplitView.Content>

        <SplitView.Pane>
            <!--  使用说明  -->
            <Grid
                Margin="0,10,0,0"
                Background="{ThemeResource NavigationViewDefaultPaneBackground}"
                CornerRadius="4,0,0,4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid
                    Grid.Row="0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="0,0,0,1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <FontIcon
                        Grid.Column="0"
                        Margin="16,0,6,0"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Glyph="&#xE946;" />

                    <TextBlock
                        Grid.Column="1"
                        Margin="0,0,0,2"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Text="{x:Bind root:ResourceService.GetLocalized('Settings/SettingsInstruction')}" />

                    <Button
                        Grid.Column="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Click="{x:Bind OnCloseClicked}"
                        Style="{StaticResource AlternateCloseButtonStyle}"
                        ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Settings/Close')}">

                        <Button.Content>
                            <FontIcon
                                Margin="4"
                                FontSize="16"
                                Glyph="&#xE711;" />
                        </Button.Content>
                    </Button>
                </Grid>

                <ScrollViewer
                    Grid.Row="1"
                    HorizontalScrollBarVisibility="Disabled"
                    HorizontalScrollMode="Disabled"
                    VerticalScrollBarVisibility="Visible"
                    VerticalScrollMode="Enabled">

                    <Grid Margin="0,0,0,30">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            Margin="16,10,16,10"
                            FontSize="15"
                            FontWeight="Normal"
                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/LanguageInstruction')}"
                            TextAlignment="Left" />

                        <TextBlock
                            Grid.Row="1"
                            Margin="16,0,16,5"
                            FontSize="14"
                            FontWeight="Normal"
                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/LanguageInstructionDescription')}"
                            TextAlignment="Justify"
                            TextWrapping="Wrap" />

                        <StackPanel
                            Grid.Row="2"
                            Margin="16,0,16,5"
                            Spacing="5">

                            <TextBlock>
                                <Hyperlink Click="{x:Bind OnAppSettingsClicked}" UnderlineStyle="None">
                                    <Run Text="{x:Bind root:ResourceService.GetLocalized('Settings/AppSettings')}" />
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>

                        <MenuFlyoutSeparator Grid.Row="3" />

                        <TextBlock
                            Grid.Row="4"
                            Margin="16,10,16,10"
                            FontSize="15"
                            FontWeight="Normal"
                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/QueryLinksModeInstruction')}"
                            TextAlignment="Left" />

                        <TextBlock
                            Grid.Row="5"
                            Margin="16,0,16,5"
                            FontSize="14"
                            FontWeight="Normal"
                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/QueryLinksModeInstructionDescription')}"
                            TextAlignment="Justify"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="6"
                            Margin="16,0,16,5"
                            FontSize="14"
                            FontWeight="Normal"
                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/QueryLinksCountryOrRegion')}"
                            TextAlignment="Justify"
                            TextWrapping="Wrap" />

                        <MenuFlyoutSeparator Grid.Row="7" />

                        <TextBlock
                            Grid.Row="8"
                            Margin="16,10,16,10"
                            FontSize="15"
                            FontWeight="Normal"
                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/LinkFilterInstruction')}"
                            TextAlignment="Left" />

                        <TextBlock
                            Grid.Row="9"
                            Margin="16,0,16,5"
                            FontSize="14"
                            FontWeight="Normal"
                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/EncryptedPackageInstruction')}"
                            TextAlignment="Justify"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="10"
                            Margin="16,0,16,5"
                            FontSize="14"
                            FontWeight="Normal"
                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/BlockMapInstruction')}"
                            TextAlignment="Justify"
                            TextWrapping="Wrap" />

                        <StackPanel
                            Grid.Row="11"
                            Margin="16,0,16,5"
                            Spacing="5">

                            <TextBlock>
                                <Hyperlink
                                    Click="{x:Bind OnEncryptedPackageClicked}"
                                    NavigateUri="https://github.com/MicrosoftDocs/msix-docs/blob/main/msix-src/package/create-app-package-with-makeappx-tool.md#encrypt-or-decrypt-a-package-or-bundle"
                                    UnderlineStyle="None">
                                    <Run Text="{x:Bind root:ResourceService.GetLocalized('Settings/EncryptedPackageButton')}" />
                                </Hyperlink>
                            </TextBlock>

                            <TextBlock>
                                <Hyperlink
                                    Click="{x:Bind OnBlockMapClicked}"
                                    NavigateUri="https://docs.microsoft.com/uwp/schemas/blockmapschema/app-package-block-map"
                                    UnderlineStyle="None">
                                    <Run Text="{x:Bind root:ResourceService.GetLocalized('Settings/BlockMapButton')}" />
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>

                        <MenuFlyoutSeparator Grid.Row="12" />

                        <TextBlock
                            Grid.Row="13"
                            Margin="16,10,16,10"
                            FontSize="15"
                            FontWeight="Normal"
                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/WinGetConfigInstruction')}"
                            TextAlignment="Left" />

                        <TextBlock
                            Grid.Row="14"
                            Margin="16,0,16,5"
                            FontSize="14"
                            FontWeight="Normal"
                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/WinGetConfigInstructionDescription')}"
                            TextAlignment="Justify"
                            TextWrapping="Wrap" />

                        <StackPanel
                            Grid.Row="15"
                            Margin="16,0,16,5"
                            Spacing="5">

                            <TextBlock>
                                <Hyperlink
                                    Click="{x:Bind OnLearnWinGetConfigClicked}"
                                    NavigateUri="https://learn.microsoft.com/windows/package-manager/configuration"
                                    UnderlineStyle="None">
                                    <Run Text="{x:Bind root:ResourceService.GetLocalized('Settings/LearnWinGetConfig')}" />
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>

                        <MenuFlyoutSeparator Grid.Row="16" />

                        <TextBlock
                            Grid.Row="17"
                            Margin="16,10,16,10"
                            FontSize="15"
                            FontWeight="Normal"
                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/DownloadInstruction')}"
                            TextAlignment="Left" />

                        <TextBlock
                            Grid.Row="18"
                            Margin="16,0,16,5"
                            FontSize="14"
                            FontWeight="Normal"
                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/DownloadDescription1')}"
                            TextAlignment="Justify"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="19"
                            Margin="16,0,16,5"
                            FontSize="14"
                            FontWeight="Normal"
                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/DownloadDescription2')}"
                            TextAlignment="Justify"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="20"
                            Margin="16,0,16,5"
                            FontSize="14"
                            FontWeight="Normal"
                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/DownloadDescription3')}"
                            TextAlignment="Justify"
                            TextWrapping="Wrap" />

                        <StackPanel
                            Grid.Row="21"
                            Margin="16,0,16,5"
                            Spacing="5">

                            <TextBlock>
                                <Hyperlink
                                    Click="{x:Bind OnLearnDeliveryOptimizationClicked}"
                                    NavigateUri="https://learn.microsoft.com/windows/deployment/do/waas-delivery-optimization"
                                    UnderlineStyle="None">
                                    <Run Text="{x:Bind root:ResourceService.GetLocalized('Settings/LearnDeliveryOptimization')}" />
                                </Hyperlink>
                            </TextBlock>

                            <TextBlock>
                                <Hyperlink
                                    Click="{x:Bind OnLearnBitsClicked}"
                                    NavigateUri="https://learn.microsoft.com/windows/win32/bits/background-intelligent-transfer-service-portal"
                                    UnderlineStyle="None">
                                    <Run Text="{x:Bind root:ResourceService.GetLocalized('Settings/LearnBits')}" />
                                </Hyperlink>
                            </TextBlock>

                            <TextBlock>
                                <Hyperlink Click="{x:Bind OnTroubleShootClicked}" UnderlineStyle="None">
                                    <Run Text="{x:Bind root:ResourceService.GetLocalized('Settings/TroubleShoot')}" />
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>

                        <MenuFlyoutSeparator Grid.Row="22" />

                        <TextBlock
                            Grid.Row="23"
                            Margin="16,10,16,10"
                            FontSize="15"
                            FontWeight="Normal"
                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/InstallModeInstruction')}"
                            TextAlignment="Left" />

                        <TextBlock
                            Grid.Row="24"
                            Margin="16,0,16,5"
                            FontSize="14"
                            FontWeight="Normal"
                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/InstallModeDescription1')}"
                            TextAlignment="Justify"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="25"
                            Margin="16,0,16,5"
                            FontSize="14"
                            FontWeight="Normal"
                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/InstallModeDescription2')}"
                            TextAlignment="Justify"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="26"
                            Margin="16,0,16,5"
                            FontSize="14"
                            FontWeight="Normal"
                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/InstallModeDescription3')}"
                            TextAlignment="Justify"
                            TextWrapping="Wrap" />

                        <MenuFlyoutSeparator Grid.Row="27" />

                        <TextBlock
                            Grid.Row="28"
                            Margin="16,10,16,10"
                            FontSize="15"
                            FontWeight="Normal"
                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/OtherOptionInstruction')}"
                            TextAlignment="Left" />

                        <TextBlock
                            Grid.Row="29"
                            Margin="16,0,16,10"
                            FontSize="14"
                            FontWeight="Normal"
                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/OtherOptionInstructionDescription')}"
                            TextAlignment="Justify"
                            TextWrapping="Wrap" />
                    </Grid>
                </ScrollViewer>
            </Grid>
        </SplitView.Pane>
    </SplitView>
</Page>
