<Page
    x:Class="GetStoreApp.Views.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="using:GetStoreApp.Helpers.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="using:GetStoreApp.Services.Root"
    Loaded="{x:Bind OnLoaded}"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <Grid Padding="0">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="30,15,30,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                FontSize="26"
                Text="{x:Bind root:ResourceService.GetLocalized('Settings/Title')}" />

            <Button
                Grid.Column="1"
                Margin="0,0,6,0"
                Click="{x:Bind OnRestartAppsClicked}"
                Content="{x:Bind root:ResourceService.GetLocalized('Settings/RestartApp')}"
                ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Settings/RestartAppToolTip')}" />

            <Button
                Grid.Column="2"
                Click="{x:Bind OnSettingsInstructionClicked}"
                Content="{x:Bind root:ResourceService.GetLocalized('Settings/SettingsInstruction')}" />
        </Grid>

        <ScrollViewer
            x:Name="SettingsScroll"
            Grid.Row="1"
            HorizontalScrollBarVisibility="Disabled"
            HorizontalScrollMode="Disabled"
            VerticalScrollBarVisibility="Auto"
            VerticalScrollMode="Enabled">

            <StackPanel
                Margin="30,0"
                Padding="0,0,0,30"
                Spacing="3">

                <TextBlock
                    Margin="0,0,0,5"
                    FontSize="16"
                    Style="{StaticResource BodyTextBlockStyle}"
                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/Appearance')}" />

                <!--  应用主题设置  -->
                <Grid
                    Height="61"
                    Padding="16,12"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource ControlCornerRadius}">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <FontIcon
                        Grid.Column="0"
                        Margin="0,0,12,0"
                        FontFamily="{ThemeResource SymbolThemeFontFamily}"
                        FontSize="16"
                        Glyph="&#xE790;" />

                    <StackPanel
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Orientation="Vertical">

                        <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind root:ResourceService.GetLocalized('Settings/Theme')}" />

                        <TextBlock
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Style="{StaticResource CaptionTextBlockStyle}"
                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/ThemeDescription')}" />
                    </StackPanel>

                    <HyperlinkButton
                        Grid.Column="2"
                        Margin="0,0,6,0"
                        VerticalAlignment="Center"
                        Click="{x:Bind OnSystemThemeSettingsClicked}"
                        Content="{x:Bind root:ResourceService.GetLocalized('Settings/SystemThemeSettings')}" />

                    <DropDownButton
                        Grid.Column="3"
                        VerticalAlignment="Center"
                        Content="{x:Bind Theme.DisplayMember, Mode=OneWay}">

                        <DropDownButton.Flyout>
                            <MenuFlyout MenuFlyoutPresenterStyle="{StaticResource MenuFlyoutPresenterStyle}" Placement="Bottom">
                                <ToggleMenuFlyoutItem
                                    Click="{x:Bind OnThemeSelectClicked}"
                                    IsChecked="{x:Bind Theme.SelectedValue.Equals(ThemeList[0].SelectedValue), Mode=OneWay}"
                                    Style="{StaticResource ToggleMenuFlyoutItemStyle}"
                                    Tag="0"
                                    Text="{x:Bind ThemeList[0].DisplayMember}" />

                                <ToggleMenuFlyoutItem
                                    Click="{x:Bind OnThemeSelectClicked}"
                                    IsChecked="{x:Bind Theme.SelectedValue.Equals(ThemeList[1].SelectedValue), Mode=OneWay}"
                                    Style="{StaticResource ToggleMenuFlyoutItemStyle}"
                                    Tag="1"
                                    Text="{x:Bind ThemeList[1].DisplayMember}" />

                                <ToggleMenuFlyoutItem
                                    Click="{x:Bind OnThemeSelectClicked}"
                                    IsChecked="{x:Bind Theme.SelectedValue.Equals(ThemeList[2].SelectedValue), Mode=OneWay}"
                                    Style="{StaticResource ToggleMenuFlyoutItemStyle}"
                                    Tag="2"
                                    Text="{x:Bind ThemeList[2].DisplayMember}" />
                            </MenuFlyout>
                        </DropDownButton.Flyout>
                    </DropDownButton>
                </Grid>

                <!--  窗口背景材质设置  -->
                <Grid
                    Height="61"
                    Padding="16,12"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource ControlCornerRadius}">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <FontIcon
                        Grid.Column="0"
                        Margin="0,0,12,0"
                        FontFamily="{ThemeResource SymbolThemeFontFamily}"
                        FontSize="16"
                        Glyph="&#xE771;" />

                    <StackPanel
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Orientation="Vertical">

                        <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind root:ResourceService.GetLocalized('Settings/Backdrop')}" />

                        <TextBlock
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Style="{StaticResource CaptionTextBlockStyle}"
                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/BackdropDescription')}" />
                    </StackPanel>

                    <HyperlinkButton
                        Grid.Column="2"
                        Margin="0,0,6,0"
                        VerticalAlignment="Center"
                        Click="{x:Bind OnSystemBackdropSettingsClicked}"
                        Content="{x:Bind root:ResourceService.GetLocalized('Settings/SystemBackdropSettings')}" />

                    <DropDownButton
                        Grid.Column="3"
                        VerticalAlignment="Center"
                        Content="{x:Bind LocalizeDisplayNumber(Backdrop), Mode=OneWay}">

                        <DropDownButton.Flyout>
                            <MenuFlyout MenuFlyoutPresenterStyle="{StaticResource MenuFlyoutPresenterStyle}" Placement="Bottom">
                                <ToggleMenuFlyoutItem
                                    Click="{x:Bind OnBackdropSelectClicked}"
                                    IsChecked="{x:Bind Backdrop.SelectedValue.Equals(BackdropList[0].SelectedValue), Mode=OneWay}"
                                    Style="{StaticResource ToggleMenuFlyoutItemStyle}"
                                    Tag="0"
                                    Text="{x:Bind BackdropList[0].DisplayMember}" />

                                <MenuFlyoutSubItem
                                    Height="32"
                                    Padding="11,0,11,0"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/Mica')}"
                                    Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityConvert(CanUseMicaBackdrop)}">

                                    <ToggleMenuFlyoutItem
                                        Click="{x:Bind OnBackdropSelectClicked}"
                                        IsChecked="{x:Bind Backdrop.SelectedValue.Equals(BackdropList[1].SelectedValue), Mode=OneWay}"
                                        Style="{StaticResource ToggleMenuFlyoutItemStyle}"
                                        Tag="1"
                                        Text="{x:Bind BackdropList[1].DisplayMember}" />

                                    <ToggleMenuFlyoutItem
                                        Click="{x:Bind OnBackdropSelectClicked}"
                                        IsChecked="{x:Bind Backdrop.SelectedValue.Equals(BackdropList[2].SelectedValue), Mode=OneWay}"
                                        Style="{StaticResource ToggleMenuFlyoutItemStyle}"
                                        Tag="2"
                                        Text="{x:Bind BackdropList[2].DisplayMember}" />
                                </MenuFlyoutSubItem>

                                <MenuFlyoutSubItem
                                    Height="32"
                                    Padding="11,0,11,0"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/DesktopAcrylic')}"
                                    Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityConvert(CanUseMicaBackdrop)}">

                                    <ToggleMenuFlyoutItem
                                        Click="{x:Bind OnBackdropSelectClicked}"
                                        IsChecked="{x:Bind Backdrop.SelectedValue.Equals(BackdropList[3].SelectedValue), Mode=OneWay}"
                                        Style="{StaticResource ToggleMenuFlyoutItemStyle}"
                                        Tag="3"
                                        Text="{x:Bind BackdropList[3].DisplayMember}" />

                                    <ToggleMenuFlyoutItem
                                        Click="{x:Bind OnBackdropSelectClicked}"
                                        IsChecked="{x:Bind Backdrop.SelectedValue.Equals(BackdropList[4].SelectedValue), Mode=OneWay}"
                                        Style="{StaticResource ToggleMenuFlyoutItemStyle}"
                                        Tag="4"
                                        Text="{x:Bind BackdropList[4].DisplayMember}" />

                                    <ToggleMenuFlyoutItem
                                        Click="{x:Bind OnBackdropSelectClicked}"
                                        IsChecked="{x:Bind Backdrop.SelectedValue.Equals(BackdropList[5].SelectedValue), Mode=OneWay}"
                                        Style="{StaticResource ToggleMenuFlyoutItemStyle}"
                                        Tag="5"
                                        Text="{x:Bind BackdropList[5].DisplayMember}" />
                                </MenuFlyoutSubItem>
                            </MenuFlyout>
                        </DropDownButton.Flyout>
                    </DropDownButton>
                </Grid>

                <!--  始终显示背景色设置  -->
                <Grid
                    Height="61"
                    Padding="16,12"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource ControlCornerRadius}">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <FontIcon
                        Grid.Column="0"
                        Margin="0,0,12,0"
                        FontFamily="{ThemeResource SymbolThemeFontFamily}"
                        FontSize="16"
                        Glyph="&#xE81E;" />

                    <StackPanel
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Orientation="Vertical">

                        <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind root:ResourceService.GetLocalized('Settings/AlwaysShowBackdrop')}" />

                        <TextBlock
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Style="{StaticResource CaptionTextBlockStyle}"
                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/AlwaysShowBackdropDescription')}" />
                    </StackPanel>

                    <ToggleSwitch
                        Grid.Column="2"
                        MinWidth="0"
                        Margin="0,-2,0,0"
                        FlowDirection="RightToLeft"
                        IsOn="{x:Bind AlwaysShowBackdropValue, Mode=OneWay}"
                        OffContent="{x:Bind root:ResourceService.GetLocalized('Settings/AlwaysShowBackdropOffContent')}"
                        OnContent="{x:Bind root:ResourceService.GetLocalized('Settings/AlwaysShowBackdropOnContent')}"
                        Style="{StaticResource DefaultToggleSwitchStyle}"
                        Toggled="{x:Bind OnAlwaysShowBackdropToggled}" />
                </Grid>

                <!--  界面语言设置  -->
                <Grid
                    Height="61"
                    Padding="16,12"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource ControlCornerRadius}">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <FontIcon
                        Grid.Column="0"
                        Margin="0,0,12,0"
                        FontFamily="{ThemeResource SymbolThemeFontFamily}"
                        FontSize="16"
                        Glyph="&#xF2B7;" />

                    <StackPanel
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Orientation="Vertical">

                        <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind root:ResourceService.GetLocalized('Settings/Language')}" />

                        <TextBlock
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Style="{StaticResource CaptionTextBlockStyle}"
                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/LanguageDescription')}" />
                    </StackPanel>

                    <HyperlinkButton
                        Grid.Column="2"
                        Margin="0,0,6,0"
                        VerticalAlignment="Center"
                        Click="{x:Bind OnSystemLanguageSettingsClicked}"
                        Content="{x:Bind root:ResourceService.GetLocalized('Settings/SystemLanguageSettings')}" />

                    <DropDownButton
                        Grid.Column="3"
                        VerticalAlignment="Center"
                        Content="{x:Bind AppLanguage.DisplayMember, Mode=OneWay}">

                        <DropDownButton.Flyout>
                            <MenuFlyout x:Name="LanguageFlyout" Placement="Bottom">
                                <MenuFlyout.MenuFlyoutPresenterStyle>
                                    <Style BasedOn="{StaticResource MenuFlyoutPresenterStyle}" TargetType="MenuFlyoutPresenter">
                                        <Setter Property="MaxHeight" Value="200" />
                                    </Style>
                                </MenuFlyout.MenuFlyoutPresenterStyle>
                            </MenuFlyout>
                        </DropDownButton.Flyout>
                    </DropDownButton>
                </Grid>

                <!--  窗口置顶设置  -->
                <Grid
                    Height="61"
                    Padding="16,12"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource ControlCornerRadius}">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <FontIcon
                        Grid.Column="0"
                        Margin="0,0,12,0"
                        FontFamily="{ThemeResource SymbolThemeFontFamily}"
                        FontSize="16"
                        Glyph="&#xE840;" />

                    <StackPanel
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Orientation="Vertical">

                        <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind root:ResourceService.GetLocalized('Settings/TopMost')}" />

                        <TextBlock
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Style="{StaticResource CaptionTextBlockStyle}"
                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/TopMostDescription')}" />
                    </StackPanel>

                    <ToggleSwitch
                        Grid.Column="2"
                        MinWidth="0"
                        Margin="0,-2,0,0"
                        FlowDirection="RightToLeft"
                        IsOn="{x:Bind TopMostValue, Mode=OneWay}"
                        OffContent="{x:Bind root:ResourceService.GetLocalized('Settings/TopMostOffContent')}"
                        OnContent="{x:Bind root:ResourceService.GetLocalized('Settings/TopMostOnContent')}"
                        Toggled="{x:Bind OnTopMostToggled}" />
                </Grid>

                <TextBlock
                    Margin="0,5"
                    FontSize="16"
                    Style="{StaticResource BodyTextBlockStyle}"
                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/General')}" />

                <!--  应用通知设置  -->
                <Grid
                    Height="61"
                    Padding="16,12"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource ControlCornerRadius}">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <FontIcon
                        Grid.Column="0"
                        Margin="0,0,12,0"
                        FontFamily="{ThemeResource SymbolThemeFontFamily}"
                        FontSize="16"
                        Glyph="&#xEA8f;" />

                    <StackPanel
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Orientation="Vertical">

                        <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind root:ResourceService.GetLocalized('Settings/Notification')}" />

                        <TextBlock
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Style="{StaticResource CaptionTextBlockStyle}"
                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/NotificationDescription')}" />
                    </StackPanel>

                    <HyperlinkButton
                        Grid.Column="2"
                        Margin="0,0,6,0"
                        VerticalAlignment="Center"
                        Click="{x:Bind OnSystemNotificationSettingsClicked}"
                        Content="{x:Bind root:ResourceService.GetLocalized('Settings/SystemNotificationSettings')}" />

                    <ToggleSwitch
                        Grid.Column="3"
                        MinWidth="0"
                        Margin="0,-2,0,0"
                        FlowDirection="RightToLeft"
                        IsOn="{x:Bind Notification, Mode=OneWay}"
                        OffContent="{x:Bind root:ResourceService.GetLocalized('Settings/NotificationOffContent')}"
                        OnContent="{x:Bind root:ResourceService.GetLocalized('Settings/NotificationOnContent')}"
                        Toggled="{x:Bind OnNotificationToggled}" />
                </Grid>

                <!--  历史记录设置  -->
                <Grid
                    Height="61"
                    Padding="16,12"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource ControlCornerRadius}">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <FontIcon
                        Grid.Column="0"
                        Margin="0,0,12,0"
                        FontFamily="{ThemeResource SymbolThemeFontFamily}"
                        FontSize="16"
                        Glyph="&#xF738;" />

                    <StackPanel Grid.Column="1" Orientation="Vertical">
                        <TextBlock
                            VerticalAlignment="Center"
                            Style="{StaticResource BodyTextBlockStyle}"
                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/HistoryLite')}" />

                        <TextBlock
                            VerticalAlignment="Center"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Style="{StaticResource CaptionTextBlockStyle}"
                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/HistoryLiteDescription')}" />
                    </StackPanel>

                    <DropDownButton
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        Content="{x:Bind HistoryLiteItem.DisplayMember, Mode=OneWay}">

                        <DropDownButton.Flyout>
                            <MenuFlyout MenuFlyoutPresenterStyle="{StaticResource MenuFlyoutPresenterStyle}" Placement="Bottom">
                                <ToggleMenuFlyoutItem
                                    Click="{x:Bind OnHistoryLiteSelectClicked}"
                                    IsChecked="{x:Bind HistoryLiteItem.SelectedValue.Equals(HistoryLiteNumList[0].SelectedValue), Mode=OneWay}"
                                    Style="{StaticResource ToggleMenuFlyoutItemStyle}"
                                    Tag="0"
                                    Text="{x:Bind HistoryLiteNumList[0].DisplayMember}" />

                                <ToggleMenuFlyoutItem
                                    Click="{x:Bind OnHistoryLiteSelectClicked}"
                                    IsChecked="{x:Bind HistoryLiteItem.SelectedValue.Equals(HistoryLiteNumList[1].SelectedValue), Mode=OneWay}"
                                    Style="{StaticResource ToggleMenuFlyoutItemStyle}"
                                    Tag="1"
                                    Text="{x:Bind HistoryLiteNumList[1].DisplayMember}" />
                            </MenuFlyout>
                        </DropDownButton.Flyout>
                    </DropDownButton>
                </Grid>

                <!--  链接过滤设置  -->
                <Expander
                    Padding="0"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    IsExpanded="True">

                    <Expander.Header>
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <FontIcon
                                Grid.Column="0"
                                Margin="0,0,12,0"
                                FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                FontSize="16"
                                Glyph="&#xE71c;" />

                            <StackPanel
                                Grid.Column="1"
                                Margin="0,12"
                                VerticalAlignment="Center"
                                Orientation="Vertical">

                                <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind root:ResourceService.GetLocalized('Settings/LinkFilter')}" />

                                <TextBlock
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/LinkFilterDescription')}" />
                            </StackPanel>
                        </Grid>
                    </Expander.Header>

                    <Expander.Content>
                        <StackPanel Padding="43,6,16,4" HorizontalAlignment="Stretch">
                            <StackPanel>
                                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Orientation="Vertical">
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            Style="{StaticResource BodyTextBlockStyle}"
                                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/EncryptedPackage')}" />
                                        <TextBlock
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/EncryptedPackageDescription')}" />
                                    </StackPanel>

                                    <ToggleSwitch
                                        Grid.Column="1"
                                        MinWidth="0"
                                        FlowDirection="RightToLeft"
                                        IsOn="{x:Bind EncryptedPackageFilterValue, Mode=OneWay}"
                                        OffContent="{x:Bind root:ResourceService.GetLocalized('Settings/EncryptedPackageOffContent')}"
                                        OnContent="{x:Bind root:ResourceService.GetLocalized('Settings/EncryptedPackageOnContent')}"
                                        Toggled="{x:Bind OnStartWithEToggled}" />
                                </Grid>
                            </StackPanel>

                            <MenuFlyoutSeparator Margin="0,0,0,4" />

                            <StackPanel>
                                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Orientation="Vertical">
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            Style="{StaticResource BodyTextBlockStyle}"
                                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/BlockMap')}" />
                                        <TextBlock
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/BlockMapDescription')}" />
                                    </StackPanel>

                                    <ToggleSwitch
                                        Grid.Column="1"
                                        MinWidth="0"
                                        FlowDirection="RightToLeft"
                                        IsOn="{x:Bind BlockMapFilterValue, Mode=OneWay}"
                                        OffContent="{x:Bind root:ResourceService.GetLocalized('Settings/BlockMapOffContent')}"
                                        OnContent="{x:Bind root:ResourceService.GetLocalized('Settings/BlockMapOnContent')}"
                                        Toggled="{x:Bind OnBlockMapToggled}" />
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </Expander.Content>
                </Expander>

                <!--  WinGet 程序包设置  -->
                <Expander
                    Padding="0"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    IsExpanded="True">

                    <Expander.Header>
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <FontIcon
                                Grid.Column="0"
                                Margin="0,0,12,0"
                                FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                FontSize="16"
                                Glyph="&#xE719;" />

                            <StackPanel
                                Grid.Column="1"
                                Margin="0,12"
                                VerticalAlignment="Center"
                                Orientation="Vertical">

                                <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind root:ResourceService.GetLocalized('Settings/WinGetConfig')}" />

                                <TextBlock
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/WinGetConfigDescription')}" />
                            </StackPanel>
                        </Grid>
                    </Expander.Header>

                    <Expander.Content>
                        <StackPanel Padding="43,6,16,4" HorizontalAlignment="Stretch">
                            <StackPanel>
                                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Orientation="Vertical">
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            Style="{StaticResource BodyTextBlockStyle}"
                                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/WinGetVersion')}" />
                                        <TextBlock
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/WinGetVersionDescription')}" />
                                    </StackPanel>

                                    <Button
                                        Grid.Column="1"
                                        Content="{x:Bind root:ResourceService.GetLocalized('Settings/ShowVersion')}"
                                        ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Settings/ShowVersionToolTip')}">
                                        <Button.Flyout>
                                            <Flyout
                                                FlyoutPresenterStyle="{StaticResource FlyoutPresenterStyle}"
                                                Placement="Bottom"
                                                ShouldConstrainToRootBounds="False">

                                                <StackPanel Width="250" Padding="16,15,16,10">
                                                    <Grid Margin="0,0,0,8">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock
                                                            Grid.Column="0"
                                                            VerticalAlignment="Center"
                                                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/OfficialVersion')}" />
                                                        <TextBlock
                                                            x:Name="OfficialVersionInstalledText"
                                                            Grid.Column="1"
                                                            VerticalAlignment="Center"
                                                            x:Load="{x:Bind IsOfficialVersionExisted}"
                                                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/OfficialVersionInstalled')}" />
                                                        <HyperlinkButton
                                                            x:Name="OfficialVersionInstall"
                                                            Grid.Column="1"
                                                            HorizontalAlignment="Right"
                                                            x:Load="{x:Bind IsOfficialVersionExisted.Equals(x:False), Mode=OneWay}"
                                                            Content="{x:Bind root:ResourceService.GetLocalized('Settings/OfficialVersionInstall')}"
                                                            NavigateUri="https://github.com/microsoft/winget-cli/releases"
                                                            Style="{StaticResource HyperlinkButtonStyle}"
                                                            ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Settings/OfficialVersionInstallToolTip')}" />
                                                    </Grid>

                                                    <Grid Margin="0,0,0,8">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock
                                                            Grid.Column="0"
                                                            VerticalAlignment="Center"
                                                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/DevVersion')}" />
                                                        <TextBlock
                                                            x:Name="DevVersionInstalledText"
                                                            Grid.Column="1"
                                                            VerticalAlignment="Center"
                                                            x:Load="{x:Bind IsDevVersionExisted}"
                                                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/DevVersionInstalled')}" />
                                                        <HyperlinkButton
                                                            x:Name="DevVersionInstall"
                                                            Grid.Column="1"
                                                            HorizontalAlignment="Right"
                                                            x:Load="{x:Bind IsDevVersionExisted.Equals(x:False), Mode=OneWay}"
                                                            Content="{x:Bind root:ResourceService.GetLocalized('Settings/DevVersionInstall')}"
                                                            NavigateUri="https://github.com/microsoft/winget-cli/releases"
                                                            Style="{StaticResource HyperlinkButtonStyle}"
                                                            ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Settings/DevVersionInstallToolTip')}" />
                                                    </Grid>

                                                    <MenuFlyoutSeparator
                                                        x:Name="FlyoutSeperator"
                                                        x:Load="{x:Bind IsBothVersionExisted(IsOfficialVersionExisted, IsDevVersionExisted)}"
                                                        Background="{ThemeResource SurfaceStrokeColorDefaultBrush}" />

                                                    <Grid x:Name="WinGetVersionSwitch" x:Load="{x:Bind IsBothVersionExisted(IsOfficialVersionExisted, IsDevVersionExisted)}">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock
                                                            Grid.Column="0"
                                                            VerticalAlignment="Center"
                                                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/UseDevFirst')}"
                                                            ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Settings/UseDevFirstToolTip')}" />

                                                        <ToggleSwitch
                                                            Grid.Column="1"
                                                            MinWidth="0"
                                                            FlowDirection="RightToLeft"
                                                            IsOn="{x:Bind UseDevVersion, Mode=OneWay}"
                                                            OffContent="{x:Bind root:ResourceService.GetLocalized('Settings/UseDevFirstOffContent')}"
                                                            OnContent="{x:Bind root:ResourceService.GetLocalized('Settings/UseDevFirstOnContent')}"
                                                            Toggled="{x:Bind OnWinGetConfigToggled}" />
                                                    </Grid>
                                                </StackPanel>
                                            </Flyout>
                                        </Button.Flyout>
                                    </Button>
                                </Grid>
                            </StackPanel>

                            <MenuFlyoutSeparator Margin="0,0,0,4" />

                            <StackPanel Margin="0,0,0,6">
                                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Orientation="Vertical">
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            Style="{StaticResource BodyTextBlockStyle}"
                                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/WinGetInstallMode')}" />
                                        <TextBlock
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/WinGetInstallModeDescription')}" />
                                    </StackPanel>

                                    <DropDownButton
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        Content="{x:Bind WinGetInstallMode.DisplayMember, Mode=OneWay}">

                                        <DropDownButton.Flyout>
                                            <MenuFlyout MenuFlyoutPresenterStyle="{StaticResource MenuFlyoutPresenterStyle}" Placement="Bottom">
                                                <ToggleMenuFlyoutItem
                                                    Click="{x:Bind OnWinGetInstallModeSelectClicked}"
                                                    IsChecked="{x:Bind WinGetInstallMode.SelectedValue.Equals(WinGetInstallModeList[0].SelectedValue), Mode=OneWay}"
                                                    Style="{StaticResource ToggleMenuFlyoutItemStyle}"
                                                    Tag="0"
                                                    Text="{x:Bind WinGetInstallModeList[0].DisplayMember}" />

                                                <ToggleMenuFlyoutItem
                                                    Click="{x:Bind OnWinGetInstallModeSelectClicked}"
                                                    IsChecked="{x:Bind WinGetInstallMode.SelectedValue.Equals(WinGetInstallModeList[1].SelectedValue), Mode=OneWay}"
                                                    Style="{StaticResource ToggleMenuFlyoutItemStyle}"
                                                    Tag="1"
                                                    Text="{x:Bind WinGetInstallModeList[1].DisplayMember}" />
                                            </MenuFlyout>
                                        </DropDownButton.Flyout>
                                    </DropDownButton>
                                </Grid>
                            </StackPanel>

                            <MenuFlyoutSeparator Margin="0,0,0,4" />

                            <StackPanel Margin="0,0,0,6">
                                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Orientation="Vertical">
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            Style="{StaticResource BodyTextBlockStyle}"
                                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/WinGetSettings')}" />
                                        <TextBlock
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/WinGetSettingsDescription')}" />
                                    </StackPanel>

                                    <Button
                                        Grid.Column="1"
                                        Click="{x:Bind OnOpenWinGetSettingsClicked}"
                                        Content="{x:Bind root:ResourceService.GetLocalized('Settings/OpenWinGetSettings')}"
                                        IsEnabled="{x:Bind IsWinGetExisted(IsOfficialVersionExisted, IsDevVersionExisted)}"
                                        ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Settings/OpenWinGetSettingsToolTip')}" />
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </Expander.Content>
                </Expander>

                <!--  下载管理设置  -->
                <Expander
                    x:Name="DownloadOptions"
                    Padding="0"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    IsExpanded="True">

                    <Expander.Header>
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <FontIcon
                                Grid.Column="0"
                                Margin="0,0,12,0"
                                FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                FontSize="16"
                                Glyph="&#xE896;" />

                            <StackPanel
                                Grid.Column="1"
                                Margin="0,12"
                                VerticalAlignment="Center"
                                Orientation="Vertical">

                                <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind root:ResourceService.GetLocalized('Settings/DownloadOptions')}" />

                                <TextBlock
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/DownloadOptionsDescription')}" />
                            </StackPanel>
                        </Grid>
                    </Expander.Header>

                    <Expander.Content>
                        <StackPanel Padding="43,6,16,4" HorizontalAlignment="Stretch">
                            <StackPanel>
                                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Orientation="Vertical">
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            Style="{StaticResource BodyTextBlockStyle}"
                                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/FileStoragePath')}" />

                                        <HyperlinkButton
                                            Click="{x:Bind OnOpenFolderClicked}"
                                            Content="{x:Bind DownloadFolder.Path, Mode=OneWay}"
                                            Style="{StaticResource HyperlinkButtonStyle}"
                                            ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Settings/OpenFolderToolTip')}" />
                                    </StackPanel>

                                    <DropDownButton
                                        Grid.Column="2"
                                        Margin="6,0,0,0"
                                        Content="{x:Bind root:ResourceService.GetLocalized('Settings/ChangeFolder')}">

                                        <DropDownButton.Flyout>
                                            <MenuFlyout MenuFlyoutPresenterStyle="{StaticResource MenuFlyoutPresenterStyle}" Placement="Bottom">
                                                <MenuFlyoutItem
                                                    Click="{x:Bind OnChangeFolderClicked}"
                                                    Style="{StaticResource MenuFlyoutItemStyle}"
                                                    Tag="AppCache"
                                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/AppCacheFolder')}" />

                                                <MenuFlyoutItem
                                                    Click="{x:Bind OnChangeFolderClicked}"
                                                    Style="{StaticResource MenuFlyoutItemStyle}"
                                                    Tag="Download"
                                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/DownloadFolder')}" />

                                                <MenuFlyoutItem
                                                    Click="{x:Bind OnChangeFolderClicked}"
                                                    Style="{StaticResource MenuFlyoutItemStyle}"
                                                    Tag="Desktop"
                                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/DesktopFolder')}" />

                                                <MenuFlyoutSeparator />

                                                <MenuFlyoutItem
                                                    Click="{x:Bind OnChangeFolderClicked}"
                                                    Style="{StaticResource MenuFlyoutItemStyle}"
                                                    Tag="Custom"
                                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/Custom')}" />
                                            </MenuFlyout>
                                        </DropDownButton.Flyout>
                                    </DropDownButton>
                                </Grid>
                            </StackPanel>

                            <MenuFlyoutSeparator Margin="0,4,0,4" />

                            <StackPanel>
                                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Orientation="Vertical">
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            Style="{StaticResource BodyTextBlockStyle}"
                                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/DownloadItem')}" />
                                        <TextBlock
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/DownloadItemDescription')}" />
                                    </StackPanel>

                                    <DropDownButton
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        Content="{x:Bind DownloadItem, Mode=OneWay}">

                                        <DropDownButton.Flyout>
                                            <MenuFlyout MenuFlyoutPresenterStyle="{StaticResource MenuFlyoutPresenterStyle}" Placement="Bottom">
                                                <ToggleMenuFlyoutItem
                                                    Click="{x:Bind OnDownloadItemSelectClicked}"
                                                    IsChecked="{x:Bind DownloadItem.Equals(1), Mode=OneWay}"
                                                    Style="{StaticResource ToggleMenuFlyoutItemStyle}"
                                                    Tag="1"
                                                    Text="1" />

                                                <ToggleMenuFlyoutItem
                                                    Click="{x:Bind OnDownloadItemSelectClicked}"
                                                    IsChecked="{x:Bind DownloadItem.Equals(2), Mode=OneWay}"
                                                    Style="{StaticResource ToggleMenuFlyoutItemStyle}"
                                                    Tag="2"
                                                    Text="2" />

                                                <ToggleMenuFlyoutItem
                                                    Click="{x:Bind OnDownloadItemSelectClicked}"
                                                    IsChecked="{x:Bind DownloadItem.Equals(3), Mode=OneWay}"
                                                    Style="{StaticResource ToggleMenuFlyoutItemStyle}"
                                                    Tag="3"
                                                    Text="3" />
                                            </MenuFlyout>
                                        </DropDownButton.Flyout>
                                    </DropDownButton>
                                </Grid>
                            </StackPanel>

                            <MenuFlyoutSeparator Margin="0,4,0,4" />

                            <StackPanel Margin="0,0,0,6">
                                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Orientation="Vertical">
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            Style="{StaticResource BodyTextBlockStyle}"
                                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/DownloadMode')}" />
                                        <TextBlock
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/DownloadModeDescription')}" />
                                    </StackPanel>

                                    <DropDownButton
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        Content="{x:Bind DownloadMode.DisplayMember, Mode=OneWay}">

                                        <DropDownButton.Flyout>
                                            <MenuFlyout MenuFlyoutPresenterStyle="{StaticResource MenuFlyoutPresenterStyle}" Placement="Bottom">
                                                <ToggleMenuFlyoutItem
                                                    Click="{x:Bind OnDownloadModeSelectClicked}"
                                                    IsChecked="{x:Bind DownloadMode.SelectedValue.Equals(DownloadModeList[0].SelectedValue), Mode=OneWay}"
                                                    Style="{StaticResource ToggleMenuFlyoutItemStyle}"
                                                    Tag="0"
                                                    Text="{x:Bind DownloadModeList[0].DisplayMember}" />

                                                <ToggleMenuFlyoutItem
                                                    Click="{x:Bind OnDownloadModeSelectClicked}"
                                                    IsChecked="{x:Bind DownloadMode.SelectedValue.Equals(DownloadModeList[1].SelectedValue), Mode=OneWay}"
                                                    Style="{StaticResource ToggleMenuFlyoutItemStyle}"
                                                    Tag="1"
                                                    Text="{x:Bind DownloadModeList[1].DisplayMember}" />
                                            </MenuFlyout>
                                        </DropDownButton.Flyout>
                                    </DropDownButton>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </Expander.Content>
                </Expander>

                <TextBlock
                    Margin="0,5"
                    FontSize="16"
                    Style="{StaticResource BodyTextBlockStyle}"
                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/Advanced')}" />

                <!--  应用安装方式设置  -->
                <Grid
                    Height="61"
                    Padding="16,12"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource ControlCornerRadius}">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <FontIcon
                        Grid.Column="0"
                        Margin="0,0,12,0"
                        FontFamily="{ThemeResource SymbolThemeFontFamily}"
                        FontSize="16"
                        Glyph="&#xECC8;" />

                    <StackPanel
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Orientation="Vertical">

                        <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind root:ResourceService.GetLocalized('Settings/InstallMode')}" />

                        <TextBlock
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Style="{StaticResource CaptionTextBlockStyle}"
                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/InstallModeDescription')}" />
                    </StackPanel>

                    <DropDownButton
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        Content="{x:Bind InstallMode.DisplayMember, Mode=OneWay}">

                        <DropDownButton.Flyout>
                            <MenuFlyout MenuFlyoutPresenterStyle="{StaticResource MenuFlyoutPresenterStyle}" Placement="Bottom">
                                <ToggleMenuFlyoutItem
                                    Click="{x:Bind OnInstallModeSelectClicked}"
                                    IsChecked="{x:Bind InstallMode.SelectedValue.Equals(InstallModeList[0].SelectedValue), Mode=OneWay}"
                                    Style="{StaticResource ToggleMenuFlyoutItemStyle}"
                                    Tag="0"
                                    Text="{x:Bind InstallModeList[0].DisplayMember}" />

                                <ToggleMenuFlyoutItem
                                    Click="{x:Bind OnInstallModeSelectClicked}"
                                    IsChecked="{x:Bind InstallMode.SelectedValue.Equals(InstallModeList[1].SelectedValue), Mode=OneWay}"
                                    Style="{StaticResource ToggleMenuFlyoutItemStyle}"
                                    Tag="1"
                                    Text="{x:Bind InstallModeList[1].DisplayMember}" />
                            </MenuFlyout>
                        </DropDownButton.Flyout>
                    </DropDownButton>
                </Grid>

                <!--  痕迹清理设置  -->
                <Grid
                    Height="61"
                    Padding="16,12"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource ControlCornerRadius}">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <FontIcon
                        Grid.Column="0"
                        Margin="0,0,12,0"
                        FontFamily="{ThemeResource SymbolThemeFontFamily}"
                        FontSize="16"
                        Glyph="&#xE74d;" />

                    <StackPanel
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Orientation="Vertical">

                        <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind root:ResourceService.GetLocalized('Settings/TraceCleanup')}" />

                        <TextBlock
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Style="{StaticResource CaptionTextBlockStyle}"
                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/TraceCleanupDescription')}" />
                    </StackPanel>

                    <Button
                        Grid.Column="2"
                        MinWidth="100"
                        Click="{x:Bind OnTraceCleanupClicked}"
                        Content="{x:Bind root:ResourceService.GetLocalized('Settings/TraceClear')}" />
                </Grid>

                <!--  实验性功能设置  -->
                <Grid
                    Height="61"
                    Padding="16,12"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource ControlCornerRadius}">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <FontIcon
                        Grid.Column="0"
                        Margin="0,0,12,0"
                        FontFamily="{ThemeResource SymbolThemeFontFamily}"
                        FontSize="16"
                        Glyph="&#xE7BA;" />

                    <StackPanel
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Orientation="Vertical">

                        <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind root:ResourceService.GetLocalized('Settings/ExperimentalFeatures')}" />

                        <TextBlock
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Style="{StaticResource CaptionTextBlockStyle}"
                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/ExperimentalFeaturesDescription')}" />
                    </StackPanel>

                    <Button
                        Grid.Column="2"
                        MinWidth="100"
                        Click="{x:Bind OnConfigClicked}"
                        Content="{x:Bind root:ResourceService.GetLocalized('Settings/Config')}" />
                </Grid>

                <!--  日志记录设置  -->
                <Expander
                    Padding="0"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    IsExpanded="True">

                    <Expander.Header>
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <FontIcon
                                Grid.Column="0"
                                Margin="0,0,12,0"
                                FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                FontSize="16"
                                Glyph="&#xE70B;" />

                            <StackPanel
                                Grid.Column="1"
                                Margin="0,12"
                                VerticalAlignment="Center"
                                Orientation="Vertical">

                                <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind root:ResourceService.GetLocalized('Settings/LogRecord')}" />

                                <TextBlock
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/LogRecordDescription')}" />
                            </StackPanel>
                        </Grid>
                    </Expander.Header>

                    <Expander.Content>
                        <StackPanel Padding="43,6,16,4" HorizontalAlignment="Stretch">
                            <StackPanel>
                                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Orientation="Vertical">
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            Style="{StaticResource BodyTextBlockStyle}"
                                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/LogFolder')}" />

                                        <TextBlock
                                            VerticalAlignment="Center"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/LogFolderDescription')}" />
                                    </StackPanel>

                                    <Button
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        Click="{x:Bind OnOpenLogFolderClicked}"
                                        Content="{x:Bind root:ResourceService.GetLocalized('Settings/OpenLogFolder')}" />
                                </Grid>
                            </StackPanel>

                            <MenuFlyoutSeparator Margin="0,4,0,4" />

                            <StackPanel Margin="0,0,0,6">
                                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Orientation="Vertical">
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            Style="{StaticResource BodyTextBlockStyle}"
                                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/ClearLog')}" />

                                        <TextBlock
                                            VerticalAlignment="Center"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/ClearLogDescription')}" />
                                    </StackPanel>

                                    <Button
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        Click="{x:Bind OnClearClicked}"
                                        Content="{x:Bind root:ResourceService.GetLocalized('Settings/Clear')}" />
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </Expander.Content>
                </Expander>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
