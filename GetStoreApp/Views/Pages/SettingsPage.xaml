<Page
    x:Class="GetStoreApp.Views.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:converter="using:GetStoreApp.Helpers.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helper="using:GetStoreApp.Helpers.Root"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:GetStoreApp.Models.Controls.Settings"
    xmlns:root="using:GetStoreApp.Services.Root"
    xmlns:service="using:GetStoreApp.Services.Controls.Settings"
    xmlns:sys="using:System"
    xmlns:systembackdrop="using:Microsoft.UI.Composition.SystemBackdrops"
    Loaded="{x:Bind OnLoaded}"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <Page.Resources>
        <SolidColorBrush x:Key="ItemContainerPointerOverBackground" Color="Transparent" />
        <SolidColorBrush x:Key="ItemContainerPressedBackground" Color="Transparent" />

        <XamlUICommand x:Name="CheckBoxClickCommand" />
        <XamlUICommand x:Name="EditCommand" ExecuteRequested="{x:Bind OnEditExecuteRequested}" />
        <XamlUICommand x:Name="LanguageCommand" ExecuteRequested="{x:Bind OnLanguageExecuteRequested}" />
        <XamlUICommand x:Name="RemoveCommand" ExecuteRequested="{x:Bind OnRemoveExecuteRequested}" />
        <XamlUICommand x:Name="StoreRegionCommand" ExecuteRequested="{x:Bind OnStoreRegionExecuteRequested}" />
    </Page.Resources>

    <Grid>
        <Grid Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(IsWinGetConfigMode), Mode=OneWay}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="30,15,30,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    FontSize="22"
                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/Title')}" />

                <Button
                    Grid.Column="1"
                    Margin="0,0,6,0"
                    Click="{x:Bind OnRestartAppsClicked}"
                    Content="{x:Bind root:ResourceService.GetLocalized('Settings/RestartApp')}"
                    ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Settings/RestartAppToolTip')}" />

                <Button
                    Grid.Column="2"
                    Click="{x:Bind OnSettingsInstructionClicked}"
                    Content="{x:Bind root:ResourceService.GetLocalized('Settings/SettingsInstruction')}" />
            </Grid>

            <ScrollView
                x:Name="SettingsScroll"
                Grid.Row="1"
                HorizontalScrollMode="Disabled"
                VerticalScrollBarVisibility="Auto"
                VerticalScrollMode="Enabled">

                <Border>
                    <StackPanel
                        Margin="30,0"
                        Padding="0,0,0,30"
                        Spacing="3">

                        <StackPanel
                            Margin="0,0,0,5"
                            VerticalAlignment="Center"
                            Orientation="Horizontal"
                            Spacing="5">

                            <FontIcon
                                Margin="0,2,0,0"
                                VerticalAlignment="Center"
                                FontSize="16"
                                FontWeight="Medium"
                                Glyph="&#xE76C;" />

                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="16"
                                Style="{StaticResource BodyTextBlockStyle}"
                                Text="{x:Bind root:ResourceService.GetLocalized('Settings/Appearance')}" />
                        </StackPanel>

                        <!--  应用主题设置  -->
                        <Grid
                            Height="61"
                            Padding="16,12"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="{StaticResource ControlCornerRadius}">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <FontIcon
                                Grid.Column="0"
                                Margin="0,0,12,0"
                                FontSize="16"
                                Glyph="&#xE790;" />

                            <StackPanel
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Orientation="Vertical">

                                <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind root:ResourceService.GetLocalized('Settings/Theme')}" />

                                <TextBlock
                                    x:Name="ThemeDescription"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/ThemeDescription')}"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="NoWrap">

                                    <ToolTipService.ToolTip>
                                        <ToolTip
                                            MaxWidth="9999"
                                            Content="{x:Bind root:ResourceService.GetLocalized('Settings/ThemeDescription')}"
                                            Visibility="{x:Bind ThemeDescription.IsTextTrimmed, Mode=OneWay}" />
                                    </ToolTipService.ToolTip>
                                </TextBlock>
                            </StackPanel>

                            <HyperlinkButton
                                Grid.Column="2"
                                Margin="0,0,6,0"
                                VerticalAlignment="Center"
                                Click="{x:Bind OnSystemThemeSettingsClicked}"
                                Content="{x:Bind root:ResourceService.GetLocalized('Settings/SystemThemeSettings')}" />

                            <DropDownButton
                                Grid.Column="3"
                                VerticalAlignment="Center"
                                Content="{x:Bind Theme.Value, Mode=OneWay}">

                                <DropDownButton.Flyout>
                                    <MenuFlyout Placement="Bottom">
                                        <RadioMenuFlyoutItem
                                            Height="32"
                                            Padding="11,0"
                                            Click="{x:Bind OnThemeSelectClicked}"
                                            GroupName="ThemeRadioGroup"
                                            IsChecked="{x:Bind Theme.Key.Equals(ThemeList[0].Key), Mode=OneWay}"
                                            Tag="0"
                                            Text="{x:Bind sys:Convert.ToString(ThemeList[0].Value)}" />

                                        <RadioMenuFlyoutItem
                                            Height="32"
                                            Padding="11,0"
                                            Click="{x:Bind OnThemeSelectClicked}"
                                            GroupName="ThemeRadioGroup"
                                            IsChecked="{x:Bind Theme.Key.Equals(ThemeList[1].Key), Mode=OneWay}"
                                            Tag="1"
                                            Text="{x:Bind sys:Convert.ToString(ThemeList[1].Value)}" />

                                        <RadioMenuFlyoutItem
                                            Height="32"
                                            Padding="11,0"
                                            Click="{x:Bind OnThemeSelectClicked}"
                                            GroupName="ThemeRadioGroup"
                                            IsChecked="{x:Bind Theme.Key.Equals(ThemeList[2].Key), Mode=OneWay}"
                                            Tag="2"
                                            Text="{x:Bind sys:Convert.ToString(ThemeList[2].Value)}" />
                                    </MenuFlyout>
                                </DropDownButton.Flyout>
                            </DropDownButton>
                        </Grid>

                        <!--  窗口背景材质设置  -->
                        <Grid
                            Height="61"
                            Padding="16,12"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="{StaticResource ControlCornerRadius}">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <FontIcon
                                Grid.Column="0"
                                Margin="0,0,12,0"
                                FontSize="16"
                                Glyph="&#xE771;" />

                            <StackPanel
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Orientation="Vertical">

                                <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind root:ResourceService.GetLocalized('Settings/Backdrop')}" />

                                <TextBlock
                                    x:Name="BackdropDescription"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/BackdropDescription')}"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="NoWrap">

                                    <ToolTipService.ToolTip>
                                        <ToolTip
                                            MaxWidth="9999"
                                            Content="{x:Bind root:ResourceService.GetLocalized('Settings/BackdropDescription')}"
                                            Visibility="{x:Bind BackdropDescription.IsTextTrimmed, Mode=OneWay}" />
                                    </ToolTipService.ToolTip>
                                </TextBlock>
                            </StackPanel>

                            <HyperlinkButton
                                Grid.Column="2"
                                Margin="0,0,6,0"
                                VerticalAlignment="Center"
                                Click="{x:Bind OnSystemBackdropSettingsClicked}"
                                Content="{x:Bind root:ResourceService.GetLocalized('Settings/SystemBackdropSettings')}" />

                            <DropDownButton
                                Grid.Column="3"
                                VerticalAlignment="Center"
                                Content="{x:Bind LocalizeDisplayNumber(Backdrop), Mode=OneWay}"
                                IsEnabled="{x:Bind AdvancedEffectsEnabled, Mode=OneWay}">

                                <DropDownButton.Flyout>
                                    <MenuFlyout Placement="Bottom">
                                        <RadioMenuFlyoutItem
                                            Height="32"
                                            Padding="11,0"
                                            Click="{x:Bind OnBackdropSelectClicked}"
                                            GroupName="BackdropRadioGroup"
                                            IsChecked="{x:Bind Backdrop.Key.Equals(BackdropList[0].Key), Mode=OneWay}"
                                            Tag="0"
                                            Text="{x:Bind sys:Convert.ToString(BackdropList[0].Value)}" />

                                        <MenuFlyoutSubItem
                                            x:Name="MicaFlyoutItem"
                                            Height="32"
                                            Padding="11,0,11,0"
                                            x:Load="{x:Bind systembackdrop:MicaController.IsSupported()}"
                                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/Mica')}">

                                            <RadioMenuFlyoutItem
                                                Height="32"
                                                Padding="11,0"
                                                Click="{x:Bind OnBackdropSelectClicked}"
                                                GroupName="BackdropRadioGroup"
                                                IsChecked="{x:Bind Backdrop.Key.Equals(BackdropList[1].Key), Mode=OneWay}"
                                                Tag="1"
                                                Text="{x:Bind sys:Convert.ToString(BackdropList[1].Value)}" />

                                            <RadioMenuFlyoutItem
                                                Height="32"
                                                Padding="11,0"
                                                Click="{x:Bind OnBackdropSelectClicked}"
                                                GroupName="BackdropRadioGroup"
                                                IsChecked="{x:Bind Backdrop.Key.Equals(BackdropList[2].Key), Mode=OneWay}"
                                                Tag="2"
                                                Text="{x:Bind sys:Convert.ToString(BackdropList[2].Value)}" />
                                        </MenuFlyoutSubItem>

                                        <MenuFlyoutSubItem
                                            x:Name="DesktopAcrylicFlyoutItem"
                                            Height="32"
                                            Padding="11,0,11,0"
                                            x:Load="{x:Bind systembackdrop:DesktopAcrylicController.IsSupported()}"
                                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/DesktopAcrylic')}">

                                            <RadioMenuFlyoutItem
                                                Height="32"
                                                Padding="11,0"
                                                Click="{x:Bind OnBackdropSelectClicked}"
                                                GroupName="BackdropRadioGroup"
                                                IsChecked="{x:Bind Backdrop.Key.Equals(BackdropList[3].Key), Mode=OneWay}"
                                                Tag="3"
                                                Text="{x:Bind sys:Convert.ToString(BackdropList[3].Value)}" />

                                            <RadioMenuFlyoutItem
                                                Height="32"
                                                Padding="11,0"
                                                Click="{x:Bind OnBackdropSelectClicked}"
                                                GroupName="BackdropRadioGroup"
                                                IsChecked="{x:Bind Backdrop.Key.Equals(BackdropList[4].Key), Mode=OneWay}"
                                                Tag="4"
                                                Text="{x:Bind sys:Convert.ToString(BackdropList[4].Value)}" />

                                            <RadioMenuFlyoutItem
                                                Height="32"
                                                Padding="11,0"
                                                Click="{x:Bind OnBackdropSelectClicked}"
                                                GroupName="BackdropRadioGroup"
                                                IsChecked="{x:Bind Backdrop.Key.Equals(BackdropList[5].Key), Mode=OneWay}"
                                                Tag="5"
                                                Text="{x:Bind sys:Convert.ToString(BackdropList[5].Value)}" />
                                        </MenuFlyoutSubItem>
                                    </MenuFlyout>
                                </DropDownButton.Flyout>
                            </DropDownButton>
                        </Grid>

                        <!--  始终显示背景色设置  -->
                        <Grid
                            Height="61"
                            Padding="16,12"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="{StaticResource ControlCornerRadius}">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <FontIcon
                                Grid.Column="0"
                                Margin="0,0,12,0"
                                FontSize="16"
                                Glyph="&#xE81E;" />

                            <StackPanel
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Orientation="Vertical">

                                <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind root:ResourceService.GetLocalized('Settings/AlwaysShowBackdrop')}" />

                                <TextBlock
                                    x:Name="AlwaysShowBackdropDescription"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/AlwaysShowBackdropDescription')}"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="NoWrap">

                                    <ToolTipService.ToolTip>
                                        <ToolTip
                                            MaxWidth="9999"
                                            Content="{x:Bind root:ResourceService.GetLocalized('Settings/AlwaysShowBackdropDescription')}"
                                            Visibility="{x:Bind AlwaysShowBackdropDescription.IsTextTrimmed, Mode=OneWay}" />
                                    </ToolTipService.ToolTip>
                                </TextBlock>
                            </StackPanel>

                            <StackPanel
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">

                                <TextBlock
                                    VerticalAlignment="Center"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/AlwaysShowBackdropOffContent')}"
                                    Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(AlwaysShowBackdropValue), Mode=OneWay}" />

                                <TextBlock
                                    VerticalAlignment="Center"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/AlwaysShowBackdropOnContent')}"
                                    Visibility="{x:Bind AlwaysShowBackdropValue, Mode=OneWay}" />

                                <ToggleSwitch
                                    MinWidth="0"
                                    Margin="10,-2,-10,0"
                                    IsEnabled="{x:Bind AlwaysShowBackdropEnabled, Mode=OneWay}"
                                    IsOn="{x:Bind AlwaysShowBackdropValue, Mode=OneWay}"
                                    OffContent=""
                                    OnContent=""
                                    Toggled="{x:Bind OnAlwaysShowBackdropToggled}" />
                            </StackPanel>
                        </Grid>

                        <!--  界面语言设置  -->
                        <Grid
                            Height="61"
                            Padding="16,12"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="{StaticResource ControlCornerRadius}">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <FontIcon
                                Grid.Column="0"
                                Margin="0,0,12,0"
                                FontSize="16"
                                Glyph="&#xF2B7;" />

                            <StackPanel
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Orientation="Vertical">

                                <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind root:ResourceService.GetLocalized('Settings/Language')}" />

                                <TextBlock
                                    x:Name="LanguageDescription"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/LanguageDescription')}"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="NoWrap">

                                    <ToolTipService.ToolTip>
                                        <ToolTip
                                            MaxWidth="9999"
                                            Content="{x:Bind root:ResourceService.GetLocalized('Settings/LanguageDescription')}"
                                            Visibility="{x:Bind LanguageDescription.IsTextTrimmed, Mode=OneWay}" />
                                    </ToolTipService.ToolTip>
                                </TextBlock>
                            </StackPanel>

                            <HyperlinkButton
                                Grid.Column="2"
                                Margin="0,0,6,0"
                                VerticalAlignment="Center"
                                Click="{x:Bind OnSystemLanguageSettingsClicked}"
                                Content="{x:Bind root:ResourceService.GetLocalized('Settings/SystemLanguageSettings')}" />

                            <DropDownButton
                                Grid.Column="3"
                                VerticalAlignment="Center"
                                Content="{x:Bind AppLanguage.Value, Mode=OneWay}">

                                <DropDownButton.Flyout>
                                    <Flyout
                                        x:Name="LanguageFlyout"
                                        Opened="{x:Bind OnLanguageFlyoutOpened}"
                                        Placement="Bottom"
                                        ShouldConstrainToRootBounds="False"
                                        SystemBackdrop="{StaticResource AcrylicBackgroundFillColorDefaultBackdrop}">

                                        <Flyout.FlyoutPresenterStyle>
                                            <Style BasedOn="{StaticResource DefaultFlyoutPresenterStyle}" TargetType="FlyoutPresenter">
                                                <Setter Property="Padding" Value="0,1" />
                                                <Setter Property="Background" Value="Transparent" />
                                                <Setter Property="MinHeight" Value="0" />
                                            </Style>
                                        </Flyout.FlyoutPresenterStyle>

                                        <ItemsView
                                            x:Name="LanguageItemsView"
                                            MaxHeight="300"
                                            Background="Transparent"
                                            ItemsSource="{x:Bind LanguageCollection, Mode=OneWay}"
                                            SelectionMode="None">

                                            <ItemsView.Resources>
                                                <SolidColorBrush x:Key="ItemContainerPointerOverBackground" Color="Transparent" />
                                                <SolidColorBrush x:Key="ItemContainerPressedBackground" Color="Transparent" />
                                            </ItemsView.Resources>

                                            <ItemsView.Layout>
                                                <StackLayout />
                                            </ItemsView.Layout>

                                            <ItemsView.ItemTemplate>
                                                <DataTemplate x:DataType="model:LanguageModel">
                                                    <ItemContainer>
                                                        <RadioMenuFlyoutItem
                                                            Height="32"
                                                            Padding="11,0"
                                                            Command="{StaticResource LanguageCommand}"
                                                            CommandParameter="{x:Bind}"
                                                            GroupName="LanguageRadioGroup"
                                                            IsChecked="{x:Bind IsChecked, Mode=OneWay}"
                                                            Text="{x:Bind sys:Convert.ToString(LangaugeInfo.Value)}" />
                                                    </ItemContainer>
                                                </DataTemplate>
                                            </ItemsView.ItemTemplate>
                                        </ItemsView>
                                    </Flyout>
                                </DropDownButton.Flyout>
                            </DropDownButton>
                        </Grid>

                        <!--  窗口置顶设置  -->
                        <Grid
                            Height="61"
                            Padding="16,12"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="{StaticResource ControlCornerRadius}">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <FontIcon
                                Grid.Column="0"
                                Margin="0,0,12,0"
                                FontSize="16"
                                Glyph="&#xE840;" />

                            <StackPanel
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Orientation="Vertical">

                                <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind root:ResourceService.GetLocalized('Settings/TopMost')}" />

                                <TextBlock
                                    x:Name="TopMostDescription"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/TopMostDescription')}"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="NoWrap">

                                    <ToolTipService.ToolTip>
                                        <ToolTip
                                            MaxWidth="9999"
                                            Content="{x:Bind root:ResourceService.GetLocalized('Settings/TopMostDescription')}"
                                            Visibility="{x:Bind TopMostDescription.IsTextTrimmed, Mode=OneWay}" />
                                    </ToolTipService.ToolTip>
                                </TextBlock>
                            </StackPanel>

                            <StackPanel
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">

                                <TextBlock
                                    VerticalAlignment="Center"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/TopMostOffContent')}"
                                    Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(TopMostValue), Mode=OneWay}" />

                                <TextBlock
                                    VerticalAlignment="Center"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/TopMostOnContent')}"
                                    Visibility="{x:Bind TopMostValue, Mode=OneWay}" />

                                <ToggleSwitch
                                    MinWidth="0"
                                    Margin="10,-2,-10,0"
                                    IsOn="{x:Bind TopMostValue, Mode=OneWay}"
                                    OffContent=""
                                    OnContent=""
                                    Toggled="{x:Bind OnTopMostToggled}" />
                            </StackPanel>
                        </Grid>

                        <StackPanel
                            Margin="0,0,0,5"
                            VerticalAlignment="Center"
                            Orientation="Horizontal"
                            Spacing="5">

                            <FontIcon
                                Margin="0,2,0,0"
                                VerticalAlignment="Center"
                                FontSize="16"
                                FontWeight="Medium"
                                Glyph="&#xE76C;" />

                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="16"
                                Style="{StaticResource BodyTextBlockStyle}"
                                Text="{x:Bind root:ResourceService.GetLocalized('Settings/General')}" />
                        </StackPanel>

                        <!--  应用通知设置  -->
                        <Grid
                            Height="61"
                            Padding="16,12"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="{StaticResource ControlCornerRadius}">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <FontIcon
                                Grid.Column="0"
                                Margin="0,0,12,0"
                                FontSize="16"
                                Glyph="&#xEA8F;" />

                            <StackPanel
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Orientation="Vertical">

                                <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind root:ResourceService.GetLocalized('Settings/Notification')}" />

                                <TextBlock
                                    x:Name="NotificationDescription"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/NotificationDescription')}"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="NoWrap">

                                    <ToolTipService.ToolTip>
                                        <ToolTip
                                            MaxWidth="9999"
                                            Content="{x:Bind root:ResourceService.GetLocalized('Settings/NotificationDescription')}"
                                            Visibility="{x:Bind NotificationDescription.IsTextTrimmed, Mode=OneWay}" />
                                    </ToolTipService.ToolTip>
                                </TextBlock>
                            </StackPanel>

                            <HyperlinkButton
                                Grid.Column="2"
                                Margin="0,0,6,0"
                                VerticalAlignment="Center"
                                Click="{x:Bind OnSystemNotificationSettingsClicked}"
                                Content="{x:Bind root:ResourceService.GetLocalized('Settings/SystemNotificationSettings')}" />

                            <StackPanel
                                Grid.Column="3"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">

                                <TextBlock
                                    VerticalAlignment="Center"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/NotificationOffContent')}"
                                    Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(NotificationValue), Mode=OneWay}" />

                                <TextBlock
                                    VerticalAlignment="Center"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/NotificationOnContent')}"
                                    Visibility="{x:Bind NotificationValue, Mode=OneWay}" />

                                <ToggleSwitch
                                    MinWidth="0"
                                    Margin="10,-2,-10,0"
                                    IsEnabled="{x:Bind NotificationEnabled, Mode=OneWay}"
                                    IsOn="{x:Bind NotificationValue, Mode=OneWay}"
                                    OffContent=""
                                    OnContent=""
                                    Toggled="{x:Bind OnNotificationToggled}" />
                            </StackPanel>
                        </Grid>

                        <!--  浏览器内核设置  -->
                        <Grid
                            Height="61"
                            Padding="16,12"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="{StaticResource ControlCornerRadius}">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <FontIcon
                                Grid.Column="0"
                                Margin="0,0,12,0"
                                FontSize="16"
                                Glyph="&#xE774;" />

                            <StackPanel Grid.Column="1" Orientation="Vertical">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/WebKernel')}" />

                                <TextBlock
                                    x:Name="WebKernelDescription"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/WebKernelDescription')}"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="NoWrap">

                                    <ToolTipService.ToolTip>
                                        <ToolTip
                                            MaxWidth="9999"
                                            Content="{x:Bind root:ResourceService.GetLocalized('Settings/WebKernelDescription')}"
                                            Visibility="{x:Bind WebKernelDescription.IsTextTrimmed, Mode=OneWay}" />
                                    </ToolTipService.ToolTip>
                                </TextBlock>
                            </StackPanel>

                            <HyperlinkButton
                                Grid.Column="2"
                                Margin="0,0,6,0"
                                VerticalAlignment="Center"
                                Content="{x:Bind root:ResourceService.GetLocalized('Settings/DownloadWebView2')}"
                                NavigateUri="https://developer.microsoft.com/microsoft-edge/webview2" />

                            <DropDownButton
