<Page
    x:Class="GetStoreApp.Views.Pages.WebPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wc="using:GetStoreApp.UI.Controls.Web"
    xmlns:ic="using:Microsoft.Xaml.Interactions.Core"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    Unloaded="{x:Bind WebPageUnloaded}"
    mc:Ignorable="d">

    <Grid>
        <Grid x:Name="LoadSuccess" x:Load="{x:Bind ViewModel.IsWebView2Installed}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Padding="0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <CommandBar
                    x:Name="BrowserFunction"
                    Grid.Column="0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    x:Load="{x:Bind ViewModel.IsWebView2Installed}"
                    Background="Transparent"
                    DefaultLabelPosition="Right">

                    <AppBarButton
                        Command="{x:Bind ViewModel.BrowserBackCommand, Mode=OneWay}"
                        IsEnabled="{x:Bind ViewModel.CanGoBack, Mode=OneWay}"
                        Label="{x:Bind ResourceService.GetLocalized('/Web/Back')}"
                        ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/Web/Back')}">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE72b;" Style="{StaticResource SegoeFluentStyle}" />
                        </AppBarButton.Icon>
                    </AppBarButton>

                    <AppBarButton
                        Command="{x:Bind ViewModel.BrowserForwardCommand, Mode=OneWay}"
                        IsEnabled="{x:Bind ViewModel.CanGoForward, Mode=OneWay}"
                        Label="{x:Bind ResourceService.GetLocalized('/Web/Forward')}"
                        ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/Web/Forward')}">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE72a;" Style="{StaticResource SegoeFluentStyle}" />
                        </AppBarButton.Icon>
                    </AppBarButton>

                    <AppBarButton
                        Command="{x:Bind ViewModel.RefreshCommand}"
                        CommandParameter="{Binding ElementName=WebView}"
                        Label="{x:Bind ResourceService.GetLocalized('/Web/Refresh')}"
                        ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/Web/Refresh')}">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE72c;" Style="{StaticResource SegoeFluentStyle}" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                </CommandBar>

                <Grid
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <ProgressRing
                        Grid.Column="0"
                        Width="20"
                        Height="20"
                        Margin="0,0,5,0"
                        HorizontalAlignment="Right"
                        IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                        Visibility="{x:Bind ViewModel.IsLoading, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}" />
                    <TextBlock
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Text="{x:Bind ResourceService.GetLocalized('/Web/Title')}" />
                    <TextBlock
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        Text="{x:Bind ResourceService.GetLocalized('/Web/Loading')}"
                        Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay}" />
                </Grid>

                <CommandBar
                    Grid.Column="2"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    DefaultLabelPosition="Right">

                    <AppBarButton
                        Command="{x:Bind ViewModel.OpenWithBrowserCommand}"
                        Label="{x:Bind ResourceService.GetLocalized('/Web/OpenWithBrowser')}"
                        ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/Web/OpenWithBrowser')}">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE774;" Style="{StaticResource SegoeFluentStyle}" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                </CommandBar>
            </Grid>

            <MenuFlyoutSeparator
                Grid.Row="1"
                Height="2"
                Padding="0" />

            <WebView2
                x:Name="WebView"
                Grid.Row="2"
                Source="{x:Bind ViewModel.Source, Mode=OneWay}">

                <i:Interaction.Behaviors>
                    <ic:EventTriggerBehavior EventName="CoreProcessFailed">
                        <ic:InvokeCommandAction Command="{x:Bind ViewModel.CoreProcessFailedCommand}" />
                    </ic:EventTriggerBehavior>

                    <ic:EventTriggerBehavior EventName="CoreWebView2Initialized">
                        <ic:InvokeCommandAction Command="{x:Bind ViewModel.CoreWebView2InitializedCommand}" CommandParameter="{Binding ElementName=WebView}" />
                    </ic:EventTriggerBehavior>

                    <ic:EventTriggerBehavior EventName="NavigationStarting">
                        <ic:InvokeCommandAction Command="{x:Bind ViewModel.NavigationStartingCommand}" />
                    </ic:EventTriggerBehavior>

                    <ic:EventTriggerBehavior EventName="NavigationCompleted">
                        <ic:InvokeCommandAction Command="{x:Bind ViewModel.NavigationCompletedCommand}" />
                    </ic:EventTriggerBehavior>
                </i:Interaction.Behaviors>
            </WebView2>
        </Grid>
        <wc:LoadFailedControl
            x:Name="LoadFailed"
            Grid.Row="0"
            x:Load="{x:Bind ViewModel.IsWebView2Installed, Converter={StaticResource BooleanToOppositeValueConverter}}" />
    </Grid>
</Page>
