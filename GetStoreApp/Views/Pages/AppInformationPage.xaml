<Page
    x:Class="GetStoreApp.Views.Pages.AppInformationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:appManager="using:GetStoreApp.Models.Controls.AppManager"
    xmlns:converter="using:GetStoreApp.Helpers.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="using:GetStoreApp.Services.Root"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <Page.Resources>
        <SolidColorBrush x:Key="HyperlinkButtonBackgroundPointerOver" Color="Transparent" />
        <SolidColorBrush x:Key="HyperlinkButtonBackgroundPressed" Color="Transparent" />

        <XamlUICommand x:Name="CopyAUMIDCommand" ExecuteRequested="{x:Bind OnCopyAUMIDExecuteRequested}" />
        <XamlUICommand x:Name="CopyDependencyInformationCommand" ExecuteRequested="{x:Bind OnCopyDependencyInformationExecuteRequested}" />
        <XamlUICommand x:Name="CopyDependencyNameCommand" ExecuteRequested="{x:Bind OnCopyDependencyNameExecuteRequested}" />
        <XamlUICommand x:Name="LaunchCommand" ExecuteRequested="{x:Bind OnLaunchExecuteRequested}" />
        <XamlUICommand x:Name="OpenFolderCommand" ExecuteRequested="{x:Bind OnOpenFolderExecuteRequested}" />
        <XamlUICommand x:Name="OpenStoreCommand" ExecuteRequested="{x:Bind OnOpenStoreExecuteRequested}" />
        <XamlUICommand x:Name="PinToDesktopCommand" ExecuteRequested="{x:Bind OnPinToDesktopExecuteRequested}" />
        <XamlUICommand x:Name="PinToStartScreenCommand" ExecuteRequested="{x:Bind OnPinToStartScreenExecuteRequested}" />
        <XamlUICommand x:Name="PinToTaskbarCommand" ExecuteRequested="{x:Bind OnPinToTaskbarExecuteRequested}" />
        <XamlUICommand x:Name="ShowMoreCommand" ExecuteRequested="{x:Bind OnShowMoreExecuteRequested}" />
    </Page.Resources>

    <ScrollViewer
        HorizontalScrollBarVisibility="Disabled"
        HorizontalScrollMode="Disabled"
        VerticalScrollBarVisibility="Auto"
        VerticalScrollMode="Enabled">

        <Grid Margin="0,0,0,30">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Expander
                Grid.Row="0"
                Margin="30,0,30,2"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                IsExpanded="True">

                <Expander.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <FontIcon
                            Grid.Column="0"
                            Margin="0,0,12,0"
                            FontSize="16"
                            Glyph="&#xE946;" />

                        <TextBlock
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Text="{x:Bind root:ResourceService.GetLocalized('AppManager/AppInformation')}" />

                        <CommandBar Grid.Column="2" DefaultLabelPosition="Right">

                            <CommandBar.Resources>
                                <SolidColorBrush x:Key="CommandBarBackgroundOpen" Color="Transparent" />
                                <Thickness x:Key="CommandBarBorderThicknessOpen">0</Thickness>
                            </CommandBar.Resources>

                            <CommandBar.PrimaryCommands>
                                <AppBarButton Click="{x:Bind OnCopyClicked}" Label="{x:Bind root:ResourceService.GetLocalized('AppManager/Copy')}">

                                    <AppBarButton.Icon>
                                        <FontIcon Glyph="&#xE8C8;" />
                                    </AppBarButton.Icon>
                                </AppBarButton>
                            </CommandBar.PrimaryCommands>
                        </CommandBar>
                    </Grid>
                </Expander.Header>

                <Expander.Content>
                    <Grid Margin="0,0,10,0" RowSpacing="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            Grid.Column="0"
                            Margin="0,0,25,0"
                            FontSize="17"
                            Text="{x:Bind root:ResourceService.GetLocalized('AppManager/BasicInformation')}" />

                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="1"
                            Text="{x:Bind root:ResourceService.GetLocalized('AppManager/DisplayName')}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="2"
                            Text="{x:Bind DisplayName, Mode=OneWay}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="1"
                            Text="{x:Bind root:ResourceService.GetLocalized('AppManager/FamilyName')}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="2"
                            Text="{x:Bind FamilyName, Mode=OneWay}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="1"
                            Text="{x:Bind root:ResourceService.GetLocalized('AppManager/FullName')}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="2"
                            Text="{x:Bind FullName, Mode=OneWay}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="1"
                            Text="{x:Bind root:ResourceService.GetLocalized('AppManager/Description')}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="2"
                            Text="{x:Bind Description, Mode=OneWay}"
                            TextWrapping="Wrap" />

                        <MenuFlyoutSeparator
                            Grid.Row="4"
                            Grid.Column="0"
                            Grid.ColumnSpan="3" />

                        <TextBlock
                            Grid.Row="5"
                            Grid.RowSpan="2"
                            Grid.Column="0"
                            Margin="0,0,25,0"
                            FontSize="17"
                            Text="{x:Bind root:ResourceService.GetLocalized('AppManager/PublisherInformation')}" />

                        <TextBlock
                            Grid.Row="5"
                            Grid.Column="1"
                            Text="{x:Bind root:ResourceService.GetLocalized('AppManager/PublisherDisplayName')}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="5"
                            Grid.Column="2"
                            Text="{x:Bind PublisherDisplayName, Mode=OneWay}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="6"
                            Grid.Column="1"
                            Text="{x:Bind root:ResourceService.GetLocalized('AppManager/PublisherId')}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="6"
                            Grid.Column="2"
                            Text="{x:Bind PublisherId, Mode=OneWay}"
                            TextWrapping="Wrap" />

                        <MenuFlyoutSeparator
                            Grid.Row="7"
                            Grid.Column="0"
                            Grid.ColumnSpan="3" />

                        <TextBlock
                            Grid.Row="8"
                            Grid.RowSpan="2"
                            Grid.Column="0"
                            Margin="0,0,25,0"
                            FontSize="17"
                            Text="{x:Bind root:ResourceService.GetLocalized('AppManager/PackageInformation')}" />

                        <TextBlock
                            Grid.Row="8"
                            Grid.Column="1"
                            Text="{x:Bind root:ResourceService.GetLocalized('AppManager/Version')}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="8"
                            Grid.Column="2"
                            Text="{x:Bind Version, Mode=OneWay}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="9"
                            Grid.Column="1"
                            Text="{x:Bind root:ResourceService.GetLocalized('AppManager/InstalledDate')}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="9"
                            Grid.Column="2"
                            Text="{x:Bind InstalledDate, Mode=OneWay}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="10"
                            Grid.Column="1"
                            Text="{x:Bind root:ResourceService.GetLocalized('AppManager/Architecture')}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="10"
                            Grid.Column="2"
                            Text="{x:Bind Architecture, Mode=OneWay}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="11"
                            Grid.Column="1"
                            Text="{x:Bind root:ResourceService.GetLocalized('AppManager/SignatureKind')}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="11"
                            Grid.Column="2"
                            Text="{x:Bind SignatureKind, Mode=OneWay}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="12"
                            Grid.Column="1"
                            Text="{x:Bind root:ResourceService.GetLocalized('AppManager/ResourceId')}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="12"
                            Grid.Column="2"
                            Text="{x:Bind ResourceId, Mode=OneWay}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="13"
                            Grid.Column="1"
                            Text="{x:Bind root:ResourceService.GetLocalized('AppManager/IsBundle')}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="13"
                            Grid.Column="2"
                            Text="{x:Bind IsBundle, Mode=OneWay}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="14"
                            Grid.Column="1"
                            Text="{x:Bind root:ResourceService.GetLocalized('AppManager/IsDevelopmentMode')}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="14"
                            Grid.Column="2"
                            Text="{x:Bind IsDevelopmentMode, Mode=OneWay}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="15"
                            Grid.Column="1"
                            Text="{x:Bind root:ResourceService.GetLocalized('AppManager/IsFramework')}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="15"
                            Grid.Column="2"
                            Text="{x:Bind IsFramework, Mode=OneWay}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="16"
                            Grid.Column="1"
                            Text="{x:Bind root:ResourceService.GetLocalized('AppManager/IsOptional')}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="16"
                            Grid.Column="2"
                            Text="{x:Bind IsOptional, Mode=OneWay}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="17"
                            Grid.Column="1"
                            Text="{x:Bind root:ResourceService.GetLocalized('AppManager/IsResourcePackage')}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="17"
                            Grid.Column="2"
                            Text="{x:Bind IsResourcePackage, Mode=OneWay}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="18"
                            Grid.Column="1"
                            Text="{x:Bind root:ResourceService.GetLocalized('AppManager/IsStub')}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="18"
                            Grid.Column="2"
                            Text="{x:Bind IsStub, Mode=OneWay}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="19"
                            Grid.Column="1"
                            Text="{x:Bind root:ResourceService.GetLocalized('AppManager/VertifyIsOK')}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="19"
                            Grid.Column="2"
                            Text="{x:Bind VertifyIsOK, Mode=OneWay}"
                            TextWrapping="Wrap" />
                    </Grid>
                </Expander.Content>
            </Expander>

            <Expander
                Grid.Row="1"
                Margin="30,0,30,2"
                Padding="0"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                IsExpanded="True"
                Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityConvert(AppListEntryCollection.Count), Mode=OneWay}">

                <Expander.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <FontIcon
                            Grid.Column="0"
                            Margin="0,0,12,0"
                            FontSize="16"
                            Glyph="&#xE8A7;" />

                        <TextBlock
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Text="{x:Bind root:ResourceService.GetLocalized('AppManager/AppListEntry')}" />
                    </Grid>
                </Expander.Header>

                <Expander.Content>
                    <StackPanel>
                        <Grid Height="35" Padding="6,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="130" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                x:Name="EntryNameHeaderText"
                                Grid.Column="0"
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                Text="{x:Bind root:ResourceService.GetLocalized('AppManager/EntryName')}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="NoWrap">

                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        MaxWidth="9999"
                                        Content="{x:Bind root:ResourceService.GetLocalized('AppManager/EntryName')}"
                                        Visibility="{x:Bind EntryNameHeaderText.IsTextTrimmed, Mode=OneWay}" />
                                </ToolTipService.ToolTip>
                            </TextBlock>

                            <TextBlock
                                x:Name="EntryDescriptionHeaderText"
                                Grid.Column="1"
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                Text="{x:Bind root:ResourceService.GetLocalized('AppManager/EntryDescription')}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="NoWrap">

                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        MaxWidth="9999"
                                        Content="{x:Bind root:ResourceService.GetLocalized('AppManager/EntryDescription')}"
                                        Visibility="{x:Bind EntryDescriptionHeaderText.IsTextTrimmed, Mode=OneWay}" />
                                </ToolTipService.ToolTip>
                            </TextBlock>

                            <TextBlock
                                x:Name="AUMIDHeaderText"
                                Grid.Column="2"
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                Text="{x:Bind root:ResourceService.GetLocalized('AppManager/AUMID')}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="NoWrap">

                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        MaxWidth="9999"
                                        Content="{x:Bind root:ResourceService.GetLocalized('AppManager/AUMID')}"
                                        Visibility="{x:Bind AUMIDHeaderText.IsTextTrimmed, Mode=OneWay}" />
                                </ToolTipService.ToolTip>
                            </TextBlock>

                            <TextBlock
                                Grid.Column="3"
                                Grid.ColumnSpan="2"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Text="{x:Bind root:ResourceService.GetLocalized('AppManager/Options')}"
                                ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('AppManager/OptionsToolTip')}" />
                        </Grid>

                        <ListView
                            CornerRadius="0"
                            ItemsSource="{x:Bind AppListEntryCollection}"
                            SelectionMode="None">

                            <ListView.ItemContainerStyle>
                                <Style BasedOn="{StaticResource DefaultListViewItemStyle}" TargetType="ListViewItem">
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="Margin" Value="0" />
                                    <Setter Property="MinHeight" Value="0" />
                                    <Setter Property="Padding" Value="0" />
                                </Style>
                            </ListView.ItemContainerStyle>

                            <ItemsControl.ItemContainerTransitions>
                                <TransitionCollection />
                            </ItemsControl.ItemContainerTransitions>

                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="appManager:AppListEntryModel">
                                    <Grid
                                        Height="35"
                                        Padding="6,0,0,0"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="0,1,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="2*" />
                                            <ColumnDefinition Width="2*" />
                                            <ColumnDefinition Width="55" />
                                            <ColumnDefinition Width="75" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            x:Name="EntryNameText"
                                            Grid.Column="0"
                                            MinWidth="50"
                                            Margin="10,0,0,0"
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            Text="{x:Bind DisplayName}"
                                            TextAlignment="Left"
                                            TextTrimming="CharacterEllipsis"
                                            TextWrapping="NoWrap">

                                            <ToolTipService.ToolTip>
                                                <ToolTip
                                                    MaxWidth="9999"
                                                    Content="{x:Bind DisplayName}"
                                                    Visibility="{Binding ElementName=EntryNameText, Path=IsTextTrimmed, Mode=OneWay}" />
                                            </ToolTipService.ToolTip>
                                        </TextBlock>

                                        <TextBlock
                                            x:Name="EntryDescriptionText"
                                            Grid.Column="1"
                                            MinWidth="50"
                                            Margin="10,0,0,0"
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            Text="{x:Bind Description}"
                                            TextAlignment="Left"
                                            TextTrimming="CharacterEllipsis"
                                            TextWrapping="NoWrap">

                                            <ToolTipService.ToolTip>
                                                <ToolTip
                                                    MaxWidth="9999"
                                                    Content="{x:Bind Description}"
                                                    Visibility="{Binding ElementName=EntryDescriptionText, Path=IsTextTrimmed, Mode=OneWay}" />
                                            </ToolTipService.ToolTip>
                                        </TextBlock>

                                        <TextBlock
                                            x:Name="AUMIDText"
                                            Grid.Column="2"
                                            MinWidth="50"
                                            Margin="10,0,0,0"
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            Text="{x:Bind AppUserModelId}"
                                            TextAlignment="Left"
                                            TextTrimming="CharacterEllipsis"
                                            TextWrapping="NoWrap">

                                            <ToolTipService.ToolTip>
                                                <ToolTip
                                                    MaxWidth="9999"
                                                    Content="{x:Bind AppUserModelId}"
                                                    Visibility="{Binding ElementName=AUMIDText, Path=IsTextTrimmed, Mode=OneWay}" />
                                            </ToolTipService.ToolTip>
                                        </TextBlock>

                                        <HyperlinkButton
                                            Grid.Column="3"
                                            Margin="10,0,0,0"
                                            Padding="0"
                                            Command="{StaticResource LaunchCommand}"
                                            CommandParameter="{x:Bind}">

                                            <HyperlinkButton.Content>
                                                <TextBlock
                                                    x:Name="LaunchText"
                                                    Text="{x:Bind root:ResourceService.GetLocalized('AppManager/Launch')}"
                                                    TextTrimming="CharacterEllipsis"
                                                    TextWrapping="NoWrap">

                                                    <ToolTipService.ToolTip>
                                                        <ToolTip
                                                            MaxWidth="9999"
                                                            Content="{x:Bind root:ResourceService.GetLocalized('AppManager/Launch')}"
                                                            Visibility="{Binding ElementName=LaunchText, Path=IsTextTrimmed, Mode=OneWay}" />
                                                    </ToolTipService.ToolTip>
                                                </TextBlock>
                                            </HyperlinkButton.Content>
                                        </HyperlinkButton>

                                        <HyperlinkButton
                                            Grid.Column="4"
                                            Margin="10,0,0,0"
                                            Padding="0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Command="{StaticResource ShowMoreCommand}"
                                            CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}}"
                                            ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('AppManager/More')}">

                                            <HyperlinkButton.Content>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock
                                                        x:Name="MoreText"
                                                        Text="{x:Bind root:ResourceService.GetLocalized('AppManager/More')}"
                                                        TextTrimming="CharacterEllipsis"
                                                        TextWrapping="NoWrap">

                                                        <ToolTipService.ToolTip>
                                                            <ToolTip
                                                                MaxWidth="9999"
                                                                Content="{x:Bind root:ResourceService.GetLocalized('AppManager/More')}"
                                                                Visibility="{Binding ElementName=MoreText, Path=IsTextTrimmed, Mode=OneWay}" />
                                                        </ToolTipService.ToolTip>
                                                    </TextBlock>

                                                    <AnimatedIcon
                                                        Width="12"
                                                        Height="12"
                                                        Margin="8,0,0,0"
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Center"
                                                        AutomationProperties.AccessibilityView="Raw">
                                                        <animatedvisuals:AnimatedChevronDownSmallVisualSource />
                                                        <AnimatedIcon.FallbackIconSource>
                                                            <FontIconSource
                                                                FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                                FontSize="8"
                                                                Glyph="&#xE96E;"
                                                                IsTextScaleFactorEnabled="False" />
                                                        </AnimatedIcon.FallbackIconSource>
                                                    </AnimatedIcon>
                                                </StackPanel>
                                            </HyperlinkButton.Content>

                                            <FlyoutBase.AttachedFlyout>
                                                <MenuFlyout Placement="Bottom">
                                                    <MenuFlyoutItem
                                                        Height="32"
                                                        Padding="11,0"
                                                        Command="{StaticResource CopyAUMIDCommand}"
                                                        CommandParameter="{x:Bind AppUserModelId}"
                                                        Text="{x:Bind root:ResourceService.GetLocalized('AppManager/CopyAUMID')}">

                                                        <MenuFlyoutItem.Icon>
                                                            <FontIcon Glyph="&#xE8C8;" />
                                                        </MenuFlyoutItem.Icon>
                                                    </MenuFlyoutItem>

                                                    <MenuFlyoutSeparator />

                                                    <MenuFlyoutItem
                                                        Height="32"
                                                        Padding="11,0"
                                                        Command="{StaticResource PinToDesktopCommand}"
                                                        Text="{x:Bind root:ResourceService.GetLocalized('AppManager/PinToDesktop')}"
                                                        ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('AppManager/PinToDesktopToolTip')}">

                                                        <MenuFlyoutItem.Icon>
                                                            <FontIcon Glyph="&#xE7F4;" />
                                                        </MenuFlyoutItem.Icon>
                                                    </MenuFlyoutItem>

                                                    <MenuFlyoutItem
                                                        Height="32"
                                                        Padding="11,0"
                                                        Command="{StaticResource PinToStartScreenCommand}"
                                                        CommandParameter="{x:Bind}"
                                                        Text="{x:Bind root:ResourceService.GetLocalized('AppManager/PinToStartScreen')}"
                                                        ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('AppManager/PinToStartScreenToolTip')}">

                                                        <MenuFlyoutItem.Icon>
                                                            <FontIcon Glyph="&#xE8FC;" />
                                                        </MenuFlyoutItem.Icon>
                                                    </MenuFlyoutItem>

                                                    <MenuFlyoutItem
                                                        Height="32"
                                                        Padding="11,0"
                                                        Command="{StaticResource PinToTaskbarCommand}"
                                                        CommandParameter="{x:Bind}"
                                                        Text="{x:Bind root:ResourceService.GetLocalized('AppManager/PinToTaskbar')}"
                                                        ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('AppManager/PinToTaskbarToolTip')}">

                                                        <MenuFlyoutItem.Icon>
                                                            <FontIcon Glyph="&#xE770;" />
                                                        </MenuFlyoutItem.Icon>
                                                    </MenuFlyoutItem>
                                                </MenuFlyout>
                                            </FlyoutBase.AttachedFlyout>
                                        </HyperlinkButton>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Expander.Content>
            </Expander>

            <Expander
                Grid.Row="2"
                Margin="30,0,30,0"
                Padding="0"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                IsExpanded="True"
                Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityConvert(DependenciesCollection.Count), Mode=OneWay}">

                <Expander.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <FontIcon
                            Grid.Column="0"
                            Margin="0,0,12,0"
                            FontSize="16"
                            Glyph="&#xE8AB;" />

                        <TextBlock
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Text="{x:Bind root:ResourceService.GetLocalized('AppManager/DependencyInformation')}" />
                    </Grid>
                </Expander.Header>

                <Expander.Content>
                    <StackPanel>
                        <Grid Height="35" Padding="6,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="75" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                x:Name="DependencyNameHeaderText"
                                Grid.Column="0"
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                Text="{x:Bind root:ResourceService.GetLocalized('AppManager/DependencyName')}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="NoWrap">

                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        MaxWidth="9999"
                                        Content="{x:Bind root:ResourceService.GetLocalized('AppManager/DependencyName')}"
                                        Visibility="{x:Bind DependencyNameHeaderText.IsTextTrimmed, Mode=OneWay}" />
                                </ToolTipService.ToolTip>
                            </TextBlock>

                            <TextBlock
                                x:Name="DependencyDescriptionHeaderText"
                                Grid.Column="1"
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                Text="{x:Bind root:ResourceService.GetLocalized('AppManager/DependencyPublisher')}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="NoWrap">

                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        MaxWidth="9999"
                                        Content="{x:Bind root:ResourceService.GetLocalized('AppManager/DependencyPublisher')}"
                                        Visibility="{x:Bind DependencyDescriptionHeaderText.IsTextTrimmed, Mode=OneWay}" />
                                </ToolTipService.ToolTip>
                            </TextBlock>

                            <TextBlock
                                x:Name="DependencyVersionHeaderText"
                                Grid.Column="2"
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                Text="{x:Bind root:ResourceService.GetLocalized('AppManager/DependencyVersion')}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="NoWrap">

                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        MaxWidth="9999"
                                        Content="{x:Bind root:ResourceService.GetLocalized('AppManager/DependencyVersion')}"
                                        Visibility="{x:Bind DependencyVersionHeaderText.IsTextTrimmed, Mode=OneWay}" />
                                </ToolTipService.ToolTip>
                            </TextBlock>

                            <TextBlock
                                Grid.Column="3"
                                Grid.ColumnSpan="2"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Text="{x:Bind root:ResourceService.GetLocalized('AppManager/Options')}"
                                ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('AppManager/OptionsToolTip')}" />
                        </Grid>

                        <ListView
                            CornerRadius="0"
                            ItemsSource="{x:Bind DependenciesCollection}"
                            SelectionMode="None">

                            <ListView.ItemContainerStyle>
                                <Style BasedOn="{StaticResource DefaultListViewItemStyle}" TargetType="ListViewItem">
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="Margin" Value="0" />
                                    <Setter Property="MinHeight" Value="0" />
                                    <Setter Property="Padding" Value="0" />
                                </Style>
                            </ListView.ItemContainerStyle>

                            <ItemsControl.ItemContainerTransitions>
                                <TransitionCollection />
                            </ItemsControl.ItemContainerTransitions>

                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="appManager:PackageModel">
                                    <Grid
                                        Height="35"
                                        Padding="6,0,0,0"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="0,1,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*" />
                                            <ColumnDefinition Width="2*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="75" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            x:Name="DependencyNameText"
                                            Grid.Column="0"
                                            MinWidth="50"
                                            Margin="10,0,0,0"
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            Text="{x:Bind DisplayName}"
                                            TextAlignment="Left"
                                            TextTrimming="CharacterEllipsis"
                                            TextWrapping="NoWrap">

                                            <ToolTipService.ToolTip>
                                                <ToolTip
                                                    MaxWidth="9999"
                                                    Content="{x:Bind DisplayName}"
                                                    Visibility="{Binding ElementName=DependencyNameText, Path=IsTextTrimmed, Mode=OneWay}" />
                                            </ToolTipService.ToolTip>
                                        </TextBlock>

                                        <TextBlock
                                            x:Name="DependencyPublisherText"
                                            Grid.Column="1"
                                            MinWidth="50"
                                            Margin="10,0,0,0"
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            Text="{x:Bind PublisherDisplayName}"
                                            TextAlignment="Left"
                                            TextTrimming="CharacterEllipsis"
                                            TextWrapping="NoWrap">

                                            <ToolTipService.ToolTip>
                                                <ToolTip
                                                    MaxWidth="9999"
                                                    Content="{x:Bind PublisherDisplayName}"
                                                    Visibility="{Binding ElementName=DependencyPublisherText, Path=IsTextTrimmed, Mode=OneWay}" />
                                            </ToolTipService.ToolTip>
                                        </TextBlock>

                                        <TextBlock
                                            x:Name="DependencyVersionText"
                                            Grid.Column="2"
                                            MinWidth="50"
                                            Margin="10,0,0,0"
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            Text="{x:Bind Version}"
                                            TextAlignment="Left"
                                            TextTrimming="CharacterEllipsis"
                                            TextWrapping="NoWrap">

                                            <ToolTipService.ToolTip>
                                                <ToolTip
                                                    MaxWidth="9999"
                                                    Content="{x:Bind Version}"
                                                    Visibility="{Binding ElementName=DependencyVersionText, Path=IsTextTrimmed, Mode=OneWay}" />
                                            </ToolTipService.ToolTip>
                                        </TextBlock>

                                        <HyperlinkButton
                                            Grid.Column="4"
                                            Margin="10,0,0,0"
                                            Padding="0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Command="{StaticResource ShowMoreCommand}"
                                            CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}}">

                                            <HyperlinkButton.Content>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock
                                                        x:Name="MoreText"
                                                        Text="{x:Bind root:ResourceService.GetLocalized('AppManager/More')}"
                                                        TextTrimming="CharacterEllipsis"
                                                        TextWrapping="NoWrap">

                                                        <ToolTipService.ToolTip>
                                                            <ToolTip
                                                                MaxWidth="9999"
                                                                Content="{x:Bind root:ResourceService.GetLocalized('AppManager/More')}"
                                                                Visibility="{Binding ElementName=MoreText, Path=IsTextTrimmed, Mode=OneWay}" />
                                                        </ToolTipService.ToolTip>
                                                    </TextBlock>

                                                    <AnimatedIcon
                                                        Width="12"
                                                        Height="12"
                                                        Margin="8,0,0,0"
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Center"
                                                        AutomationProperties.AccessibilityView="Raw">
                                                        <animatedvisuals:AnimatedChevronDownSmallVisualSource />
                                                        <AnimatedIcon.FallbackIconSource>
                                                            <FontIconSource
                                                                FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                                FontSize="8"
                                                                Glyph="&#xE96E;"
                                                                IsTextScaleFactorEnabled="False" />
                                                        </AnimatedIcon.FallbackIconSource>
                                                    </AnimatedIcon>
                                                </StackPanel>
                                            </HyperlinkButton.Content>

                                            <FlyoutBase.AttachedFlyout>
                                                <MenuFlyout Placement="Bottom">
                                                    <MenuFlyoutItem
                                                        Height="32"
                                                        Padding="11,0"
                                                        Command="{StaticResource OpenStoreCommand}"
                                                        CommandParameter="{x:Bind Package}"
                                                        Text="{x:Bind root:ResourceService.GetLocalized('AppManager/OpenStore')}">

                                                        <MenuFlyoutItem.Icon>
                                                            <FontIcon Glyph="&#xE719;" />
                                                        </MenuFlyoutItem.Icon>
                                                    </MenuFlyoutItem>

                                                    <MenuFlyoutItem
                                                        Height="32"
                                                        Padding="11,0"
                                                        Command="{StaticResource OpenFolderCommand}"
                                                        CommandParameter="{x:Bind Package}"
                                                        Text="{x:Bind root:ResourceService.GetLocalized('AppManager/OpenFolder')}">

                                                        <MenuFlyoutItem.Icon>
                                                            <FontIcon Glyph="&#xE8B7;" />
                                                        </MenuFlyoutItem.Icon>
                                                    </MenuFlyoutItem>

                                                    <MenuFlyoutSeparator />

                                                    <MenuFlyoutItem
                                                        Height="32"
                                                        Padding="11,0"
                                                        Command="{StaticResource CopyDependencyNameCommand}"
                                                        CommandParameter="{x:Bind DisplayName}"
                                                        Text="{x:Bind root:ResourceService.GetLocalized('AppManager/CopyDependencyName')}">

                                                        <MenuFlyoutItem.Icon>
                                                            <FontIcon Glyph="&#xE8C8;" />
                                                        </MenuFlyoutItem.Icon>
                                                    </MenuFlyoutItem>

                                                    <MenuFlyoutItem
                                                        Height="32"
                                                        Padding="11,0"
                                                        Command="{StaticResource CopyDependencyInformationCommand}"
                                                        CommandParameter="{x:Bind Package}"
                                                        Text="{x:Bind root:ResourceService.GetLocalized('AppManager/CopyDependencyInformation')}">

                                                        <MenuFlyoutItem.Icon>
                                                            <FontIcon Glyph="&#xE8C8;" />
                                                        </MenuFlyoutItem.Icon>
                                                    </MenuFlyoutItem>
                                                </MenuFlyout>
                                            </FlyoutBase.AttachedFlyout>
                                        </HyperlinkButton>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Expander.Content>
            </Expander>
        </Grid>
    </ScrollViewer>
</Page>
