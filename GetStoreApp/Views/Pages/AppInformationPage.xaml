<Page
    x:Class="GetStoreApp.Views.Pages.AppInformationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:converter="using:GetStoreApp.Helpers.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:GetStoreApp.Models"
    xmlns:rootservice="using:GetStoreApp.Services.Root"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <Page.Resources>
        <SolidColorBrush x:Key="HyperlinkButtonBackgroundPointerOver" Color="Transparent" />
        <SolidColorBrush x:Key="HyperlinkButtonBackgroundPressed" Color="Transparent" />
        <SolidColorBrush x:Key="CommandBarBackgroundOpen" Color="Transparent" />
        <Thickness x:Key="CommandBarBorderThicknessOpen">0</Thickness>

        <XamlUICommand x:Name="LaunchCommand" ExecuteRequested="{x:Bind OnLaunchExecuteRequested}" />
        <XamlUICommand x:Name="OpenFolderCommand" ExecuteRequested="{x:Bind OnOpenFolderExecuteRequested}" />
        <XamlUICommand x:Name="OpenStoreCommand" ExecuteRequested="{x:Bind OnOpenStoreExecuteRequested}" />
        <XamlUICommand x:Name="PinToDesktopCommand" ExecuteRequested="{x:Bind OnPinToDesktopExecuteRequested}" />
        <XamlUICommand x:Name="PinToStartScreenCommand" ExecuteRequested="{x:Bind OnPinToStartScreenExecuteRequested}" />
        <XamlUICommand x:Name="PinToTaskbarCommand" ExecuteRequested="{x:Bind OnPinToTaskbarExecuteRequested}" />
    </Page.Resources>

    <ScrollViewer
        HorizontalScrollBarVisibility="Disabled"
        HorizontalScrollMode="Disabled"
        VerticalScrollBarVisibility="Auto"
        VerticalScrollMode="Enabled">

        <Grid Margin="0,0,0,30">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  应用信息  -->
            <Expander
                Grid.Row="0"
                Margin="30,0,30,2"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                IsExpanded="True">

                <Expander.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <FontIcon
                            Grid.Column="0"
                            Margin="0,0,12,0"
                            FontSize="16"
                            Glyph="&#xE946;" />

                        <TextBlock
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Text="{x:Bind rootservice:ResourceService.GetLocalized('AppInformation/AppInformation')}" />

                        <CommandBar
                            Grid.Column="2"
                            Margin="0,0,-15,0"
                            DefaultLabelPosition="Right">

                            <CommandBar.PrimaryCommands>
                                <AppBarButton Click="{x:Bind OnCopyClicked}" Label="{x:Bind rootservice:ResourceService.GetLocalized('AppInformation/Copy')}">

                                    <AppBarButton.Icon>
                                        <FontIcon Glyph="&#xE8C8;" />
                                    </AppBarButton.Icon>
                                </AppBarButton>
                            </CommandBar.PrimaryCommands>
                        </CommandBar>
                    </Grid>
                </Expander.Header>

                <Expander.Content>
                    <Grid Margin="0,0,10,0" RowSpacing="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            Grid.Column="0"
                            Margin="0,0,25,0"
                            HorizontalAlignment="Left"
                            FontSize="17"
                            Text="{x:Bind rootservice:ResourceService.GetLocalized('AppInformation/BasicInformation')}" />

                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            IsTextSelectionEnabled="True"
                            Text="{x:Bind rootservice:ResourceService.GetLocalized('AppInformation/AppDisplayName')}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="2"
                            HorizontalAlignment="Left"
                            IsTextSelectionEnabled="True"
                            Text="{x:Bind DisplayName, Mode=OneWay}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            IsTextSelectionEnabled="True"
                            Text="{x:Bind rootservice:ResourceService.GetLocalized('AppInformation/PackageFamilyName')}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="2"
                            HorizontalAlignment="Left"
                            IsTextSelectionEnabled="True"
                            Text="{x:Bind PackageFamilyName, Mode=OneWay}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            IsTextSelectionEnabled="True"
                            Text="{x:Bind rootservice:ResourceService.GetLocalized('AppInformation/PackageFullName')}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="2"
                            HorizontalAlignment="Left"
                            IsTextSelectionEnabled="True"
                            Text="{x:Bind PackageFullName, Mode=OneWay}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            IsTextSelectionEnabled="True"
                            Text="{x:Bind rootservice:ResourceService.GetLocalized('AppInformation/AppDescription')}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="2"
                            HorizontalAlignment="Left"
                            IsTextSelectionEnabled="True"
                            Text="{x:Bind Description, Mode=OneWay}"
                            TextWrapping="Wrap" />

                        <MenuFlyoutSeparator
                            Grid.Row="4"
                            Grid.Column="0"
                            Grid.ColumnSpan="3" />

                        <TextBlock
                            Grid.Row="5"
                            Grid.RowSpan="2"
                            Grid.Column="0"
                            Margin="0,0,25,0"
                            HorizontalAlignment="Left"
                            FontSize="17"
                            Text="{x:Bind rootservice:ResourceService.GetLocalized('AppInformation/PublisherInformation')}" />

                        <TextBlock
                            Grid.Row="5"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            IsTextSelectionEnabled="True"
                            Text="{x:Bind rootservice:ResourceService.GetLocalized('AppInformation/PublisherDisplayName')}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="5"
                            Grid.Column="2"
                            HorizontalAlignment="Left"
                            IsTextSelectionEnabled="True"
                            Text="{x:Bind PublisherDisplayName, Mode=OneWay}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="6"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            IsTextSelectionEnabled="True"
                            Text="{x:Bind rootservice:ResourceService.GetLocalized('AppInformation/PublisherId')}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="6"
                            Grid.Column="2"
                            HorizontalAlignment="Left"
                            IsTextSelectionEnabled="True"
                            Text="{x:Bind PublisherId, Mode=OneWay}"
                            TextWrapping="Wrap" />

                        <MenuFlyoutSeparator
                            Grid.Row="7"
                            Grid.Column="0"
                            Grid.ColumnSpan="3" />

                        <TextBlock
                            Grid.Row="8"
                            Grid.RowSpan="2"
                            Grid.Column="0"
                            Margin="0,0,25,0"
                            HorizontalAlignment="Left"
                            FontSize="17"
                            Text="{x:Bind rootservice:ResourceService.GetLocalized('AppInformation/PackageInformation')}" />

                        <TextBlock
                            Grid.Row="8"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            IsTextSelectionEnabled="True"
                            Text="{x:Bind rootservice:ResourceService.GetLocalized('AppInformation/Version')}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="8"
                            Grid.Column="2"
                            HorizontalAlignment="Left"
                            IsTextSelectionEnabled="True"
                            Text="{x:Bind Version, Mode=OneWay}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="9"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            IsTextSelectionEnabled="True"
                            Text="{x:Bind rootservice:ResourceService.GetLocalized('AppInformation/InstalledDate')}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="9"
                            Grid.Column="2"
                            HorizontalAlignment="Left"
                            IsTextSelectionEnabled="True"
                            Text="{x:Bind InstalledDate, Mode=OneWay}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="10"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            IsTextSelectionEnabled="True"
                            Text="{x:Bind rootservice:ResourceService.GetLocalized('AppInformation/Architecture')}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="10"
                            Grid.Column="2"
                            HorizontalAlignment="Left"
                            IsTextSelectionEnabled="True"
                            Text="{x:Bind Architecture, Mode=OneWay}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="11"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            IsTextSelectionEnabled="True"
                            Text="{x:Bind rootservice:ResourceService.GetLocalized('AppInformation/SignatureKind')}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="11"
                            Grid.Column="2"
                            HorizontalAlignment="Left"
                            IsTextSelectionEnabled="True"
                            Text="{x:Bind SignatureKind, Mode=OneWay}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="12"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            IsTextSelectionEnabled="True"
                            Text="{x:Bind rootservice:ResourceService.GetLocalized('AppInformation/ResourceId')}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="12"
                            Grid.Column="2"
                            HorizontalAlignment="Left"
                            IsTextSelectionEnabled="True"
                            Text="{x:Bind ResourceId, Mode=OneWay}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="13"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            IsTextSelectionEnabled="True"
                            Text="{x:Bind rootservice:ResourceService.GetLocalized('AppInformation/IsBundle')}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="13"
                            Grid.Column="2"
                            HorizontalAlignment="Left"
                            IsTextSelectionEnabled="True"
                            Text="{x:Bind IsBundle, Mode=OneWay}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="14"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            IsTextSelectionEnabled="True"
                            Text="{x:Bind rootservice:ResourceService.GetLocalized('AppInformation/IsDevelopmentMode')}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="14"
                            Grid.Column="2"
                            HorizontalAlignment="Left"
                            IsTextSelectionEnabled="True"
                            Text="{x:Bind IsDevelopmentMode, Mode=OneWay}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="15"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            IsTextSelectionEnabled="True"
                            Text="{x:Bind rootservice:ResourceService.GetLocalized('AppInformation/IsFramework')}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="15"
                            Grid.Column="2"
                            HorizontalAlignment="Left"
                            IsTextSelectionEnabled="True"
                            Text="{x:Bind IsFramework, Mode=OneWay}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="16"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            IsTextSelectionEnabled="True"
                            Text="{x:Bind rootservice:ResourceService.GetLocalized('AppInformation/IsOptional')}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="16"
                            Grid.Column="2"
                            HorizontalAlignment="Left"
                            IsTextSelectionEnabled="True"
                            Text="{x:Bind IsOptional, Mode=OneWay}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="17"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            IsTextSelectionEnabled="True"
                            Text="{x:Bind rootservice:ResourceService.GetLocalized('AppInformation/IsResourcePackage')}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="17"
                            Grid.Column="2"
                            HorizontalAlignment="Left"
                            IsTextSelectionEnabled="True"
                            Text="{x:Bind IsResourcePackage, Mode=OneWay}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="18"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            IsTextSelectionEnabled="True"
                            Text="{x:Bind rootservice:ResourceService.GetLocalized('AppInformation/IsStub')}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="18"
                            Grid.Column="2"
                            HorizontalAlignment="Left"
                            IsTextSelectionEnabled="True"
                            Text="{x:Bind IsStub, Mode=OneWay}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="19"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            IsTextSelectionEnabled="True"
                            Text="{x:Bind rootservice:ResourceService.GetLocalized('AppInformation/VertifyIsOK')}"
                            TextWrapping="Wrap" />

                        <TextBlock
                            Grid.Row="19"
                            Grid.Column="2"
                            HorizontalAlignment="Left"
                            IsTextSelectionEnabled="True"
                            Text="{x:Bind VertifyIsOK, Mode=OneWay}"
                            TextWrapping="Wrap" />
                    </Grid>
                </Expander.Content>
            </Expander>

            <!--  应用程序入口  -->
            <Expander
                Grid.Row="1"
                Margin="30,0,30,2"
                Padding="0"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                IsExpanded="True"
                Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityConvert(AppListEntryCollection.Count), Mode=OneWay}">

                <Expander.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <FontIcon
                            Grid.Column="0"
                            Margin="0,0,12,0"
                            FontSize="16"
                            Glyph="&#xE8A7;" />

                        <TextBlock
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Text="{x:Bind rootservice:ResourceService.GetLocalized('AppInformation/AppListEntry')}" />
                    </Grid>
                </Expander.Header>

                <Expander.Content>
                    <ListView
                        CornerRadius="0"
                        ItemsSource="{x:Bind AppListEntryCollection}"
                        SelectionMode="None">

                        <ListView.ItemContainerStyle>
                            <Style BasedOn="{StaticResource DefaultListViewItemStyle}" TargetType="ListViewItem">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Margin" Value="0" />
                                <Setter Property="MinHeight" Value="0" />
                                <Setter Property="Padding" Value="0" />
                            </Style>
                        </ListView.ItemContainerStyle>

                        <ItemsControl.ItemContainerTransitions>
                            <TransitionCollection />
                        </ItemsControl.ItemContainerTransitions>

                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="model:AppListEntryModel">
                                <Grid
                                    Height="60"
                                    Padding="18,0,12,0"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="0,0,0,1"
                                    CornerRadius="0">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">

                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            IsTextSelectionEnabled="True"
                                            Style="{StaticResource BodyTextBlockStyle}"
                                            Text="{x:Bind DisplayName}"
                                            TextTrimming="CharacterEllipsis"
                                            TextWrapping="NoWrap" />

                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            IsTextSelectionEnabled="True"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            TextTrimming="CharacterEllipsis"
                                            TextWrapping="NoWrap">

                                            <Run Text="{x:Bind Description}" />
                                            <Run Text=" | " />
                                            <Run Text="{x:Bind AppUserModelId}" />
                                        </TextBlock>

                                        <ToolTipService.ToolTip>
                                            <ToolTip MaxWidth="9999">
                                                <StackPanel>
                                                    <TextBlock>
                                                        <Run Text="{x:Bind rootservice:ResourceService.GetLocalized('AppInformation/EntryDisplayName')}" />
                                                        <Run Text="{x:Bind DisplayName}" />
                                                    </TextBlock>

                                                    <TextBlock>
                                                        <Run Text="{x:Bind rootservice:ResourceService.GetLocalized('AppInformation/EntryDescription')}" />
                                                        <Run Text="{x:Bind Description}" />
                                                    </TextBlock>

                                                    <TextBlock>
                                                        <Run Text="{x:Bind rootservice:ResourceService.GetLocalized('AppInformation/EntryAUMID')}" />
                                                        <Run Text="{x:Bind AppUserModelId}" />
                                                    </TextBlock>
                                                </StackPanel>
                                            </ToolTip>
                                        </ToolTipService.ToolTip>
                                    </StackPanel>

                                    <SplitButton
                                        Grid.Column="1"
                                        Command="{StaticResource LaunchCommand}"
                                        CommandParameter="{x:Bind}"
                                        Content="{x:Bind rootservice:ResourceService.GetLocalized('AppInformation/Launch')}">

                                        <SplitButton.Flyout>
                                            <MenuFlyout Placement="Bottom">
                                                <MenuFlyoutItem
                                                    Command="{StaticResource PinToDesktopCommand}"
                                                    Text="{x:Bind rootservice:ResourceService.GetLocalized('AppInformation/PinToDesktop')}"
                                                    ToolTipService.ToolTip="{x:Bind rootservice:ResourceService.GetLocalized('AppInformation/PinToDesktopToolTip')}">

                                                    <MenuFlyoutItem.Icon>
                                                        <FontIcon Glyph="&#xE7F4;" />
                                                    </MenuFlyoutItem.Icon>
                                                </MenuFlyoutItem>

                                                <MenuFlyoutItem
                                                    Command="{StaticResource PinToStartScreenCommand}"
                                                    CommandParameter="{x:Bind}"
                                                    Text="{x:Bind rootservice:ResourceService.GetLocalized('AppInformation/PinToStartScreen')}"
                                                    ToolTipService.ToolTip="{x:Bind rootservice:ResourceService.GetLocalized('AppInformation/PinToStartScreenToolTip')}">

                                                    <MenuFlyoutItem.Icon>
                                                        <FontIcon Glyph="&#xE8FC;" />
                                                    </MenuFlyoutItem.Icon>
                                                </MenuFlyoutItem>

                                                <MenuFlyoutItem
                                                    Command="{StaticResource PinToTaskbarCommand}"
                                                    CommandParameter="{x:Bind}"
                                                    Text="{x:Bind rootservice:ResourceService.GetLocalized('AppInformation/PinToTaskbar')}"
                                                    ToolTipService.ToolTip="{x:Bind rootservice:ResourceService.GetLocalized('AppInformation/PinToTaskbarToolTip')}">

                                                    <MenuFlyoutItem.Icon>
                                                        <FontIcon Glyph="&#xE770;" />
                                                    </MenuFlyoutItem.Icon>
                                                </MenuFlyoutItem>
                                            </MenuFlyout>
                                        </SplitButton.Flyout>
                                    </SplitButton>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Expander.Content>
            </Expander>

            <!--  依赖信息  -->
            <Expander
                Grid.Row="2"
                Margin="30,0,30,0"
                Padding="0"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                IsExpanded="True"
                Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityConvert(DependenciesCollection.Count), Mode=OneWay}">

                <Expander.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <FontIcon
                            Grid.Column="0"
                            Margin="0,0,12,0"
                            FontSize="16"
                            Glyph="&#xE8AB;" />

                        <TextBlock
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Text="{x:Bind rootservice:ResourceService.GetLocalized('AppInformation/DependencyInformation')}" />
                    </Grid>
                </Expander.Header>

                <Expander.Content>
                    <ListView
                        CornerRadius="0"
                        ItemsSource="{x:Bind DependenciesCollection}"
                        SelectionMode="None">

                        <ListView.ItemContainerStyle>
                            <Style BasedOn="{StaticResource DefaultListViewItemStyle}" TargetType="ListViewItem">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Margin" Value="0" />
                                <Setter Property="MinHeight" Value="0" />
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="CornerRadius" Value="0" />
                            </Style>
                        </ListView.ItemContainerStyle>

                        <ItemsControl.ItemContainerTransitions>
                            <TransitionCollection />
                        </ItemsControl.ItemContainerTransitions>

                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="model:PackageModel">
                                <Grid
                                    Height="60"
                                    Padding="18,0,12,0"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="0,0,0,1"
                                    CornerRadius="0">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">

                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            IsTextSelectionEnabled="True"
                                            Style="{StaticResource BodyTextBlockStyle}"
                                            Text="{x:Bind DisplayName}"
                                            TextTrimming="CharacterEllipsis"
                                            TextWrapping="NoWrap" />

                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            IsTextSelectionEnabled="True"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            TextTrimming="CharacterEllipsis"
                                            TextWrapping="NoWrap">

                                            <Run Text="{x:Bind PublisherDisplayName}" />
                                            <Run Text=" | " />
                                            <Run Text="{x:Bind Version}" />
                                        </TextBlock>

                                        <ToolTipService.ToolTip>
                                            <ToolTip MaxWidth="9999">
                                                <StackPanel>
                                                    <TextBlock>
                                                        <Run Text="{x:Bind rootservice:ResourceService.GetLocalized('AppInformation/DependencyDisplayName')}" />
                                                        <Run Text="{x:Bind DisplayName}" />
                                                    </TextBlock>

                                                    <TextBlock>
                                                        <Run Text="{x:Bind rootservice:ResourceService.GetLocalized('AppInformation/DependencyPublisherDisplayName')}" />
                                                        <Run Text="{x:Bind PublisherDisplayName}" />
                                                    </TextBlock>

                                                    <TextBlock>
                                                        <Run Text="{x:Bind rootservice:ResourceService.GetLocalized('AppInformation/DependencyVersion')}" />
                                                        <Run Text="{x:Bind Version}" />
                                                    </TextBlock>
                                                </StackPanel>
                                            </ToolTip>
                                        </ToolTipService.ToolTip>
                                    </StackPanel>

                                    <Button
                                        Grid.Column="1"
                                        Width="34"
                                        Height="34"
                                        Padding="0"
                                        ToolTipService.ToolTip="{x:Bind rootservice:ResourceService.GetLocalized('AppInformation/ViewMore')}">

                                        <Button.Content>
                                            <FontIcon FontSize="16" Glyph="&#xE712;" />
                                        </Button.Content>

                                        <Button.Flyout>
                                            <MenuFlyout Placement="Bottom">
                                                <MenuFlyoutItem
                                                    Command="{StaticResource OpenStoreCommand}"
                                                    CommandParameter="{x:Bind Package}"
                                                    Text="{x:Bind rootservice:ResourceService.GetLocalized('AppInformation/OpenStore')}">

                                                    <MenuFlyoutItem.Icon>
                                                        <FontIcon Glyph="&#xE719;" />
                                                    </MenuFlyoutItem.Icon>
                                                </MenuFlyoutItem>

                                                <MenuFlyoutItem
                                                    Command="{StaticResource OpenFolderCommand}"
                                                    CommandParameter="{x:Bind Package}"
                                                    Text="{x:Bind rootservice:ResourceService.GetLocalized('AppInformation/OpenFolder')}">

                                                    <MenuFlyoutItem.Icon>
                                                        <FontIcon Glyph="&#xE8B7;" />
                                                    </MenuFlyoutItem.Icon>
                                                </MenuFlyoutItem>
                                            </MenuFlyout>
                                        </Button.Flyout>
                                    </Button>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Expander.Content>
            </Expander>
        </Grid>
    </ScrollViewer>
</Page>
