<Page
    x:Class="GetStoreApp.Views.Pages.AppUpdatePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:appUpdate="using:GetStoreApp.Models.Controls.AppUpdate"
    xmlns:converter="using:GetStoreApp.Helpers.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enum="using:GetStoreApp.Extensions.DataType.Enums"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="using:GetStoreApp.Services.Root"
    xmlns:sys="using:System"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <Page.Resources>
        <SolidColorBrush x:Key="ItemContainerPointerOverBackground" Color="Transparent" />
        <SolidColorBrush x:Key="ItemContainerPressedBackground" Color="Transparent" />

        <XamlUICommand x:Name="UpdateCommand" ExecuteRequested="{x:Bind OnUpdateExecuteRequested}" />
        <XamlUICommand x:Name="CancelCommand" ExecuteRequested="{x:Bind OnCancelExecuteRequested}" />
    </Page.Resources>

    <Grid Padding="0">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="30,10,30,0"
            FontSize="22"
            Text="{x:Bind root:ResourceService.GetLocalized('AppUpdate/Title')}" />

        <!--  应用更新控制栏  -->
        <Grid
            Grid.Row="1"
            Height="66"
            Margin="30,5,30,3"
            Padding="16,8,2,8"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="{StaticResource ControlCornerRadius}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <FontIcon
                Grid.Column="0"
                Margin="0,0,12,0"
                FontSize="16"
                Glyph="&#xE74C;" />

            <TextBlock
                Grid.Column="1"
                VerticalAlignment="Center"
                Text="{x:Bind root:ResourceService.GetLocalized('AppUpdate/Operation')}" />

            <AppBarSeparator Grid.Column="2" Margin="10,0,10,0" />

            <TextBlock
                Grid.Column="3"
                VerticalAlignment="Center"
                Text="{x:Bind root:ResourceService.GetLocalized('AppUpdate/AppUpdateEmpty')}"
                Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityReverseConvert(AppUpdateCollection.Count), Mode=OneWay}" />

            <TextBlock
                Grid.Column="3"
                VerticalAlignment="Center"
                Text="{x:Bind x:String.Format(AppUpdateCountInfo, AppUpdateCollection.Count), Mode=OneWay}"
                Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityConvert(AppUpdateCollection.Count), Mode=OneWay}" />

            <CommandBar
                Grid.Column="4"
                Margin="0,0,10,0"
                DefaultLabelPosition="Right">

                <CommandBar.Resources>
                    <SolidColorBrush x:Key="CommandBarBackgroundOpen" Color="Transparent" />
                    <Thickness x:Key="CommandBarBorderThicknessOpen">0</Thickness>
                </CommandBar.Resources>

                <CommandBar.PrimaryCommands>
                    <AppBarButton
                        Click="{x:Bind OnCheckUpdateClicked}"
                        IsEnabled="{x:Bind GetIsCheckingUpdate(AppUpdateResultKind), Mode=OneWay}"
                        Label="{x:Bind root:ResourceService.GetLocalized('AppUpdate/CheckUpdate')}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE8CB;" />
                        </AppBarButton.Icon>
                    </AppBarButton>

                    <AppBarButton
                        Click="{x:Bind OnUpdateAllClicked}"
                        IsEnabled="{x:Bind GetIsCheckingUpdate(AppUpdateResultKind), Mode=OneWay}"
                        Label="{x:Bind root:ResourceService.GetLocalized('AppUpdate/UpdateAll')}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE74A;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                </CommandBar.PrimaryCommands>

                <CommandBar.SecondaryCommands>
                    <AppBarButton
                        Click="{x:Bind OnOpenStoreClicked}"
                        Label="{x:Bind root:ResourceService.GetLocalized('AppUpdate/OpenStore')}"
                        ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('AppUpdate/OpenStoreToolTip')}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE719;" />
                        </AppBarButton.Icon>
                    </AppBarButton>

                    <AppBarButton
                        Click="{x:Bind OnInsiderProgramClicked}"
                        Label="{x:Bind root:ResourceService.GetLocalized('AppUpdate/InsiderProgram')}"
                        ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('AppUpdate/InsiderProgramToolTip')}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xF1AD;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                </CommandBar.SecondaryCommands>
            </CommandBar>
        </Grid>

        <!--  应用更新状态显示栏  -->
        <Grid
            Grid.Row="2"
            Height="60"
            Margin="30,0,30,0"
            Padding="16,12"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="{StaticResource ControlCornerRadius}"
            Visibility="{x:Bind GetAppUpdateSuccessfullyState(AppUpdateResultKind, x:False), Mode=OneWay}">

            <Grid>
                <!--  未检查更新  -->
                <TextBlock
                    Margin="0,10"
                    VerticalAlignment="Center"
                    Text="{x:Bind root:ResourceService.GetLocalized('AppUpdate/NotCheckUpdateTip')}"
                    TextAlignment="Center"
                    Visibility="{x:Bind CheckAppUpdateState(AppUpdateResultKind, enum:AppUpdateResultKind.NotCheckUpdate), Mode=OneWay}" />

                <!--  正在检查更新中  -->
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="10"
                    Visibility="{x:Bind CheckAppUpdateState(AppUpdateResultKind, enum:AppUpdateResultKind.Querying), Mode=OneWay}">

                    <ProgressRing IsActive="True" IsEnabled="True" />

                    <TextBlock
                        Margin="0,10"
                        VerticalAlignment="Center"
                        Text="{x:Bind root:ResourceService.GetLocalized('AppUpdate/LoadingUpdate')}"
                        TextAlignment="Center" />
                </StackPanel>

                <!--  检查更新失败  -->
                <TextBlock
                    Margin="0,10"
                    VerticalAlignment="Center"
                    Text="{x:Bind AppUpdateFailedContent, Mode=OneWay}"
                    TextAlignment="Center"
                    Visibility="{x:Bind CheckAppUpdateState(AppUpdateResultKind, enum:AppUpdateResultKind.Failed), Mode=OneWay}" />
            </Grid>
        </Grid>

        <!--  应用更新结果展示项目控件  -->
        <ItemsView
            Grid.Row="2"
            Padding="30,0,30,30"
            ItemsSource="{x:Bind AppUpdateCollection, Mode=OneWay}"
            SelectionMode="None"
            Visibility="{x:Bind GetAppUpdateSuccessfullyState(AppUpdateResultKind, x:True), Mode=OneWay}">

            <ItemsView.ItemTemplate>
                <DataTemplate x:DataType="appUpdate:AppUpdateModel">
                    <ItemContainer Margin="0,0,0,2">
                        <Grid>
                            <Grid
                                Height="60"
                                Padding="16,12"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                ColumnSpacing="10"
                                CornerRadius="{StaticResource ControlCornerRadius}">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="1.2*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Grid
                                    Grid.Row="0"
                                    Width="30"
                                    Height="30"
                                    Margin="0,-6,0,-6"
                                    HorizontalAlignment="Left"
                                    Background="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="{StaticResource ControlCornerRadius}">

                                    <ImageIcon>
                                        <ImageIcon.Source>
                                            <BitmapImage UriSource="{x:Bind LogoImage, Mode=OneWay}" />
                                        </ImageIcon.Source>
                                    </ImageIcon>
                                </Grid>

                                <TextBlock
                                    Grid.Column="1"
                                    MinWidth="50"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Text="{x:Bind DisplayName}"
                                    TextAlignment="Left"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="NoWrap" />

                                <TextBlock
                                    Grid.Column="2"
                                    MinWidth="50"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Text="{x:Bind PublisherDisplayName}"
                                    TextAlignment="Left"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="NoWrap" />

                                <StackPanel
                                    Grid.Column="3"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Spacing="2">

                                    <TextBlock
                                        MinWidth="50"
                                        FontSize="14"
                                        HorizontalTextAlignment="Left"
                                        Text="{x:Bind InstallInformation, Mode=OneWay}"
                                        TextAlignment="Left"
                                        TextTrimming="CharacterEllipsis"
                                        TextWrapping="NoWrap" />

                                    <TextBlock
                                        MinWidth="50"
                                        FontSize="12"
                                        Text="{x:Bind InstallSubInformation, Mode=OneWay}"
                                        TextAlignment="Left"
                                        TextTrimming="CharacterEllipsis"
                                        TextWrapping="NoWrap"
                                        Visibility="{x:Bind converter:ValueCheckConverterHelper.IsAppInstallDownloading(AppInstallState), Mode=OneWay}" />
                                </StackPanel>

                                <Button
                                    Grid.Column="4"
                                    Command="{StaticResource UpdateCommand}"
                                    CommandParameter="{x:Bind PackageFamilyName}"
                                    Content="{x:Bind root:ResourceService.GetLocalized('AppUpdate/Update')}"
                                    IsEnabled="{x:Bind IsOperating.Equals(x:False), Mode=OneWay}"
                                    Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(IsUpdating), Mode=OneWay}" />

                                <Button
                                    Grid.Column="4"
                                    Command="{StaticResource CancelCommand}"
                                    CommandParameter="{x:Bind PackageFamilyName}"
                                    Content="{x:Bind root:ResourceService.GetLocalized('AppUpdate/Cancel')}"
                                    IsEnabled="{x:Bind IsOperating.Equals(x:False), Mode=OneWay}"
                                    Style="{StaticResource AccentButtonStyle}"
                                    Visibility="{x:Bind IsUpdating, Mode=OneWay}" />
                            </Grid>

                            <ProgressBar
                                Margin="16,0"
                                VerticalAlignment="Bottom"
                                IsIndeterminate="False"
                                Visibility="{x:Bind IsUpdating, Mode=OneWay}"
                                Value="{x:Bind PercentComplete, Mode=OneWay}" />
                        </Grid>
                    </ItemContainer>
                </DataTemplate>
            </ItemsView.ItemTemplate>
        </ItemsView>
    </Grid>
</Page>
