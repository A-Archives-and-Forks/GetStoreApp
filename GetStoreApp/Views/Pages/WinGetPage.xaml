                                                            </ToolTip>
                                                        </ToolTipService.ToolTip>
                                                    </TextBlock>

                                                    <TextBlock
                                                        Grid.Column="3"
                                                        Margin="2,0,2,0"
                                                        VerticalAlignment="Center"
                                                        FontSize="14"
                                                        Text="|"
                                                        TextAlignment="Right" />

                                                    <TextBlock
                                                        Grid.Column="4"
                                                        VerticalAlignment="Center"
                                                        FontSize="14"
                                                        Text="{x:Bind TotalFileSize, Mode=OneWay}"
                                                        TextAlignment="Right">

                                                        <ToolTipService.ToolTip>
                                                            <ToolTip MaxWidth="9999">
                                                                <TextBlock>
                                                                    <Run Text="{x:Bind root:ResourceService.GetLocalized('WinGet/TotalFileSizeToolTip')}" />
                                                                    <Run Text="{x:Bind TotalFileSize, Mode=OneWay}" />
                                                                </TextBlock>
                                                            </ToolTip>
                                                        </ToolTipService.ToolTip>
                                                    </TextBlock>
                                                </Grid>
                                            </Grid>

                                            <Grid Grid.Row="1" ColumnSpacing="5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <Grid Grid.Column="0" Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckPackageOperationResultKind(PackageOperationResultKind, enum:PackageOperationResultKind.Normal), Mode=OneWay}">
                                                    <TextBlock
                                                        FontSize="14"
                                                        Text="{x:Bind root:ResourceService.GetLocalized('WinGet/UpgradeQueued')}"
                                                        Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckPackageUpgradeProgressState(PackageInstallProgressState, deployment:PackageInstallProgressState.Queued, x:False), Mode=OneWay}" />

                                                    <TextBlock
                                                        FontSize="14"
                                                        Text="{x:Bind root:ResourceService.GetLocalized('WinGet/Downloading')}"
                                                        Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckPackageUpgradeProgressState(PackageInstallProgressState, deployment:PackageInstallProgressState.Downloading, x:False), Mode=OneWay}" />

                                                    <TextBlock
                                                        FontSize="14"
                                                        Text="{x:Bind root:ResourceService.GetLocalized('WinGet/Upgrading')}"
                                                        Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckPackageUpgradeProgressState(PackageInstallProgressState, deployment:PackageInstallProgressState.Installing, x:False), Mode=OneWay}" />

                                                    <TextBlock
                                                        FontSize="14"
                                                        Text="{x:Bind root:ResourceService.GetLocalized('WinGet/UpgradePostInstall')}"
                                                        Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckPackageUpgradeProgressState(PackageInstallProgressState, deployment:PackageInstallProgressState.PostInstall, x:False), Mode=OneWay}" />

                                                    <TextBlock
                                                        FontSize="14"
                                                        Text="{x:Bind root:ResourceService.GetLocalized('WinGet/UpgradeFinished')}"
                                                        Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckPackageUpgradeProgressState(PackageInstallProgressState, deployment:PackageInstallProgressState.Finished, x:False), Mode=OneWay}" />
                                                </Grid>

                                                <TextBlock
                                                    Grid.Column="0"
                                                    FontSize="14"
                                                    Text="{x:Bind root:ResourceService.GetLocalized('WinGet/Canceling')}"
                                                    Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckPackageOperationResultKind(PackageOperationResultKind, enum:PackageOperationResultKind.Cancel), Mode=OneWay}" />

                                                <TextBlock
                                                    Grid.Column="0"
                                                    FontSize="14"
                                                    Text="{x:Bind root:ResourceService.GetLocalized('WinGet/UpgradeFailed')}"
                                                    Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckPackageOperationResultKind(PackageOperationResultKind, enum:PackageOperationResultKind.Failed), Mode=OneWay}">

                                                    <ToolTipService.ToolTip>
                                                        <ToolTip MaxWidth="9999">
                                                            <TextBlock Text="{x:Bind PackageOperationFailedContent, Mode=OneWay}" />
                                                        </ToolTip>
                                                    </ToolTipService.ToolTip>
                                                </TextBlock>

                                                <ProgressBar
                                                    Grid.Column="1"
                                                    Margin="5,0,0,0"
                                                    VerticalAlignment="Center"
                                                    IsIndeterminate="{x:Bind converter:ValueCheckConverterHelper.IsPackageUpgrading(PackageInstallProgressState), Mode=OneWay}"
                                                    ShowError="{x:Bind x:Object.Equals(PackageOperationResultKind, enum:PackageOperationResultKind.Failed), Mode=OneWay}"
                                                    ShowPaused="{x:Bind x:Object.Equals(PackageOperationResultKind, enum:PackageOperationResultKind.Cancel), Mode=OneWay}"
                                                    Value="{x:Bind PackageOperationProgress, Mode=OneWay}" />
                                            </Grid>
                                        </Grid>

                                        <Button
                                            Grid.Column="2"
                                            Width="Auto"
                                            Height="Auto"
                                            Margin="10,0,0,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Command="{StaticResource CancelTaskCommand}"
                                            CommandParameter="{x:Bind}"
                                            IsEnabled="{x:Bind x:Object.Equals(PackageOperationResultKind, enum:PackageOperationResultKind.Normal), Mode=OneWay}"
                                            Style="{StaticResource AlternateCloseButtonStyle}"
                                            ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('WinGet/CancelTask')}"
                                            Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckPackageUpgradeProgressState(PackageInstallProgressState, deployment:PackageInstallProgressState.Finished, x:True), Mode=OneWay}">

                                            <Button.Content>
                                                <FontIcon
                                                    Margin="4"
                                                    FontSize="16"
                                                    Glyph="&#xE711;" />
                                            </Button.Content>
                                        </Button>

                                        <Button
                                            Grid.Column="2"
                                            Width="Auto"
                                            Height="Auto"
                                            Margin="10,0,0,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Command="{StaticResource RemoveTaskCommand}"
                                            CommandParameter="{x:Bind}"
                                            Style="{StaticResource AlternateCloseButtonStyle}"
                                            ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('WinGet/RemoveTask')}"
                                            Visibility="{x:Bind converter:ValueCheckConverterHelper.CheckPackageUpgradeProgressState(PackageInstallProgressState, deployment:PackageInstallProgressState.Finished, x:False), Mode=OneWay}">

                                            <Button.Content>
                                                <FontIcon
                                                    Margin="4"
                                                    FontSize="16"
                                                    Glyph="&#xE74D;" />
                                            </Button.Content>
                                        </Button>
                                    </Grid>
                                </Grid>
                            </ItemContainer>
                        </DataTemplate>
                    </ItemsView.ItemTemplate>
                </ItemsView>
            </Grid>
        </SplitView.Pane>
    </SplitView>
</Page>
