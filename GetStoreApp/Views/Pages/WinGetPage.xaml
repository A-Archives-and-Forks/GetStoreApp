<Page
    x:Class="GetStoreApp.Views.Pages.WinGetPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialogsAndFlyouts="using:GetStoreApp.Views.CustomControls.DialogsAndFlyouts"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:GetStoreApp.Models.Controls.WinGet"
    xmlns:pageViewModel="using:GetStoreApp.ViewModels.Pages"
    xmlns:root="using:GetStoreApp.Services.Root"
    xmlns:wc="using:GetStoreApp.UI.Controls.WinGet"
    x:Name="WinGetRoot"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <Page.DataContext>
        <pageViewModel:WinGetViewModel x:Name="ViewModel" />
    </Page.DataContext>

    <Grid Padding="0">
        <Pivot
            x:Name="InitializeSuccess"
            Margin="0,15,0,0"
            x:Load="{x:Bind IsWinGetExisted(root:WinGetService.IsOfficialVersionExisted, root:WinGetService.IsDevVersionExisted, x:False)}"
            Loaded="{x:Bind OnInitializeSuccessLoaded}"
            Style="{StaticResource PivotStyle}">

            <PivotItem Header="{x:Bind root:ResourceService.GetLocalized('WinGet/SearchApps')}" Style="{StaticResource PivotItemStyle}">
                <wc:SearchAppsControl x:Name="SearchApps" />
            </PivotItem>

            <PivotItem Header="{x:Bind root:ResourceService.GetLocalized('WinGet/InstalledApps')}" Style="{StaticResource PivotItemStyle}">
                <wc:InstalledAppsControl />
            </PivotItem>

            <PivotItem Header="{x:Bind root:ResourceService.GetLocalized('WinGet/UpgradableApps')}" Style="{StaticResource PivotItemStyle}">
                <wc:UpgradableAppsControl x:Name="UpgradableApps" />
            </PivotItem>

            <Pivot.RightHeader>
                <Button VerticalAlignment="Center">
                    <ToolTipService.ToolTip>
                        <ToolTip
                            Content="{x:Bind root:ResourceService.GetLocalized('WinGet/TaskManager')}"
                            Placement="Bottom"
                            VerticalOffset="20" />
                    </ToolTipService.ToolTip>

                    <Button.Content>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="{x:Bind root:ResourceService.GetLocalized('WinGet/TaskManager')}" />
                            <InfoBadge
                                Grid.Column="1"
                                Margin="5,0,0,0"
                                Visibility="{x:Bind ViewModel.InstallingAppsList.Count, Converter={StaticResource IntToVisibilityConverter}, Mode=OneWay}"
                                Value="{x:Bind ViewModel.InstallingAppsList.Count, Mode=OneWay}" />
                        </Grid>
                    </Button.Content>

                    <Button.Flyout>
                        <dialogsAndFlyouts:AdaptiveFlyout Placement="BottomEdgeAlignedRight">
                            <Grid x:Name="TaskManagerFlyout" DataContext="{x:Bind WinGetRoot.DataContext}">
                                <Grid
                                    Width="300"
                                    Height="100"
                                    Padding="20"
                                    Visibility="{x:Bind ViewModel.InstallingAppsList.Count, Converter={StaticResource IntToVisibilityConverter}, ConverterParameter=Reverse, Mode=OneWay}">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Text="{x:Bind root:ResourceService.GetLocalized('WinGet/InstallingAppsListEmpty')}"
                                        TextAlignment="Center"
                                        TextWrapping="WrapWholeWords" />
                                </Grid>
                                <ListView
                                    Width="300"
                                    Height="200"
                                    ItemContainerStyle="{StaticResource CardListViewItemContainerStyle}"
                                    ItemsSource="{x:Bind ViewModel.InstallingAppsList, Mode=OneWay}"
                                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                    ScrollViewer.HorizontalScrollMode="Disabled"
                                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                                    ScrollViewer.VerticalScrollMode="Enabled"
                                    SelectionMode="None"
                                    Style="{StaticResource ListViewStyle}"
                                    Visibility="{x:Bind ViewModel.InstallingAppsList.Count, Converter={StaticResource IntToVisibilityConverter}, Mode=OneWay}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate x:DataType="model:InstallingAppsModel">
                                            <Grid
                                                Height="60"
                                                Margin="2,0"
                                                Style="{StaticResource CardGridStyle}">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <ToolTipService.ToolTip>
                                                    <ToolTip
                                                        Content="{x:Bind InstallToolTip(AppName, InstallProgressState, DownloadProgress, DownloadedFileSize, TotalFileSize), Mode=OneWay}"
                                                        Placement="Bottom"
                                                        VerticalOffset="20" />
                                                </ToolTipService.ToolTip>

                                                <Grid Grid.Column="0" VerticalAlignment="Center">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>

                                                    <Grid Grid.Row="0" Margin="0,0,0,5">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock
                                                            Grid.Column="0"
                                                            FontSize="16"
                                                            Style="{StaticResource CardTextStyle}"
                                                            Text="{x:Bind AppName}" />

                                                        <TextBlock
                                                            Grid.Column="1"
                                                            FontSize="16"
                                                            Style="{StaticResource CardTextStyle}"
                                                            Text="{x:Bind GetDownloadProgress(DownloadProgress), Mode=OneWay}"
                                                            TextAlignment="Right" />
                                                    </Grid>

                                                    <ProgressBar
                                                        Grid.Row="1"
                                                        IsIndeterminate="{x:Bind IsDownloading(InstallProgressState), Mode=OneWay}"
                                                        Value="{x:Bind DownloadProgress, Mode=OneWay}" />
                                                </Grid>

                                                <HyperlinkButton
                                                    Grid.Column="1"
                                                    Margin="10,0,0,0"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Command="{Binding ElementName=TaskManagerFlyout, Path=DataContext.CancelInstallCommand, Mode=OneTime}"
                                                    CommandParameter="{x:Bind AppID}"
                                                    Style="{StaticResource ExperimentalHyperlinkButtonStyle}">
                                                    <HyperlinkButton.Content>
                                                        <FontIcon Glyph="&#xE711;" Style="{StaticResource SegoeFluentStyle}" />
                                                    </HyperlinkButton.Content>

                                                    <ToolTipService.ToolTip>
                                                        <ToolTip
                                                            Content="{x:Bind root:ResourceService.GetLocalized('WinGet/CancelInstalling')}"
                                                            Placement="Bottom"
                                                            VerticalOffset="25" />
                                                    </ToolTipService.ToolTip>
                                                </HyperlinkButton>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Grid>
                        </dialogsAndFlyouts:AdaptiveFlyout>
                    </Button.Flyout>
                </Button>
            </Pivot.RightHeader>
        </Pivot>
        <wc:InitializeFailedControl x:Name="InitializeFailed" x:Load="{x:Bind IsWinGetExisted(root:WinGetService.IsOfficialVersionExisted, root:WinGetService.IsDevVersionExisted, x:True)}" />
    </Grid>
</Page>
