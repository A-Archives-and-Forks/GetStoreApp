<Page
    x:Class="GetStoreApp.Views.Pages.WinGetSearchPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:converter="using:GetStoreApp.Helpers.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:deployment="using:Microsoft.Management.Deployment"
    xmlns:enum="using:GetStoreApp.Extensions.DataType.Enums"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:GetStoreApp.Models"
    xmlns:rootservice="using:GetStoreApp.Services.Root"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <Page.Resources>
        <XamlUICommand x:Name="DownloadCommand" ExecuteRequested="{x:Bind OnDownloadExecuteRequested}" />
        <XamlUICommand x:Name="InstallCommand" ExecuteRequested="{x:Bind OnInstallExecuteRequested}" />
        <XamlUICommand x:Name="RepairCommand" ExecuteRequested="{x:Bind OnRepairExecuteRequested}" />
        <XamlUICommand x:Name="ViewVersionInfoCommand" ExecuteRequested="{x:Bind OnViewVersionInfoExecuteRequested}" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  WinGet 程序包搜索应用控制栏  -->
        <Grid
            Grid.Row="0"
            Height="66"
            Margin="30,0"
            Padding="16,8,2,8"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="{StaticResource ControlCornerRadius}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <FontIcon
                Grid.Column="0"
                Margin="0,0,12,0"
                FontSize="16"
                Glyph="&#xE74C;" />

            <TextBlock
                Grid.Column="1"
                VerticalAlignment="Center"
                Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/Operation')}" />

            <AppBarSeparator Grid.Column="2" Margin="10,0,10,0" />

            <TextBlock
                Grid.Column="3"
                VerticalAlignment="Center"
                Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/SearchedAppsCountEmpty')}"
                Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityReverseConvert(SearchAppsCollection.Count), Mode=OneWay}" />

            <TextBlock
                Grid.Column="3"
                VerticalAlignment="Center"
                Text="{x:Bind x:String.Format(SearchedAppsCountInfo, SearchAppsCollection.Count), Mode=OneWay}"
                Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityConvert(SearchAppsCollection.Count), Mode=OneWay}" />

            <AutoSuggestBox
                Grid.Column="4"
                Width="170"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                IsEnabled="{x:Bind GetSearchBoxEnabled(SearchAppsResultKind), Mode=OneWay}"
                PlaceholderText="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/SearchAppsPlaceHolderText')}"
                QuerySubmitted="{x:Bind OnQuerySubmitted}"
                Text="{x:Bind SearchText, Mode=OneWay}"
                TextChanged="{x:Bind OnTextChanged}">

                <AutoSuggestBox.QueryIcon>
                    <FontIcon FontSize="14" Glyph="&#xE71E;" />
                </AutoSuggestBox.QueryIcon>
            </AutoSuggestBox>

            <CommandBar
                Grid.Column="5"
                Margin="4,0,10,0"
                VerticalAlignment="Center"
                Background="Transparent"
                DefaultLabelPosition="Right">

                <CommandBar.Resources>
                    <SolidColorBrush x:Key="CommandBarBackgroundOpen" Color="Transparent" />
                    <Thickness x:Key="CommandBarBorderThicknessOpen">0</Thickness>
                </CommandBar.Resources>

                <CommandBar.PrimaryCommands>
                    <AppBarButton Label="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/Sort')}" ToolTipService.ToolTip="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/SortToolTip')}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE8CB;" />
                        </AppBarButton.Icon>

                        <AppBarButton.Flyout>
                            <MenuFlyout Placement="Bottom">
                                <RadioMenuFlyoutItem
                                    Height="32"
                                    Padding="11,0"
                                    Click="{x:Bind OnSortWayClicked}"
                                    GroupName="SearchSortWayRadioGroup"
                                    IsChecked="{x:Bind IsIncrease, Mode=OneWay}"
                                    Tag="True"
                                    Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/SortIncrease')}" />

                                <RadioMenuFlyoutItem
                                    Height="32"
                                    Padding="11,0"
                                    Click="{x:Bind OnSortWayClicked}"
                                    GroupName="SearchSortWayRadioGroup"
                                    IsChecked="{x:Bind IsIncrease.Equals(x:False), Mode=OneWay}"
                                    Tag="False"
                                    Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/SortDecrease')}" />
                            </MenuFlyout>
                        </AppBarButton.Flyout>
                    </AppBarButton>

                    <AppBarButton Label="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/SearchFilter')}" ToolTipService.ToolTip="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/SearchFilterToolTip')}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE71C;" />
                        </AppBarButton.Icon>

                        <AppBarButton.Flyout>
                            <MenuFlyout Placement="Bottom">
                                <MenuFlyoutSubItem
                                    Height="32"
                                    Padding="11,0,11,0"
                                    Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/PackageMatchField')}">

                                    <RadioMenuFlyoutItem
                                        Height="32"
                                        Padding="11,0"
                                        Click="{x:Bind OnPackageMatchFieldClicked}"
                                        GroupName="PackageMatchFieldRadioGroup"
                                        IsChecked="{x:Bind x:Object.Equals(PackageMatchField, deployment:PackageMatchField.CatalogDefault), Mode=OneWay}"
                                        Tag="{x:Bind deployment:PackageMatchField.CatalogDefault}"
                                        Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/MatchFieldCatalogDefault')}" />

                                    <RadioMenuFlyoutItem
                                        Height="32"
                                        Padding="11,0"
                                        Click="{x:Bind OnPackageMatchFieldClicked}"
                                        GroupName="PackageMatchFieldRadioGroup"
                                        IsChecked="{x:Bind x:Object.Equals(PackageMatchField, deployment:PackageMatchField.Id), Mode=OneWay}"
                                        Tag="{x:Bind deployment:PackageMatchField.Id}"
                                        Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/MatchFieldId')}" />

                                    <RadioMenuFlyoutItem
                                        Height="32"
                                        Padding="11,0"
                                        Click="{x:Bind OnPackageMatchFieldClicked}"
                                        GroupName="PackageMatchFieldRadioGroup"
                                        IsChecked="{x:Bind x:Object.Equals(PackageMatchField, deployment:PackageMatchField.Name), Mode=OneWay}"
                                        Tag="{x:Bind deployment:PackageMatchField.Name}"
                                        Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/MatchFieldName')}" />

                                    <RadioMenuFlyoutItem
                                        Height="32"
                                        Padding="11,0"
                                        Click="{x:Bind OnPackageMatchFieldClicked}"
                                        GroupName="PackageMatchFieldRadioGroup"
                                        IsChecked="{x:Bind x:Object.Equals(PackageMatchField, deployment:PackageMatchField.Moniker), Mode=OneWay}"
                                        Tag="{x:Bind deployment:PackageMatchField.Moniker}"
                                        Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/MatchFieldMoniker')}" />

                                    <RadioMenuFlyoutItem
                                        Height="32"
                                        Padding="11,0"
                                        Click="{x:Bind OnPackageMatchFieldClicked}"
                                        GroupName="PackageMatchFieldRadioGroup"
                                        IsChecked="{x:Bind x:Object.Equals(PackageMatchField, deployment:PackageMatchField.Command), Mode=OneWay}"
                                        Tag="{x:Bind deployment:PackageMatchField.Command}"
                                        Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/MatchFieldCommand')}" />

                                    <RadioMenuFlyoutItem
                                        Height="32"
                                        Padding="11,0"
                                        Click="{x:Bind OnPackageMatchFieldClicked}"
                                        GroupName="PackageMatchFieldRadioGroup"
                                        IsChecked="{x:Bind x:Object.Equals(PackageMatchField, deployment:PackageMatchField.Tag), Mode=OneWay}"
                                        Tag="{x:Bind deployment:PackageMatchField.Tag}"
                                        Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/MatchFieldTag')}" />

                                    <RadioMenuFlyoutItem
                                        Height="32"
                                        Padding="11,0"
                                        Click="{x:Bind OnPackageMatchFieldClicked}"
                                        GroupName="PackageMatchFieldRadioGroup"
                                        IsChecked="{x:Bind x:Object.Equals(PackageMatchField, deployment:PackageMatchField.PackageFamilyName), Mode=OneWay}"
                                        Tag="{x:Bind deployment:PackageMatchField.PackageFamilyName}"
                                        Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/MatchFieldPackageFamilyName')}" />

                                    <RadioMenuFlyoutItem
                                        Height="32"
                                        Padding="11,0"
                                        Click="{x:Bind OnPackageMatchFieldClicked}"
                                        GroupName="PackageMatchFieldRadioGroup"
                                        IsChecked="{x:Bind x:Object.Equals(PackageMatchField, deployment:PackageMatchField.ProductCode), Mode=OneWay}"
                                        Tag="{x:Bind deployment:PackageMatchField.ProductCode}"
                                        Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/MatchFieldProductCode')}" />
                                </MenuFlyoutSubItem>

                                <MenuFlyoutSubItem
                                    Height="32"
                                    Padding="11,0,11,0"
                                    Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/PackageFieldMatchOption')}">

                                    <RadioMenuFlyoutItem
                                        Height="32"
                                        Padding="11,0"
                                        Click="{x:Bind OnPackageFieldMatchOptionClicked}"
                                        GroupName="PackageFieldMatchOptionRadioGroup"
                                        IsChecked="{x:Bind x:Object.Equals(PackageFieldMatchOption, deployment:PackageFieldMatchOption.EqualsCaseInsensitive), Mode=OneWay}"
                                        Tag="{x:Bind deployment:PackageFieldMatchOption.EqualsCaseInsensitive}"
                                        Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/FieldMatchOptionEqualsCaseInsensitive')}" />

                                    <RadioMenuFlyoutItem
                                        Height="32"
                                        Padding="11,0"
                                        Click="{x:Bind OnPackageFieldMatchOptionClicked}"
                                        GroupName="PackageFieldMatchOptionRadioGroup"
                                        IsChecked="{x:Bind x:Object.Equals(PackageFieldMatchOption, deployment:PackageFieldMatchOption.StartsWithCaseInsensitive), Mode=OneWay}"
                                        Tag="{x:Bind deployment:PackageFieldMatchOption.StartsWithCaseInsensitive}"
                                        Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/FieldMatchOptionStartsWithCaseInsensitive')}" />

                                    <RadioMenuFlyoutItem
                                        Height="32"
                                        Padding="11,0"
                                        Click="{x:Bind OnPackageFieldMatchOptionClicked}"
                                        GroupName="PackageFieldMatchOptionRadioGroup"
                                        IsChecked="{x:Bind x:Object.Equals(PackageFieldMatchOption, deployment:PackageFieldMatchOption.ContainsCaseInsensitive), Mode=OneWay}"
                                        Tag="{x:Bind deployment:PackageFieldMatchOption.ContainsCaseInsensitive}"
                                        Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/FieldMatchOptionContainsCaseInsensitive')}" />
                                </MenuFlyoutSubItem>
                            </MenuFlyout>
                        </AppBarButton.Flyout>
                    </AppBarButton>

                    <AppBarButton Click="{x:Bind OnTaskManagerClicked}" Label="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/TaskManager')}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE71D;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                </CommandBar.PrimaryCommands>

                <CommandBar.SecondaryCommands>
                    <AppBarButton
                        Click="{x:Bind OnRefreshClicked}"
                        IsEnabled="{x:Bind GetSearchRefreshEnabled(SearchAppsResultKind), Mode=OneWay}"
                        Label="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/Refresh')}"
                        ToolTipService.ToolTip="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/RefreshToolTip')}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE72C;" />
                        </AppBarButton.Icon>
                    </AppBarButton>

                    <AppBarButton
                        Click="{x:Bind OnOpenTempFolderClicked}"
                        Label="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/OpenTempFolder')}"
                        ToolTipService.ToolTip="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/OpenTempFolderToolTip')}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE8B7;" />
                        </AppBarButton.Icon>
                    </AppBarButton>

                    <AppBarButton
                        Click="{x:Bind OnUseInstructionClicked}"
                        Label="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/UseInstruction')}"
                        ToolTipService.ToolTip="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/UseInstructionToolTip')}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE946;" />
                        </AppBarButton.Icon>
                    </AppBarButton>

                    <AppBarButton
                        Click="{x:Bind OnDataSourceSettingsClicked}"
                        Label="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/DataSourceSettings')}"
                        ToolTipService.ToolTip="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/DataSourceSettingsToolTip')}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE713;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                </CommandBar.SecondaryCommands>
            </CommandBar>
        </Grid>

        <!--  搜索应用状态显示栏  -->
        <Grid
            Grid.Row="1"
            Height="60"
            Margin="30,3,30,0"
            Padding="16,12"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="{StaticResource ControlCornerRadius}"
            Visibility="{x:Bind GetSearchAppsSuccessfullyState(SearchAppsResultKind, x:False), Mode=OneWay}">

            <Grid>
                <!--  未搜索  -->
                <TextBlock
                    Margin="0,10"
                    VerticalAlignment="Center"
                    Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/NotSearchedTip')}"
                    TextAlignment="Center"
                    ToolTipService.ToolTip="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/NotSearchedTip')}"
                    Visibility="{x:Bind CheckSearchAppsState(SearchAppsResultKind, enum:SearchAppsResultKind.NotSearch), Mode=OneWay}" />

                <!--  正在搜索中  -->
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="10"
                    Visibility="{x:Bind CheckSearchAppsState(SearchAppsResultKind, enum:SearchAppsResultKind.Searching), Mode=OneWay}">

                    <ProgressRing IsActive="True" IsEnabled="True" />

                    <TextBlock
                        Margin="0,10"
                        VerticalAlignment="Center"
                        Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/SearchingApps')}"
                        TextAlignment="Center" />
                </StackPanel>

                <!--  搜索失败  -->
                <TextBlock
                    Margin="0,10"
                    VerticalAlignment="Center"
                    Text="{x:Bind SearchFailedContent, Mode=OneWay}"
                    TextAlignment="Center"
                    Visibility="{x:Bind CheckSearchAppsState(SearchAppsResultKind, enum:SearchAppsResultKind.Failed), Mode=OneWay}" />
            </Grid>
        </Grid>

        <!--  搜索应用结果展示项目控件  -->
        <ListView
            Grid.Row="2"
            Padding="30,3,30,30"
            ItemsSource="{x:Bind SearchAppsCollection}"
            SelectionMode="None"
            Visibility="{x:Bind GetSearchAppsSuccessfullyState(SearchAppsResultKind, x:True), Mode=OneWay}">

            <ListView.ItemContainerStyle>
                <Style BasedOn="{StaticResource DefaultListViewItemStyle}" TargetType="ListViewItem">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="Margin" Value="0" />
                    <Setter Property="MinHeight" Value="0" />
                    <Setter Property="Padding" Value="0" />
                </Style>
            </ListView.ItemContainerStyle>

            <ItemsControl.ItemContainerTransitions>
                <TransitionCollection />
            </ItemsControl.ItemContainerTransitions>

            <ListView.ItemTemplate>
                <DataTemplate x:DataType="model:SearchAppsModel">
                    <Grid
                        Height="60"
                        Margin="0,0,0,2"
                        Padding="16,0"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        ColumnSpacing="10"
                        CornerRadius="{StaticResource ControlCornerRadius}">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Orientation="Vertical">

                            <TextBlock
                                Style="{StaticResource BodyTextBlockStyle}"
                                Text="{x:Bind AppName}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="NoWrap">

                                <ToolTipService.ToolTip>
                                    <ToolTip MaxWidth="9999">
                                        <TextBlock>
                                            <Run Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/AppNameToolTip')}" />
                                            <Run Text="{x:Bind AppName}" />
                                        </TextBlock>
                                    </ToolTip>
                                </ToolTipService.ToolTip>
                            </TextBlock>

                            <TextBlock
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Text="{x:Bind AppID}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="NoWrap">

                                <ToolTipService.ToolTip>
                                    <ToolTip MaxWidth="9999">
                                        <TextBlock>
                                            <Run Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/AppIDToolTip')}" />
                                            <Run Text="{x:Bind AppID}" />
                                        </TextBlock>
                                    </ToolTip>
                                </ToolTipService.ToolTip>
                            </TextBlock>
                        </StackPanel>

                        <StackPanel
                            Grid.Column="1"
                            Height="30"
                            BorderBrush="{ThemeResource ButtonBorderBrush}"
                            BorderThickness="{ThemeResource ButtonBorderThemeThickness}"
                            CornerRadius="{ThemeResource ControlCornerRadius}"
                            Orientation="Horizontal">

                            <Button
                                VerticalAlignment="Stretch"
                                VerticalContentAlignment="Center"
                                BorderThickness="0,0,1,0"
                                Command="{StaticResource InstallCommand}"
                                CommandParameter="{x:Bind}"
                                Content="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/Install')}"
                                CornerRadius="0"
                                ToolTipService.ToolTip="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/InstallDefaultVersion')}" />

                            <Button
                                Width="35"
                                VerticalAlignment="Stretch"
                                BorderThickness="0"
                                CornerRadius="0"
                                ToolTipService.ToolTip="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/ViewMoreOptions')}">

                                <Button.Content>
                                    <AnimatedIcon
                                        Width="12"
                                        Height="12"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        AutomationProperties.AccessibilityView="Raw">
                                        <animatedvisuals:AnimatedChevronDownSmallVisualSource />
                                        <AnimatedIcon.FallbackIconSource>
                                            <FontIconSource
                                                FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                FontSize="8"
                                                Glyph="&#xE96E;"
                                                IsTextScaleFactorEnabled="False" />
                                        </AnimatedIcon.FallbackIconSource>
                                    </AnimatedIcon>
                                </Button.Content>

                                <Button.Flyout>
                                    <MenuFlyout Placement="Bottom">
                                        <MenuFlyoutItem
                                            Height="32"
                                            Padding="11,0"
                                            Command="{StaticResource DownloadCommand}"
                                            CommandParameter="{x:Bind}"
                                            Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/Download')}">

                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE896;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>

                                        <MenuFlyoutItem
                                            Height="32"
                                            Padding="11,0"
                                            Command="{StaticResource RepairCommand}"
                                            CommandParameter="{x:Bind}"
                                            Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/Repair')}">

                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE90F;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>

                                        <MenuFlyoutSeparator />

                                        <MenuFlyoutItem
                                            Height="32"
                                            Padding="11,0"
                                            Command="{StaticResource ViewVersionInfoCommand}"
                                            CommandParameter="{x:Bind}"
                                            Text="{x:Bind rootservice:ResourceService.GetLocalized('WinGet/ViewVersionInfo')}">

                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE946;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                    </MenuFlyout>
                                </Button.Flyout>
                            </Button>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
