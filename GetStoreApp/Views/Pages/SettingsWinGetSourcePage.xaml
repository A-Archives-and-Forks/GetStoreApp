<Page
    x:Class="GetStoreApp.Views.Pages.SettingsWinGetSourcePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:converter="using:GetStoreApp.Helpers.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:GetStoreApp.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:GetStoreApp.Models.Controls.Settings"
    xmlns:root="using:GetStoreApp.Services.Root"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <Page.Resources>
        <XamlUICommand x:Name="CheckBoxClickCommand" ExecuteRequested="{x:Bind OnCheckBoxClickExecuteRequested}" />
        <XamlUICommand x:Name="EditCommand" ExecuteRequested="{x:Bind OnEditExecuteRequested}" />
        <XamlUICommand x:Name="RemoveCommand" ExecuteRequested="{x:Bind OnRemoveExecuteRequested}" />
        <XamlUICommand x:Name="RemovePreserveDataCommand" ExecuteRequested="{x:Bind OnRemovePreserveDataExecuteRequested}" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  WinGet 数据源配置控制栏  -->
        <Grid
            Grid.Row="0"
            Height="66"
            Margin="30,5,30,3"
            Padding="16,8,2,8"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="{StaticResource ControlCornerRadius}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <FontIcon
                Grid.Column="0"
                Margin="0,0,12,0"
                FontSize="16"
                Glyph="&#xE74C;" />

            <TextBlock
                Grid.Column="1"
                VerticalAlignment="Center"
                Text="{x:Bind root:ResourceService.GetLocalized('Settings/Operation')}" />

            <AppBarSeparator Grid.Column="2" Margin="10,0,10,0" />

            <TextBlock
                Grid.Column="3"
                VerticalAlignment="Center"
                Text="{x:Bind root:ResourceService.GetLocalized('Settings/WinGetSourceCountEmpty')}"
                Visibility="{x:Bind GetCountVisibility(WinGetSourceInternalCollection.Count, WinGetSourceCustomCollection.Count, x:True), Mode=OneWay}" />

            <TextBlock
                Grid.Column="3"
                VerticalAlignment="Center"
                Text="{x:Bind GetLocalizedWinGetSourceCountInfo(WinGetSourceInternalCollection.Count, WinGetSourceCustomCollection.Count), Mode=OneWay}"
                Visibility="{x:Bind GetCountVisibility(WinGetSourceInternalCollection.Count, WinGetSourceCustomCollection.Count, x:False), Mode=OneWay}" />

            <CommandBar
                Grid.Column="4"
                Margin="4,0,10,0"
                VerticalAlignment="Center"
                Background="Transparent"
                DefaultLabelPosition="Right">

                <CommandBar.Resources>
                    <SolidColorBrush x:Key="CommandBarBackgroundOpen" Color="Transparent" />
                    <Thickness x:Key="CommandBarBorderThicknessOpen">0</Thickness>
                </CommandBar.Resources>

                <CommandBar.PrimaryCommands>
                    <AppBarButton
                        Click="{x:Bind OnAddNewSourceClicked}"
                        IsEnabled="{x:Bind IsLoadedCompleted, Mode=OneWay}"
                        Label="{x:Bind root:ResourceService.GetLocalized('Settings/AddNewSource')}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE710;" />
                        </AppBarButton.Icon>
                    </AppBarButton>

                    <AppBarButton
                        Click="{x:Bind OnRefreshClicked}"
                        IsEnabled="{x:Bind IsLoadedCompleted, Mode=OneWay}"
                        Label="{x:Bind root:ResourceService.GetLocalized('Settings/Refresh')}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE72C;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                </CommandBar.PrimaryCommands>
            </CommandBar>
        </Grid>

        <ScrollViewer
            Grid.Row="1"
            HorizontalScrollBarVisibility="Disabled"
            HorizontalScrollMode="Disabled"
            VerticalScrollBarVisibility="Auto"
            VerticalScrollMode="Enabled">

            <Grid Margin="30,0,30,30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid
                    x:Name="LoadingGrid"
                    Grid.Row="0"
                    Padding="16,12"
                    x:Load="{x:Bind IsLoadedCompleted.Equals(x:False), Mode=OneWay}"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource ControlCornerRadius}">

                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="10">

                        <ProgressRing IsActive="True" IsEnabled="True" />

                        <TextBlock
                            Margin="0,10"
                            VerticalAlignment="Center"
                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/LoadingWinGetSource')}"
                            TextAlignment="Center" />
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="1" Visibility="{x:Bind IsLoadedCompleted, Mode=OneWay}">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <StackPanel
                        Grid.Row="0"
                        Margin="0,0,0,5"
                        VerticalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="5">

                        <FontIcon
                            Margin="0,2,0,0"
                            VerticalAlignment="Center"
                            FontSize="16"
                            FontWeight="Medium"
                            Glyph="&#xE76C;" />

                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="16"
                            Style="{StaticResource BodyTextBlockStyle}"
                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/WinGetDataSourceInternal')}" />
                    </StackPanel>

                    <Grid
                        Grid.Row="1"
                        Height="60"
                        Padding="16,12"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="{StaticResource ControlCornerRadius}"
                        Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityReverseConvert(WinGetSourceInternalCollection.Count), Mode=OneWay}">

                        <TextBlock
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/WinGetDataSourceInternalEmpty')}"
                            TextAlignment="Center" />
                    </Grid>

                    <ListView
                        Grid.Row="1"
                        CornerRadius="0"
                        ItemsSource="{x:Bind WinGetSourceInternalCollection}"
                        SelectionMode="None"
                        Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityConvert(WinGetSourceInternalCollection.Count), Mode=OneWay}">

                        <ListView.ItemContainerStyle>
                            <Style BasedOn="{StaticResource DefaultListViewItemStyle}" TargetType="ListViewItem">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Margin" Value="0" />
                                <Setter Property="MinHeight" Value="0" />
                                <Setter Property="Padding" Value="0" />
                            </Style>
                        </ListView.ItemContainerStyle>

                        <ItemsControl.ItemContainerTransitions>
                            <TransitionCollection />
                        </ItemsControl.ItemContainerTransitions>

                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="model:WinGetSourceModel">
                                <Expander
                                    Margin="0,0,0,3"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Stretch"
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    IsExpanded="False">

                                    <Expander.Header>
                                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <CheckBox
                                                Grid.Column="0"
                                                MinWidth="0"
                                                Margin="0,0,12,0"
                                                Command="{StaticResource CheckBoxClickCommand}"
                                                CommandParameter="{x:Bind}"
                                                IsChecked="{x:Bind IsSelected, Mode=TwoWay}"
                                                IsEnabled="{x:Bind IsOperating.Equals(x:False), Mode=OneWay}">

                                                <ToolTipService.ToolTip>
                                                    <ToolTip MaxWidth="9999">
                                                        <Grid>
                                                            <TextBlock Text="{x:Bind root:ResourceService.GetLocalized('Settings/SelectedToolTip')}" Visibility="{x:Bind IsSelected, Mode=OneWay}" />
                                                            <TextBlock Text="{x:Bind root:ResourceService.GetLocalized('Settings/UnSelectedToolTip')}" Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(IsSelected), Mode=OneWay}" />
                                                        </Grid>
                                                    </ToolTip>
                                                </ToolTipService.ToolTip>
                                            </CheckBox>

                                            <StackPanel
                                                Grid.Column="1"
                                                Margin="0,12"
                                                VerticalAlignment="Center"
                                                Orientation="Vertical">

                                                <TextBlock
                                                    Style="{StaticResource BodyTextBlockStyle}"
                                                    Text="{x:Bind Name}"
                                                    TextTrimming="CharacterEllipsis"
                                                    TextWrapping="NoWrap">

                                                    <ToolTipService.ToolTip>
                                                        <ToolTip MaxWidth="9999">
                                                            <TextBlock>
                                                                <Run Text="{x:Bind root:ResourceService.GetLocalized('Settings/WinGetSourceName')}" />
                                                                <Run Text="{x:Bind Name}" />
                                                            </TextBlock>
                                                        </ToolTip>
                                                    </ToolTipService.ToolTip>
                                                </TextBlock>

                                                <TextBlock
                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                    Style="{StaticResource CaptionTextBlockStyle}"
                                                    Text="{x:Bind Arguments}"
                                                    TextTrimming="CharacterEllipsis"
                                                    TextWrapping="NoWrap">

                                                    <ToolTipService.ToolTip>
                                                        <ToolTip MaxWidth="9999">
                                                            <TextBlock>
                                                                <Run Text="{x:Bind root:ResourceService.GetLocalized('Settings/WinGetSourceArguments')}" />
                                                                <Run Text="{x:Bind Arguments}" />
                                                            </TextBlock>
                                                        </ToolTip>
                                                    </ToolTipService.ToolTip>
                                                </TextBlock>
                                            </StackPanel>
                                        </Grid>
                                    </Expander.Header>

                                    <Expander.Content>
                                        <Grid
                                            Margin="40,0,0,0"
                                            ColumnSpacing="15"
                                            RowSpacing="3">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                FontSize="14"
                                                Text="{x:Bind root:ResourceService.GetLocalized('Settings/Id')}" />

                                            <TextBlock
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                FontSize="14"
                                                Text="{x:Bind Id}"
                                                TextWrapping="Wrap" />

                                            <TextBlock
                                                Grid.Row="1"
                                                Grid.Column="0"
                                                FontSize="14"
                                                Text="{x:Bind root:ResourceService.GetLocalized('Settings/Explicit')}" />

                                            <TextBlock
                                                Grid.Row="1"
                                                Grid.Column="1"
                                                FontSize="14"
                                                Text="{x:Bind Explicit}"
                                                TextWrapping="Wrap" />

                                            <TextBlock
                                                Grid.Row="2"
                                                Grid.Column="0"
                                                FontSize="14"
                                                Text="{x:Bind root:ResourceService.GetLocalized('Settings/TrustLevel')}" />

                                            <TextBlock
                                                Grid.Row="2"
                                                Grid.Column="1"
                                                FontSize="14"
                                                Text="{x:Bind TrustLevel}"
                                                TextWrapping="Wrap" />

                                            <TextBlock
                                                Grid.Row="3"
                                                Grid.Column="0"
                                                FontSize="14"
                                                Text="{x:Bind root:ResourceService.GetLocalized('Settings/LastUpdateTime')}" />

                                            <TextBlock
                                                Grid.Row="3"
                                                Grid.Column="1"
                                                FontSize="14"
                                                Text="{x:Bind LastUpdateTime}"
                                                TextWrapping="Wrap" />

                                            <TextBlock
                                                Grid.Row="4"
                                                Grid.Column="0"
                                                FontSize="14"
                                                Text="{x:Bind root:ResourceService.GetLocalized('Settings/Origin')}" />

                                            <TextBlock
                                                Grid.Row="4"
                                                Grid.Column="1"
                                                FontSize="14"
                                                Text="{x:Bind Origin}"
                                                TextWrapping="Wrap" />

                                            <TextBlock
                                                Grid.Row="5"
                                                Grid.Column="0"
                                                FontSize="14"
                                                Text="{x:Bind root:ResourceService.GetLocalized('Settings/Type')}" />

                                            <TextBlock
                                                Grid.Row="5"
                                                Grid.Column="1"
                                                FontSize="14"
                                                Text="{x:Bind Type}"
                                                TextWrapping="Wrap" />

                                            <TextBlock
                                                Grid.Row="6"
                                                Grid.Column="0"
                                                FontSize="14"
                                                Text="{x:Bind root:ResourceService.GetLocalized('Settings/AcceptSourceAgreements')}" />

                                            <TextBlock
                                                Grid.Row="6"
                                                Grid.Column="1"
                                                FontSize="14"
                                                Text="{x:Bind AcceptSourceAgreements}"
                                                TextWrapping="Wrap" />

                                            <TextBlock
                                                Grid.Row="7"
                                                Grid.Column="0"
                                                FontSize="14"
                                                Text="{x:Bind root:ResourceService.GetLocalized('Settings/AdditionalPackageCatalogArguments')}" />

                                            <TextBlock
                                                Grid.Row="7"
                                                Grid.Column="1"
                                                FontSize="14"
                                                Text="{x:Bind AdditionalPackageCatalogArguments}"
                                                TextWrapping="Wrap" />

                                            <TextBlock
                                                Grid.Row="8"
                                                Grid.Column="0"
                                                FontSize="14"
                                                Text="{x:Bind root:ResourceService.GetLocalized('Settings/AuthenticationType')}" />

                                            <TextBlock
                                                Grid.Row="8"
                                                Grid.Column="1"
                                                FontSize="14"
                                                Text="{x:Bind AuthenticationType}"
                                                TextWrapping="Wrap" />

                                            <TextBlock
                                                Grid.Row="9"
                                                Grid.Column="0"
                                                FontSize="14"
                                                Text="{x:Bind root:ResourceService.GetLocalized('Settings/AuthenticationAccount')}" />

                                            <TextBlock
                                                Grid.Row="9"
                                                Grid.Column="1"
                                                FontSize="14"
                                                Text="{x:Bind AuthenticationAccount}"
                                                TextWrapping="Wrap" />

                                            <TextBlock
                                                Grid.Row="10"
                                                Grid.Column="0"
                                                FontSize="14"
                                                Text="{x:Bind root:ResourceService.GetLocalized('Settings/PackageCatalogBackgroundUpdateInterval')}" />

                                            <TextBlock
                                                Grid.Row="10"
                                                Grid.Column="1"
                                                FontSize="14"
                                                Text="{x:Bind PackageCatalogBackgroundUpdateInterval}"
                                                TextWrapping="Wrap" />
                                        </Grid>
                                    </Expander.Content>
                                </Expander>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <StackPanel
                        Grid.Row="2"
                        Margin="0,5,0,5"
                        VerticalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="5">

                        <FontIcon
                            Margin="0,2,0,0"
                            VerticalAlignment="Center"
                            FontSize="16"
                            FontWeight="Medium"
                            Glyph="&#xE76C;" />

                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="16"
                            Style="{StaticResource BodyTextBlockStyle}"
                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/WinGetDataSourceCustom')}" />
                    </StackPanel>

                    <Grid
                        Grid.Row="3"
                        Height="60"
                        Padding="16,12"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="{StaticResource ControlCornerRadius}"
                        Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityReverseConvert(WinGetSourceCustomCollection.Count), Mode=OneWay}">

                        <TextBlock
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Text="{x:Bind root:ResourceService.GetLocalized('Settings/WinGetDataSourceCustomEmpty')}"
                            TextAlignment="Center" />
                    </Grid>

                    <ListView
                        Grid.Row="3"
                        CornerRadius="0"
                        ItemsSource="{x:Bind WinGetSourceCustomCollection}"
                        SelectionMode="None"
                        Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityConvert(WinGetSourceCustomCollection.Count), Mode=OneWay}">

                        <ListView.ItemContainerStyle>
                            <Style BasedOn="{StaticResource DefaultListViewItemStyle}" TargetType="ListViewItem">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Margin" Value="0" />
                                <Setter Property="MinHeight" Value="0" />
                                <Setter Property="Padding" Value="0" />
                            </Style>
                        </ListView.ItemContainerStyle>

                        <ItemsControl.ItemContainerTransitions>
                            <TransitionCollection />
                        </ItemsControl.ItemContainerTransitions>

                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="model:WinGetSourceModel">
                                <Expander
                                    Margin="0,0,0,3"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Stretch"
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    IsExpanded="False">

                                    <Expander.Header>
                                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <CheckBox
                                                Grid.Column="0"
                                                MinWidth="0"
                                                Margin="0,0,12,0"
                                                Command="{StaticResource CheckBoxClickCommand}"
                                                CommandParameter="{x:Bind}"
                                                IsChecked="{x:Bind IsSelected, Mode=TwoWay}"
                                                IsEnabled="{x:Bind IsOperating.Equals(x:False), Mode=OneWay}">

                                                <ToolTipService.ToolTip>
                                                    <ToolTip MaxWidth="9999">
                                                        <Grid>
                                                            <TextBlock Text="{x:Bind root:ResourceService.GetLocalized('Settings/SelectedToolTip')}" Visibility="{x:Bind IsSelected, Mode=OneWay}" />
                                                            <TextBlock Text="{x:Bind root:ResourceService.GetLocalized('Settings/UnSelectedToolTip')}" Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(IsSelected), Mode=OneWay}" />
                                                        </Grid>
                                                    </ToolTip>
                                                </ToolTipService.ToolTip>
                                            </CheckBox>

                                            <StackPanel
                                                Grid.Column="1"
                                                Margin="0,12"
                                                VerticalAlignment="Center"
                                                Orientation="Vertical">

                                                <TextBlock
                                                    Style="{StaticResource BodyTextBlockStyle}"
                                                    Text="{x:Bind Name}"
                                                    TextTrimming="CharacterEllipsis"
                                                    TextWrapping="NoWrap">

                                                    <ToolTipService.ToolTip>
                                                        <ToolTip MaxWidth="9999">
                                                            <TextBlock>
                                                                <Run Text="{x:Bind root:ResourceService.GetLocalized('Settings/WinGetSourceName')}" />
                                                                <Run Text="{x:Bind Name}" />
                                                            </TextBlock>
                                                        </ToolTip>
                                                    </ToolTipService.ToolTip>
                                                </TextBlock>

                                                <TextBlock
                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                    Style="{StaticResource CaptionTextBlockStyle}"
                                                    Text="{x:Bind Arguments}"
                                                    TextTrimming="CharacterEllipsis"
                                                    TextWrapping="NoWrap">

                                                    <ToolTipService.ToolTip>
                                                        <ToolTip MaxWidth="9999">
                                                            <TextBlock>
                                                                <Run Text="{x:Bind root:ResourceService.GetLocalized('Settings/WinGetSourceArguments')}" />
                                                                <Run Text="{x:Bind Arguments}" />
                                                            </TextBlock>
                                                        </ToolTip>
                                                    </ToolTipService.ToolTip>
                                                </TextBlock>
                                            </StackPanel>

                                            <ProgressRing
                                                Grid.Column="2"
                                                IsActive="{x:Bind IsOperating, Mode=OneWay}"
                                                Visibility="{x:Bind IsOperating, Mode=OneWay}" />

                                            <ContentControl
                                                Grid.Column="3"
                                                Margin="15,0,0,0"
                                                VerticalAlignment="Center"
                                                IsEnabled="{x:Bind IsOperating.Equals(x:False), Mode=OneWay}">

                                                <StackPanel
                                                    Height="30"
                                                    BorderBrush="{ThemeResource ButtonBorderBrush}"
                                                    BorderThickness="{ThemeResource ButtonBorderThemeThickness}"
                                                    CornerRadius="{ThemeResource ControlCornerRadius}"
                                                    Orientation="Horizontal">

                                                    <Button
                                                        VerticalAlignment="Stretch"
                                                        VerticalContentAlignment="Center"
                                                        BorderThickness="0,0,1,0"
                                                        Command="{StaticResource EditCommand}"
                                                        CommandParameter="{x:Bind}"
                                                        Content="{x:Bind root:ResourceService.GetLocalized('Settings/Edit')}"
                                                        CornerRadius="0"
                                                        ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Settings/EditToolTip')}" />

                                                    <Button
                                                        Width="35"
                                                        VerticalAlignment="Stretch"
                                                        BorderThickness="0"
                                                        CornerRadius="0"
                                                        ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Settings/ViewMoreOptions')}">

                                                        <Button.Content>
                                                            <AnimatedIcon
                                                                Width="12"
                                                                Height="12"
                                                                HorizontalAlignment="Right"
                                                                VerticalAlignment="Center"
                                                                AutomationProperties.AccessibilityView="Raw">
                                                                <animatedvisuals:AnimatedChevronDownSmallVisualSource />
                                                                <AnimatedIcon.FallbackIconSource>
                                                                    <FontIconSource
                                                                        FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                                        FontSize="8"
                                                                        Glyph="&#xE96E;"
                                                                        IsTextScaleFactorEnabled="False" />
                                                                </AnimatedIcon.FallbackIconSource>
                                                            </AnimatedIcon>
                                                        </Button.Content>

                                                        <Button.Flyout>
                                                            <MenuFlyout Placement="Bottom">
                                                                <MenuFlyoutItem
                                                                    Height="32"
                                                                    Padding="11,0"
                                                                    Command="{StaticResource RemoveCommand}"
                                                                    CommandParameter="{x:Bind}"
                                                                    IsEnabled="{x:Bind IsOperating.Equals(x:False), Mode=OneWay}"
                                                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/Remove')}">

                                                                    <MenuFlyoutItem.Icon>
                                                                        <FontIcon Glyph="&#xE74D;" />
                                                                    </MenuFlyoutItem.Icon>
                                                                </MenuFlyoutItem>

                                                                <MenuFlyoutItem
                                                                    Height="32"
                                                                    Padding="11,0"
                                                                    Command="{StaticResource RemovePreserveDataCommand}"
                                                                    CommandParameter="{x:Bind}"
                                                                    IsEnabled="{x:Bind IsOperating.Equals(x:False), Mode=OneWay}"
                                                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/RemovePreserveData')}">

                                                                    <MenuFlyoutItem.Icon>
                                                                        <FontIcon Glyph="&#xE74D;" />
                                                                    </MenuFlyoutItem.Icon>
                                                                </MenuFlyoutItem>
                                                            </MenuFlyout>
                                                        </Button.Flyout>
                                                    </Button>
                                                </StackPanel>
                                            </ContentControl>
                                        </Grid>
                                    </Expander.Header>

                                    <Expander.Content>
                                        <Grid
                                            Margin="40,0,0,0"
                                            ColumnSpacing="15"
                                            RowSpacing="3">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                FontSize="14"
                                                Text="{x:Bind root:ResourceService.GetLocalized('Settings/Id')}" />

                                            <TextBlock
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                FontSize="14"
                                                Text="{x:Bind Id}"
                                                TextWrapping="Wrap" />

                                            <TextBlock
                                                Grid.Row="1"
                                                Grid.Column="0"
                                                FontSize="14"
                                                Text="{x:Bind root:ResourceService.GetLocalized('Settings/Explicit')}" />

                                            <TextBlock
                                                Grid.Row="1"
                                                Grid.Column="1"
                                                FontSize="14"
                                                Text="{x:Bind Explicit}"
                                                TextWrapping="Wrap" />

                                            <TextBlock
                                                Grid.Row="2"
                                                Grid.Column="0"
                                                FontSize="14"
                                                Text="{x:Bind root:ResourceService.GetLocalized('Settings/TrustLevel')}" />

                                            <TextBlock
                                                Grid.Row="2"
                                                Grid.Column="1"
                                                FontSize="14"
                                                Text="{x:Bind TrustLevel}"
                                                TextWrapping="Wrap" />

                                            <TextBlock
                                                Grid.Row="3"
                                                Grid.Column="0"
                                                FontSize="14"
                                                Text="{x:Bind root:ResourceService.GetLocalized('Settings/LastUpdateTime')}" />

                                            <TextBlock
                                                Grid.Row="3"
                                                Grid.Column="1"
                                                FontSize="14"
                                                Text="{x:Bind LastUpdateTime}"
                                                TextWrapping="Wrap" />

                                            <TextBlock
                                                Grid.Row="4"
                                                Grid.Column="0"
                                                FontSize="14"
