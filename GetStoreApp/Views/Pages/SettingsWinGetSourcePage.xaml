<Page
    x:Class="GetStoreApp.Views.Pages.SettingsWinGetSourcePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:backdrophelper="using:GetStoreApp.Helpers.Backdrop"
    xmlns:converter="using:GetStoreApp.Helpers.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:GetStoreApp.Models"
    xmlns:rootservice="using:GetStoreApp.Services.Root"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <Page.Resources>
        <XamlUICommand x:Name="CheckBoxClickCommand" ExecuteRequested="{x:Bind OnCheckBoxClickExecuteRequested}" />
        <XamlUICommand x:Name="EditCommand" ExecuteRequested="{x:Bind OnEditExecuteRequested}" />
        <XamlUICommand x:Name="RemoveDataSourceCommand" ExecuteRequested="{x:Bind OnRemoveDataSourceExecuteRequested}" />
        <XamlUICommand x:Name="RemoveDataSourcePreserveDataCommand" ExecuteRequested="{x:Bind OnRemoveDataSourcePreserveDataExecuteRequested}" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  WinGet 数据源配置控制栏  -->
        <Grid
            Grid.Row="0"
            Height="60"
            Margin="30,5,30,3"
            Padding="16,8,0,8"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="{StaticResource ControlCornerRadius}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <FontIcon
                Grid.Column="0"
                Margin="0,0,12,0"
                FontSize="16"
                Glyph="&#xE74C;" />

            <TextBlock
                Grid.Column="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsWinGetSource/Operation')}" />

            <AppBarSeparator Grid.Column="2" Margin="10,0,10,0" />

            <TextBlock
                Grid.Column="3"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsWinGetSource/WinGetSourceCountEmpty')}"
                Visibility="{x:Bind GetCountVisibility(WinGetSourceInternalCollection.Count, WinGetSourceCustomCollection.Count, x:True), Mode=OneWay}" />

            <TextBlock
                Grid.Column="3"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="{x:Bind GetLocalizedWinGetDataSourceCountInfo(WinGetSourceInternalCollection.Count, WinGetSourceCustomCollection.Count), Mode=OneWay}"
                Visibility="{x:Bind GetCountVisibility(WinGetSourceInternalCollection.Count, WinGetSourceCustomCollection.Count, x:False), Mode=OneWay}" />

            <CommandBar
                Grid.Column="4"
                Margin="4,0,0,0"
                VerticalAlignment="Center"
                Background="Transparent"
                DefaultLabelPosition="Right">

                <CommandBar.PrimaryCommands>
                    <AppBarButton
                        Click="{x:Bind OnAddNewSourceClicked}"
                        IsEnabled="{x:Bind IsLoadedCompleted, Mode=OneWay}"
                        Label="{x:Bind rootservice:ResourceService.GetLocalized('SettingsWinGetSource/AddNewSource')}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE710;" />
                        </AppBarButton.Icon>
                    </AppBarButton>

                    <AppBarButton
                        Click="{x:Bind OnRefreshClicked}"
                        IsEnabled="{x:Bind IsLoadedCompleted, Mode=OneWay}"
                        Label="{x:Bind rootservice:ResourceService.GetLocalized('SettingsWinGetSource/Refresh')}">

                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE72C;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                </CommandBar.PrimaryCommands>
            </CommandBar>

            <Button
                Grid.Column="5"
                MinHeight="{ThemeResource AppBarThemeCompactHeight}"
                Margin="-6,0,0,0"
                Padding="{ThemeResource CommandBarMoreButtonMargin}"
                VerticalAlignment="Center"
                Foreground="{ThemeResource CommandBarForeground}"
                IsAccessKeyScope="True"
                Style="{ThemeResource EllipsisButton}">

                <Button.Content>
                    <FontIcon
                        Height="{ThemeResource AppBarExpandButtonCircleDiameter}"
                        VerticalAlignment="Center"
                        FontFamily="{ThemeResource SymbolThemeFontFamily}"
                        FontSize="20"
                        Glyph="&#xE712;" />
                </Button.Content>

                <ToolTipService.ToolTip>
                    <ToolTip
                        MaxWidth="9999"
                        Background="Transparent"
                        Content="{x:Bind rootservice:ResourceService.GetLocalized('SettingsWinGetSource/ViewMore')}"
                        Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}" />
                </ToolTipService.ToolTip>

                <Button.Flyout>
                    <MenuFlyout Placement="Bottom">
                        <MenuFlyoutItem Click="{x:Bind OnSettingsInstructionClicked}" Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsWinGetSource/SettingsInstruction')}">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE946;" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                    </MenuFlyout>
                </Button.Flyout>
            </Button>
        </Grid>

        <ScrollViewer
            Grid.Row="1"
            HorizontalScrollBarVisibility="Disabled"
            HorizontalScrollMode="Disabled"
            VerticalScrollBarVisibility="Auto"
            VerticalScrollMode="Enabled">

            <Grid Margin="30,0,30,30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid
                    Grid.Row="0"
                    Height="60"
                    Padding="16,0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource ControlCornerRadius}"
                    Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(IsLoadedCompleted), Mode=OneWay}">

                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="10">

                        <ProgressRing IsActive="True" IsEnabled="True" />

                        <TextBlock
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsWinGetSource/LoadingWinGetSource')}"
                            TextAlignment="Center" />
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="1" Visibility="{x:Bind IsLoadedCompleted, Mode=OneWay}">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <StackPanel
                        Grid.Row="0"
                        Margin="0,0,0,5"
                        VerticalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="5">

                        <FontIcon
                            Margin="0,2,0,0"
                            VerticalAlignment="Center"
                            FontSize="16"
                            FontWeight="Medium"
                            Glyph="&#xE76C;" />

                        <TextBlock
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Style="{StaticResource BodyTextBlockStyle}"
                            Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsWinGetSource/InternalDataSource')}" />
                    </StackPanel>

                    <Grid
                        Grid.Row="1"
                        Height="60"
                        Padding="16,0"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="{StaticResource ControlCornerRadius}"
                        Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityReverseConvert(WinGetSourceInternalCollection.Count), Mode=OneWay}">

                        <TextBlock
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsWinGetSource/InternalDataSourceEmpty')}"
                            TextAlignment="Center" />
                    </Grid>

                    <ListView
                        Grid.Row="1"
                        CornerRadius="0"
                        ItemsSource="{x:Bind WinGetSourceInternalCollection}"
                        SelectionMode="None"
                        Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityConvert(WinGetSourceInternalCollection.Count), Mode=OneWay}">

                        <ListView.ItemContainerStyle>
                            <Style BasedOn="{StaticResource DefaultListViewItemStyle}" TargetType="ListViewItem">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Margin" Value="0" />
                                <Setter Property="MinHeight" Value="0" />
                                <Setter Property="Padding" Value="0" />
                            </Style>
                        </ListView.ItemContainerStyle>

                        <ItemsControl.ItemContainerTransitions>
                            <TransitionCollection />
                        </ItemsControl.ItemContainerTransitions>

                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="model:WinGetSourceModel">
                                <Expander
                                    Margin="0,0,0,2"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Stretch"
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    IsExpanded="False">

                                    <Expander.Header>
                                        <Grid
                                            Height="60"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Center">

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <CheckBox
                                                Grid.Column="0"
                                                MinWidth="0"
                                                Margin="0,0,12,0"
                                                Command="{StaticResource CheckBoxClickCommand}"
                                                CommandParameter="{x:Bind}"
                                                IsChecked="{x:Bind IsSelected, Mode=TwoWay}"
                                                IsEnabled="{x:Bind IsOperating.Equals(x:False), Mode=OneWay}">

                                                <ToolTipService.ToolTip>
                                                    <ToolTip
                                                        MaxWidth="9999"
                                                        Background="Transparent"
                                                        Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}">

                                                        <Grid>
                                                            <TextBlock Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsWinGetSource/Selected')}" Visibility="{x:Bind IsSelected, Mode=OneWay}" />
                                                            <TextBlock Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsWinGetSource/UnSelected')}" Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(IsSelected), Mode=OneWay}" />
                                                        </Grid>
                                                    </ToolTip>
                                                </ToolTipService.ToolTip>
                                            </CheckBox>

                                            <StackPanel
                                                Grid.Column="1"
                                                VerticalAlignment="Center"
                                                Orientation="Vertical">

                                                <TextBlock
                                                    HorizontalAlignment="Left"
                                                    IsTextSelectionEnabled="True"
                                                    Style="{StaticResource BodyTextBlockStyle}"
                                                    Text="{x:Bind Name}"
                                                    TextTrimming="CharacterEllipsis"
                                                    TextWrapping="NoWrap" />

                                                <TextBlock
                                                    HorizontalAlignment="Left"
                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                    IsTextSelectionEnabled="True"
                                                    Style="{StaticResource CaptionTextBlockStyle}"
                                                    Text="{x:Bind Arguments}"
                                                    TextTrimming="CharacterEllipsis"
                                                    TextWrapping="NoWrap" />

                                                <ToolTipService.ToolTip>
                                                    <ToolTip
                                                        MaxWidth="9999"
                                                        Background="Transparent"
                                                        Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}">

                                                        <StackPanel>
                                                            <TextBlock>
                                                                <Run Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsWinGetSource/Name')}" />
                                                                <Run Text="{x:Bind Name}" />
                                                            </TextBlock>

                                                            <TextBlock>
                                                                <Run Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsWinGetSource/Arguments')}" />
                                                                <Run Text="{x:Bind Arguments}" />
                                                            </TextBlock>
                                                        </StackPanel>
                                                    </ToolTip>
                                                </ToolTipService.ToolTip>
                                            </StackPanel>
                                        </Grid>
                                    </Expander.Header>

                                    <Expander.Content>
                                        <Grid
                                            Margin="40,0,0,0"
                                            ColumnSpacing="15"
                                            RowSpacing="3">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                HorizontalAlignment="Left"
                                                FontSize="14"
                                                IsTextSelectionEnabled="True"
                                                Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsWinGetSource/SourceId')}" />

                                            <TextBlock
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                HorizontalAlignment="Left"
                                                FontSize="14"
                                                IsTextSelectionEnabled="True"
                                                Text="{x:Bind SourceId}"
                                                TextWrapping="Wrap" />

                                            <TextBlock
                                                Grid.Row="1"
                                                Grid.Column="0"
                                                HorizontalAlignment="Left"
                                                FontSize="14"
                                                IsTextSelectionEnabled="True"
                                                Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsWinGetSource/Explicit')}" />

                                            <TextBlock
                                                Grid.Row="1"
                                                Grid.Column="1"
                                                HorizontalAlignment="Left"
                                                FontSize="14"
                                                IsTextSelectionEnabled="True"
                                                Text="{x:Bind Explicit}"
                                                TextWrapping="Wrap" />

                                            <TextBlock
                                                Grid.Row="2"
                                                Grid.Column="0"
                                                HorizontalAlignment="Left"
                                                FontSize="14"
                                                IsTextSelectionEnabled="True"
                                                Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsWinGetSource/TrustLevel')}" />

                                            <TextBlock
                                                Grid.Row="2"
                                                Grid.Column="1"
                                                HorizontalAlignment="Left"
                                                FontSize="14"
                                                IsTextSelectionEnabled="True"
                                                Text="{x:Bind TrustLevel}"
                                                TextWrapping="Wrap" />

                                            <TextBlock
                                                Grid.Row="3"
                                                Grid.Column="0"
                                                HorizontalAlignment="Left"
                                                FontSize="14"
                                                IsTextSelectionEnabled="True"
                                                Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsWinGetSource/LastUpdateTime')}" />

                                            <TextBlock
                                                Grid.Row="3"
                                                Grid.Column="1"
                                                HorizontalAlignment="Left"
                                                FontSize="14"
                                                IsTextSelectionEnabled="True"
                                                Text="{x:Bind LastUpdateTime}"
                                                TextWrapping="Wrap" />

                                            <TextBlock
                                                Grid.Row="4"
                                                Grid.Column="0"
                                                HorizontalAlignment="Left"
                                                FontSize="14"
                                                IsTextSelectionEnabled="True"
                                                Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsWinGetSource/Origin')}" />

                                            <TextBlock
                                                Grid.Row="4"
                                                Grid.Column="1"
                                                HorizontalAlignment="Left"
                                                FontSize="14"
                                                IsTextSelectionEnabled="True"
                                                Text="{x:Bind Origin}"
                                                TextWrapping="Wrap" />

                                            <TextBlock
                                                Grid.Row="5"
                                                Grid.Column="0"
                                                HorizontalAlignment="Left"
                                                FontSize="14"
                                                IsTextSelectionEnabled="True"
                                                Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsWinGetSource/Type')}" />

                                            <TextBlock
                                                Grid.Row="5"
                                                Grid.Column="1"
                                                HorizontalAlignment="Left"
                                                FontSize="14"
                                                IsTextSelectionEnabled="True"
                                                Text="{x:Bind Type}"
                                                TextWrapping="Wrap" />

                                            <TextBlock
                                                Grid.Row="6"
                                                Grid.Column="0"
                                                HorizontalAlignment="Left"
                                                FontSize="14"
                                                IsTextSelectionEnabled="True"
                                                Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsWinGetSource/AcceptSourceAgreements')}" />

                                            <TextBlock
                                                Grid.Row="6"
                                                Grid.Column="1"
                                                HorizontalAlignment="Left"
                                                FontSize="14"
                                                IsTextSelectionEnabled="True"
                                                Text="{x:Bind AcceptSourceAgreements}"
                                                TextWrapping="Wrap" />

                                            <TextBlock
                                                Grid.Row="7"
                                                Grid.Column="0"
                                                HorizontalAlignment="Left"
                                                FontSize="14"
                                                IsTextSelectionEnabled="True"
                                                Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsWinGetSource/AdditionalPackageCatalogArguments')}" />

                                            <TextBlock
                                                Grid.Row="7"
                                                Grid.Column="1"
                                                HorizontalAlignment="Left"
                                                FontSize="14"
                                                IsTextSelectionEnabled="True"
                                                Text="{x:Bind AdditionalPackageCatalogArguments}"
                                                TextWrapping="Wrap" />

                                            <TextBlock
                                                Grid.Row="8"
                                                Grid.Column="0"
                                                HorizontalAlignment="Left"
                                                FontSize="14"
                                                IsTextSelectionEnabled="True"
                                                Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsWinGetSource/AuthenticationType')}" />

                                            <TextBlock
                                                Grid.Row="8"
                                                Grid.Column="1"
                                                HorizontalAlignment="Left"
                                                FontSize="14"
                                                IsTextSelectionEnabled="True"
                                                Text="{x:Bind AuthenticationType}"
                                                TextWrapping="Wrap" />

                                            <TextBlock
                                                Grid.Row="9"
                                                Grid.Column="0"
                                                HorizontalAlignment="Left"
                                                FontSize="14"
                                                IsTextSelectionEnabled="True"
                                                Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsWinGetSource/AuthenticationAccount')}" />

                                            <TextBlock
                                                Grid.Row="9"
                                                Grid.Column="1"
                                                HorizontalAlignment="Left"
                                                FontSize="14"
                                                IsTextSelectionEnabled="True"
                                                Text="{x:Bind AuthenticationAccount}"
                                                TextWrapping="Wrap" />

                                            <TextBlock
                                                Grid.Row="10"
                                                Grid.Column="0"
                                                HorizontalAlignment="Left"
                                                FontSize="14"
                                                IsTextSelectionEnabled="True"
                                                Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsWinGetSource/PackageCatalogBackgroundUpdateInterval')}" />

                                            <TextBlock
                                                Grid.Row="10"
                                                Grid.Column="1"
                                                HorizontalAlignment="Left"
                                                FontSize="14"
                                                IsTextSelectionEnabled="True"
                                                Text="{x:Bind PackageCatalogBackgroundUpdateInterval}"
                                                TextWrapping="Wrap" />
                                        </Grid>
                                    </Expander.Content>
                                </Expander>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <StackPanel
                        Grid.Row="2"
                        Margin="0,5,0,5"
                        VerticalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="5">

                        <FontIcon
                            Margin="0,2,0,0"
                            VerticalAlignment="Center"
                            FontSize="16"
                            FontWeight="Medium"
                            Glyph="&#xE76C;" />

                        <TextBlock
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Style="{StaticResource BodyTextBlockStyle}"
                            Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsWinGetSource/CustomDataSource')}" />
                    </StackPanel>

                    <Grid
                        Grid.Row="3"
                        Height="60"
                        Padding="16,0"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="{StaticResource ControlCornerRadius}"
                        Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityReverseConvert(WinGetSourceCustomCollection.Count), Mode=OneWay}">

                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsWinGetSource/CustomDataSourceEmpty')}"
                            TextAlignment="Center" />
                    </Grid>

                    <ListView
                        Grid.Row="3"
                        CornerRadius="0"
                        ItemsSource="{x:Bind WinGetSourceCustomCollection}"
                        SelectionMode="None"
                        Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityConvert(WinGetSourceCustomCollection.Count), Mode=OneWay}">

                        <ListView.ItemContainerStyle>
                            <Style BasedOn="{StaticResource DefaultListViewItemStyle}" TargetType="ListViewItem">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Margin" Value="0" />
                                <Setter Property="MinHeight" Value="0" />
                                <Setter Property="Padding" Value="0" />
                            </Style>
                        </ListView.ItemContainerStyle>

                        <ItemsControl.ItemContainerTransitions>
                            <TransitionCollection />
                        </ItemsControl.ItemContainerTransitions>

                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="model:WinGetSourceModel">
                                <Expander
                                    Margin="0,0,0,2"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Stretch"
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    IsExpanded="False">

                                    <Expander.Header>
                                        <Grid
                                            Height="60"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Center">

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <CheckBox
                                                Grid.Column="0"
                                                MinWidth="0"
                                                Margin="0,0,12,0"
                                                Command="{StaticResource CheckBoxClickCommand}"
                                                CommandParameter="{x:Bind}"
                                                IsChecked="{x:Bind IsSelected, Mode=TwoWay}"
                                                IsEnabled="{x:Bind IsOperating.Equals(x:False), Mode=OneWay}">

                                                <ToolTipService.ToolTip>
                                                    <ToolTip
                                                        MaxWidth="9999"
                                                        Background="Transparent"
                                                        Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}">

                                                        <Grid>
                                                            <TextBlock Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsWinGetSource/Selected')}" Visibility="{x:Bind IsSelected, Mode=OneWay}" />
                                                            <TextBlock Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsWinGetSource/UnSelected')}" Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(IsSelected), Mode=OneWay}" />
                                                        </Grid>
                                                    </ToolTip>
                                                </ToolTipService.ToolTip>
                                            </CheckBox>

                                            <StackPanel
                                                Grid.Column="1"
                                                VerticalAlignment="Center"
                                                Orientation="Vertical">

                                                <TextBlock
                                                    HorizontalAlignment="Left"
                                                    IsTextSelectionEnabled="True"
                                                    Style="{StaticResource BodyTextBlockStyle}"
                                                    Text="{x:Bind Name}"
                                                    TextTrimming="CharacterEllipsis"
                                                    TextWrapping="NoWrap" />

                                                <TextBlock
                                                    HorizontalAlignment="Left"
                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                    IsTextSelectionEnabled="True"
                                                    Style="{StaticResource CaptionTextBlockStyle}"
                                                    Text="{x:Bind Arguments}"
                                                    TextTrimming="CharacterEllipsis"
                                                    TextWrapping="NoWrap" />

                                                <ToolTipService.ToolTip>
                                                    <ToolTip
                                                        MaxWidth="9999"
                                                        Background="Transparent"
                                                        Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}">

                                                        <StackPanel>
                                                            <TextBlock>
                                                                <Run Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsWinGetSource/Name')}" />
                                                                <Run Text="{x:Bind Name}" />
                                                            </TextBlock>

                                                            <TextBlock>
                                                                <Run Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsWinGetSource/Arguments')}" />
                                                                <Run Text="{x:Bind Arguments}" />
                                                            </TextBlock>
                                                        </StackPanel>
                                                    </ToolTip>
                                                </ToolTipService.ToolTip>
                                            </StackPanel>

                                            <ProgressRing
                                                Grid.Column="2"
                                                IsActive="{x:Bind IsOperating, Mode=OneWay}"
                                                Visibility="{x:Bind IsOperating, Mode=OneWay}" />

                                            <SplitButton
                                                Grid.Column="3"
                                                Margin="15,0,0,0"
                                                Command="{StaticResource EditCommand}"
                                                CommandParameter="{x:Bind}"
                                                Content="{x:Bind rootservice:ResourceService.GetLocalized('SettingsWinGetSource/Edit')}"
                                                IsEnabled="{x:Bind IsOperating.Equals(x:False), Mode=OneWay}">

                                                <SplitButton.Flyout>
                                                    <MenuFlyout Placement="Bottom">
                                                        <MenuFlyoutItem
                                                            Command="{StaticResource RemoveDataSourceCommand}"
                                                            CommandParameter="{x:Bind}"
                                                            IsEnabled="{x:Bind IsOperating.Equals(x:False), Mode=OneWay}"
                                                            Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsWinGetSource/RemoveDataSource')}">

                                                            <MenuFlyoutItem.Icon>
                                                                <FontIcon Glyph="&#xE74D;" />
                                                            </MenuFlyoutItem.Icon>
                                                        </MenuFlyoutItem>

                                                        <MenuFlyoutItem
                                                            Command="{StaticResource RemoveDataSourcePreserveDataCommand}"
                                                            CommandParameter="{x:Bind}"
                                                            IsEnabled="{x:Bind IsOperating.Equals(x:False), Mode=OneWay}"
                                                            Text="{x:Bind rootservice:ResourceService.GetLocalized('SettingsWinGetSource/RemoveDataSourcePreserveData')}">

                                                            <MenuFlyoutItem.Icon>
                                                                <FontIcon Glyph="&#xE74D;" />
                                                            </MenuFlyoutItem.Icon>
                                                        </MenuFlyoutItem>
                                                    </MenuFlyout>
                                                </SplitButton.Flyout>

                                                <ToolTipService.ToolTip>
                                                    <ToolTip
                                                        MaxWidth="9999"
                                                        Background="Transparent"
                                                        Content="{x:Bind rootservice:ResourceService.GetLocalized('SettingsWinGetSource/EditToolTip')}"
                                                        Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}" />
                                                </ToolTipService.ToolTip>
                                            </SplitButton>
                                        </Grid>
                                    </Expander.Header>

                                    <Expander.Content>
                                        <Grid
                                            Margin="40,0,0,0"
                                            ColumnSpacing="15"
                                            RowSpacing="3">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
