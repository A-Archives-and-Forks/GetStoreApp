<Page
    x:Class="GetStoreApp.Views.Pages.PackageManagerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:basicInput="using:GetStoreApp.Views.CustomControls.BasicInput"
    xmlns:controlExtensions="using:GetStoreApp.Helpers.Controls.Extensions"
    xmlns:converter="using:GetStoreApp.Helpers.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:packageManager="using:GetStoreApp.Models.Controls.PackageManager"
    xmlns:root="using:GetStoreApp.Services.Root"
    x:Name="PackageManagerRoot"
    Loaded="{x:Bind OnLoaded}"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <Grid Padding="0">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid
            Grid.Row="0"
            Margin="30,15,30,0"
            ColumnSpacing="5">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                FontSize="26"
                Text="{x:Bind root:ResourceService.GetLocalized('PackageManager/Title')}" />

            <AutoSuggestBox
                Grid.Column="1"
                Width="200"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                PlaceholderText="{x:Bind root:ResourceService.GetLocalized('PackageManager/PlaceHolderText')}"
                QuerySubmitted="{x:Bind OnQuerySubmitted}"
                Text="{x:Bind SearchText, Mode=TwoWay}">

                <AutoSuggestBox.QueryIcon>
                    <FontIcon
                        FontFamily="{ThemeResource SymbolThemeFontFamily}"
                        FontSize="14"
                        Glyph="&#xE71E;" />
                </AutoSuggestBox.QueryIcon>
            </AutoSuggestBox>

            <Button
                Grid.Column="2"
                Click="{x:Bind OnOpenSettingsClicked}"
                Content="{x:Bind root:ResourceService.GetLocalized('PackageManager/OpenSettings')}" />
        </Grid>

        <Grid
            Grid.Row="1"
            Height="66"
            Margin="30,5,30,0"
            Padding="16,8,2,8"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="{StaticResource ControlCornerRadius}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <FontIcon
                Grid.Column="0"
                Margin="0,0,12,0"
                FontFamily="{ThemeResource SymbolThemeFontFamily}"
                FontSize="16"
                Glyph="&#xE74C;" />

            <TextBlock
                Grid.Column="1"
                VerticalAlignment="Center"
                Text="{x:Bind root:ResourceService.GetLocalized('PackageManager/Operation')}" />
            <AppBarSeparator Grid.Column="2" Margin="10,0,10,0" />

            <TextBlock
                Grid.Column="3"
                VerticalAlignment="Center"
                Text="{x:Bind LocalizePackageManagerCountInfo(PackageManagerDataList.Count), Mode=OneWay}"
                ToolTipService.ToolTip="{x:Bind LocalizePackageManagerCountInfo(PackageManagerDataList.Count), Mode=OneWay}" />

            <StackPanel
                Grid.Column="4"
                Margin="0,0,10,0"
                VerticalAlignment="Center"
                Background="Transparent"
                Orientation="Horizontal"
                Spacing="2">

                <MenuFlyoutItem
                    controlExtensions:CursorHelper.Cursor="Hand"
                    Click="{x:Bind OnSortClicked}"
                    IsEnabled="{x:Bind IsLoadedCompleted, Mode=OneWay}"
                    Style="{StaticResource AppBarButtonMenuItemStyle}"
                    Text="{x:Bind root:ResourceService.GetLocalized('PackageManager/Sort')}"
                    ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('PackageManager/SortToolTip')}">

                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE8CB;" />
                    </MenuFlyoutItem.Icon>

                    <FlyoutBase.AttachedFlyout>
                        <MenuFlyout MenuFlyoutPresenterStyle="{StaticResource MenuFlyoutPresenterStyle}" Placement="Bottom" />
                    </FlyoutBase.AttachedFlyout>
                </MenuFlyoutItem>

                <MenuFlyoutItem
                    controlExtensions:CursorHelper.Cursor="Hand"
                    Click="{x:Bind OnFilterClicked}"
                    IsEnabled="{x:Bind IsLoadedCompleted, Mode=OneWay}"
                    Style="{StaticResource AppBarButtonMenuItemStyle}"
                    Text="{x:Bind root:ResourceService.GetLocalized('PackageManager/Filter')}"
                    ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('PackageManager/FilterToolTip')}">

                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE71c;" />
                    </MenuFlyoutItem.Icon>

                    <FlyoutBase.AttachedFlyout>
                        <MenuFlyout MenuFlyoutPresenterStyle="{StaticResource MenuFlyoutPresenterStyle}" Placement="Bottom" />
                    </FlyoutBase.AttachedFlyout>
                </MenuFlyoutItem>

                <MenuFlyoutItem
                    controlExtensions:CursorHelper.Cursor="Hand"
                    Click="{x:Bind OnRefreshClicked}"
                    IsEnabled="{x:Bind IsLoadedCompleted, Mode=OneWay}"
                    Style="{StaticResource AppBarButtonMenuItemStyle}"
                    Text="{x:Bind root:ResourceService.GetLocalized('PackageManager/Refresh')}"
                    ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('PackageManager/RefreshToolTip')}">

                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE72c;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
            </StackPanel>
        </Grid>

        <Grid
            x:Name="LoadingGrid"
            Grid.Row="2"
            Margin="30,3,30,0"
            Padding="16,12"
            x:Load="{x:Bind converter:ValueConverterHelper.BooleanReverseConvert(IsLoadedCompleted), Mode=OneWay}"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="{StaticResource ControlCornerRadius}">

            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal"
                Spacing="10">

                <ProgressRing IsActive="True" IsEnabled="True" />

                <TextBlock
                    Margin="0,10"
                    VerticalAlignment="Center"
                    Text="{x:Bind root:ResourceService.GetLocalized('PackageManager/LoadingPackage')}"
                    TextAlignment="Center"
                    ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('PackageManager/LoadingPackage')}" />
            </StackPanel>
        </Grid>

        <Grid
            Grid.Row="3"
            Margin="0,3,0,0"
            Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityConvert(IsLoadedCompleted), Mode=OneWay}">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid
                Grid.Row="0"
                Margin="30,0"
                Padding="16,12"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="{StaticResource ControlCornerRadius}"
                Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityConvert(IsPackageEmpty), Mode=OneWay}">

                <TextBlock
                    Margin="0,10,0,10"
                    VerticalAlignment="Center"
                    Text="{x:Bind root:ResourceService.GetLocalized('PackageManager/PackageEmptyDescription')}"
                    TextAlignment="Center" />
            </Grid>

            <Grid Grid.Row="1" Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(IsPackageEmpty), Mode=OneWay}">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid
                    Grid.Row="0"
                    Margin="30,0"
                    Padding="16,12"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource ControlCornerRadius}"
                    Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityConvert(IsPackageEmptyWithCondition), Mode=OneWay}">
                    <TextBlock
                        Margin="0,10,0,10"
                        VerticalAlignment="Center"
                        Text="{x:Bind root:ResourceService.GetLocalized('PackageManager/PackageEmptyWithConditionDescription')}"
                        TextAlignment="Center" />
                </Grid>

                <ListView
                    Grid.Row="1"
                    Padding="30,0,30,30"
                    ItemContainerStyle="{StaticResource CardListViewItemContainerStyle}"
                    ItemsSource="{x:Bind PackageManagerDataList, Mode=OneWay}"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    ScrollViewer.HorizontalScrollMode="Disabled"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    ScrollViewer.VerticalScrollMode="Enabled"
                    SelectionMode="None"
                    Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityConvert(PackageManagerDataList.Count), Mode=OneWay}">

                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="packageManager:PackageModel">
                            <Grid>
                                <Grid
                                    Height="60"
                                    Padding="16,12"
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    ColumnSpacing="10"
                                    CornerRadius="{StaticResource ControlCornerRadius}">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="120" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <Grid
                                        Grid.Column="0"
                                        Width="20"
                                        Height="20"
                                        Background="#dddddd"
                                        CornerRadius="4">
                                        <ImageIcon>
                                            <ImageIcon.Source>
                                                <BitmapImage UriSource="{x:Bind Package.Logo}" />
                                            </ImageIcon.Source>
                                        </ImageIcon>
                                    </Grid>

                                    <TextBlock
                                        Grid.Column="1"
                                        MinWidth="50"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        Text="{x:Bind Package.DisplayName}"
                                        TextAlignment="Left"
                                        ToolTipService.ToolTip="{x:Bind converter:StringConverterHelper.PackageManagerToolTipFormat(Package.DisplayName,'DisplayName')}" />

                                    <TextBlock
                                        Grid.Column="2"
                                        MinWidth="50"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        Text="{x:Bind Package.PublisherDisplayName}"
                                        TextAlignment="Left"
                                        ToolTipService.ToolTip="{x:Bind converter:StringConverterHelper.PackageManagerToolTipFormat(Package.PublisherDisplayName,'Publisher')}" />

                                    <TextBlock
                                        Grid.Column="3"
                                        MinWidth="50"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        HorizontalTextAlignment="Left"
                                        Text="{x:Bind converter:StringConverterHelper.PackageVersionFormat(Package.Id.Version)}"
                                        TextAlignment="Left"
                                        ToolTipService.ToolTip="{x:Bind converter:StringConverterHelper.PackageManagerToolTipFormat(Package.Id.Version,'Version')}" />

                                    <TextBlock
                                        Grid.Column="4"
                                        MinWidth="50"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        HorizontalTextAlignment="Left"
                                        Text="{x:Bind converter:StringConverterHelper.DateTimeOffsetFormat(Package.InstalledDate)}"
                                        TextAlignment="Left"
                                        ToolTipService.ToolTip="{x:Bind converter:StringConverterHelper.PackageManagerToolTipFormat(Package.InstalledDate,'InstalledDate')}" />

                                    <basicInput:ExtendedSplitButton
                                        Grid.Column="5"
                                        Content="{x:Bind root:ResourceService.GetLocalized('PackageManager/View')}"
                                        PrimaryButtonToolTip="{x:Bind root:ResourceService.GetLocalized('PackageManager/ViewToolTip')}"
                                        SecondaryButtonToolTip="{x:Bind root:ResourceService.GetLocalized('PackageManager/FastOperatinToolTip')}">

                                        <basicInput:ExtendedSplitButton.Flyout>
                                            <MenuFlyout MenuFlyoutPresenterStyle="{StaticResource MenuFlyoutPresenterStyle}">
                                                <MenuFlyoutItem
                                                    Command="{Binding ElementName=PackageManagerRoot, Path=OpenAppCommand, Mode=OneTime}"
                                                    CommandParameter="{x:Bind Package}"
                                                    Style="{StaticResource MenuFlyoutItemStyle}"
                                                    Text="{x:Bind root:ResourceService.GetLocalized('PackageManager/OpenApp')}"
                                                    ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('PackageManager/OpenApp')}" />

                                                <MenuFlyoutItem
                                                    Command="{Binding ElementName=PackageManagerRoot, Path=OpenStoreCommand, Mode=OneTime}"
                                                    CommandParameter="{x:Bind Package.Id.FamilyName}"
                                                    Style="{StaticResource MenuFlyoutItemStyle}"
                                                    Text="{x:Bind root:ResourceService.GetLocalized('PackageManager/OpenStore')}"
                                                    ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('PackageManager/OpenStore')}" />

                                                <MenuFlyoutItem
                                                    Command="{Binding ElementName=PackageManagerRoot, Path=OpenManifestCommand, Mode=OneTime}"
                                                    CommandParameter="{x:Bind Package}"
                                                    Style="{StaticResource MenuFlyoutItemStyle}"
                                                    Text="{x:Bind root:ResourceService.GetLocalized('PackageManager/OpenManifest')}"
                                                    ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('PackageManager/OpenManifest')}" />

                                                <MenuFlyoutItem
                                                    Command="{Binding ElementName=PackageManagerRoot, Path=OpenInstalledFolderCommand, Mode=OneTime}"
                                                    CommandParameter="{x:Bind Package.InstalledLocation}"
                                                    Style="{StaticResource MenuFlyoutItemStyle}"
                                                    Text="{x:Bind root:ResourceService.GetLocalized('PackageManager/OpenInstalledFolder')}"
                                                    ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('PackageManager/OpenInstalledFolder')}" />

                                                <MenuFlyoutSeparator />

                                                <MenuFlyoutItem
                                                    Command="{Binding ElementName=PackageManagerRoot, Path=UnInstallCommand, Mode=OneTime}"
                                                    CommandParameter="{x:Bind Package.Id.FullName}"
                                                    Style="{StaticResource MenuFlyoutItemStyle}"
                                                    Text="{x:Bind root:ResourceService.GetLocalized('PackageManager/UnInstall')}"
                                                    ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('PackageManager/UnInstall')}" />
                                            </MenuFlyout>
                                        </basicInput:ExtendedSplitButton.Flyout>
                                    </basicInput:ExtendedSplitButton>
                                </Grid>

                                <ProgressBar
                                    Margin="16,0"
                                    VerticalAlignment="Bottom"
                                    IsIndeterminate="True"
                                    Visibility="Collapsed" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Grid>
    </Grid>
</Page>
