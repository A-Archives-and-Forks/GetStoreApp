<Page
    x:Class="GetStoreApp.Views.Pages.SettingsAdvancedPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="using:GetStoreApp.Helpers.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="using:GetStoreApp.Services.Root"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <ScrollView
        HorizontalScrollBarVisibility="Hidden"
        HorizontalScrollMode="Disabled"
        VerticalScrollBarVisibility="Auto"
        VerticalScrollMode="Enabled">

        <Grid Margin="30,0,30,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  应用通知设置  -->
            <Grid
                Grid.Row="0"
                Height="60"
                Margin="0,0,0,2"
                Padding="16,12"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="{StaticResource ControlCornerRadius}">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <FontIcon
                    Grid.Column="0"
                    Margin="0,0,12,0"
                    FontSize="16"
                    Glyph="&#xEA8F;" />

                <StackPanel
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Orientation="Vertical">

                    <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind root:ResourceService.GetLocalized('Settings/Notification')}" />

                    <TextBlock
                        x:Name="NotificationDescription"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="{x:Bind root:ResourceService.GetLocalized('Settings/NotificationDescription')}"
                        TextTrimming="CharacterEllipsis"
                        TextWrapping="NoWrap">

                        <ToolTipService.ToolTip>
                            <ToolTip
                                MaxWidth="9999"
                                Content="{x:Bind root:ResourceService.GetLocalized('Settings/NotificationDescription')}"
                                Visibility="{x:Bind NotificationDescription.IsTextTrimmed, Mode=OneWay}" />
                        </ToolTipService.ToolTip>
                    </TextBlock>
                </StackPanel>

                <HyperlinkButton
                    Grid.Column="2"
                    Margin="0,0,6,0"
                    VerticalAlignment="Center"
                    Click="{x:Bind OnSystemNotificationSettingsClicked}"
                    Content="{x:Bind root:ResourceService.GetLocalized('Settings/SystemNotificationSettings')}" />

                <StackPanel
                    Grid.Column="3"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">

                    <TextBlock
                        VerticalAlignment="Center"
                        Text="{x:Bind root:ResourceService.GetLocalized('Settings/NotificationOffContent')}"
                        Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(NotificationValue), Mode=OneWay}" />

                    <TextBlock
                        VerticalAlignment="Center"
                        Text="{x:Bind root:ResourceService.GetLocalized('Settings/NotificationOnContent')}"
                        Visibility="{x:Bind NotificationValue, Mode=OneWay}" />

                    <ToggleSwitch
                        MinWidth="0"
                        Margin="10,-2,-10,0"
                        IsEnabled="{x:Bind NotificationEnabled, Mode=OneWay}"
                        IsOn="{x:Bind NotificationValue, Mode=OneWay}"
                        OffContent=""
                        OnContent=""
                        Toggled="{x:Bind OnNotificationToggled}" />
                </StackPanel>
            </Grid>

            <!--  浏览器内核设置  -->
            <Grid
                Grid.Row="1"
                Height="60"
                Margin="0,0,0,2"
                Padding="16,12"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="{StaticResource ControlCornerRadius}">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <FontIcon
                    Grid.Column="0"
                    Margin="0,0,12,0"
                    FontSize="16"
                    Glyph="&#xE774;" />

                <StackPanel Grid.Column="1" Orientation="Vertical">
                    <TextBlock
                        VerticalAlignment="Center"
                        Style="{StaticResource BodyTextBlockStyle}"
                        Text="{x:Bind root:ResourceService.GetLocalized('Settings/WebKernel')}" />

                    <TextBlock
                        x:Name="WebKernelDescription"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="{x:Bind root:ResourceService.GetLocalized('Settings/WebKernelDescription')}"
                        TextTrimming="CharacterEllipsis"
                        TextWrapping="NoWrap">

                        <ToolTipService.ToolTip>
                            <ToolTip
                                MaxWidth="9999"
                                Content="{x:Bind root:ResourceService.GetLocalized('Settings/WebKernelDescription')}"
                                Visibility="{x:Bind WebKernelDescription.IsTextTrimmed, Mode=OneWay}" />
                        </ToolTipService.ToolTip>
                    </TextBlock>
                </StackPanel>

                <HyperlinkButton
                    Grid.Column="2"
                    Margin="0,0,6,0"
                    VerticalAlignment="Center"
                    Content="{x:Bind root:ResourceService.GetLocalized('Settings/DownloadWebView2')}"
                    NavigateUri="https://developer.microsoft.com/microsoft-edge/webview2" />

                <DropDownButton
                    Grid.Column="3"
                    VerticalAlignment="Center"
                    Content="{x:Bind WebKernel.Value, Mode=OneWay}">

                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <RadioMenuFlyoutItem
                                Height="32"
                                Padding="11,0"
                                Click="{x:Bind OnWebKernelSelectClicked}"
                                GroupName="WebKernelRadioGroup"
                                IsChecked="{x:Bind WebKernel.Key.Equals(WebKernelList[0].Key), Mode=OneWay}"
                                Tag="0"
                                Text="{x:Bind WebKernelList[0].Value}" />

                            <RadioMenuFlyoutItem
                                Height="32"
                                Padding="11,0"
                                Click="{x:Bind OnWebKernelSelectClicked}"
                                GroupName="WebKernelRadioGroup"
                                IsChecked="{x:Bind WebKernel.Key.Equals(WebKernelList[1].Key), Mode=OneWay}"
                                Tag="1"
                                Text="{x:Bind WebKernelList[1].Value}" />
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
            </Grid>

            <!--  文件右键菜单设置  -->
            <Grid
                Grid.Row="2"
                Height="60"
                Margin="0,0,0,2"
                Padding="16,12"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="{StaticResource ControlCornerRadius}">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <FontIcon
                    Grid.Column="0"
                    Margin="0,0,12,0"
                    FontFamily="{ThemeResource SymbolThemeFontFamily}"
                    FontSize="16"
                    Glyph="&#xE8FD;" />

                <StackPanel
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Orientation="Vertical">

                    <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind root:ResourceService.GetLocalized('Settings/ShellMenu')}" />

                    <TextBlock
                        x:Name="ShellMenuDescription"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="{x:Bind root:ResourceService.GetLocalized('Settings/ShellMenuDescription')}"
                        TextTrimming="CharacterEllipsis"
                        TextWrapping="NoWrap">

                        <ToolTipService.ToolTip>
                            <ToolTip
                                MaxWidth="9999"
                                Content="{x:Bind root:ResourceService.GetLocalized('Settings/ShellMenuDescription')}"
                                Visibility="{x:Bind ShellMenuDescription.IsTextTrimmed, Mode=OneWay}" />
                        </ToolTipService.ToolTip>
                    </TextBlock>
                </StackPanel>

                <HyperlinkButton
                    Grid.Column="2"
                    Margin="0,0,6,0"
                    VerticalAlignment="Center"
                    Click="{x:Bind OnRestartExplorerClicked}"
                    IsEnabled="{x:Bind IsRestarting.Equals(x:False), Mode=OneWay}">

                    <HyperlinkButton.Content>
                        <Grid>
                            <TextBlock Text="{x:Bind root:ResourceService.GetLocalized('Settings/RestartExplorer')}" Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(IsRestarting), Mode=OneWay}" />
                            <TextBlock Text="{x:Bind root:ResourceService.GetLocalized('Settings/Restarting')}" Visibility="{x:Bind IsRestarting, Mode=OneWay}" />
                        </Grid>
                    </HyperlinkButton.Content>
                </HyperlinkButton>

                <StackPanel
                    Grid.Column="3"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">

                    <TextBlock
                        VerticalAlignment="Center"
                        Text="{x:Bind root:ResourceService.GetLocalized('Settings/ShellMenuOffContent')}"
                        Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(ShellMenuValue), Mode=OneWay}" />

                    <TextBlock
                        VerticalAlignment="Center"
                        Text="{x:Bind root:ResourceService.GetLocalized('Settings/ShellMenuOnContent')}"
                        Visibility="{x:Bind ShellMenuValue, Mode=OneWay}" />

                    <ToggleSwitch
                        MinWidth="0"
                        Margin="10,-2,-10,0"
                        IsOn="{x:Bind ShellMenuValue, Mode=OneWay}"
                        OffContent=""
                        OnContent=""
                        Toggled="{x:Bind OnShellMenuToggled}" />
                </StackPanel>
            </Grid>

            <!--  痕迹清理  -->
            <Grid
                Grid.Row="3"
                Height="60"
                Margin="0,0,0,2"
                Padding="16,12"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="{StaticResource ControlCornerRadius}">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <FontIcon
                    Grid.Column="0"
                    Margin="0,0,12,0"
                    FontSize="16"
                    Glyph="&#xE74D;" />

                <StackPanel
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Orientation="Vertical">

                    <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind root:ResourceService.GetLocalized('Settings/TraceCleanup')}" />

                    <TextBlock
                        x:Name="TraceCleanupDescription"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="{x:Bind root:ResourceService.GetLocalized('Settings/TraceCleanupDescription')}"
                        TextTrimming="CharacterEllipsis"
                        TextWrapping="NoWrap">

                        <ToolTipService.ToolTip>
                            <ToolTip
                                MaxWidth="9999"
                                Content="{x:Bind root:ResourceService.GetLocalized('Settings/TraceCleanupDescription')}"
                                Visibility="{x:Bind TraceCleanupDescription.IsTextTrimmed, Mode=OneWay}" />
                        </ToolTipService.ToolTip>
                    </TextBlock>
                </StackPanel>

                <Button
                    Grid.Column="2"
                    MinWidth="100"
                    Click="{x:Bind OnTraceCleanupClicked}"
                    Content="{x:Bind root:ResourceService.GetLocalized('Settings/TraceClear')}" />
            </Grid>

            <!--  日志记录设置  -->
            <Expander
                Grid.Row="4"
                Margin="0,0,0,2"
                Padding="0"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                IsExpanded="True">

                <Expander.Header>
                    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <FontIcon
                            Grid.Column="0"
                            Margin="0,0,12,0"
                            FontSize="16"
                            Glyph="&#xE70B;" />

                        <StackPanel
                            Grid.Column="1"
                            Margin="0,12"
                            VerticalAlignment="Center"
                            Orientation="Vertical">

                            <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="{x:Bind root:ResourceService.GetLocalized('Settings/LogRecord')}" />

                            <TextBlock
                                x:Name="LogRecordDescription"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Text="{x:Bind root:ResourceService.GetLocalized('Settings/LogRecordDescription')}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="NoWrap">

                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        MaxWidth="9999"
                                        Content="{x:Bind root:ResourceService.GetLocalized('Settings/LogRecordDescription')}"
                                        Visibility="{x:Bind LogRecordDescription.IsTextTrimmed, Mode=OneWay}" />
                                </ToolTipService.ToolTip>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </Expander.Header>

                <Expander.Content>
                    <StackPanel Padding="0" HorizontalAlignment="Stretch">
                        <Grid
                            Height="52"
                            Padding="44,0,16,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Orientation="Vertical">

                                <TextBlock
                                    VerticalAlignment="Center"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/LogFolder')}" />

                                <TextBlock
                                    x:Name="LogFolderDescription"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/LogFolderDescription')}"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="NoWrap">

                                    <ToolTipService.ToolTip>
                                        <ToolTip
                                            MaxWidth="9999"
                                            Content="{x:Bind root:ResourceService.GetLocalized('Settings/LogFolderDescription')}"
                                            Visibility="{x:Bind LogFolderDescription.IsTextTrimmed, Mode=OneWay}" />
                                    </ToolTipService.ToolTip>
                                </TextBlock>
                            </StackPanel>

                            <Button
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Click="{x:Bind OnOpenLogFolderClicked}"
                                Content="{x:Bind root:ResourceService.GetLocalized('Settings/OpenLogFolder')}" />
                        </Grid>

                        <MenuFlyoutSeparator />

                        <Grid
                            Height="52"
                            Padding="44,0,16,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Orientation="Vertical">

                                <TextBlock
                                    VerticalAlignment="Center"
                                    Style="{StaticResource BodyTextBlockStyle}"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/ClearLog')}" />

                                <TextBlock
                                    x:Name="ClearLogDescription"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Bind root:ResourceService.GetLocalized('Settings/ClearLogDescription')}"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="NoWrap">

                                    <ToolTipService.ToolTip>
                                        <ToolTip
                                            MaxWidth="9999"
                                            Content="{x:Bind root:ResourceService.GetLocalized('Settings/ClearLogDescription')}"
                                            Visibility="{x:Bind ClearLogDescription.IsTextTrimmed, Mode=OneWay}" />
                                    </ToolTipService.ToolTip>
                                </TextBlock>
                            </StackPanel>

                            <Button
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Click="{x:Bind OnClearClicked}"
                                Content="{x:Bind root:ResourceService.GetLocalized('Settings/Clear')}" />
                        </Grid>
                    </StackPanel>
                </Expander.Content>
            </Expander>
        </Grid>
    </ScrollView>
</Page>
