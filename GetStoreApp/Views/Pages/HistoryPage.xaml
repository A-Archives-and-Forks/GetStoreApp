<Page
    x:Class="GetStoreApp.Views.Pages.HistoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="using:GetStoreApp.Converters.Formats"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:ic="using:Microsoft.Xaml.Interactions.Core"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:GetStoreApp.Models.History"
    xmlns:sys="using:System"
    x:Name="HistoryRoot"
    Unloaded="{x:Bind HistoryUnloaded}"
    mc:Ignorable="d">

    <Page.Resources>
        <converter:ChannelNameFormatConverter x:Name="ChannelNameFormatConverter" />
        <converter:CheckBoxToolTipFormatConverter x:Name="CheckBoxToolTipFormatConverter" />
        <converter:TypeNameFormatConverter x:Name="TypeNameFormatConverter" />
    </Page.Resources>

    <Grid Padding="0">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="30,15,30,0"
            FontSize="26"
            Text="{x:Bind ResourceService.GetLocalized('/History/Title')}" />

        <Grid
            Grid.Row="1"
            Margin="30,5,30,0"
            Style="{StaticResource ListViewHeaderGridStyle}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <FontIcon
                Grid.Column="0"
                FontFamily="{StaticResource SegoeFluentFontFamily}"
                Glyph="&#xE74C;"
                Style="{StaticResource FontIconStyle}" />
            <TextBlock
                Grid.Column="1"
                VerticalAlignment="Center"
                Text="{x:Bind ResourceService.GetLocalized('/History/Operation')}" />
            <AppBarSeparator Grid.Column="2" Margin="10,0,10,0" />

            <TextBlock
                Grid.Column="3"
                VerticalAlignment="Center"
                Text="{x:Bind LocalizeHistoryCountInfo(ViewModel.HistoryDataList.Count), Mode=OneWay}"
                ToolTipService.ToolTip="{x:Bind LocalizeHistoryCountInfo(ViewModel.HistoryDataList.Count), Mode=OneWay}" />

            <CommandBar
                x:Name="NormalMode"
                Grid.Column="4"
                VerticalAlignment="Center"
                x:Load="{x:Bind ViewModel.IsSelectMode, Converter={StaticResource BooleanToOppositeValueConverter}, Mode=OneWay}"
                Background="Transparent"
                DefaultLabelPosition="Right">

                <AppBarButton
                    Command="{x:Bind ViewModel.SelectCommand}"
                    IsEnabled="{x:Bind sys:Convert.ToBoolean(ViewModel.HistoryDataList.Count), Mode=OneWay}"
                    Label="{x:Bind ResourceService.GetLocalized('/History/Select')}"
                    ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/History/SelectToolTip')}">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE762;" Style="{StaticResource SegoeFluentStyle}" />
                    </AppBarButton.Icon>
                </AppBarButton>

                <AppBarButton
                    IsEnabled="{x:Bind sys:Convert.ToBoolean(ViewModel.HistoryDataList.Count), Mode=OneWay}"
                    Label="{x:Bind ResourceService.GetLocalized('/History/Sort')}"
                    ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/History/SortToolTip')}">

                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE8cb;" Style="{StaticResource SegoeFluentStyle}" />
                    </AppBarButton.Icon>

                    <AppBarButton.Flyout>
                        <MenuFlyout Placement="Bottom">

                            <RadioMenuFlyoutItem
                                Command="{x:Bind ViewModel.TimeSortCommand}"
                                CommandParameter="True"
                                IsChecked="{x:Bind ViewModel.TimeSortOrder, Converter={StaticResource TimeSortValueCheckConverter}, ConverterParameter=true, Mode=OneWay}"
                                Text="{x:Bind ResourceService.GetLocalized('/History/TimeIncreaseSort')}"
                                ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/History/TimeIncreaseSortToolTip')}">
                                <RadioMenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE74a;" Style="{StaticResource SegoeFluentStyle}" />
                                </RadioMenuFlyoutItem.Icon>
                            </RadioMenuFlyoutItem>

                            <RadioMenuFlyoutItem
                                Command="{x:Bind ViewModel.TimeSortCommand}"
                                CommandParameter="False"
                                IsChecked="{x:Bind ViewModel.TimeSortOrder, Converter={StaticResource TimeSortValueCheckConverter}, ConverterParameter=false, Mode=OneWay}"
                                Text="{x:Bind ResourceService.GetLocalized('/History/TimeDecreaseSort')}"
                                ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/History/TimeDecreaseSortToolTip')}">
                                <RadioMenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE74b;" Style="{StaticResource SegoeFluentStyle}" />
                                </RadioMenuFlyoutItem.Icon>
                            </RadioMenuFlyoutItem>
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>

                <AppBarButton
                    IsEnabled="{x:Bind sys:Convert.ToBoolean(ViewModel.HistoryDataList.Count), Mode=OneWay}"
                    Label="{x:Bind ResourceService.GetLocalized('/History/Filter')}"
                    ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/History/FilterToolTip')}">

                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE74a;" Style="{StaticResource SegoeFluentStyle}" />
                    </AppBarButton.Icon>

                    <AppBarButton.Flyout>

                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutSubItem Text="{x:Bind ResourceService.GetLocalized('/History/Type')}">
                                <RadioMenuFlyoutItem
                                    Command="{x:Bind ViewModel.TypeFilterCommand}"
                                    CommandParameter="url"
                                    GroupName="TypeFilter"
                                    IsChecked="{x:Bind ViewModel.TypeFilter, Converter={StaticResource FilterValueCheckConverter}, ConverterParameter=url, Mode=OneWay}"
                                    Text="{x:Bind ResourceService.GetLocalized('URL')}"
                                    ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('URL')}" />

                                <RadioMenuFlyoutItem
                                    Command="{x:Bind ViewModel.TypeFilterCommand}"
                                    CommandParameter="ProductId"
                                    GroupName="TypeFilter"
                                    IsChecked="{x:Bind ViewModel.TypeFilter, Converter={StaticResource FilterValueCheckConverter}, ConverterParameter=ProductId, Mode=OneWay}"
                                    Text="{x:Bind ResourceService.GetLocalized('ProductID')}"
                                    ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('ProductID')}" />

                                <RadioMenuFlyoutItem
                                    Command="{x:Bind ViewModel.TypeFilterCommand}"
                                    CommandParameter="PackageFamilyName"
                                    GroupName="TypeFilter"
                                    IsChecked="{x:Bind ViewModel.TypeFilter, Converter={StaticResource FilterValueCheckConverter}, ConverterParameter=PackageFamilyName, Mode=OneWay}"
                                    Text="{x:Bind ResourceService.GetLocalized('PackageFamilyName')}"
                                    ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('PackageFamilyName')}" />

                                <RadioMenuFlyoutItem
                                    Command="{x:Bind ViewModel.TypeFilterCommand}"
                                    CommandParameter="CategoryId"
                                    GroupName="TypeFilter"
                                    IsChecked="{x:Bind ViewModel.TypeFilter, Converter={StaticResource FilterValueCheckConverter}, ConverterParameter=CategoryId, Mode=OneWay}"
                                    Text="{x:Bind ResourceService.GetLocalized('CategoryID')}"
                                    ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('CategoryID')}" />

                                <MenuFlyoutSeparator />

                                <RadioMenuFlyoutItem
                                    Command="{x:Bind ViewModel.TypeFilterCommand}"
                                    CommandParameter="None"
                                    GroupName="TypeFilter"
                                    IsChecked="{x:Bind ViewModel.TypeFilter, Converter={StaticResource FilterValueCheckConverter}, ConverterParameter=None, Mode=OneWay}"
                                    Text="{x:Bind ResourceService.GetLocalized('/History/None')}"
                                    ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/History/None')}" />
                            </MenuFlyoutSubItem>

                            <MenuFlyoutSubItem Text="{x:Bind ResourceService.GetLocalized('/History/Channel')}" ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/History/Channel')}">
                                <RadioMenuFlyoutItem
                                    Command="{x:Bind ViewModel.ChannelFilterCommand}"
                                    CommandParameter="WIF"
                                    GroupName="ChannelFilter"
                                    IsChecked="{x:Bind ViewModel.ChannelFilter, Converter={StaticResource FilterValueCheckConverter}, ConverterParameter=WIF, Mode=OneWay}"
                                    Text="{x:Bind ResourceService.GetLocalized('Fast')}"
                                    ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('Fast')}" />

                                <RadioMenuFlyoutItem
                                    Command="{x:Bind ViewModel.ChannelFilterCommand}"
                                    CommandParameter="WIS"
                                    GroupName="ChannelFilter"
                                    IsChecked="{x:Bind ViewModel.ChannelFilter, Converter={StaticResource FilterValueCheckConverter}, ConverterParameter=WIS, Mode=OneWay}"
                                    Text="{x:Bind ResourceService.GetLocalized('Slow')}"
                                    ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('Slow')}" />

                                <RadioMenuFlyoutItem
                                    Command="{x:Bind ViewModel.ChannelFilterCommand}"
                                    CommandParameter="RP"
                                    GroupName="ChannelFilter"
                                    IsChecked="{x:Bind ViewModel.ChannelFilter, Converter={StaticResource FilterValueCheckConverter}, ConverterParameter=RP, Mode=OneWay}"
                                    Text="{x:Bind ResourceService.GetLocalized('RP')}"
                                    ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('RP')}" />

                                <RadioMenuFlyoutItem
                                    Command="{x:Bind ViewModel.ChannelFilterCommand}"
                                    CommandParameter="Retail"
                                    GroupName="ChannelFilter"
                                    IsChecked="{x:Bind ViewModel.ChannelFilter, Converter={StaticResource FilterValueCheckConverter}, ConverterParameter=Retail, Mode=OneWay}"
                                    Text="{x:Bind ResourceService.GetLocalized('Retail')}"
                                    ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('Retail')}" />

                                <MenuFlyoutSeparator />

                                <RadioMenuFlyoutItem
                                    Command="{x:Bind ViewModel.ChannelFilterCommand}"
                                    CommandParameter="None"
                                    GroupName="ChannelFilter"
                                    IsChecked="{x:Bind ViewModel.ChannelFilter, Converter={StaticResource FilterValueCheckConverter}, ConverterParameter=None, Mode=OneWay}"
                                    Text="{x:Bind ResourceService.GetLocalized('/History/None')}"
                                    ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/History/None')}" />
                            </MenuFlyoutSubItem>
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>

                <AppBarButton
                    Command="{x:Bind ViewModel.RefreshCommand}"
                    IsEnabled="{x:Bind sys:Convert.ToBoolean(ViewModel.HistoryDataList.Count), Mode=OneWay}"
                    Label="{x:Bind ResourceService.GetLocalized('/History/Refresh')}"
                    ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/History/RefreshToolTip')}">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE72c;" Style="{StaticResource SegoeFluentStyle}" />
                    </AppBarButton.Icon>
                </AppBarButton>
            </CommandBar>

            <CommandBar
                x:Name="SelectMode"
                Grid.Column="4"
                VerticalAlignment="Center"
                x:Load="{x:Bind ViewModel.IsSelectMode, Mode=OneWay}"
                Background="Transparent"
                DefaultLabelPosition="Right">

                <AppBarButton
                    Command="{x:Bind ViewModel.SelectAllCommand}"
                    Label="{x:Bind ResourceService.GetLocalized('/History/SelectAll')}"
                    ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/History/SelectAll')}">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE8b3;" Style="{StaticResource SegoeFluentStyle}" />
                    </AppBarButton.Icon>
                </AppBarButton>

                <AppBarButton
                    Command="{x:Bind ViewModel.SelectNoneCommand}"
                    Label="{x:Bind ResourceService.GetLocalized('/History/SelectNone')}"
                    ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/History/SelectNone')}">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE8e6;" Style="{StaticResource SegoeFluentStyle}" />
                    </AppBarButton.Icon>
                </AppBarButton>

                <AppBarButton
                    Command="{x:Bind ViewModel.CopySelectedCommand}"
                    Label="{x:Bind ResourceService.GetLocalized('/History/CopySelected')}"
                    ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/History/CopySelectedToolTip')}">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE8c8;" Style="{StaticResource SegoeFluentStyle}" />
                    </AppBarButton.Icon>
                </AppBarButton>

                <AppBarButton
                    Command="{x:Bind ViewModel.DeleteCommand}"
                    Label="{x:Bind ResourceService.GetLocalized('/History/Delete')}"
                    ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/History/DeleteToolTip')}">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE74d;" Style="{StaticResource SegoeFluentStyle}" />
                    </AppBarButton.Icon>
                </AppBarButton>

                <AppBarButton
                    Command="{x:Bind ViewModel.CancelCommand}"
                    Label="{x:Bind ResourceService.GetLocalized('/History/Cancel')}"
                    ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/History/CancelToolTip')}">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE711;" Style="{StaticResource SegoeFluentStyle}" />
                    </AppBarButton.Icon>
                </AppBarButton>
            </CommandBar>
        </Grid>

        <ScrollViewer
            Grid.Row="2"
            HorizontalScrollBarVisibility="Disabled"
            HorizontalScrollMode="Disabled"
            VerticalScrollBarVisibility="Auto"
            VerticalScrollMode="Enabled">

            <StackPanel Margin="30,0" Padding="0,3,0,30">

                <Grid Style="{StaticResource CardGridStyle}" Visibility="{x:Bind ViewModel.IsHistoryEmpty, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}">

                    <TextBlock
                        Margin="0,10,0,10"
                        VerticalAlignment="Center"
                        Text="{x:Bind ResourceService.GetLocalized('/History/HistoryEmptyDescription')}"
                        TextAlignment="Center" />
                </Grid>

                <Grid Visibility="{x:Bind ViewModel.IsHistoryEmpty, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Reverse, Mode=OneWay}">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid
                        Grid.Row="0"
                        Style="{StaticResource CardGridStyle}"
                        Visibility="{x:Bind ViewModel.IsHistoryEmptyAfterFilter, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}">
                        <TextBlock
                            Margin="0,10,0,10"
                            VerticalAlignment="Center"
                            Text="{x:Bind ResourceService.GetLocalized('/History/HistoryFilterEmptyDescription')}"
                            TextAlignment="Center" />
                    </Grid>

                    <ListView
                        Grid.Row="1"
                        IsItemClickEnabled="{x:Bind ViewModel.IsSelectMode, Mode=OneWay}"
                        ItemContainerStyle="{StaticResource ListViewItemStyle}"
                        ItemsSource="{x:Bind ViewModel.HistoryDataList, Mode=OneWay}"
                        SelectionMode="None"
                        Visibility="{x:Bind ViewModel.IsHistoryEmptyAfterFilter, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Reverse, Mode=OneWay}">

                        <i:Interaction.Behaviors>
                            <ic:EventTriggerBehavior EventName="ItemClick">
                                <ic:InvokeCommandAction Command="{x:Bind ViewModel.ItemClickCommand}" />
                            </ic:EventTriggerBehavior>
                        </i:Interaction.Behaviors>

                        <ListView.Header>
                            <Grid
                                Height="35"
                                Padding="6,0,0,0"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="1.5*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="135" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    Width="50"
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    Text="{x:Bind ResourceService.GetLocalized('/History/Select')}"
                                    ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/History/Select')}"
                                    Visibility="{x:Bind ViewModel.IsSelectMode, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}" />
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    Text="{x:Bind ResourceService.GetLocalized('/History/DateTime')}"
                                    ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/History/DateTime')}" />
                                <TextBlock
                                    Grid.Column="2"
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    Text="{x:Bind ResourceService.GetLocalized('/History/Type')}"
                                    ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/History/Type')}" />
                                <TextBlock
                                    Grid.Column="3"
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    Text="{x:Bind ResourceService.GetLocalized('/History/Channel')}"
                                    ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/History/Channel')}" />
                                <TextBlock
                                    Grid.Column="4"
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    Text="{x:Bind ResourceService.GetLocalized('/History/Link')}"
                                    ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/History/Link')}" />
                                <TextBlock
                                    Grid.Column="5"
                                    Grid.ColumnSpan="2"
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center"
                                    Text="{x:Bind ResourceService.GetLocalized('/History/Options')}"
                                    ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/History/OptionsToolTip')}" />
                            </Grid>
                        </ListView.Header>

                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:HistoryModel">
                                <Grid
                                    Height="35"
                                    Padding="6,0,0,0"
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1,0,1,1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="1.5*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="3*" />
                                        <ColumnDefinition Width="70" />
                                        <ColumnDefinition Width="65" />
                                    </Grid.ColumnDefinitions>

                                    <CheckBox
                                        Grid.Column="0"
                                        Width="50"
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        IsChecked="{x:Bind IsSelected, Mode=TwoWay}"
                                        IsThreeState="False"
                                        Style="{StaticResource CheckBoxStyle}"
                                        ToolTipService.ToolTip="{Binding IsSelected, Converter={StaticResource CheckBoxToolTipFormatConverter}, ConverterParameter=History, Mode=OneWay}"
                                        Visibility="{Binding ElementName=HistoryRoot, Path=ViewModel.IsSelectMode, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}" />
                                    <TextBlock
                                        Grid.Column="1"
                                        Margin="10,0,0,0"
                                        VerticalAlignment="Center"
                                        Text="{x:Bind CreateTimeStamp, Converter={StaticResource TimeStampFormatConverter}}"
                                        ToolTipService.ToolTip="{x:Bind CreateTimeStamp, Converter={StaticResource TimeStampFormatConverter}}" />
                                    <TextBlock
                                        Grid.Column="2"
                                        Margin="10,0,0,0"
                                        VerticalAlignment="Center"
                                        Text="{x:Bind HistoryType, Converter={StaticResource TypeNameFormatConverter}}"
                                        ToolTipService.ToolTip="{x:Bind HistoryType, Converter={StaticResource TypeNameFormatConverter}}" />
                                    <TextBlock
                                        Grid.Column="3"
                                        Margin="10,0,0,0"
                                        VerticalAlignment="Center"
                                        Text="{x:Bind HistoryChannel, Converter={StaticResource ChannelNameFormatConverter}}"
                                        ToolTipService.ToolTip="{x:Bind HistoryChannel, Converter={StaticResource ChannelNameFormatConverter}}" />
                                    <TextBlock
                                        Grid.Column="4"
                                        Margin="10,0,0,0"
                                        VerticalAlignment="Center"
                                        Text="{x:Bind HistoryLink}"
                                        ToolTipService.ToolTip="{x:Bind HistoryLink}" />
                                    <HyperlinkButton
                                        Grid.Column="5"
                                        Margin="10,0,0,0"
                                        Command="{Binding ElementName=HistoryRoot, Path=ViewModel.FillinCommand}"
                                        CommandParameter="{Binding}"
                                        Content="{Binding ElementName=HistoryRoot, Path=Fillin}"
                                        IsEnabled="{Binding ElementName=HistoryRoot, Path=ViewModel.IsSelectMode, Converter={StaticResource BooleanToOppositeValueConverter}, Mode=OneWay}"
                                        Style="{StaticResource HyperlinkButtonStyle}"
                                        ToolTipService.ToolTip="{Binding ElementName=HistoryRoot, Path=FillinToolTip}" />
                                    <HyperlinkButton
                                        Grid.Column="6"
                                        Command="{Binding ElementName=HistoryRoot, Path=ViewModel.CopyCommand}"
                                        CommandParameter="{Binding}"
                                        Content="{Binding ElementName=HistoryRoot, Path=Copy}"
                                        IsEnabled="{Binding ElementName=HistoryRoot, Path=ViewModel.IsSelectMode, Converter={StaticResource BooleanToOppositeValueConverter}, Mode=OneWay}"
                                        Style="{StaticResource HyperlinkButtonStyle}"
                                        ToolTipService.ToolTip="{Binding ElementName=HistoryRoot, Path=CopyToolTip}" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
