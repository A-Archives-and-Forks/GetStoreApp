<Page
    x:Class="GetStoreApp.Views.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ac="using:GetStoreApp.UI.Controls.About"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Loaded="{x:Bind AboutLoaded}"
    mc:Ignorable="d">

    <ScrollViewer
        x:Name="AboutScroll"
        HorizontalScrollMode="Disabled"
        VerticalScrollBarVisibility="Auto">
        <StackPanel
            Margin="30,15,30,0"
            Padding="0,0,0,40"
            Spacing="10">

            <TextBlock FontSize="26" Text="{x:Bind ResourceService.GetLocalized('/About/Title')}" />

            <ac:HeaderControl />

            <ac:IntroductionControl x:Name="Introduction" />

            <ac:ReferenceControl />

            <ac:InstructionsControl x:Name="Instructions" />

            <ac:PrecautionControl />

            <ac:SettingsHelpControl x:Name="SettingsHelp" />
        </StackPanel>
    </ScrollViewer>
</Page>
