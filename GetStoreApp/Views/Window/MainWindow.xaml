<WinUI:WASDKWindow
    x:Class="GetStoreApp.Views.Window.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:WinUI="using:GetStoreApp.Views.Window"
    xmlns:controls="using:GetStoreApp.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="using:GetStoreApp.Services.Root"
    xmlns:viewModel="using:GetStoreApp.ViewModels.Window"
    xmlns:wc="using:GetStoreApp.UI.Controls.Window"
    Title="{x:Bind root:ResourceService.GetLocalized('AppDisplayName')}"
    MinWidth="600"
    MinHeight="768"
    ActivatedCommand="{x:Bind ViewModel.ActivatedCommand}"
    ClosedCommand="{x:Bind ViewModel.ClosedCommand}"
    SizeChangedCommand="{x:Bind ViewModel.SizeChangedCommand}"
    mc:Ignorable="d">

    <WinUI:WASDKWindow.DataContext>
        <viewModel:MainWindowViewModel x:Name="ViewModel" />
    </WinUI:WASDKWindow.DataContext>

    <Grid Background="{x:Bind ViewModel.AppBackground, Mode=OneWay}">

        <wc:AppTitleBarControl
            Height="45"
            Margin="{x:Bind ViewModel.AppTitleBarMargin, Mode=OneWay}"
            VerticalAlignment="Top" />

        <NavigationView
            BackRequested="{x:Bind ViewModel.OnNavigationViewBackRequested}"
            IsBackEnabled="{x:Bind ViewModel.IsBackEnabled, Mode=OneWay}"
            IsPaneToggleButtonVisible="{x:Bind ViewModel.IsPaneToggleButtonVisible, Mode=OneWay}"
            IsSettingsVisible="False"
            IsTitleBarAutoPaddingEnabled="True"
            Loaded="{x:Bind ViewModel.OnNavigationViewLoaded}"
            OpenPaneLength="220"
            PaneDisplayMode="{x:Bind ViewModel.NavigationDispalyMode, Mode=OneWay}"
            SelectedItem="{x:Bind ViewModel.SelectedItem, Mode=OneWay}"
            Unloaded="{x:Bind ViewModel.OnNavigationViewUnLoaded}">

            <NavigationView.MenuItems>
                <NavigationViewItemHeader Content="{x:Bind root:ResourceService.GetLocalized('/Window/Title')}" Foreground="{ThemeResource NavigationViewItemForeground}" />

                <controls:NavigationViewMenuItem
                    Command="{x:Bind ViewModel.NavigationItemCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Tag}"
                    Content="{x:Bind root:ResourceService.GetLocalized('/Window/Home')}"
                    Tag="Home">
                    <controls:NavigationViewMenuItem.Icon>
                        <ImageIcon Source="ms-appx:///Assets/ControlIcon/Home.png" />
                    </controls:NavigationViewMenuItem.Icon>
                </controls:NavigationViewMenuItem>

                <controls:NavigationViewMenuItem
                    Command="{x:Bind ViewModel.NavigationItemCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Tag}"
                    Content="{x:Bind root:ResourceService.GetLocalized('/Window/History')}"
                    Tag="History">
                    <controls:NavigationViewMenuItem.Icon>
                        <ImageIcon Source="ms-appx:///Assets/ControlIcon/History.png" />
                    </controls:NavigationViewMenuItem.Icon>
                </controls:NavigationViewMenuItem>

                <controls:NavigationViewMenuItem
                    Command="{x:Bind ViewModel.NavigationItemCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Tag}"
                    Content="{x:Bind root:ResourceService.GetLocalized('/Window/Download')}"
                    Tag="Download">
                    <controls:NavigationViewMenuItem.Icon>
                        <ImageIcon Source="ms-appx:///Assets/ControlIcon/Download.png" />
                    </controls:NavigationViewMenuItem.Icon>
                </controls:NavigationViewMenuItem>

                <controls:NavigationViewMenuItem
                    Command="{x:Bind ViewModel.NavigationItemCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Tag}"
                    Content="{x:Bind root:ResourceService.GetLocalized('/Window/Web')}"
                    Tag="Web">
                    <controls:NavigationViewMenuItem.Icon>
                        <ImageIcon Source="ms-appx:///Assets/ControlIcon/Web.png" />
                    </controls:NavigationViewMenuItem.Icon>
                </controls:NavigationViewMenuItem>
            </NavigationView.MenuItems>

            <NavigationView.FooterMenuItems>
                <controls:NavigationViewMenuItem
                    Command="{x:Bind ViewModel.NavigationItemCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Tag}"
                    Content="{x:Bind root:ResourceService.GetLocalized('/Window/About')}"
                    Tag="About">
                    <controls:NavigationViewMenuItem.Icon>
                        <ImageIcon Source="ms-appx:///Assets/ControlIcon/About.png" />
                    </controls:NavigationViewMenuItem.Icon>
                </controls:NavigationViewMenuItem>
                <controls:NavigationViewMenuItem
                    Command="{x:Bind ViewModel.NavigationItemCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Tag}"
                    Content="{x:Bind root:ResourceService.GetLocalized('/Window/Settings')}"
                    Tag="Settings">
                    <controls:NavigationViewMenuItem.Icon>
                        <ImageIcon Source="ms-appx:///Assets/ControlIcon/Settings.png" />
                    </controls:NavigationViewMenuItem.Icon>
                </controls:NavigationViewMenuItem>
            </NavigationView.FooterMenuItems>

            <Frame
                x:Name="WindowFrame"
                Navigated="{x:Bind ViewModel.OnFrameNavigated}"
                NavigationFailed="{x:Bind ViewModel.OnFrameNavgationFailed}" />
        </NavigationView>
    </Grid>
</WinUI:WASDKWindow>
