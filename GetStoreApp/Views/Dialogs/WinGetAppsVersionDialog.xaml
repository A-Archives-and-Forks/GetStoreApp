<ContentDialog
    x:Class="GetStoreApp.Views.Dialogs.WinGetAppsVersionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:GetStoreApp.Views.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="using:GetStoreApp.Services.Root"
    Style="{StaticResource DefaultContentDialogStyle}"
    mc:Ignorable="d">

    <ContentDialog.Resources>
        <Thickness x:Key="ContentDialogPadding">3</Thickness>
        <x:Double x:Key="ContentDialogMinWidth">768</x:Double>
        <x:Double x:Key="ContentDialogMinHeight">560</x:Double>
    </ContentDialog.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid
            Grid.Row="0"
            Margin="3,0,0,0"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="0,0,0,1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <SelectorBar
                Grid.Column="0"
                Margin="0,0,0,3"
                VerticalAlignment="Center"
                FontSize="14">

                <SelectorBarItem
                    Padding="12,5"
                    IsTapEnabled="True"
                    Tag="0"
                    Text="{x:Bind root:ResourceService.GetLocalized('Dialog/Copy')}">

                    <SelectorBarItem.Icon>
                        <FontIcon Glyph="&#xE8C8;" />
                    </SelectorBarItem.Icon>
                </SelectorBarItem>

                <SelectorBarItem
                    Padding="12,5"
                    IsTapEnabled="True"
                    Tag="1"
                    Text="{x:Bind root:ResourceService.GetLocalized('Dialog/Operation')}">

                    <SelectorBarItem.Icon>
                        <FontIcon Glyph="&#xE74C;" />
                    </SelectorBarItem.Icon>
                </SelectorBarItem>

                <SelectorBarItem
                    Padding="12,5"
                    IsTapEnabled="True"
                    Tag="1"
                    Text="{x:Bind root:ResourceService.GetLocalized('Dialog/Command')}">

                    <SelectorBarItem.Icon>
                        <FontIcon Glyph="&#xE756;" />
                    </SelectorBarItem.Icon>
                </SelectorBarItem>

                <SelectorBarItem
                    Padding="12,5"
                    IsTapEnabled="True"
                    Tag="1"
                    Text="{x:Bind root:ResourceService.GetLocalized('Dialog/VersionInfo')}">

                    <SelectorBarItem.Icon>
                        <FontIcon Glyph="&#xE946;" />
                    </SelectorBarItem.Icon>
                </SelectorBarItem>
            </SelectorBar>

            <Button
                Grid.Column="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Click="{x:Bind OnCloseClicked}"
                Style="{StaticResource AlternateCloseButtonStyle}"
                ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('WinGet/Close')}">

                <Button.Content>
                    <FontIcon
                        Margin="4"
                        FontSize="16"
                        Glyph="&#xE711;" />
                </Button.Content>
            </Button>
        </Grid>

        <Grid Grid.Row="1" Background="{ThemeResource NavigationViewDefaultPaneBackground}">
            <!--<Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <AppBarSeparator Grid.Column="1" Margin="0,-10,0,-10" />-->

            <Frame x:Name="WInGetAppsVersionFrame" />
        </Grid>
    </Grid>
</ContentDialog>
