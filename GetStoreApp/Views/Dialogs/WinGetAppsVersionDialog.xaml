<ContentDialog
    x:Class="GetStoreApp.Views.Dialogs.WinGetAppsVersionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:GetStoreApp.Views.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:root="using:GetStoreApp.Services.Root"
    Opened="{x:Bind OnOpened}"
    Style="{StaticResource DefaultContentDialogStyle}"
    mc:Ignorable="d">

    <ContentDialog.Resources>
        <Thickness x:Key="ContentDialogPadding">3</Thickness>
        <x:Double x:Key="ContentDialogMinWidth">768</x:Double>
        <x:Double x:Key="ContentDialogMinHeight">560</x:Double>
        <x:Double x:Key="ContentDialogMaxWidth">768</x:Double>
        <x:Double x:Key="ContentDialogMaxHeight">560</x:Double>

        <TransitionCollection x:Name="SuppressNavigationTransitionCollection">
            <NavigationThemeTransition>
                <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                    <SuppressNavigationTransitionInfo />
                </NavigationThemeTransition.DefaultNavigationTransitionInfo>
            </NavigationThemeTransition>
        </TransitionCollection>

        <TransitionCollection x:Name="LeftSlideNavigationTransitionCollection">
            <NavigationThemeTransition>
                <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                    <SlideNavigationTransitionInfo Effect="FromLeft" />
                </NavigationThemeTransition.DefaultNavigationTransitionInfo>
            </NavigationThemeTransition>
        </TransitionCollection>

        <TransitionCollection x:Name="RightSlideNavigationTransitionCollection">
            <NavigationThemeTransition>
                <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                    <SlideNavigationTransitionInfo Effect="FromRight" />
                </NavigationThemeTransition.DefaultNavigationTransitionInfo>
            </NavigationThemeTransition>
        </TransitionCollection>
    </ContentDialog.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  WinGet 应用版本信息标题栏  -->
        <Grid
            Grid.Row="0"
            Margin="3,0,0,0"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="0,0,0,1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <SelectorBar
                x:Name="WinGetAppsSelectorBar"
                Grid.Column="0"
                Margin="0,0,0,3"
                VerticalAlignment="Center"
                FontSize="14"
                SelectedItem="{x:Bind SelectedItem, Mode=OneWay}">

                <SelectorBarItem
                    Padding="12,5"
                    IsTapEnabled="True"
                    Tag="0"
                    Tapped="{x:Bind OnSelectorBarTapped}"
                    Text="{x:Bind root:ResourceService.GetLocalized('Dialog/Copy')}">

                    <SelectorBarItem.Icon>
                        <FontIcon Glyph="&#xE8C8;" />
                    </SelectorBarItem.Icon>
                </SelectorBarItem>

                <SelectorBarItem
                    Padding="12,5"
                    IsTapEnabled="True"
                    Tag="1"
                    Tapped="{x:Bind OnSelectorBarTapped}"
                    Text="{x:Bind root:ResourceService.GetLocalized('Dialog/Operation')}">

                    <SelectorBarItem.Icon>
                        <FontIcon Glyph="&#xE74C;" />
                    </SelectorBarItem.Icon>
                </SelectorBarItem>

                <SelectorBarItem
                    Padding="12,5"
                    IsTapEnabled="True"
                    Tag="2"
                    Tapped="{x:Bind OnSelectorBarTapped}"
                    Text="{x:Bind root:ResourceService.GetLocalized('Dialog/Command')}">

                    <SelectorBarItem.Icon>
                        <FontIcon Glyph="&#xE756;" />
                    </SelectorBarItem.Icon>
                </SelectorBarItem>

                <SelectorBarItem
                    Padding="12,5"
                    IsTapEnabled="True"
                    Tag="3"
                    Tapped="{x:Bind OnSelectorBarTapped}"
                    Text="{x:Bind root:ResourceService.GetLocalized('Dialog/VersionInfo')}">

                    <SelectorBarItem.Icon>
                        <FontIcon Glyph="&#xE946;" />
                    </SelectorBarItem.Icon>
                </SelectorBarItem>
            </SelectorBar>

            <Button
                Grid.Column="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Click="{x:Bind OnCloseClicked}"
                Style="{StaticResource AlternateCloseButtonStyle}"
                ToolTipService.ToolTip="{x:Bind root:ResourceService.GetLocalized('Dialog/Close')}">

                <Button.Content>
                    <FontIcon
                        Margin="4"
                        FontSize="16"
                        Glyph="&#xE711;" />
                </Button.Content>
            </Button>
        </Grid>

        <!--  WinGet 应用版本信息内容  -->
        <Frame
            x:Name="WinGetAppsVersionFrame"
            Grid.Row="1"
            Background="{ThemeResource NavigationViewDefaultPaneBackground}"
            Navigated="{x:Bind OnNavigated}"
            NavigationFailed="{x:Bind OnNavigationFailed}" />
    </Grid>
</ContentDialog>
