<Page
    x:Class="GetStoreApp.Views.DownloadPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dc="using:GetStoreApp.UI.Controls.Download"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:ic="using:Microsoft.Xaml.Interactions.Core"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <TeachingTip
            x:Name="PuaseTeachingTip"
            Title="{x:Bind ResourceService.GetLocalized('/Download/PauseExplain')}"
            IsLightDismissEnabled="True"
            PreferredPlacement="Bottom"
            Subtitle="{x:Bind ResourceService.GetLocalized('/Download/PauseExplainTeachingTip')}"
            Target="{x:Bind PauseButton}">
            <TeachingTip.IconSource>
                <SymbolIconSource Symbol="Important" />
            </TeachingTip.IconSource>
        </TeachingTip>
    </Page.Resources>

    <Pivot
        x:Name="DownloadPivot"
        Margin="30,15,30,0"
        Style="{StaticResource PivotStyle}">

        <i:Interaction.Behaviors>
            <ic:EventTriggerBehavior EventName="SelectionChanged">
                <ic:InvokeCommandAction Command="{x:Bind ViewModel.DownloadContentCommand}" CommandParameter="{Binding ElementName=DownloadPivot, Path=SelectedIndex}" />
            </ic:EventTriggerBehavior>
        </i:Interaction.Behaviors>

        <PivotItem Header="{x:Bind ResourceService.GetLocalized('/Download/Downloading')}" Style="{StaticResource PivotItemStyle}">
            <dc:DownloadingControl />
        </PivotItem>

        <PivotItem Header="{x:Bind ResourceService.GetLocalized('/Download/Unfinished')}" Style="{StaticResource PivotItemStyle}">
            <dc:UnfinishedControl />
        </PivotItem>

        <PivotItem Header="{x:Bind ResourceService.GetLocalized('/Download/Completed')}" Style="{StaticResource PivotItemStyle}">
            <dc:CompletedControl />
        </PivotItem>

        <Pivot.RightHeader>
            <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                <Button
                    x:Name="PauseButton"
                    Margin="0,0,6,0"
                    Click="{x:Bind PauseClick}"
                    Content="{x:Bind ResourceService.GetLocalized('/Download/PauseExplain')}"
                    ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/Download/PauseExplain')}"
                    Visibility="{x:Bind ViewModel.PauseVisValue, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}" />
                <Button
                    Command="{x:Bind ViewModel.DownloadOptionsCommand}"
                    Content="{x:Bind ResourceService.GetLocalized('/Download/Settings')}"
                    ToolTipService.ToolTip="{x:Bind ResourceService.GetLocalized('/Download/SettingsToolTip')}">
                    <Button.Resources />
                </Button>
            </StackPanel>
        </Pivot.RightHeader>
    </Pivot>
</Page>
