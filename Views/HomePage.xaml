<Page
    x:Class="GetStoreApp.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="using:GetStoreApp.UI.Controls.Home"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    NavigationCacheMode="Enabled"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">

    <!--  主页面  -->
    <ScrollViewer HorizontalScrollMode="Disabled" VerticalScrollBarVisibility="Auto">
        <StackPanel
            x:Name="ContentArea"
            Margin="{StaticResource PageMargin}"
            Spacing="{StaticResource PageSpacing}">

            <!--  标题栏部分  -->
            <hc:TitleControl />

            <!--  选择列表  -->
            <hc:RequestControl />

            <!--  状态栏  -->
            <hc:StatusBarControl />

            <!--  主页部分历史记录列表  -->
            <!--
            <mainctr:SimpleHistoryControl />

            -->
            <!--  获取结果列表  -->
            <hc:ResultControl />
        </StackPanel>
    </ScrollViewer>
</Page>
