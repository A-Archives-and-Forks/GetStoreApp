<Page
    x:Class="GetStoreApp.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="using:GetStoreApp.UI.Controls.Home"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    NavigationCacheMode="Enabled"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">

    <ScrollViewer HorizontalScrollMode="Disabled" VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="{StaticResource PageMargin}" Spacing="{StaticResource PageSpacing}">

            <hc:TitleControl />

            <hc:RequestControl />

            <hc:StatusBarControl />

            <!--<mainctr:SimpleHistoryControl />-->

            <hc:ResultControl />
        </StackPanel>
    </ScrollViewer>
</Page>
