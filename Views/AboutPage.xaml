<Page
    x:Class="GetStoreApp.Views.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="using:GetStoreApp.ViewModels.Pages"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">

    <Page.DataContext>
        <viewModel:AboutViewModel x:Name="ViewModel" />
    </Page.DataContext>

    <StackPanel Margin="{StaticResource PageMargin}" Spacing="{StaticResource PageSpacing}">
        <TextBlock
            x:Uid="About_Title"
            FontSize="{StaticResource TitleFontSize}"
            Text="About" />
    </StackPanel>
</Page>
