<ContentDialog
    x:Class="GetStoreApp.UI.Dialogs.RestartPromptDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:service="using:GetStoreApp.Services.Settings"
    Title="{x:Bind service:LanguageService.GetResources('/Dialog/Restart')}"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    CloseButtonText="{x:Bind service:LanguageService.GetResources('/Dialog/RestartCancel')}"
    Content="{x:Bind service:LanguageService.GetResources('/Dialog/RestartContent')}"
    PrimaryButtonStyle="{ThemeResource AccentButtonStyle}"
    PrimaryButtonText="{x:Bind service:LanguageService.GetResources('/Dialog/RestartSure')}"
    Style="{ThemeResource DefaultContentDialogStyle}"
    mc:Ignorable="d" />
