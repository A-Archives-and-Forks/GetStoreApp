<ContentDialog
    x:Class="GetStoreApp.UI.Dialogs.DeletePromptDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:service="using:GetStoreApp.Services.Settings"
    Title="{x:Bind service:LanguageService.GetResources('/Dialog/DeleteTitle')}"
    CloseButtonText="{x:Bind service:LanguageService.GetResources('/Dialog/DeleteCancel')}"
    Content="{x:Bind service:LanguageService.GetResources('/Dialog/DeleteContent')}"
    PrimaryButtonText="{x:Bind service:LanguageService.GetResources('/Dialog/DeleteContinue')}"
    Style="{StaticResource DefaultContentDialogStyle}"
    mc:Ignorable="d" />
