<UserControl
    x:Class="GetStoreApp.UI.Controls.Main.TitleControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conGen="using:GetStoreApp.Converters.General"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="using:GetStoreApp.ViewModels.Controls.Main"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <viewModel:TitleViewModel x:Name="ViewModel" />
    </UserControl.DataContext>

    <UserControl.Resources>
        <x:Double x:Key="MainDescriptionFontSize">15</x:Double>

        <conGen:BooleanToVisibilityConverter x:Name="BooleanToVisibilityConverter" />

        <Style x:Key="MainDescriptionStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="{StaticResource MainDescriptionFontSize}" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </UserControl.Resources>

    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <!--  主页文字描述  -->
            <TextBlock
                x:Uid="Main_Title"
                Grid.Column="0"
                FontSize="{StaticResource TitleFontSize}"
                Text="Main" />

            <Button
                x:Uid="Main_Status_Instruction"
                Grid.Column="1"
                VerticalAlignment="Center"
                Command="{x:Bind ViewModel.MainStatInsCommand}"
                Content="Direction for Use"
                Visibility="{x:Bind ViewModel.MainInsVisValue, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" />
        </Grid>

        <TextBlock
            x:Uid="Main_Description1"
            Margin="0,0,0,5"
            Style="{StaticResource MainDescriptionStyle}"
            Text="Online link generator for Microsoft Store"
            TextAlignment="Center" />

        <TextBlock
            x:Uid="Main_Description2"
            Style="{StaticResource MainDescriptionStyle}"
            Text="Enter the link from the Microsoft Store and click on the checkbox - to get all available links"
            TextAlignment="Center" />
    </StackPanel>
</UserControl>
