<muxc:TeachingTip
    x:Class="GetStoreAppInstaller.Views.NotificationTips.CopyPasteInstallerNotificationTip"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="using:GetStoreAppInstaller.Helpers.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:root="using:GetStoreAppInstaller.Services.Root"
    CloseButtonContent="TeachingTip"
    IsLightDismissEnabled="False"
    PlacementMargin="0,20,0,0"
    PreferredPlacement="Bottom"
    mc:Ignorable="d">

    <muxc:TeachingTip.CloseButtonStyle>
        <Style BasedOn="{StaticResource DefaultButtonStyle}" TargetType="Button">
            <Setter Property="Visibility" Value="Collapsed" />
            <Setter Property="Height" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Width" Value="0" />
            <Setter Property="Margin" Value="0" />
        </Style>
    </muxc:TeachingTip.CloseButtonStyle>

    <Grid>
        <TextBlock
            Foreground="{ThemeResource SystemFillColorSuccessBrush}"
            Text="{x:Bind root:ResourceService.GetLocalized('Notification/CopyToClipboardSuccessfully')}"
            Visibility="{x:Bind IsSuccessfully, Mode=OneWay}" />

        <TextBlock
            Foreground="{ThemeResource SystemFillColorCriticalBrush}"
            Text="{x:Bind root:ResourceService.GetLocalized('Notification/CopyToClipboardFailed')}"
            Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(IsSuccessfully), Mode=OneWay}" />
    </Grid>
</muxc:TeachingTip>
