{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.6",
  "body": [
    {
      "type": "TextBlock",
      "text": "${Title}",
      "horizontalAlignment": "Center",
      "weight": "Bolder",
      "size": "Large",
      "fontType": "Default",
      "spacing": "None",
      "color": "Default"
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "Image",
              "url": "${UpdateItem[0].Url}",
              "width": "28px",
              "height": "28px"
            }
          ]
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "Container",
              "items": [
                {
                  "type": "Container",
                  "items": [
                    {
                      "type": "TextBlock",
                      "text": "${UpdateItem[0].Text}",
                      "size": "Default",
                      "color": "Default",
                      "weight": "Default"
                    }
                  ]
                }
              ]
            },
            {
              "type": "TextBlock",
              "text": "${UpdateItem[0].OldVersion} | ${UpdateItem[0].NewVersion}",
              "spacing": "None",
              "size": "Small",
              "isSubtle": true
            }
          ],
          "verticalContentAlignment": "Center"
        },
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "ActionSet",
              "actions": [
                {
                  "type": "Action.Execute",
                  "title": "${UpdateItem[0].Button}",
                  "verb": "${UpdateItem[0].Action}",
                  "tooltip": "${UpdateItem[0].ToolTip}"
                }
              ]
            }
          ]
        }
      ],
      "spacing": "Small",
      "isVisible": "${UpdateItem[0].Visibility}"
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "Image",
              "url": "${UpdateItem[1].Url}",
              "width": "28px",
              "height": "28px"
            }
          ]
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "Container",
              "items": [
                {
                  "type": "Container",
                  "items": [
                    {
                      "type": "TextBlock",
                      "text": "${UpdateItem[1].Text}",
                      "size": "Default",
                      "color": "Default",
                      "weight": "Default"
                    }
                  ]
                }
              ]
            },
            {
              "type": "TextBlock",
              "text": "${UpdateItem[1].OldVersion} | ${UpdateItem[1].NewVersion}",
              "spacing": "None",
              "size": "Small",
              "isSubtle": true
            }
          ],
          "verticalContentAlignment": "Center"
        },
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "ActionSet",
              "actions": [
                {
                  "type": "Action.Execute",
                  "title": "${UpdateItem[1].Button}",
                  "verb": "${UpdateItem[1].Action}",
                  "tooltip": "${UpdateItem[1].ToolTip}"
                }
              ]
            }
          ]
        }
      ],
      "spacing": "None",
      "isVisible": "${UpdateItem[1].Visibility}"
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "Image",
              "url": "${UpdateItem[2].Url}",
