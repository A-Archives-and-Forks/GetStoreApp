        },
        {
          "type": "Action.Execute",
          "title": "${ViewMore.Title}",
          "verb": "${ViewMore.Action}"
        }
      ],
      "spacing": "Small",
      "horizontalAlignment": "Center"
    }
  ],
  "verticalContentAlignment": "Top",
  "minHeight": "0px",
  "rtl": false,
  "backgroundImage": {
    "url": "${BackgroundImage}"
  }
